#! /usr/local/bin/perl
# Usage: cvsls [options] directory
$CVSROOT=$ENV{'CVSROOT'}.'/';
$repos=$CVSROOT;
if(open(REPOS,"CVS/Root")) {
  my $line=<REPOS>;
  close(REPOS);
  chomp $line;
  $root="$line/" if(-d $line);
}
else {
  $root=$repos;
};
if(open(REPOS,"CVS/Repository")) {
  my $line=<REPOS>;
  close(REPOS);
  chomp $line;
  $line =~ s/\Z/\// unless $line =~ /\/\Z/;
  $line = $root . $line unless ($line =~ /\A$root/);
  $repos=$line if(-d $line);
};
for($i=0;$i<=$#ARGV;$i++) {
  last if($ARGV[$i]!~/^-/);
};
@ARGS=@ARGV[0..$i-1];
$ARGV[$i]='.' if($i>$#ARGV);
for(;$i<=$#ARGV;$i++) {
  push@ARGS,$repos.$ARGV[$i];
  push@ARGS,$repos.$ARGV[$i]."/Attic" if -d $repos.$ARGV[$i]."/Attic";
};
#print join(':',@ARGV),"\n";
exec('ls',@ARGS);
