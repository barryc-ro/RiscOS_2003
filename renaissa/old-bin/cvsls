#! /usr/local/bin/perl
# Usage: cvsls [options] directory
$CVSROOT=$ENV{'CVSROOT'}.'/';
$repos=$CVSROOT;
if(open(REPOS,"CVS/Repository")) {
  my $line=<REPOS>;
  chop $line;
  $repos="$line/" if(-d $line);
  close(REPOS);
};
for($i=0;$i<=$#ARGV;$i++) {
  last if($ARGV[$i]!~/^-/);
};
@ARGS=@ARGV[0..$i-1];
$ARGV[$i]='.' if($i>$#ARGV);
for(;$i<=$#ARGV;$i++) {
  push@ARGS,$repos.$ARGV[$i];
  push@ARGS,$repos.$ARGV[$i]."/Attic" if -d $repos.$ARGV[$i]."/Attic";
};
#print join(':',@ARGV),"\n";
exec('ls',@ARGS);
