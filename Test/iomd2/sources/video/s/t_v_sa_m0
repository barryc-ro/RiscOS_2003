; t_v_sa_m0
;
; 16 word video DMA from SAM ports
;   1 Mb VRAM
;   External sc clock source
;
; Same as t_v_sa1, but using external sc clock source instead of Mclk/2

SetupVRAM         SETL {FALSE}
SetupSAM          SETL {TRUE}

ExternalScClock   SETL {TRUE}

CheckVFlag        SETL {FALSE}
CheckIOCR         SETL {FALSE}
CheckVidcModel    SETL {FALSE}
ReadBack          SETL {TRUE}

VideoPatternSize  * 16
SoundPatternSize  * 0
CursorPatternSize * 0

VRAMSize          * 1

; For 4Mb VRAM, make our buffer cross the 2Mb boundary
VideoBufferStart  * vram_base
VideoBufferEnd    * VideoBufferStart + (VideoPatternSize * 4)
VideoBufferInit   * VideoBufferStart
VideoBufferCur    * VideoBufferStart

BmspdValue        * 0
ScdivValue        * 0             ; 0 = Mclk, 1 = Mclk/2, 2 = Mclk/3, 3 = MClk/4
FsizeValue        * 4
VflagLoValue      * 0
VflagHiValue      * 1
VramtmgValue      * &5e

            END
