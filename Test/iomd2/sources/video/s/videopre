; videopre
;
; Calculates some values, before assembling the test

 [ VideoPatternSize > 0
VideoDMA    SETL {TRUE}
 |
VideoDMA    SETL {FALSE}
 ]
 
 [ SoundPatternSize > 0
SoundDMA    SETL {TRUE}
 |
SoundDMA    SETL {FALSE}
 ]
 
 [ CursorPatternSize > 0
CursorDMA   SETL {TRUE}
 |
CursorDMA   SETL {FALSE}
 ]

 [ ExternalScClock
VidcrValue * &A4
 ]

 [ :LNOT: ExternalScClock
   [ VideoDMA :LOR: CursorDMA
     [ SetupSAM
       [ VRAMSize = 1
VidcrValue * &24
       |
VidcrValue * &28
       ]
     |
VidcrValue * &70
     ]
   ]
 ]

 [ :LNOT: DoSlaveTest
   [ SetupSAM :LOR: SetupVRAM   
     [ VRAMSize = 1
VrefcrValue * &3a
     |
VrefcrValue * &5a
     ]
   ]
 ]

 [ SetupSAM
   [ VRAMSize = 1
TransferSize * (256 * 4)          ; half-SAM length
   |
TransferSize * (256 * 8)          ; half-SAM length
   ]
 |
TransferSize * 16 
 ]
 
            END
