; t_v_sa4
;
; Using 2Mb VRAM, another video DMA using SAM ports
;
; eg.
;
; 1024 __   ________  __ VidEnd
;          |        |
;          |        |
;          |        |
;          |        |
;          ----------
;          |        |
;          |        |
;          |        | __ 512 + 16
;  512     |########|                         # = test pattern data
;      --  ----------
;  511     |########|
;          |########|
;          |########|
;  256 __  |########|
;          ----------
;  224 __  |########| __ VidInit = 256 - 16
;          |        |
;          |        |
;    0 __  |________| __ VidStart
;
; (All numbers are 64bit words)
; 
; Test uses:
;   MClk/2

SetupVRAM         SETL {FALSE}
SetupSAM          SETL {TRUE}

CheckVFlag        SETL {FALSE}
CheckIOCR         SETL {FALSE}
CheckVidcModel    SETL {FALSE}
ReadBack          SETL {TRUE}

VideoPatternSize  * (16 + 256 + 16) * 2
SoundPatternSize  * 0
CursorPatternSize * 0

VRAMSize          * 2

VideoBufferStart  * vram_base
VideoBufferEnd    * VideoBufferStart + (1024 * 8)
VideoBufferInit   * VideoBufferStart + (256 * 8) - (16 * 8)
VideoBufferCur    * VideoBufferStart

BmspdValue        * 0
ScdivValue        * 1             ; 0 = Mclk, 1 = Mclk/2, 2 = Mclk/3, 3 = MClk/4
FsizeValue        * 4
VflagLoValue      * 0
VflagHiValue      * 1
VramtmgValue      * &5e

            END
