; cmhg control file for nfsstb
;

; <module-is-runnable:> - NO

initialisation-code: nfs_initialise

service-call-handler: nfs_service

title-string: NFSSTB

help-string: NFS_STB 1.05

swi-chunk-base-number: 0x410C0

swi-handler-code: nfs_swi

swi-decoding-table: NFS,
                Mount MountList SetUser Dismount MountInfo FreeSpace

; <swi-decoding-code:> <swi_decoder> - NO

; <irq-handlers:> <entry_name>/<handler_name> ... - NO

command-keyword-table: nfs_command

        nfs(min-args:0, max-args:0,
                help-text: "*NFS selects NFS as the current filing system\r"
                        "Syntax:\t*NFS\r",
                invalid-syntax: "Syntax:\t*NFS\r" ),

        Logon(min-args:0, max-args:4, fs-command:,
                help-text: "*Logon displays or authenticates the name under which you wish to access\r"
                        "future *Mounted mount points. The user name 'nobody' does not require a password.\r"
                        "Syntax:\t*Logon [-host <name server>] [<user name> [[<CR>] <password>]]\r" ),

        Mount(min-args:0, max-args:4, fs-command:,
                help-text: "*Mount lists or mounts mount points on NFS.\r"
                        "Syntax:\t*Mount [-host <host name>] [<mount name> [<mount path>]]\r",
                invalid-syntax: "Syntax\t*Mount [-host <host name>] [<mount name> [<mount path>]]\r" ),

        Dismount(min-args:0, max-args:2, fs-command:,
                help-text: "*Dismount dismounts mount points mounted on NFS.\r"
                        "Syntax:\t*Dismount [-host <host name> | <mount name>]\r",
                invalid-syntax: "Syntax\t*Dismount [-host <host name> | <mount name>]\r" ),

        Back( min-args:0, max-args:0, fs-command:,
                help-text: "*Back swaps current and previous directories.\r"
                        "Syntax:\t*Back\r",
                invalid-syntax: "Syntax:\t*Back\r" ),

        Bye( min-args:0, max-args:0, fs-command:,
                help-text: "*Bye dismounts all mount points and closes anything open on them.\r"
                        "All directories become unset\r"
                        "Syntax:\t*Bye\r",
                invalid-syntax: "Syntax:\t*Bye\r" ),

        Free( min-args:0, max-args:1, fs-command:,
                help-text: "*Free displays the free space available on the server\r"
                        "Syntax:\t*Free [<mount point>]\r",
                invalid-syntax: "Syntax:\t*Free [<mount point>]\r" ),

        NoDir( min-args:0, max-args:0, fs-command:,
                help-text: "*NoDir unsets the current directory\r"
                        "Syntax:\t*NoDir\r",
                invalid-syntax: "Syntax:\t*NoDir\r" ),

        NoLib( min-args:0, max-args:0, fs-command:,
                help-text: "*NoLib unsets the library directory\r"
                        "Syntax:\t*NoLib\r",
                invalid-syntax: "Syntax:\t*NoLib\r" ),

        NoURD( min-args:0, max-args:0, fs-command:,
                help-text: "*NoURD unsets the user root directory\r"
                        "Syntax:\t*NoURD\r",
                invalid-syntax: "Syntax:\t*NoURD\r" ),

        URD( min-args:0, max-args:1, fs-command:, gstrans-map: 1,
                help-text: "*URD sets the user root directory\r"
                        "Syntax:\t*URD <directory>\r",
                invalid-syntax: "Syntax:\t*URD <directory>\r" ),

        TimeOffset( min-args:1, max-args:1, fs-command:, gstrans-map:1,
                help-text: "*TimeOffset specifies the offset (in minutes) from GMT to local time\r"
                        "Syntax:\t*TimeOffset <time>\r",
                invalid-syntax: "Syntax:\t*TimeOffset <time>\r" ),

        CacheTime( min-args:1, max-args:1, fs-command:, gstrans-map:1,
                help-text: "*CacheTime sets the time (in 1/100ths of a second) for which all\r"
                        "information cached in the future is assumed to be valid\r"
                        "Syntax:\t*CacheTime <time>\r",
                invalid-syntax: "Syntax:\t*CacheTime <time>\r" ),

        nfsinfo( min-args:0, max-args:0,
                help-text: "*NFSInfo displays internal information for NFS\r"),

        nfsboot( min-args:0, max-args:0,
                help-text: "*NFSBoot runs NFS boot code\r")
