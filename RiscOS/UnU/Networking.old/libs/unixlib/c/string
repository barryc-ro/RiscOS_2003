#include "unixlib.h"

/**********************************************************************/

int strcasecmp(char *a, char *b)
{
    while( *a && *b )
	if( tolower(*a++) != tolower(*b++) )
	    return (1);

    return((*a || *b) ? 1 : 0);
}

/**********************************************************************/

int strncasecmp(char *a, char *b, int n)
{
    while( *a && *b && n-- )
	if( tolower(*a++) != tolower(*b++) )
	    return (1);

    return((*a || *b) ? 1 : 0);
}

/**********************************************************************/

/* EOF string.c */
