#include "kernel.h"
#include "swis.h"

#include "unixlib.h"

char *getwd(char *buf)
{
    _kernel_swi_regs r;
    char namebuf[32], *b, *c, length;

    r.r[0] = 6;
    r.r[2] = (int)namebuf;

    (void)_kernel_swi(XOS_Bit | OS_GBPB, &r, &r);

    length = namebuf[1];
    b = buf;
    c = &namebuf[2];

    while (length-- > 0) 
	*b++ = *c++;

    *b = '\0';

    return(buf);
}

/* EOF getwd.c */
