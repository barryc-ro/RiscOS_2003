#include "stubs.h"
#include "socklib.h"

int sendto(int s, char *msg, int len, int flags,
	   struct sockaddr *to, int tolen)
{
    _kernel_swi_regs rin, rout;

    rin.r[0] = s;
    rin.r[1] = (int)msg;
    rin.r[2] = len;
    rin.r[3] = flags;
    rin.r[4] = (int)to;
    rin.r[5] = tolen;

    return(_makecall(Sendto, &rin, &rout));
}

/* EOF sendto.c */
