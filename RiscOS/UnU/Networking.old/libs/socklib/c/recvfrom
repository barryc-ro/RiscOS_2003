#include "stubs.h"
#include "socklib.h"

int recvfrom(int s, char *buf, int len, int flags,
	     struct sockaddr *from, int *fromlenaddr)
{
    _kernel_swi_regs rin, rout;

    rin.r[0] = s;
    rin.r[1] = (int)buf;
    rin.r[2] = len;
    rin.r[3] = flags;
    rin.r[4] = (int)from;
    rin.r[5] = (int)fromlenaddr;

    return(_makecall(Recvfrom, &rin, &rout));
}

/* EOF recvfrom.c */
