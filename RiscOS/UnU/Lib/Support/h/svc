#ifndef svc_H
#define svc_H

/* svc.h - enter and leave SVC mode (ARM 3 specific)
 * written by Jonathan Coxhead, 1st Feb 1994
 */

#ifdef __cplusplus
   extern "C" {
#endif

/* -------------------------------------------------------------------------
 * Function:      svc_enter()
 *
 * Description:   Enters SVC mode
 */

extern void svc_enter (void);

/* -------------------------------------------------------------------------
 * Function:      svc_exit()
 *
 * Description:   Leaves SVC mode
 */

extern void svc_exit (void);

#ifdef __cplusplus
   }
#endif

#endif
