/*
 * Constants
 */
#define ID_MAX_LENGTH	32	/* Max size of product id string */
#define MANF_MAX_LENGTH	32	/* Max size of manufacturer string */


/*
 * Types
 */
typedef enum { d_keyboard, d_handset, d_pointer, d_joystick, d_data } device_type_t;
typedef enum { p_keyboard, p_absolute, p_relative, p_data } packet_type_t;

typedef struct
{
  unsigned int number;
  unsigned int manf;
  unsigned char id[ID_MAX_LENGTH];
  device_type_t device_type;
  packet_type_t packet_type;
  typedef union {
    unsigned int word;		/* Generic */
    unsigned int table;		/* Handset: Conversion table number */
    unsigned int useUDN;	/* Keyboard: Uses the UDN bit */
    unsigned int scale;		/* Pointer: Left-shift value for x and y */
  } extra;
} registry_t;


/*
 * Public globals
 */
extern unsigned char manufacturer[][MANF_MAX_LENGTH];
extern registry_t registry[];
extern unsigned int registry_entries;
