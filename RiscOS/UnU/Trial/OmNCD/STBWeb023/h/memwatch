/* -*-c-*- */

/* memwatch.h */

#ifndef MEMWATCH
#define MEMWATCH 2
#endif

#if MEMWATCH

extern void *mm_malloc(size_t x);
extern void *mm_calloc(size_t x, size_t y);
extern void *mm_realloc(void *x, size_t y);
extern void mm_free(void *x);
extern int mm_can_we_recover(void);

#else

#define mm_malloc(x) malloc( x )
#define mm_calloc(x, y) calloc( x , y )
#define mm_realloc(x) realloc( x )
#define mm_free(x) free( x )
#define mm_can_we_recover() (0)

#endif

void mm_ckeck(void);
void mm_summary(void);
void mm_dump(void);
