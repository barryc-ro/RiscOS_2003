# define TRUE 1
# define FALSE 0
#endif

#ifndef MAX

#define MAX(x,y)   ((x) > (y) ? (x) : (y))
#define MIN(x,y)   ((x) < (y) ? (x) : (y))

#endif

int blend = 0;

