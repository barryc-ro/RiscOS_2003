/*
        Hourglass functions for NFS. Who cares if these don't work!
*/

#ifndef __NFSNFS_h
#include "NFS.h"
#endif

void hourglass_on( void )
{
        _kernel_swi_regs r;

        _kernel_swi( XOS_Bit | Hourglass_On, &r, &r );
}

void hourglass_off( void )
{
        _kernel_swi_regs r;

        _kernel_swi( XOS_Bit | Hourglass_Off, &r, &r );
}

void hourglass_percentage( int percentage )
{
        _kernel_swi_regs r;

        if ( percentage > 0 )
        {
                r.r[0] = percentage;
                _kernel_swi( XOS_Bit | Hourglass_Percentage, &r, &r );
        }
}
