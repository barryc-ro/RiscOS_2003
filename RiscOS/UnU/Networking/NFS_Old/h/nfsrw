/* nfs read write
 *
 * 2/9/92
 * by J Sutton
 */

#ifndef __nfsrw_h
#define __nfsrw_h

#include "NFS.h"

/*
        Destination address is passed into this routine. count can be > valid memory.
        Uses clntudp coroutine mechanism to get many simultaneous transfers
*/
extern _kernel_oserror *nfsrw_readmany
(
        int *readres_len,
        char *readres_data,
        MountPoint *mount_point,
        nfs_fh *fhandle,
        unsigned offset,
        int count,
        fattr *nattr
);

extern _kernel_oserror *nfsrw_writemany
(
        fattr **nattr,
        MountPoint *mount_point,
        nfs_fh *fhandle,
        unsigned offset,
        char *data,
        int count
);

#endif
