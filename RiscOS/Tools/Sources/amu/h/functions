#ifndef functions_h_included
#define functions_h_included

#ifdef __cplusplus
extern "C" {
#endif

typedef enum {
  func_not_recognised,
  func_filter,
  func_patsubst,
  func_subst,
  func_strip,
  func_firstword,
  func_word,
  func_wordlist,
  func_words,
  func_sort
} known_functions;

typedef char *(*function_executor)(int argc, LinePart *args);

typedef struct {
  known_functions code;
  char *name;
  function_executor execute;
  int min_args;
  int max_args;
  bool macroise_each_parameter;
} function_table;

extern const function_table func_tab[];

/* Functions */

#ifdef __cplusplus
}
#endif
#endif
