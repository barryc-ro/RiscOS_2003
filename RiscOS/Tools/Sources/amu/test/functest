# Function tests

# Tests set A
FOO1 = left $(word 2,${BAR1}) right
BAR1 = left $(firstword FOO BAR) right
FIRST=3
LAST=5
LETTERS=a b c d e f g h
FOO2 = $(strip  a b c  )
BAR2 = $(wordlist ${FIRST},${LAST},${LETTERS})
FOO3 = $(words ${LETTERS})
BAR3 = $(words ${BAR2})
FOO4 = $(word 4,${strip ${LETTERS}})
BAR4 = ${word 9,${LETTERS})

# Tests set B
BVAR = one two three four  one two three four
B1VAR = $(sort ${BVAR})

all:
  @if "${FOO1}" <> "left FOO right" Then Error "Test A1 failed"
  @if "${BAR1}" <> "left FOO right" Then Error "Test A2 failed"
  @if "${FOO2}" <> "a b c"          Then Error "Test A3 failed"
  @if "${BAR2}" <> "c d e"          Then Error "Test A4 failed"
  @if "${FOO3}" <> "8"              Then Error "Test A5 failed"
  @if "${BAR3}" <> "3"              Then Error "Test A6 failed"
  @if "${FOO4}" <> "d"              Then Error "Test A7 failed"
  @if "${BAR4}" <> ""               Then Error "Test A8 failed"
  @|
  @if "${B1VAR}" <> "four one three two" Then Error "Test B1 failed"
  @|
  @echo All tests passed
  