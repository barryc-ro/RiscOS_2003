#ifndef DDT2_BEMenu__
  #define DDT2_BEMenu__

  #include <tboxlibs/toolbox.h>

  /* Event numbers */

  #define BEMenu_EToBeShown     0x0130
  #define BEMenu_EHidden        0x0131
  #define BEMenu_ESelection     0x0132

  /* Component IDs */

  #define BEMenu_CID_First      0x2800

  /* Functions */

  int bemenu_to_be_shown (int eventcode, ToolboxEvent * event, IdBlock * idb, void * handle);
  int bemenu_selection   (int eventcode, ToolboxEvent * event, IdBlock * idb, void * handle);

#endif /* DDT2_BEMenu__ */
