/* Title:   types.h
 * Purpose: make types
 * Author:  IDJ
 * History: 05-Jul-90: IDJ: created
 *
 */

#ifndef __types_h
#define __types_h

#ifndef __menu_h
#include "menu.h"
#endif

#ifndef __wimp_h
#include "wimp.h"
#endif

#ifndef __template_h
#include "template.h"
#endif

#ifndef __dbox_h
#include "dbox.h"
#endif                     


/* ----------------- an output window ------------------ */
typedef struct MKoutputwin
{
   struct MKoutputwin       *next;
   int                       flags;
   template                 *text_t;
   wimp_w                    text_w;
   dbox                      summary_d;
   char                     *buffer;
   int                      *line_offsets;
   int                       bufsize;
   int                       nlines;
   int                       initlines, yextent;
   char                     *time_run;
} MKoutputwin;


/* ------------------ tool details --------------------- */

typedef struct MKtool
{
   struct MKtool   *next;
   char            *name;
   char            *extension;
   char            *flags;
   char            *conversion;
   char            *description;
   char            *setup;
} MKtool;

/* ------------------ source details ------------------- */

typedef struct MKsource
{
   struct MKsource *next;
   char            *filename;
   int              usage; 
   MKtool          *make_using;
} MKsource;

/* ------------------ member details ------------------- */
/* a 'member' is either a source file or an object file  */
/* the set of which make up a target                     */

typedef struct MKmember
{
   struct MKmember *next;
   int type;
   union 
   {  
      char *object_name;
      MKsource *source;
      char *temp_name;
   } data;   
} MKmember;

typedef struct MKmembers_listwindow
{
   wimp_w     w;
   template  *copy_t;
   char      *buffer;
   int       *line_offsets;
   int        nlines;
} MKmembers_listwindow;

/* ------------------ target details ------------------- */

typedef struct MKtarget
{
   struct MKtarget     *next;
   struct MKtarget     *prev;
   int                  type;
   char                *name;
   char                *toolname;
   MKmember            *members;
   MKmembers_listwindow members_window;   
} MKtarget;

/* ------------------ a project ------------------------ */

typedef struct MKproject
{
   struct MKproject *next;
   char             *makefile;
   char             *prefix;
   int               flags;
   int               make_flags;
   dbox              project_d;
   menu              project_m;
   char             *project_name;
   char             *user_editable;
   char             *dynamic;
   MKtool           *tool_list;
   MKtarget         *current_target;
   MKtarget         *target_list;
   MKsource         *source_list;  
} MKproject;

/* -------------------------- wimp msg formats -------------------- */

typedef struct
{
   wimp_msghdr hdr;
   void       *handle;
   char        application_name[12];
   char        cmdline[220];
} MKmsg_cmdline;


#endif

