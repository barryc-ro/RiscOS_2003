#!/usr/local/bin/bash

# usage: wantlink source dest
wantlink()
{
    ext=$1
    file=$2

    source="../$ext/$file";
    dest="$file.$ext";
    if [ ! -L $dest ];
    then
	echo ln -s $source $dest
	ln -s $source $dest
    fi
}

if [ ! -L "VersionNum" ]; then
    echo ln -s ../VersionNum .
    ln -s ../VersionNum .
fi

wantlink c aasm
wantlink c apply
wantlink c applysub
wantlink c asdsupp
wantlink c asm
wantlink c cli
wantlink c code
wantlink c condasm
wantlink c errors
wantlink c expr
wantlink c exprstor
wantlink c formatio
wantlink c fpio
wantlink c getdir
wantlink c getline
wantlink c globvars
wantlink c hostdep
wantlink c initdir
wantlink c listing
wantlink c literals
wantlink c locallab
wantlink c macrotyp
wantlink c nametyp
wantlink c occur
wantlink c opcode
wantlink c p1dir
wantlink c p1line
wantlink c p2dir
wantlink c p2line
wantlink c stats
wantlink c store
wantlink c symdump
wantlink c tables
wantlink c tokens
wantlink c vars

wantlink h aofvars
wantlink h apply
wantlink h applysub
wantlink h asd
wantlink h asdasm
wantlink h asdsupp
wantlink h asm
wantlink h cli
wantlink h code
wantlink h condasm
wantlink h constant
wantlink h errors
wantlink h expr
wantlink h exprstor
wantlink h exprtyp
wantlink h formatio
wantlink h fpio
wantlink h getdir
wantlink h getline
wantlink h globvars
wantlink h hostdep
wantlink h initdir
wantlink h listing
wantlink h literals
wantlink h locallab
wantlink h macrotyp
wantlink h message
wantlink h nametyp
wantlink h occur
wantlink h opcode
wantlink h options
wantlink h p1dir
wantlink h p1line
wantlink h p2dir
wantlink h p2line
