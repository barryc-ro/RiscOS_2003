typedef enum {
  NoCheck,
  NoLabNoExp,
  NoLabExp,
  LabNoExp,
  LabExp,
  OptLabExp,
  OptLabNoExp
  } SyntaxType;

typedef struct DirectiveEntry {
  Name            key;
  DirectiveNumber value;
} DirectiveEntry;

#define DirTabSize (sizeof(AllDirectives)/sizeof(DirectiveEntry))

BOOLEAN allowDirInCond[TDUMMY];

#ifndef AAsm
typedef struct AreaEntry {
