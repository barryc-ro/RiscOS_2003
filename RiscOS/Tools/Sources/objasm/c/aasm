#include "hostdep.h"

#include "asm.h" 
#include "constant.h"
#include "errors.h"
#include "formatio.h"
#include "globvars.h"
#include "initdir.h"
#include "cli.h"
#include "listing.h"
#include "symdump.h"
#include "vars.h" 
#include "version.h"
#include "message.h"

static char tempLine[MaxLineLength+1];

int main(int argc, char *argv[])
{
#ifdef HOST_IS_RISCOS
  Init_osd();
#endif

  Init_Asm();
  Init_InitDir();
  Init_Variables();

#ifndef HOST_WANTS_NO_BANNER
  printf(aasm_main_banner, AsmType, AsmName, Version, Special, __DATE__);
#endif

  InitSymbolTable();
  if (GetInterface(argc, argv, tempLine))
  { PageModeOff();
    inFile = FALSE;
    Asm(tempLine); /* Just pass in the code file name */
    if (xrefOn && totalErrors == 0) xref_table();
    return (totalErrors > 0);
  }
  /* ... diagnostic already produced by GetInterface ... */
  return 1;
}

/* End aasm.c */
