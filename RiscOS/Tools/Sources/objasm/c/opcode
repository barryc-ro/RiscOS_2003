#define COSCode  0x0E908100
#define TANCode  0x0EA08100
#define ASNCode  0x0EB08100
#define ACSCode  0x0EC08100
#define ATNCode  0x0ED08100

/*Group 10*/
#define CMFCode  0x0E90F110
#define CNFCode  0x0EB0F110
