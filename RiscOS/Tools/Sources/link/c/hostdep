#ifndef __STDC__                 /* memcpy always present in ANSI */
#  ifdef HOST_HAS_NO_MEMCPY
void memcpy(p1, p2, n)
char *p1;
char *p2;
int32 n;
{
    while (n--) *p1++ = *p2++;
}
#  endif
