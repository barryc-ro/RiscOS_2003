#!/usr/local/bin/bash

# usage: wantlink source dest
wantlink()
{
    ext=$1
    file=$2

    source="../$ext/$file";
    dest="$file.$ext";
    if [ ! -L $dest ];
    then
	echo ln -s $source $dest
	ln -s $source $dest
    fi
}

wantlink c aifcode
wantlink c hostdep
wantlink c link

wantlink h aifcode
wantlink h hostdep
wantlink h msgnos
wantlink h options
