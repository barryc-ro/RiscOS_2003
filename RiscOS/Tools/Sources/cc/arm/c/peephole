   0,         J_DEAD_R1,           J_DEAD_R2,           J_DEAD_R1+J_DEAD_R2,
   J_DEAD_R3, J_DEAD_R3+J_DEAD_R1, J_DEAD_R3+J_DEAD_R2, J_DEAD_R3+J_DEAD_R1+J_DEAD_R2
};

