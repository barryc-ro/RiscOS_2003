typedef struct PeepConstraint{
  /* PC_Type */ unsigned char type;
  /* PC_Proc */ unsigned char fn;
  /* P_FieldType */ unsigned char f1type, f2type;
  int32 f1, f2;
  /* we really want f1 & f2 to be something like :
    union {
      struct {
        unsigned char inst;
        unsigned char field;
      } field;
      int32 value;
    };
  but that can't be initialised.
  */
} PeepConstraint;

