static char frameregs[16];  /* 'virtual' physical register -> physical register
                             * for R_IP, R_FP, R_SL & R_SP.
                             */

#define physical_register(r) (((r) < 10 || (r) > 13) ? (r) : frameregs[r])

int integer_load_max;
int ldm_regs_max;

