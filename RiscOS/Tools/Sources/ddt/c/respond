static void display_vectors(void)
{
    int i, j;
    int *vblock;

    output_line("Vector     -> Address  R12      Module");
    for (i = 0; i < N_Vectors; i++) {
        if (!vector_names[i])
            continue;
        vblock = find_vector(i);
        if (vblock) {
            output_str(vector_names[i]);
            j = 10 - strlen(vector_names[i]);
            while (j--)
                output_ch(' ');
        }
#ifdef PRAGMA_C1
        enable_access = 1;
#endif
        while (vblock) {
            output_str(" -> ");
            output_uns(vblock[2], 16, 8);
            output_ch(' ');
            output_uns(vblock[1], 16, 8);
            output_ch(' ');
            output_str(get_module_name(vblock[2]));
            vblock = (int *)vblock[0];
            output_ch(0);
            if (vblock)
                output_str("          ");
        }
#ifdef PRAGMA_C1
        enable_access = 0;
#endif
    }
}
