static char *get_module_name(int addr)
{
    ModuleInfoStr mi;

    mi.mod_no = 0;
    do {
        mi.ins_no = 0;
        if (xos_module(OS_MODULE_EXTRACT_INFO, &mi) < 0)
            return "";
        if (addr >= mi.base && addr < mi.base + *((int *)(mi.base - 4)))
            return (char *)(mi.base + *((int *)(mi.base + 16)));
        if (mi.ins_no)
            mi.mod_no++;
    } while (1);
}
