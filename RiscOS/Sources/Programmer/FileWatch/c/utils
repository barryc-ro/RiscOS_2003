#if REMOTE_DEBUG

#include "debug/remote.h"

extern debug_session *db_sess;

void debug(const char *fmt, ...)
{
    va_list ap;
    va_start(ap, fmt);
    debug_vprintf(db_sess, fmt, ap);
    va_end(ap);
}

#endif

#if 0

int debugw = 0;

os_error *tracker_writef(const char *fmt, ...)
{
    va_list ap;
    char buffer[256];

    va_start(ap, fmt);
    vsprintf(buffer, fmt, ap);
    va_end(ap);

    return (os_error *)_swix(0xCF003, _INR(0,1), debugw, buffer);
}

#endif

