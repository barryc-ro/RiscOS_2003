// header file for SCBB.H

/* Begin-Prologue */
#ifndef SCBB_H
#define SCBB_H
#undef DECLARE
#undef INIT
#ifdef PROTOTYPES_INTERNAL
#define DECLARE
#define INIT(x) =(x)
#else
#define DECLARE extern
#define INIT(x)
#endif
/* End-Prologue */

#define SELECT_NET_BB    1
#define SELECT_SC_BB     2

#define MAX_INDEX_SIZE   8
#define INDEX_FILE_SIZE  96
#define FRESCO_FILE_SIZE 2048

#define BOOTBLOCK_BUFFER_SIZE 8192
#define WSPACE_BUFFER_SIZE    1024

DECLARE REG_BOOTBLOCK net_bb;
DECLARE REG_BOOTBLOCK sc_bb;
DECLARE REG_BOOTBLOCK trans_bb;

DECLARE unsigned char *sc_bb_buffer;
DECLARE unsigned char *net_bb_buffer;
DECLARE unsigned char *trans_bb_buffer;

DECLARE unsigned char *sc_bb_wspace;
DECLARE unsigned char *net_bb_wspace;
DECLARE unsigned char *trans_bb_wspace;

DECLARE INDEX sc_index[MAX_INDEX_SIZE];

DECLARE int sc_bbs;
DECLARE unsigned char *sc_file;
DECLARE int scbb_changed INIT(0);
DECLARE int fresco_data_present INIT(0);

DECLARE int init_scbb(void);
DECLARE int load_scbb(int, char *);
DECLARE int consolidate_nics(INDEX *);
DECLARE INDEX *find_scbb(char *);
DECLARE int check_sc_version(unsigned int);
DECLARE int expand_index_filename(char *, unsigned char *);

/* Begin-Epilogue */
#undef PROTOTYPES_INTERNAL
#undef INIT
#undef DECLARE
#endif
/* End_Epilogue */

