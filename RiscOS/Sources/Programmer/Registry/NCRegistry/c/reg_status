#include <stdio.h>
#include "kernel.h"
#include "swis.h"
#define PROTOTYPES_INTERNAL
#include "reg_status.h"
#include "reg_utils.h"
#include "DBUG.h"
#ifdef ENABLE_DEBUGGING
#include "BORDERDBUG.h"
#endif


void status_service_call(void)
{
  _kernel_swi_regs r;

#ifdef ENABLE_DEBUGGING
  static int border_colour;
#endif

  r.r[1] = BB_STATUS_SVC_CALL;
  r.r[2] = sc_status;
  r.r[3] = net_status;
  r.r[4] = sc_delta_svc;
  r.r[5] = net_delta_svc;


#ifdef ENABLE_DEBUGGING
  border_cycle(&border_colour);
#endif

  status_svc_count++;

  DBUG_PRINTF(DBUG_LVL_DIAG, "NCRegistry: status_service_call(%x,%x,%x,%x)\n",
  			     sc_status,
  			     net_status,
  			     sc_delta_svc,
  			     net_delta_svc);

  _kernel_swi(XOS_Bit | OS_ServiceCall, &r, &r);

  DBUG_PRINTF(DBUG_LVL_DIAG, "NCRegistry: status_service_call exiting\n");
  sc_delta_svc = net_delta_svc = 0;

}

void set_status_bits(unsigned int sel, unsigned int mask)
{
  switch(sel) {
    case SELECT_NET_STATUS:
         net_delta_svc |= mask;
         net_delta_swi |= mask;
         net_status |= mask;
         break;

    case SELECT_SC_STATUS:
         sc_delta_svc |= mask;
         sc_delta_swi |= mask;
         sc_status |= mask;
         break;

  }
}

void clr_status_bits(unsigned int sel, unsigned int mask)
{
  switch(sel) {
    case SELECT_NET_STATUS:
         net_delta_svc |= mask;
         net_delta_swi |= mask;
         net_status &= ~mask;
         break;

    case SELECT_SC_STATUS:
         sc_delta_svc |= mask;
         sc_delta_swi |= mask;
         sc_status &= ~mask;
         break;

  }
}

void swp_status_bits(unsigned int sel, unsigned int mask)
{
  switch(sel) {
    case SELECT_NET_STATUS:
         net_delta_svc |= mask;
         net_delta_swi |= mask;
         net_status = asm_xor(net_status, mask);
         break;

    case SELECT_SC_STATUS:
         sc_delta_svc |= mask;
         sc_delta_swi |= mask;
         sc_status = asm_xor(sc_status, mask);
         break;

  }
}

void reset_status_bits(unsigned int sel)
{
  switch(sel) {
    case SELECT_NET_STATUS:
         net_delta_svc = 0xffffffff;
         net_delta_swi = 0xffffffff;
         net_status = 0;
         break;

    case SELECT_SC_STATUS:
         sc_delta_svc = 0xffffffff;
         sc_delta_swi = 0xffffffff;
         sc_status = 0;
         break;

  }
}


