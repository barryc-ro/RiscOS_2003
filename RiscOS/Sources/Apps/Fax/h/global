#ifndef __fax__global_h
#define __fax__global_h


/* #define DEBUG   	// Debug to parallel */
/* #define WDEBUG  	// Debug to window */
/* #define VDEBUG  	// Debug verbose to parallel */
/* #define TIMING  	// Interval timing */
/* #define PROFILE 	// Profiling */
/* #define TRACE   	// Tracing */

/* Number of supported ports */
#define NPORTS 2

/* Page length tolerance, in permil */
#define PAGELENTOL 30

/* NSF/NSS country and manufacturer codes, LSB transmitted first */
#define FAX_NSF_COUNTRYCODE		((byte) 0xb4)
#define FAX_NSF_COUNTRYSUBCODE		((byte) 0x00)
#define FAX_NSF_MANUFACTURERCODE	((byte) 0xb6)

/* Maximum scan line time in s */
#define MaxScanLineTime 5

/* Maximum image width in pels: */
/* 2432 for A3 R8, twice that for R16 */
#define TIFFMaxImageWid (2432 * 2)

/* End of tweakable parameters */

#define FAX_FLAGS_DATASWITCHOVER	(1U<<31)
#define FAXTX_FLAGS_DELETEAFTERSEND	(1U<<30)

#if defined(VDEBUG) && !defined(DEBUG)
#define DEBUG
#endif

#if defined(DEBUG) && !defined(PDebug_DEBUG)
#define PDebug_DEBUG
#endif

#ifdef TIMING
#include "mgrlib:usTimer.h"
#define TIMINGSTATEMACHINE 1
#define TIMINGSTREAMIN 2
#define TIMINGDECODE2DMMR 3
#define TIMINGENCODE2DMR 4
#define TIMINGSENDINGT4 5
#define TIMINGDUMPINGTOMODEM 6
#define TIMINGRTC 7
#define TIMINGSCALING 8
#endif

#ifdef PROFILE
#define HierProf_PROFILE
#endif

#ifdef TRACE
#define Trace_TRACE
#endif

/* @@ Check out all of these with real-world tests */

/* Maximum raw size in hwords: */
/* TIFFMaxImageWid */
/* + 1 for W0 at start */
/* + 1 for 2D MR EOL guard at end */
#define TIFFMaxRawSize (TIFFMaxImageWid + 2)

/* Maximum encoded size in octets: */
/* For 2D MR a pair of W1B1 in horizontal mode takes 12 bits (i.e. 6 bits per pel) */
/* + 21 bits for W0 at start and B0 at end, and an extra horizontal mode token */
/* + 13 bits for EOL */
/* + 1 octet for squeeze byte */
#define TIFFMaxEncodedSize ((TIFFMaxImageWid * 6 + 21 + 13) / 8 + 1) /* In bytes */

/* Maximum received size in octets: */
/* MaxScanLineTime s worth at 14400 bps */
/* + 4 octets for EOL blanking (see tiff_stream_in) */
#define TIFFMaxReceivedSize (14400 * MaxScanLineTime / 8 + 4)


#endif

