//  TCurrency fLeftHeader;
//  TCurrency fRightHeader;
//  TCurrency fLeftFooter;
//  TCurrency fRightFooter;
//  int   fPageLayout;

_TMarginCommand(TTextDocument doc, TMarginData *data);
