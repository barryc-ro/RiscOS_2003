typedef struct _TMarginCommand     *TMarginCommand;
typedef struct _TZoomTracker       *TZoomTracker;
typedef struct _TMarginTracker     *TMarginTracker;
typedef struct _THFTracker         *THFTracker;

// ============================ TMarginCommand ============================
