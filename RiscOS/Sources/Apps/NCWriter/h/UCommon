typedef int TCurrency;
typedef TCurrency *PCurrency;
#define Curr_fRecnum(curr) (((unsigned int)(curr)) >> 16)
#define Curr_fType(curr) ((curr) & 0xff)
#define Curr_Set(recnum, type) (((recnum) << 16) | (type))
