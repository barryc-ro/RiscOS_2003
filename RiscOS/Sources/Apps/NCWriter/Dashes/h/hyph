/* static */
typedef struct LangListType {
    char name[4];
    int id;
    int MaxChar;
	char fullName[20];
} LangListType;

typedef struct {
    u_char offset;
    u_char value;
} HyphenType;

struct LanguageType {
	u_char	*dummy;
	void	*UserData;	/* any language specific data user wants to keep */
};
