/* ------------------ GADGET DEFINITIONS -------------------- */

/* Decide_Window gadgets */
#define decide_textarea    0x01

/* Confirm_Window gagdets */
#define confirm_textarea   0x01

/* Feed_Window gadgets */
#define feed_clock_display	0x00	/* Clock display button */

/* Enote_Window gadgets */
#define enote_to_label         0x04
#define enote_subject_label    0x0c
#define enote_to               0x05
#define enote_subject          0x07
