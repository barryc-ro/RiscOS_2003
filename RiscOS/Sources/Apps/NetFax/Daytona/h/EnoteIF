/*----------------------------------------------------------------------*/

#define DayNote_SendMail		0x50D04
#define	DayNote_PathReply		0x50D05


/* Bit set */
#define Email_Bit	(1)
#define Print_Bit	(1<<1)


typedef struct daynote_sendnote
{
  struct
  {
    int size;
    int sender;
    int my_ref;
    int your_ref;
    int action_code;
  } Hdr;
  
  struct daynote_cleardata
  {
    int send_methods;  /* Bit 1 set = initiate enote send,
                          Bit 0 unset = reply containing subject */
    AddressArea *data_area;
    int data_area_id;
    union
    {
      char email_address[224];
      char subject[224];
    } string_data;
  } data;
} DayNote_SendNote;


typedef struct daynote_path
{
  struct
  {
    int size;
    int sender;
    int my_ref;
    int your_ref;
    int action_code;
  } Hdr;
  
  struct daynote_pathdata
  {
    int  method;
    char path_data[232];
  } data;
} DayNote_Path;


/* end of EnoteIF.h */
