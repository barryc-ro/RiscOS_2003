extern int HWM_Check(void);

#if SUPPORT_EMAIL
/* email send related functions */
extern void HWM_MailScan_Largest(int largest);  /* largest page scanned (regardless of route) */
extern void HWM_MailSend_Largest(int largest);  /* largest page to go by email */

extern void HWM_MailSend_Usage(int using, int reserving);
extern int  HWM_MailSend_Extra(int extra_reservation);

extern int MimeQ_QuerySpaceForPage(int pageSize);

/* email retreive related functions */
extern int  HWM_Query_MaxSpace(void);
extern void HWM_MailRx_Usage(int using, int reserving);
extern int  HWM_MailRx_Extra(int extra_reservation);

#define STREAM_200K (200 * 1024)    /* a page of this size triggers immediate streaming */
#define STREAM_300K (300 * 1024)    /* largest page that can be emailed */

#endif


