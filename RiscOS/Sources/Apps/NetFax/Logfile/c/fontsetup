/* -------------------------------------- LIBRARY IMPORTS --------------------------------------- */
#include "include.h"
#include "tbox.h"
#include "fontsetup.h"
#include "include.h"
#include "globals.h"



/* ----------------------------------------- FUNCTIONS ------------------------------------------ */

/************************************************************************/
/* fontsetup_fonts_logscreen                                            */
/*                                                                      */
/* Function sets font settings for the 15 log entry icons.              */
/*                                                                      */
/* Parameters: void.                                                    */
/*                                                                      */
/* Returns:    void.                                                    */
/*                                                                      */
/************************************************************************/
void fontsetup_fonts_logscreen(void)
{
  int loop;
  
  /* Loop through each of the log window icons and set them accordingly */
  for (loop = 0; loop < 6; loop++)
  {
    ui_font_general(OptLog_WindowHandle, icon_entries[loop].date_icon);
    ui_font_general(OptLog_WindowHandle, icon_entries[loop].time_icon);
    ui_font_general(OptLog_WindowHandle, icon_entries[loop].message_icon);
  }
}




