/************************************************************************/
/* File:    globals.h                                                   */
/* Purpose: All major globals are stored or defined in this file.       */
/* Author:  Hed Simons (mailto:hsimons@acorn.com)                       */
/* History: Fri 19th September 1997  ver 0.01 - Created.                */
/************************************************************************/

#ifndef __globals_h
#define __globals_h

#include "include.h"

/*----------------------------------------------------------------------*/

/* The wimp and toolbox arrays */
extern int wimpcodes[];
extern int tbcodes [];

/* The message and event blocks */
extern MessagesFD message_block;
extern IdBlock event_id_block;

/* The Icon bar handlers */
extern ObjectId Ibar_MenuHandle;
extern ObjectId Icon_BarHandle;

/* The two main windows used in DayLog */
extern ObjectId OptLog_WindowHandle;
extern ObjectId OptMain_WindowHandle;

/* Globals for the log records */
extern IconRecord icon_entries[];
extern DecLogEntry *decrec_head;	/* Head of linked record list */
extern int  number_records;		/* Number of records in list */
extern int  record_limit;		/* Total number of records allowed */
extern enum LOG  log_type;		/* Rolling or Timed log */

/* Globals for the display of records */
extern int  top_record;			/* Number of top record */
extern int  current_icon;               /* Current icon at the top */
extern int  string_icon_index;          /* Where in the current string are we */
extern int  string_max;			/* At the end of the string? */

/* Globals for the overall control of the log file */
extern int		max_size;		/* 0..? bytes */
extern int		purge_period;		/* {0..3} */
extern char		purge_time[10];		/* 0..23:0..59 */
extern int		purge_day;		/* 1..7: 1=Sunday..7=Saturday */
extern int		print_purge;		/* 0=Disabled, 1=Enabled */
extern int		email_purge;		/* 0=Disabled, 1=Enabled */
extern char		log_destination[130];	/* Email address */

/* {0..3} : 0=never, 1=twice daily, 2=once per day, 3=once per week */

/* And for purging purposes... */
extern int	purged;			/* Has log file been purged? */
extern int      time_purged;		/* Time purging flags */
extern int	purge_reset;		/* Have we reset this purge? */
extern int	preped_log;		/* Has log been preped? */

#endif
