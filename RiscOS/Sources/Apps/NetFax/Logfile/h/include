#ifndef __include_h
#define __include_h

/* Need the time library */
#include <time.h>

#include "gadgets.h"

/*----------------------------------------------------------------------*/
/* Key code definitions */
#define	KeyCode_PageUp		0x19f
#define	KeyCode_PageDown	0x19e
#define KeyCode_DownArrow       0x18e
#define KeyCode_UpArrow         0x18f

/* Icon definitions */
#define KC_UpArrow	0x19f
#define KC_DownArrow	0x19e

/* Decoded log file entries, used for storing data at runtime */
typedef struct DecLogEntry
{
  char	date[13]; 		/* Date of entry */
  char	time[13];		/* Time of entry */
  char	log_string[512];	/* Actual log entry */
  int	spans;			/* How many icons the text will span */
  void	*next_record;		/* Pointer to the next record in the queue */
}DecLogEntry;

/* Coded log file entries */
typedef struct EncLogEntry
{
  time_t	time;			/* time_h entry for the entry time */
  char 		enc_string[255];	/* Encoded string for logfile */
}EncLogEntry;

/* Icon structure record */
typedef struct IconRecord
{
  ComponentId 	date_icon;	/* Date text */
  ComponentId 	time_icon;      /* Time text */
  ComponentId 	message_icon;	/* Message text */
  ComponentId	border_icon;	/* Border icon */
  unsigned int	filled;		/* State of log field */
}IconRecord;

enum LOG {Rolling, Timed};

#define	Up_Arrow	0x12
#define	Down_Arrow	0x13

//#define TRUE		1
//#define FALSE		0

#endif
