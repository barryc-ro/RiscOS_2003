/* Need library to decode the time entries */
#include "include.h"
#include "globals.h"

/*----------------------------------------------------------------------*/

/* Name	     : option_load
 * Parameter : field tag, result buffer, buffer size
 * Purpose   : C veneer to the SFConfigMan SWI call
 */
int option_load(char *, char *, int);


/* Name	     : optionlib_grab_options
 * Parameter : void
 * Purpose   : Uses the option_load function to setup the relevant options
 */
void optionlib_grab_options(void);





