/* ------------------ GADGET DEFINITIONS -------------------- */

/* Confirm_Window gagdets */
#define confirm_textarea   0x01

/* Decide Window gadgets */
#define decide_textarea    0x01

/* Feed_Window gadgets */
#define feed_clock_display	0x00	/* Clock display button */

/* Log main window */
#define	date_area		0x00
#define time_area		0x01
#define log_entry_area	0x02

/*
 * Events
 */
#define sk_1_event	0x98
#define sk_2_event	0x97
#define sk_3_event	0x96
#define sk_4_event	0x95

#define left_event	0xa0
#define right_event	0xa1
#define page_up_event	0xa2
#define page_down_event	0xa3

#define help_event	0x94
#define home_event	0x93
//#define Search2_Event   0x01

#endif
