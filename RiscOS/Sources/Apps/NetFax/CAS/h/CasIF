/*----------------------------------------------------------------------*/

#define DayCas_SendMail   0x50D08  /*>>>not allocated - stolen for quick hack */
#define DayCas_PathReply  0x50D09  /*>>>not allocated - stolen for quick hack */


/* Bit set */
#define Email_Bit (1 << 0)
#define Print_Bit (1 << 1)


/* Entry block for sending to !Daytona to request email and/or print */ 
typedef struct _DayCas_SendNote
{
  struct
  {
    int size;
    int sender;
    int my_ref;
    int your_ref;
    int action_code;
  } Hdr;
  
  struct
  {
    int send_methods;  /* Bit 0 - Email log, Bit 1 - Print Log (both bits may be set) */
    char email_address[232];
  } data;
} DayCas_SendNote;

typedef struct _DayCas_Path
{
  struct
  {
    int size;
    int sender;
    int my_ref;
    int your_ref;
    int action_code;
  } Hdr;
  
  struct
  {
    int  method;	 /* 1 - Email, 2 - Print */
    char path_data[232];
  } data;
} DayCas_Path;


/* end of CasIF.h */
