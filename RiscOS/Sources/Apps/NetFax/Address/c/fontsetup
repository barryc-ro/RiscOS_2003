/************************************************************************/
/* File:    FontSetup.c                                                 */
/* Purpose: File sets up the font settings etc. for the various windows.*/
/*                                                                      */
/* Author:  Neil Bingham (mailto:NBingham@acorn.co.uk)                  */
/* History: Tue 18th February 1997  ver 0.01 - Created.                 */
/************************************************************************/


/* -------------------------------------- LIBRARY IMPORTS --------------------------------------- */
#include "include.h"
#include "tbox.h"
#include "fontsetup.h"
#include "globals.h"



/* ----------------------------------------- FUNCTIONS ------------------------------------------ */

/************************************************************************/
/* fontsetup_fonts_addressbook                                          */
/*                                                                      */
/* Function sets font settings etc. on address_win.                     */
/*                                                                      */
/* Parameters: void.                                                    */
/*                                                                      */
/* Returns:    void.                                                    */
/*                                                                      */
/************************************************************************/
void fontsetup_fonts_addressbook (void)
{
  ui_font_general (Address_WindowHandle, address_company);
  ui_font_general (Address_WindowHandle, address_name);
  ui_font_general (Address_WindowHandle, address_fax);
  ui_font_general (Address_WindowHandle, address_email);
  ui_font_general (Address_WindowHandle, address_voice);
  ui_font_general (Address_WindowHandle, address_routing);

  ui_font_label (Address_WindowHandle, address_company_label);
  ui_font_label (Address_WindowHandle, address_name_label);
  ui_font_label (Address_WindowHandle, address_fax_label);
  ui_font_label (Address_WindowHandle, address_email_label);
  ui_font_label (Address_WindowHandle, address_voice_label);
  ui_font_label (Address_WindowHandle, address_routing_label);
}


/************************************************************************/
/* fontsetup_fonts_absearch                                             */
/*                                                                      */
/* Function sets font settings etc. on absearch_win.                    */
/*                                                                      */
/* Parameters: void.                                                    */
/*                                                                      */
/* Returns:    void.                                                    */
/*                                                                      */
/************************************************************************/
void fontsetup_fonts_absearch (void)
{
  ui_font_status (ABSearch_WindowHandle, absearch_search_label);

  ui_font_general (ABSearch_WindowHandle, absearch_numberfound);
  ui_font_general (ABSearch_WindowHandle, absearch_searchfield);
  ui_font_general (ABSearch_WindowHandle, absearch_company);
  ui_font_general (ABSearch_WindowHandle, absearch_name);
  ui_font_general (ABSearch_WindowHandle, absearch_fax);
  ui_font_general (ABSearch_WindowHandle, absearch_email);
  ui_font_general (ABSearch_WindowHandle, absearch_voice);
  ui_font_general (ABSearch_WindowHandle, absearch_routing);

  ui_font_label (ABSearch_WindowHandle, absearch_company_label);
  ui_font_label (ABSearch_WindowHandle, absearch_name_label);
  ui_font_label (ABSearch_WindowHandle, absearch_fax_label);
  ui_font_label (ABSearch_WindowHandle, absearch_email_label);
  ui_font_label (ABSearch_WindowHandle, absearch_voice_label);
  ui_font_label (ABSearch_WindowHandle, absearch_routing_label);
}


