/************************************************************************/
/* fontsetup_fonts_abshot                                               */
/*                                                                      */
/* Function sets font settings etc. on abshot_win.                      */
/*                                                                      */
/* Parameters: void.                                                    */
/*                                                                      */
/* Returns:    void.                                                    */
/*                                                                      */
/************************************************************************/
void fontsetup_fonts_abshot (void)
{
  ui_font_label (ABShot_WindowHandle, abshot_fax_label);
  ui_font_label (ABShot_WindowHandle, abshot_email_label);
  
  ui_font_general (ABShot_WindowHandle, abshot_fax);
  ui_font_general (ABShot_WindowHandle, abshot_email);
}
