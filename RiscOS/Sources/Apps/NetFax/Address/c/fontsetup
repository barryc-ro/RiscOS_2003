  ui_font_general (ABAdd_WindowHandle, abadd_name);
  ui_font_general (ABAdd_WindowHandle, abadd_fax);
  ui_font_general (ABAdd_WindowHandle, abadd_email);
  ui_font_general (ABAdd_WindowHandle, abadd_voice);
  ui_font_general (ABAdd_WindowHandle, abadd_routing);

  ui_font_label (ABAdd_WindowHandle, abadd_company_label);
  ui_font_label (ABAdd_WindowHandle, abadd_name_label);
  ui_font_label (ABAdd_WindowHandle, abadd_fax_label);
  ui_font_label (ABAdd_WindowHandle, abadd_email_label);
  ui_font_label (ABAdd_WindowHandle, abadd_voice_label);
  ui_font_label (ABAdd_WindowHandle, abadd_routing_label);
