#ifndef __nvram_h
#define __nvram_h

/* XXX: NVRAM_MAXSIZE is a dummy value for now. */

#undef REAL_NVRAM
#define NVRAM_Read 0x4EE00
#define NVRAM_Write 0x4EE01
#define NVRAM_DELIMITER '\033'
#define EXPECTED_NUMBER_OF_DELIMITERS 12   /* Delimiters for ServerInfoBuffer          */
#define NVRAM_MAXSIZE 500 /* No. of bytes set aside in nvram for the ServerInfoBuffer */

extern _kernel_oserror *get_nvram_defaults(void);
extern void write_nvram_defaults(setup_details_t *defaults);

#endif
