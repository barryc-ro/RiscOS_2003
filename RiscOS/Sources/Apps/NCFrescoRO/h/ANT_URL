#ifndef __ANT_URL_h
#define __ANT_URL_h

/*********************/
/* ANT URL mechanism */

/* Structures */

typedef union
{
  char *ptr;
  int offset;
} url_string_value;

typedef struct url_message
{
  struct hdr
  {
    int    size;
    int    sender;
    int    my_ref;
    int    your_ref;
    int    action_code;
  } hdr;

  union
  {
    char url[236];
    struct indirect
    {
      int tag;
      url_string_value url;
      int flags;
      url_string_value body_file;
      url_string_value target;
      url_string_value body_mimetype;
    } indirect;
  } data;
} url_message;

/* Wimp message numbers */

#ifndef Message_OpenURL
# define Message_OpenURL    0x4af80
#endif

#endif
