#include <ctype.h>

/* this is all we need from "kernel.h" */
typedef struct {
   int errnum;           /* error number */
   char errmess[252];    /* error message (zero terminated) */
} _kernel_oserror;

/* Common */
#include "message.h"
#include "error.h"
#include "debug.h"
#include "dbmalloc.h"

#define block                   /* keep emacs happy */

/* Number of entries in an array */
#define NUMBER(a) (sizeof((a)) / sizeof((a)[0]))


