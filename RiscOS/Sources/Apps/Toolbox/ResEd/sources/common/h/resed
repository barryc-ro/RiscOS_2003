#ifndef __defined_resed_h
#define __defined_resed_h

typedef int Bool;
#define TRUE  1
#define FALSE 0

#define VERSION_NUMBER "0.42"   /* must be "d.dd" */

#define FILENAMELEN 256

#define error _kernel_oserror

/* System */
#include <stdlib.h>
