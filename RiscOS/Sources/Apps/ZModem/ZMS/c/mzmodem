{
 /* display character on terminal screen */
}




#ifdef ZMDEBUG


static FILE * zdbf=NULL;


void zdeb(char * format, ...)
{
 va_list args;
 char v[256];

 va_start(args, format);

 if(!zdbf)
 {
  zdbf=fopen("xx","wb");
  if(!zdbf) return;
 }

 vsprintf(v, format, args);

 fprintf(zdbf,"%s\n",v);

 va_end(args);
}


#endif





