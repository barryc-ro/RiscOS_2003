#ifndef ctssmartcard_h_included
#define ctssmartcard_h_included

#ifdef __cplusplus
extern "C" {
#endif

/* This header declares the API to the smartcard */

typedef enum {
        cts_sc_slot1,
        cts_sc_slot2 = -2
} cts_sc_slot_id;

/* The card number must be 1 or 2 */
extern _kernel_oserror *cts_sc_open(cts_sc_slot_id card_number);
extern _kernel_oserror *cts_sc_close(void);

/* An atexit function that plugclient registers */
extern void cts_sc_atexit(void);

#ifdef __cplusplus
}
#endif

#endif
