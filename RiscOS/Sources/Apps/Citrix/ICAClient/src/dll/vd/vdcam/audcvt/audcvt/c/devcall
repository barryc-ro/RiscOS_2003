extern ULONG pcm2pcmCvtSampleRate;


// Global Data:
//=============

PPLIBPROCEDURE  pAudHWProcedures = NULL;  // procedures for audio HW dll
BOOL driverSupportsFormat;
queueItem_S *gqueueItem_P;

