#include <stdlib.h>
#include <string.h>

#ifdef WINCE
#include <windows.h>
#include <wcecalls.h>
#endif

#include "memmgmt.h"
#include "logapi.h"
#include "../inc/trcflags.h"

#if defined(DOS)
#include <stdio.h>
#include "client.h"
#include "clib.h"
