#ifndef _TBEVENTS_H
#define _TBEVENTS_H

/* Toolbars:      Event codes and start at 0x00001 */
/* Dialogues:     Event codes and start at 0x01000 */
/* Menus:         Event codes and start at 0x10000 */
/* Miscellaneous: Event codes start at 0x20000     */
/* Debug builds:  Event codes start at 0x30000     */

/* Misc events 0x20000 base */
#define IconClick                           0x20000

/* IconMenu (menu from the icon bar icon) 0x10000 base */
#define IconMenuQuit                        0x10000
//#define IconMenuInfo                        0x10001 /* Item leading to the Info window            */

/* RemApp (the main application manager window component IDs 0x01000 base*/
#define RemAppShowing                       0x01000
#define RemAppHiding                        0x01001

/* MainMenu 0x10100 base */
#define MainMenuShowing                     0x10100
#define MainMenuHiding                      0x10101
#define SelectAll                           0x10102
#define SelectClear                         0x10103

/* Toolbar 0x00000 base*/
#define ToolbarNew                          0x00001
#define ToolbarDelete                       0x00002
#define ToolbarCopy                         0x00003
#define ToolbarEdit                         0x00004
#define ToolbarConnect                      0x00005

/* Connection dialogue 0x01100 base */
#define ConnectOk                           0x01100
#define ConnectCancel                       0x01101

#endif
