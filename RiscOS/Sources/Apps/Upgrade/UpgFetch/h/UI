#ifndef _UI
#define _UI

#define CLEAR_SCREEN 256+12


// component id's
#define STATUS_TEXT        0
#define PERCENTAGE_COUNTER 1
#define STATUS_BAR         2

#define ERROR_TEXT         0

#define BAR_STEP           1
#define BAR_MAX            99 // the download time is shown as 0 - 95% on
                              // the bar graph (last 5% doesn't appear as
                              // we are programming flash at this time)

// global variables
extern float start_timer_value;


/* Function prototypes */

// initialise the status screen
void initialise_status_screen(void);

// update the current status
void update_status_screen(int total_bytes_read, int total_bytes_to_read);


// change the status text
void status_print(char *message);

// set the percentage field and slider
void set_percentage(int value);

// error handling routine
void error_occurred(char *message);

// error handling routine
void quit(char *message);


// poll the wimp
void poll_wimp(void);

void set_wimp_mode(void);

#endif
