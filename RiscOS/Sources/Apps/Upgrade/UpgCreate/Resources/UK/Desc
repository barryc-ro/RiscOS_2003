# This is a description of the Wimp interface for UpgCreate

tool_details_start
   name          "UpgCreate";
   command_is    "<UpgCreate$Dir>.UpgCreate";
   version       "Module_FullVersion (Module_ApplicationDate4)";
   wimpslot       128k;
   has_extended_cmdline;
tool_details_end

metaoptions_start
   has_text_window;
   has_summary_window;
   display_dft_is text;
   ctrl_chars escape;
   tab_width 8;
metaoptions_end

dbox_start

   # Icon mappings
   #
   # Icons mapping to "" are usually labels and included as 'null'
   # items so they can be greyed out. Greying out just the writables
   # isn't visible enough, and trying to manipulate icons not declared
   # in the icons section tends to crash FrontEnd.

   icons_start
      icn 3      maps_to "-s " string not_saved;
      icn 5      maps_to "-o " string not_saved;

      icn 8      maps_to "-t osimage";
      icn 9      maps_to "-t font";
      icn 10     maps_to "-t transient";
      icn 11     maps_to "-t permanent";
      icn 12     maps_to "-t resident";
      icn 27     maps_to "-t exec";

      icn 13     maps_to "";
      icn 14     maps_to "";
      icn 15     maps_to "-u " string;
      icn 16     maps_to "-r 1";
      icn 16 off maps_to "-r 0";

      icn 17     maps_to "-c 6";
      icn 17 off maps_to "-c 0";

      icn 18     maps_to "";
      icn 19     maps_to "-d " quoted_string;
      icn 20     maps_to "";
      icn 21     maps_to "-b " quoted_string;
      icn 23     maps_to "-l " quoted_string;

      icn 24     maps_to "";
      icn 25     maps_to "";
      icn 26     maps_to "-e " string;
   icons_end

   # Default icon values

   defaults
      icn 3 "",
      icn 5 "Image",
      icn 8 on,
      icn 13 off,
      icn 15 "0000AAAA",
      icn 16 off,
      icn 17 off,
      icn 19 "",
      icn 21 "",
      icn 23 "UK",
      icn 24 off,
      icn 26 "null:$";

   # Drags to dialogue box and icon bar

   imports_start
      drag_to icn 3 inserts icn 3;
      drag_to icn 5 inserts icn 5;
      drag_to iconbar inserts icn 3;
   imports_end

dbox_end

# Selection and fading model

rules_start
  icn 8  deselects icn 9, icn 10, icn 11, icn 12, icn 27, icn 13;
  icn 9  deselects icn 8, icn 10, icn 11, icn 12, icn 27, icn 13;
  icn 10 deselects icn 8, icn 9,  icn 11, icn 12, icn 27, icn 13;
  icn 11 deselects icn 8, icn 9,  icn 10, icn 12, icn 27;
  icn 12 deselects icn 8, icn 9,  icn 10, icn 11, icn 27;
  icn 27 deselects icn 8, icn 9,  icn 10, icn 11, icn 12, icn 13;

  icn 11, icn 12 selects icn 13;

  icn 13 includes icn 14, icn 15, icn 16;
  icn 24 includes icn 25, icn 26;

  icn 11 excludes icn 13;
  icn 8, icn 9, icn 10, icn 27 exclude icn 13, icn 14, icn 15, icn 16;
  icn 9, icn 10, icn 11, icn 12, icn 27 exclude icn 17, icn 18, icn 19, icn 20, icn 21;
rules_end
