# This is a description of the Wimp interface for UpgCreate

tool_details_start
   name          "UpgCreate";
   command_is    "<UpgCreate$Dir>.UpgCreate";
   version       "Module_FullVersion (Module_ApplicationDate4)";
   wimpslot       128k;
   has_extended_cmdline;
tool_details_end

metaoptions_start
   has_text_window;
   has_summary_window;
   display_dft_is text;
   ctrl_chars escape;
   tab_width 8;
metaoptions_end

dbox_start

   # Icon mappings
   #
   # Icons 14 and 16 are labels, and included as 'null' items
   # So that they can be greyed out in the exclusions section
   # (greying out just the writables isn't visible enough).

   icons_start
      icn 3  maps_to "-s " string not_saved;
      icn 5  maps_to "-o " string;
      icn 8  maps_to "-t OSImage";
      icn 9  maps_to "-t Font";
      icn 10 maps_to "-t Transient";
      icn 11 maps_to "-t Permanent";
      icn 12 maps_to "-t Resident";
      icn 13 maps_to "-c 6";
      icn 14 maps_to "";
      icn 15 maps_to "-d " quoted_string;
      icn 16 maps_to "";
      icn 17 maps_to "-b " quoted_string;
      icn 19 maps_to "-l " quoted_string;
   icons_end

   # Default icon values

   defaults
      icn 3 "",
      icn 5 "Image",
      icn 8 on,
      icn 13 off,
      icn 15 "",
      icn 17 "",
      icn 19 "UK";

   # Drags to dialogue box and icon bar

   imports_start
      drag_to icn 3 inserts icn 3;
      drag_to icn 5 inserts icn 5;
      drag_to iconbar inserts icn 3;
   imports_end

dbox_end

# Handle radio button grouping (FrontEnd overrides the ESG)

deselections_start
  icn 8  deselects icn 9, icn 10, icn 11, icn 12;
  icn 9  deselects icn 8, icn 10, icn 11, icn 12;
  icn 10 deselects icn 8, icn 9,  icn 11, icn 12;
  icn 11 deselects icn 8, icn 9,  icn 10, icn 12;
  icn 12 deselects icn 8, icn 9,  icn 10, icn 11;
deselections_end

# Grey/ungrey items

exclusions_start
  icn 9  excludes icn 13, icn 14, icn 15, icn 16, icn 17;
  icn 10 excludes icn 13, icn 14, icn 15, icn 16, icn 17;
  icn 11 excludes icn 13, icn 14, icn 15, icn 16, icn 17;
  icn 12 excludes icn 13, icn 14, icn 15, icn 16, icn 17;
exclusions_end
