//config.h

struct config
{
  char display_string[100];  //string to display when fetching image
  char build[100];           //list of compatable builds
  char locale[100];          //locale list
  char image_dir[80];        //input dir
  char image_name[20];       //input name
  char out_dir[80];          //output dir
  char out_name[20];         //output name
  int bank;                  //rom bank
  int type;                  //type of upgrade file
  int size;                  //target ROM size

};

int read_config_file(struct config*,char*);
