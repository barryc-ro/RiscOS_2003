 */

/* CLib */
#include <stdio.h>
#include <time.h>




/* =============================================================================
 * Type definitions
 */

typedef const char *  esc_html_context;




/* =============================================================================
 * Function prototype declarations
 */

extern int  escape_html_mem (const char *const   input_string,
                             FILE *const         output_file,
                             const clock_t       t_slice,
                             esc_html_context *  context);

extern int  escape_html_file (FILE *const    input_file,
                              FILE *const    output_file,
                              const clock_t  t_slice);

