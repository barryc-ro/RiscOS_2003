/************************************************************************/


/* -------------------------------------- LIBRARY IMPORTS --------------------------------------- */
#include "Feedback.h"


/* ---------------------------------- PRE-PROCESSOR DIRECTIVES ---------------------------------- */


/* -------------------------------------- GLOBAL VARIABLES -------------------------------------- */


/* ----------------------------------------- FUNCTIONS ------------------------------------------ */

/************************************************************************/
/* feedback_on                                                          */
/*                                                                      */
/* Function turns the feedback on.                                      */
/*                                                                      */
/* Parameters: void.                                                    */
/*                                                                      */
/* Returns:    void.                                                    */
/*                                                                      */
/************************************************************************/
void feedback_on(void)
{
  nb_hourglass(TRUE);
}


/************************************************************************/
/* feedback_off                                                         */
/*                                                                      */
/* Function turns the feedback off.                                     */
/*                                                                      */
/* Parameters: void.                                                    */
/*                                                                      */
/* Returns:    void.                                                    */
/*                                                                      */
/************************************************************************/
void feedback_off(void)
{
  nb_hourglass(FALSE);
}
