// =============================================================================
// Include header files

#include "../Build/Env.h"			/* Include Build Environment file.  This MUST be 1st before any other
						   preprocessor command */
#include "Version.h"
#include "VersionNum"


// =============================================================================
// Constants

const char lib_name[] = "NCMail Engine component";
NCMailEngineVersion* NCMailEngineVersion::_instance = 0;


// =============================================================================
// Define member functions

/* -----------------------------------------------------------------------------
 */

NCMailEngineVersion::NCMailEngineVersion()
                    :Version(lib_name,
                             Module_MajorVersion,
                             Module_MinorVersion,
                             Module_Version,
                             Module_Date)
{
}


Version* NCMailEngineVersion::Instance(void)
{
  if (_instance == 0)
    _instance = new NCMailEngineVersion();

  return _instance;
}
