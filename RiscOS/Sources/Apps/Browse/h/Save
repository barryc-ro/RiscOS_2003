/* Component IDs and event codes */

/* File menu */

#define SaveAsHTML         0x0001  /* Leads to save box to save the page source */
#define SaveSetAsHTML      0x0004  /* To save the source defining a frameset    */
#define FileExport         0x0002  /* Leads to Export menu                      */
#define FilePrint          0x0003  /* Opens Print dialogue                      */

/* Export menu */

#define ExportAsDraw       0x2000
#define ExportAsText       0x2001
#define ExportLink         0x2002
#define ExportSprite       0x2003
#define ExportBack         0x2004

/* Miscellaneous definitions */

#define Save_ScrapVar  "Wimp$Scrap"
#define Save_ScrapFile "<" Save_ScrapVar ">"
#define Save_ScrapPath "<" Save_ScrapVar "Dir>."

/* Function prototypes */

_kernel_oserror * save_save_source        (char * path, browser_data * b);
_kernel_oserror * save_transfer_source    (browser_data * b, int * transferred, WimpMessage * m);
int               save_source_size        (browser_data * b);

_kernel_oserror * save_save_object        (char * path, browser_data * b);
int               save_object_size        (browser_data * b);

_kernel_oserror * save_save_uri           (char * path, char * url, int write_url);
_kernel_oserror * save_transfer_uri       (char * url, int write_url, int * transferred, WimpMessage * m);
int               save_uri_size           (char * url, int write_url);

_kernel_oserror * save_export_sprite      (char * path, HStream * image);
int               save_sprite_size        (HStream * image);
