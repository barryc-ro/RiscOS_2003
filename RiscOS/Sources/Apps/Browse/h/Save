/* Filetype definitions */

#define FileType_TEXT 0xfff
#define FileType_DATA 0xffd
#define FileType_PS   0xff5
#define FileType_POUT 0xff4
#define FileType_TIFF 0xff0
#define FileType_DOS  0xfe4
#define FileType_AVI  0xfb2
#define FileType_WAVE 0xfb1
#define FileType_HTML 0xfaf
#define FileType_URI  0xf91
#define FileType_ARC  0xddc
#define FileType_ARMA 0xd3c
#define FileType_JPEG 0xc85
#define FileType_XLS  0xba6
#define FileType_PNG  0xb60
#define FileType_URL  0xb28
#define FileType_ARMO 0xae7
#define FileType_WORD 0xae6
#define FileType_PDF  0xadf
#define FileType_GIF  0x695
#define FileType_MOD  0x001

/* Component IDs and event codes */

/* File menu */

#define SaveAsHTML         0x0001  /* Leads to save box to save the page source */
#define SaveSetAsHTML      0x0004  /* To save the source defining a frameset    */
#define FileExport         0x0002  /* Leads to Export menu                      */
#define FilePrint          0x0003  /* Opens Print dialogue                      */

/* Export menu */

#define ExportAsDraw       0x2000
#define ExportAsText       0x2001
#define ExportLink         0x2002
#define ExportSprite       0x2003
#define ExportBack         0x2004

/* Miscellaneous definitions */

#define Save_ScrapVar  "Wimp$Scrap"
#define Save_ScrapFile "<" Save_ScrapVar ">"
#define Save_ScrapPath "<" Save_ScrapVar "Dir>."

/* Function prototypes */

ObjectId          save_return_dialogue_id (void);

int               save_fill_in            (int eventcode, ToolboxEvent * event, IdBlock * idb, void * handle);
int               save_fill_for_html      (IdBlock * idb);
_kernel_oserror * save_fill_for_object    (browser_data * b, char * url);

int               save_save_to_file       (int eventcode, ToolboxEvent * event, IdBlock * idb, void * handle);
int               save_fill_buffer        (int eventcode, ToolboxEvent * event, IdBlock * idb, void * handle);
int               save_save_completed     (int eventcode, ToolboxEvent * event, IdBlock * idb, void * handle);
int               save_dialogue_completed (int eventcode, ToolboxEvent * event, IdBlock * idb, void * handle);
