/* Structures */

typedef struct userdef
{
 char homepage    [Limits_Multi_HomePage];
 char name        [Limits_Multi_Name];
 char historyfile [Limits_Multi_History];
 char hotlistfile [Limits_Multi_Hotlist];

} userdef;

/* Globals */

extern userdef user;
