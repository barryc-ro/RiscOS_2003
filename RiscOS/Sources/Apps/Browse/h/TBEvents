/***************************************************/
/* File   : TBEvents.h                             */
/*                                                 */
/* Purpose: Definitions of event codes and IDs     */
/*          defined in the app's Res file.         */
/*                                                 */
/* Author : A.D.Hodgkinson                         */
/*                                                 */
/* History: 13-Nov-96: Created.                    */
/***************************************************/

/* Event codes */

/* Misc */

#define EOpenNewWindow   0x1200 /* Upon clicking on icon bar icon. */

#define EShowUtilsMenu   0x1201 /* Before showing Utils submenu from window's main menu. */
#define EShowChoicesMenu 0x1202 /* Before showing Choices submenu from icon bar menu.    */
#define EShowFileMenu    0x1203 /* Before showing the File submenu from a document.      */

#define EOpenURLWindow   0x1204 /* Before showing the Open URL window.  */
#define EOpenFindWindow  0x1205 /* Before showing the Find Text window. */

#define EClearURL        0x1206 /* Clear the URL writable (same action as Ctrl+U) */
#define EShowHistoryMenu 0x1207 /* Show the local History menu                    */

#define EEnableReformat  0x4100 /* When activating radios that may enable or disable the */
                                /* Reformat option in the Print dialogue box.            */
#define ECancelPrint     0x4101 /* If using non-standard buttons in the PrintSetup       */
                                /* dialogue, the Cancel equivalent must send this event. */
#define EStartPrint      0x4102 /* Similarly, a Print equivalent must send this event.   */

#define EAuthAuthorise   0x51fe /* When 'Authorise' is activated in an authorisation dialogue. */
#define EAuthCancel      0x51ff /* When 'Cancel' is activated in an authorisation dialogue.    */

/* Button bar */

#define EButtonHome      0x0200 /* Go to home page                                    */
#define EButtonBack      0x0201 /* Return to previous page in history (if available)  */
#define EButtonReload    0x0202 /* Reload page                                        */
#define EButtonStop      0x0203 /* Stop any current fetch                             */
#define EButtonForward   0x0204 /* Go to next page in history list (if available)     */
#define EButtonAddHot    0x0205 /* Add the URL to the Hotlist                         */
#define EButtonViewHot   0x0206 /* View the hotlist                                   */
#define EButtonViewRes   0x0207 /* View the resource list                             */
#define EButtonLoadImg   0x0208 /* Load images (if they weren't loaded automatically) */
#define EButtonViewSrc   0x0209 /* View the page source                               */
#define EButtonGoTo      0x020A /* Go To button (allows entry of a URL).              */
#define EButtonGo        0x020B /* Go (companion to above, jumps to URL).             */
#define EButtonCancel    0x020C /* Cancel a current action.                           */

#define EBiStateKeyed    0x020D /* Bistate button to be activated [from keyboard].    */
#define ETriStateKeyed   0x020E /* Tristate button to be activated [from keyboard].   */

/* Component IDs: Button bars */

/* URL bar */

#define DisplayURL    0x000b /* URL display / writable                             */
#define DisplayMenu   0x000c /* History menu next to URL writable                  */
#define DisplayMLeft  0x3201 /* History menu button object, to pop menu up to left */
#define URLSpacer     0x000d /* Invisible icon to mark height of bar               */
#define DiallerStatus 0x0012 /* Display field for dialler status (optional gadget) */
#define DiallerCover  0x0013 /* Gadget covering dialler display                    */
#define DiallerLabel  0x0014 /* Label on dialler display                           */

/* Button bar */

#define ButtonHome    0x0000 /* Go to home page                                    */
#define ButtonBack    0x0001 /* Return to previous page in history (if available)  */
#define ButtonReload  0x0002 /* Reload page                                        */
#define ButtonStop    0x0003 /* Stop any current fetch                             */
#define ButtonForward 0x0004 /* Go to next page in history list (if available)     */
#define ButtonAddHot  0x0005 /* Add the URL to the Hotlist                         */
#define ButtonViewHot 0x0006 /* View the hotlist                                   */
#define ButtonViewRes 0x0007 /* View the resource list                             */
#define ButtonLoadImg 0x0008 /* Load images (if they weren't loaded automatically) */
#define ButtonViewSrc 0x0009 /* View the page source                               */
#define ButtonSpacer  0x000E /* Invisible icon to mark height of bar               */
#define ButtonGoTo    0x000F /* Go To button (allows entry of a URL)               */
#define ButtonGo      0x0010 /* Go (companion to above, jumps to URL)              */
#define ButtonCancel  0x0011 /* Cancel a current action                            */
#define ButtonBi      0x0015 /* The working gadget of a bistate group of 3.        */
#define ButtonTri     0x0016 /* The working gadget of a tristate group of 4.       */

/* Status bar */

#define DisplayBase   0x3100 /* Animation base (static) sprite          */
#define DisplayAnim   0x3101 /* Animation main (moving) sprite          */
#define DisplayStats  0x3102 /* Main status display field               */
#define DisplayBytes  0x3103 /* Byte counter display field              */
#define StatusSpacer  0x3104 /* Invisible icon to mark height of bar    */
#define StatsCover    0x3105 /* Gadget covering status display          */
#define BytesCover    0x3106 /* Gadget covering bytes display           */
#define StatusLabel   0x3107 /* Label on status display                 */

/* Component IDs: Menus */

/* File menu */

#define SaveAsHTML    0x0001  /* Leads to save box to save the page source */
#define SaveSetAsHTML 0x0004  /* To save the source defining a frameset    */

/* Choices menu */

#define CURLbar       0x1001
#define CButtonBar    0x1002
#define CStatusBar    0x1003
#define DelayImages   0x1004
#define Backgrounds   0x1005
#define Fonts         0x1006
#define Network       0x1007
#define SaveChoices   0x1008
#define UnderlineLks  0x1009
#define OverrideCols  0x100A
#define CFullScreen   0x100B

/* Export menu */

#define ExportAsDraw  0x2000
#define ExportAsText  0x2001
#define ExportLink    0x2002
#define ExportSprite  0x2003

/* Hotlist menu */

#define GotoPage      0x3000
#define AddThisPage   0x3001
#define RemovePage    0x3002
#define SaveHotlist   0x3003

/* Navigate menu */

#define HomePage      0x6001
#define BackAPage     0x6002
#define ForwardAPage  0x6003
#define ReloadPage    0x6004
#define StopFetch     0x6005
#define LoadImages    0x6006

/* Utilities menu */

#define FindText      0x7000
#define URLbar        0x7001
#define ButtonBar     0x7002
#define StatusBar     0x7003
#define Underline     0x7004
#define DocumentCols  0x7005
#define ShowImages    0x7006
#define ShowBackgrds  0x7007
#define FullScreen    0x7008

/* Component IDs: Dialogue boxes */

/* Find text dialogue */

#define FindWrit      0x1101
#define FromStart     0x1102
#define CaseSensitive 0x1103
#define SearchSource  0x1104
#define AllWindows    0x1105
#define FindCancel    0x1106
#define FindOK        0x1107

/* Open URL dialogue */

#define OpenWrit      0x2101
#define OpenHistory   0x2102
#define NewWindow     0x2103
#define SaveObject    0x2104
#define OpenCancel    0x2105
#define OpenOK        0x2106

/* Print dialogue */

#define StartWhole    0x4101
#define StartVisible  0x4102
#define EndWhole      0x4104
#define EndVisible    0x4105
#define EndMany       0x4107
#define EndManyNum    0x4108
#define EndManyLabel  0x4109
#define ReformToFit   0x410C
#define OriUpright    0x410A
#define OriSideways   0x410B
#define CopiesNum     0x410E

/* Authorisation dialogue */

#define AuthPrompt    0x5101
#define AuthUserWrit  0x5102
#define AuthPassWrit  0x5103
#define AuthCancel    0x5104
#define AuthAuthor    0x5105
#define AuthUserLabel 0x5106
#define AuthPassLabel 0x5107

/* Debug build events */

#ifdef TRACE

  #define Trace_TokenDumpByLine   0x10000
  #define Trace_TokenDumpByStream 0x10001

#endif
