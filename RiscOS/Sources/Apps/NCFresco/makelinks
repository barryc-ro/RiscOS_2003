#!/bin/sh
#
# Construct soft links for Fresco
#
# Probably needs bash to get -L for symlink.
# Difficult to make totally portable :-(

# Each directory that wants to create links should contain
# a file called mklinks. This will execute them all.

for x in `find . -name mklinks -print`
{
	(
		echo "Ensuring links correct in $x"
		cd `dirname $x`
		/usr/local/bin/bash ./mklinks
	)
}
