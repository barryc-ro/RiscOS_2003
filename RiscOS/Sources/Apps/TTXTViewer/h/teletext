#define CHARSET_0001_CZECH      14
#define CHARSET_0001_SLOVAK     14

#define CHARSET_0010_ENGLISH    16
#define CHARSET_0010_GERMAN     17
#define CHARSET_0010_SWEDISH    18
#define CHARSET_0010_FINNISH    18
