####################################
# On-screen keyboard: Korean layout#
####################################

_TaskName:NCKeybd

# Number of layers in this design

Layers:3

# Default gadgets for layers 0 (QWERTY), 1 (ABCDEF), 2 (Korean)

GadgetNo0:0
GadgetNo1:0
GadgetNo2:0

# Layer sprites

Sprite0:kb_qwerty
Sprite1:kb_alpha
Sprite2:kb_korean

BlankButton:kb_blank

# Yes, we want to close the keyboard on adjust-click

AdjClickToClose:yes

# Enable/disable on-screen keyboard window scrolling onto the screen
KeyboardScrolling:no

# Gadget holding the Shift modifier
GadgetNoSh:50

# Yes, we want to restrict movement to within the window
RestrictToWindow:yes


# IME support - Lock Indicator, Cycle Mode, and On
# / Off; left/right alignment and border when in
# Toolbar mode; sprites for LI and OO buttons;
# sprite for 'unknown IME mode' in Cycle Mode,
# turn off KeyWatch to run until told to quit.

GadgetNoLI:75
GadgetNoCM:76
GadgetNoOO:77

ToolbarAlign:right
ToolbarBorder:8

SpriteLIr:kb_x_1
SpriteLIk:kb_x_2

NoKeyWatch:yes

# IME modes and sprites for toolbar mode

IMEModeNumT000:0 1 2 3 4 5 6 7

# The actual layouts. Format is 'KeyLGGG' where L = layer
# number, GGG = gadget number (decimal, always three digits)
#
# ------- QWERTY KEYBOARD -------
#
# Keys 0079 to 0095 (&4f to &5f) do not exist in this layer;
# top row is thus 0000 to 0012.
#
# Top row, ! to +

