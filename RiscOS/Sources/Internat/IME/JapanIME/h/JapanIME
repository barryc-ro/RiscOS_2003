/************************************************************************/
/* File: JapanIME                                                       */
/* Purpose:                                                             */
/*     Provides a Unicode interface to the VACS Compact VJE IME code    */
/*                                                                      */
/* Author:  Bob Pollard (mailto:bob@icontech.demon.co.uk)               */
/* History: Tue 8th September 1998  ver 0.00 - Created.                 */
/*          25-Sep-98 extra 'changed' flag defined for candidate select */
/************************************************************************/

#ifndef __JapanIME_h
#define __JapanIME_h

/* -------------------------------------- LIBRARY IMPORTS --------------------------------------- */

#include "C:kernel.h"


/* ---------------------------------------- GENERAL STUFF --------------------------------------- */

/* SWIs for JapanIME */
#define         JapanIME_base                  0x52500
#define         JapanIME_ProcessInput          (JapanIME_base + 0)
#define         JapanIME_Cancel                (JapanIME_base + 1)
#define         JapanIME_GetCandidateListInfo  (JapanIME_base + 2)
#define         JapanIME_GetCandidateListEntry (JapanIME_base + 3)
#define         JapanIME_Configure             (JapanIME_base + 4)

/* R0 flags returned by IME_ProcessInput */
#define         IME_KeyClaimed        (0x0001)
#define         IME_ShowDisplay       (0x0004)
#define         IME_Output            (0x0008)
#define         IME_ShowCandidates    (0x0010)
#define         IME_DisplayChanged    (0x0100)
#define         IME_AttributesChanged (0x0200)
#define         IME_CaretChanged      (0x0400)
#define         IME_CandidatesChanged (0x0800)
#define         IME_SelectionChanged  (0x1000)

/* input flags */
#define         IME_UCSinput          (0x001)
#define         IME_ListSelection     (0x002)
#define         IME_OnlyHotKeys       (0x004)

/* R0 values for IME_Configure (IME_Config_Input is for testing) */
#define         IME_Config_Dict     0
#define         IME_Config_Status   1
#define         IME_Config_DispListBox 2
#define         IME_Config_Input    3
/* the following is temporary for testing */
#define         IME_Config_Bdata    10



/* -------------------------------------- GLOBAL VARIABLES -------------------------------------- */


/* ----------------------------------------- FUNCTIONS ------------------------------------------ */

extern _kernel_oserror *JapanIME_SWIHandler(int swi_no, _kernel_swi_regs *r, void *pw);
extern _kernel_oserror *JapanIME_Initialisation(char *cmd_tail, int podule_base, void *pw);
extern _kernel_oserror *JapanIME_Finalisation(int fatal, int podule, void *pw);
extern void JapanIME_ServiceHandler(int service_number, _kernel_swi_regs *r, void *pw);

#endif

/* -+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+ END +-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+ */


