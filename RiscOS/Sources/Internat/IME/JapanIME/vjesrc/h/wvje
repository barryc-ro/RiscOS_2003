#define	CNV_HIRA	ZENKAKU_BIT			/* Hiragana convert */
#define	CNV_KATA	(ZENKAKU_BIT | KANA_BIT)	/* Katakana convert */
#define	CNV_ZEN		(ZENKAKU_BIT | KANA_BIT | NONROMAN_BIT)	/* Zenkau Eisuu     */
#define	CNV_HAN		KANA_BIT			/* Hanksku convert  */
#define	CNV_SET_POS	50				/* Set kihon & key pos */
#define	CNV_SET_CNV	51				/* Set kihon & key cnv */
#define	CNV_NN		52				/* Conver N to 'NN' */
#define	CNV_DEL		53				/* Delete key & kihon*/


#define	KUTEN_MAX		94	/* Max kuten number */
#define	DSPSIZE			80	/* Koho dsplay max size */

