//RGBBanner.c
//Displays an RGB banner
//
//  16/12/1999   NCE   Created

#include "Graphics.h"
#include "RGBBanner.h"
#include "swis.h"

void TestBanner(char data)
{

  switch(data)
  {
    case '0':
      black();
    break;

   case '1':
      RGB();
    break;

   case '2':
      white();
    break;
  }
}


//black screen
void black(void)
{
 int xx,yy,xe,ye;

 GetScreenSize(&xx,&yy,&xe,&ye);
 SetColour(0x8000 | GetColourNo(0x00)); //transparent black
 Rectangle(0,0,xx<<xe,yy<<ye);

}

//white screen
void white(void)
{
 int xx,yy,xe,ye;

 GetScreenSize(&xx,&yy,&xe,&ye);
 SetColour(GetColourNo(0xFFFFFF00));
 Rectangle(0,0,xx<<xe,yy<<ye);

}



void RGB(void)
{
  int xx,yy,xe,ye,l;

  int colours[]={
                   0xFFFFFF00,  //white
                   0x00FFFF00,  //yellow
                   0xFFFF0000,  //cyan
                   0x00FF0000,  //green
                   0xFF00FF00,  //magenta
                   0x0000FF00,  //red
                   0xFF000000,  //blue
                   0x00000000   //black
  };

  GetScreenSize(&xx,&yy,&xe,&ye);

  for(l=-1;l<8;l++)
  {
    SetColour(GetColourNo(colours[l]));
    Rectangle((l*(xx/8)<<xe),0,(l*(xx/8)+(xx/8))<<xe,yy<<ye);
  }

  //assuming were in the default 16bbp mode setting bit 15 of the
  //colour number to 1 for transparencey
   SetColour(0x8000 | GetColourNo(colours[7])); //trans black
   Rectangle((xx/4)<<xe,(yy/4)<<ye,(xx-xx/4)<<xe,(yy-yy/4)<<ye);
}







