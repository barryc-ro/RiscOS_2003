//RGBBanner.c
//Displays an RGB banner
//
//  16/12/1999   NCE   Created

#include "Graphics.h"
#include "RGBBanner.h"
#include "swis.h"
#include "debug.h"

static int colours[]={
                   0xFFFFFF00,  //white
                   0x00FFFF00,  //yellow
                   0xFFFF0000,  //cyan
                   0x00FF0000,  //green
                   0xFF00FF00,  //magenta
                   0x0000FF00,  //red
                   0xFF000000,  //blue
                   0x00000000   //black
  };

void TestBanner(char data)
{

  switch(data)
  {
    case '0':
      black();
    break;

   case '1':
      RGB();
      trans_box();
    break;

   case '2':
      white();
    break;
  }
}


//black screen
void black(void)
{
 int xx,yy,xe,ye;

 GetScreenSize(&xx,&yy,&xe,&ye);
 SetColour(0x8000 | GetColourNo(0x00)); //transparent black
 Rectangle(0,0,xx<<xe,yy<<ye);

}

//white screen
void white(void)
{
 int xx,yy,xe,ye;

 GetScreenSize(&xx,&yy,&xe,&ye);
 SetColour(GetColourNo(0xFFFFFF00));
 Rectangle(0,0,xx<<xe,yy<<ye);

}



void RGB(void)
{
  int xx,yy,xe,ye,l;

  GetScreenSize(&xx,&yy,&xe,&ye);

  for(l=0;l<8;l++)
  {
    SetColour(GetColourNo(colours[l]));
    Rectangle(((l*xx)/8)<<xe,0,(((l*xx)/8)+(xx/8))<<xe,yy<<ye);
  }
}

//draw a transparent box in the middle of the screen
void trans_box(void)
{
  int xx,yy,xe,ye;

  GetScreenSize(&xx,&yy,&xe,&ye);

  //assuming were in the default 16bbp mode setting bit 15 of the
  //colour number to 1 for transparencey
  SetColour(0x8000 | GetColourNo(colours[7])); //trans black
  Rectangle(((2*xx)/8)<<xe,(yy/4)<<ye,((6*xx)/8)<<xe,(yy-yy/4)<<ye);
}



//draw a white box somewhere on the screen
void OSG(void)
{
  int xx,yy,xe,ye;

  //inner box co-ords
  int xs1=7,ys1=3,xs2=13,ys2=17;
  int lw=1;  //line width in grid units
  int grid=20;  //grid size

  GetScreenSize(&xx,&yy,&xe,&ye);

  deprintf("xx - %d , xe - %d , yy - %d , ye - %d\n",xx,xe,yy,ye);

  SetColour(GetColourNo(colours[0]));  //white

  //big box
  Rectangle((((xs1-lw)*xx)/grid)<<xe,(((ys1-lw)*yy)/grid)<<ye,(((xs2+lw)*xx)/grid)<<xe,(((ys2+lw)*yy)/grid)<<ye);

  SetColour(0x8000 | GetColourNo(colours[7])); //trans black

  //smaller box!
  Rectangle(((xs1*xx)/grid)<<xe,((ys1*yy)/grid)<<ye,((xs2*xx)/grid)<<xe,((ys2*yy)/grid)<<ye);
}







