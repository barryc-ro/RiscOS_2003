//make some noise!

//1.00  11-11-1999 NCE Created

#include <string.h>
#include "stdio.h"
#include "stdlib.h"
#include "debug.h"
#include "swis.h"


void sound_sound(char *data)
{
  _kernel_swi_regs reg;

  char freq[6];
  char amp[6];
  char channel;
  char command[32];

  deprintf("data %s\n",data);
  strncpy(freq,data,5);
  freq[5]=NULL;

  deprintf("freq %s\n",freq);

  strncpy(amp,data+5,5);
  amp[5]=NULL;

  deprintf("amp %s",amp);

  channel=data[10];

  sprintf(command,"audiogen_sine %s %s %c",freq,amp,channel);

  reg.r[0]=(int)command;

  _kernel_swi(OS_CLI,&reg,&reg);

}
