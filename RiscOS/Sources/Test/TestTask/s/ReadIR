;Read/Write IR register
;NCE 3/12/1999

	GET	Hdr:ListOpts
	GET	Hdr:Macros
	GET	Hdr:System
	GET	Hdr:Machine.<Machine>
	$GetIO

	EXPORT	ReadIR
	EXPORT	WriteIR

	AREA	|ReadIR$$code|, REL, CODE, READONLY

	ALIGN

;Peek_reg(int register)

ReadIR
	SWI	&16			; Enter SVC mode (OS_EnterOS)

	LDR	r0, [r0]

	TEQP	pc, #0			; Restore original mode
	MOV	r0, r0			; NOP
	MOVS	pc, r14			; Return

WriteIR
	SWI	&16			; Enter SVC mode (OS_EnterOS)

	STRB	r1, [r0]

	TEQP	pc, #0			; Restore original mode
	MOV	r0, r0			; NOP
	MOVS	pc, r14			; Return

	END
