
#ifndef _HANDLERS_H
#define _HANDLERS_H

#include "blclient.h"


/* toolbox event handler prototypes */
extern int windowOpenHandler (int event_code, ToolboxEvent* event, IdBlock* id_block, void* handle);
extern int windowCloseHandler (int event_code, ToolboxEvent* event, IdBlock* id_block, void* handle);
extern int tbObjectAutoCreatedHandler (int event_code, ToolboxEvent* event, IdBlock* id_block, void* handle);
extern int clearWindow (int event_code, ToolboxEvent* event, IdBlock* id_block, void* handle);
extern int keyHandler (int event_code, WimpPollBlock* event, IdBlock* id_block, void* handle);
extern int mouseClickHandler (int event_code, WimpPollBlock* event, IdBlock* id_block, void* handle);
extern int setModeWindowEventHandler (int event_code, ToolboxEvent* event, IdBlock* id_block, void* handle);
extern int increaseBufferSizeWindowEventHandler (int event_code, ToolboxEvent* event, IdBlock* id_block, void* handle);
extern int helpButtonEventHandler (int event_code, ToolboxEvent* event, IdBlock* id_block, void* handle);
extern int setBaudRateEventHandler (int event_code, ToolboxEvent* event, IdBlock* id_block, void* handle);
extern int saveAsWindowEventHandler (int event_code,
                                     ToolboxEvent* event,
                                     IdBlock* id_block,
                                     void* handle);

extern int dataloadMessageHandler (WimpMessage *message, void *handle);
extern int quitHandler (WimpMessage* message, void* handle);
extern int tbquitHandler (int event_code, ToolboxEvent* event, IdBlock* id_block, void* handle);


#endif

