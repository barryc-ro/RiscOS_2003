


#ifndef _TBOXEVENTS_H
#define _TBOXEVENTS_H


#define TASK_WINDOW_OPEN                  (int)0x0001
#define TASK_WINDOW_CLOSE                 (int)0x0002

#define STATUS_WINDOW_OPEN                (int)0x0003
#define STATUS_WINDOW_CLOSE               (int)0x0004

#define WRCHV_WINDOW_OPEN                 (int)0x0005
#define WRCHV_WINDOW_CLOSE                (int)0x0006

#define DEBUG_WINDOW_OPEN                 (int)0x0007
#define DEBUG_WINDOW_CLOSE                (int)0x0008


#define STOP_SAVING                       (int)0x0009


#define BAUD_MENU                         (int)0x0020

/* Baud rate menu events */
#define SET_BAUD_RATE_110                 BAUD_MENU + 0
#define SET_BAUD_RATE_300                 BAUD_MENU + 1
#define SET_BAUD_RATE_600                 BAUD_MENU + 2
#define SET_BAUD_RATE_1200                BAUD_MENU + 3
#define SET_BAUD_RATE_2400                BAUD_MENU + 4
#define SET_BAUD_RATE_4800                BAUD_MENU + 5
#define SET_BAUD_RATE_9600                BAUD_MENU + 6
#define SET_BAUD_RATE_14400               BAUD_MENU + 7
#define SET_BAUD_RATE_19200               BAUD_MENU + 8
#define SET_BAUD_RATE_38400               BAUD_MENU + 9
#define SET_BAUD_RATE_57600               BAUD_MENU + 10
#define SET_BAUD_RATE_115200              BAUD_MENU + 11




#define CLEAR_BUFFER                      (int)0x0030
#define HELP_BUTTON                       (int)0x1000

/* Set mode window events */
#define MODE_SELECT_SET_BUTTON            (int)0x1040

/* Set buffer size window events */
#define SET_BUFFER_SIZE_BUTTON            (int)0x1080


#endif
