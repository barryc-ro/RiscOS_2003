

#ifndef _BRAINLINK_H
#define _BRAINLINK_H

/* ANSI Terminal emulator colors*/
#define FG_BLACK   (int)30
#define FG_RED     (int)31
#define FG_GREEN   (int)32
#define FG_YELLOW  (int)33
#define FG_BLUE    (int)34
#define FG_MAGENTA (int)35
#define FG_CYAN    (int)36
#define FG_WHITE   (int)37

#define BG_BLACK   (int)40
#define BG_RED     (int)41
#define BG_GREEN   (int)42
#define BG_YELLOW  (int)43
#define BG_BLUE    (int)44
#define BG_MAGENTA (int)45
#define BG_CYAN    (int)46
#define BG_WHITE   (int)47


/* ASCII Key codes */

#define BACK_SPACE (char)0x08
#define RETURN     (char)0x0D
#define ESCAPE     (char)0x1B
#define SPACE      (char)0x20
#define DELETE     (char)0x7F

#define CONTROL_A  (char)0x01
#define CONTROL_B  (char)0x02
#define CONTROL_C  (char)0x03
#define CONTROL_D  (char)0x04
#define CONTROL_E  (char)0x05
#define CONTROL_F  (char)0x06
#define CONTROL_G  (char)0x07
#define CONTROL_H  (char)0x08
#define CONTROL_I  (char)0x09
#define CONTROL_J  (char)0x0A
#define CONTROL_K  (char)0x0B
#define CONTROL_L  (char)0x0C
#define CONTROL_M  (char)0x0D
#define CONTROL_N  (char)0x0E
#define CONTROL_O  (char)0x0F
#define CONTROL_P  (char)0x10
#define CONTROL_Q  (char)0x11
#define CONTROL_R  (char)0x12
#define CONTROL_S  (char)0x13
#define CONTROL_T  (char)0x14
#define CONTROL_U  (char)0x15
#define CONTROL_V  (char)0x16
#define CONTROL_W  (char)0x17
#define CONTROL_X  (char)0x18
#define CONTROL_Y  (char)0x19
#define CONTROL_Z  (char)0x1A

#define F12          (int)0x1CC
#define CONTROL_F12  (int)0x1EC


#endif
