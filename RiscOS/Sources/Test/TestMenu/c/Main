//Test Menu
//Displays a Test Menu and allows selection of tests

#include <stdio.h>
#include <swis.h>
#include "support.h"

int main(void)
{
  set_screen_mode();

  printf("   IAC Test Software");
  printf("\n   -----------------");
  printf("\n\n  1 - Functional Test");
  printf("\n  2 - SOAK Test");
  printf("\n  3 - BABT Test");
  printf("\n  4 - EMC");
  printf("\n  5 - Exit");

  flush_keyboard();

  off();

  do
  {
    switch (get())
    {
      case 2:
        if (_kernel_system("SoakTest",0) < 0)
          printf("\n\nsoak test module not found");
      break;

      case 5:
        on();
        return 0;
      break;
    }
  }
  while (1);

  return 0;
}
