; s.systemtest
;
; System test module to start various system tests.
; Copyright (c) Acorn Computers Ltd, 1997
;
; Version history
; ---------------
; 0.01 12 Nov 97  RLT  initial writing
; 0.02 12 Nov 97  RLT  slight optimsation of code
; 0.03 18 Nov 97  RLT  modified to work with new hdr.keycodes and
;                      hdr.commands
; 0.04 02 Dec 97  RLT  modified the order that the tests are searched
;                      for
;

	AREA	|main|, CODE, READONLY

	GET	hdr.SWINames
	GET	hdr.keycodes
	GET	hdr.commands

; Entry point

	ENTRY

	SWI	XOS_GetEnv
	MOV	sp, r1

	BL	check_test7
	CMN	r3, #1
	BLNE	check_test3
	CMN	r3, #1
	BLNE	check_test5
	CMN	r3, #1
	BLNE	check_test6
	CMN	r3, #1
	BLNE	check_test1
	CMN	r3, #1
	BLNE	check_test2
	CMN	r3, #1
	BLNE	check_test4

	SWI	XOS_Exit


check_test1
	STMDB	sp!, {r0-r2, lr}

	MOV	r1, #key1
	BL	check_for_keypress
	MOVEQ	r1, #key4
	BLEQ	check_for_keypress

	ADREQL	r0, test1
	SWIEQ	OS_CLI
	MVNEQ	r3, #0

	LDMIA	sp!, {r0-r2, pc}^


check_test2
	STMDB	sp!, {r0-r2, lr}

	MOV	r1, #key1
	BL	check_for_keypress
	MOVEQ	r1, #key3
	BLEQ	check_for_keypress

	ADREQL	r0, test2
	SWIEQ	OS_CLI
	MVNEQ	r3, #0

	LDMIA	sp!, {r0-r2, pc}^


check_test3
	STMDB	sp!, {r0-r2, lr}

	MOV	r1, #key1
	BL	check_for_keypress
	MOVEQ	r1, #key3
	BLEQ	check_for_keypress
	MOVEQ	r1, #key4
	BLEQ	check_for_keypress

	ADREQL	r0, test3
	SWIEQ	OS_CLI
	MVNEQ	r3, #0

	LDMIA	sp!, {r0-r2, pc}^


check_test4
	STMDB	sp!, {r0-r2, lr}

	MOV	r1, #key1
	BL	check_for_keypress
	MOVEQ	r1, #key2
	BLEQ	check_for_keypress

	ADREQL	r0, test4
	SWIEQ	OS_CLI
	MVNEQ	r3, #0

	LDMIA	sp!, {r0-r2, pc}^


check_test5
	STMDB	sp!, {r0-r2, lr}

	MOV	r1, #key1
	BL	check_for_keypress
	MOVEQ	r1, #key2
	BLEQ	check_for_keypress
	MOVEQ	r1, #key4
	BLEQ	check_for_keypress

	ADREQL	r0, test5
	SWIEQ	OS_CLI
	MVNEQ	r3, #0

	LDMIA	sp!, {r0-r2, pc}^


check_test6
	STMDB	sp!, {r0-r2, lr}

	MOV	r1, #key1
	BL	check_for_keypress
	MOVEQ	r1, #key2
	BLEQ	check_for_keypress
	MOVEQ	r1, #key3
	BLEQ	check_for_keypress

	ADREQL	r0, test6
	SWIEQ	OS_CLI
	MVNEQ	r3, #0

	LDMIA	sp!, {r0-r2, pc}^


check_test7
	STMDB	sp!, {r0-r2, lr}

	MOV	r1, #key1
	BL	check_for_keypress
	MOVEQ	r1, #key2
	BLEQ	check_for_keypress
	MOVEQ	r1, #key3
	BLEQ	check_for_keypress
	MOVEQ	r1, #key4
	BLEQ	check_for_keypress

	ADREQL	r0, test7
	SWIEQ	OS_CLI
	MVNEQ	r3, #0

	LDMIA	sp!, {r0-r2, pc}^


; check_for_keypress
;	 In: r0 - should be set to 121
;	     r1 - keycode to scan for
;	Out: EQ condition flag set if key is pressed

check_for_keypress
	MOV	r0, #121
	SWI	XOS_Byte
	CMP	r1, #&FF
	MOV	pc, lr



	END
