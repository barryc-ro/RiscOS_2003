/***************************************************/
/* File   : FlashWrite.h                           */
/*                                                 */
/* Purpose: Definitions relating to the FlashWrite */
/*          module [in NCs].                       */
/*                                                 */
/* Author : A.D.Hodgkinson                         */
/*                                                 */
/* History: 16-Feb-1999: Created.                  */
/***************************************************/

#ifndef FlashWrite_Included

  #define FlashWrite_Included

  #define FlashWrite_Base        (0x521c0)

  #define FlashWrite_WriteWord   (FlashWrite_Base + 0)
  #define FlashWrite_WriteBuffer (FlashWrite_Base + 1)
  #define FlashWrite_WriteBlock  (FlashWrite_Base + 2)
  #define FlashWrite_WriteFlash  (FlashWrite_Base + 3)

  #define FlashWrite_EraseBlock  (FlashWrite_Base + 4)
  #define FlashWrite_EraseFlash  (FlashWrite_Base + 5)

  #define FlashWrite_DeviceInfo  (FlashWrite_Base + 6)

  #define FlashWrite_ReadWord    (FlashWrite_Base + 7)
  #define FlashWrite_ReadBuffer  (FlashWrite_Base + 8)
  #define FlashWrite_ReadBlock   (FlashWrite_Base + 9)

#endif
