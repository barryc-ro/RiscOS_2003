//MPEG - MPEG video test
//Note this is not an MPEG player but simply makes a CLI call
//to the MPEG player
// 17/2/99  NCE        created

#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "kernel.h"
#include "swis.h"

#include "support.h"
#include "module.h"
#include "InputTest.h"
#include "display.h"
#include "msgs.h"

void play_MPEG(void)
{
  int result;
  _kernel_swi_regs reg;
  int task_handle;

  reg.r[0]=(int)"mpegutils:plaympegf mpegf:mpeg1ss:OMLOGO";
  _kernel_swi(Wimp_StartTask,&reg,&reg);

  //restore graphics cursor
  _kernel_oswrch(5);
  clear_whole_screen();
  display_refresh();
  display_status(MPEG,RUNNING);
  display_info(input_test_msg[15]);
  display_instruction(YESNO_INST_LINE,general_msg[02]);
  result=get_yn_responce_timed(1000);
  log_status(MPEG,result);
  clear_whole_screen();
  display_refresh();
}
