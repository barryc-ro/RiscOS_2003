#include "kernel.h"
#include "swis.h"

#include "FlshCheck.h"
#include "display.h"
#include "support.h"

void Flash_Checksum(void)
{
        int status = FAILED;
        int chksum;

        display_status(FLASH,RUNNING);
        chksum=ut_ROM_checksum();
        if (chksum == 0){
                status=PASSED;
        }else{
                status=FAILED;
        }
        display_status(FLASH,status);
        log_status(FLASH,status);
}
