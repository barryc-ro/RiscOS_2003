#include "kernel.h"
#include "swis.h"

#include "support.h"
#include "ROMCheck.h"
#include "display.h"

void ROM_Checksum(void)
{
        int status = FAILED;
        int chksum;

        display_status(ROM,RUNNING);
        chksum=ud_ROM_checksum();
        if (chksum == 0){
                status=PASSED;
        }else{
                status=FAILED;
        }
        display_status(ROM,status);
        log_status(ROM,status);
}
