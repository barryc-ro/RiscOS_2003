// BuildFlags.h
// created   29/01/99  moved compile flags out to this file and added
//                     STB3 stuff - ne
// 1/2/99    added hardware flags to simplify build


/* Well as the build for Daytona is grossly wrong, we have to use totally
 * inappropiate build tags for SYSTEM and MACHINE. So lets re-define them to
 * something far more meaningful and sensible.
 */
#ifdef SYSMorris2
#define SYSDaytona
#endif

#ifdef MACHMorris
#define MACHDaytona
#endif
/* End of redefinition */


/* RCA/Boca */
#ifdef SYSBOCA
#define FAULTCODES 1
#define LED        0
#define SMRTCARD   1
#define IR         0
#define MOUSE      0
#define TSTCARD    0
#define PRINT      0
#endif

/* Daytona/Daytona+/T-Fax */
#ifdef SYSDaytona
#define FAULTCODES 0
#define LED        1
#define SMRTCARD   0
#define IR         0
#define MOUSE      0
#define TSTCARD    0
#define PRINT      0
#endif

/* STB3 */
#ifdef SYSSTB3
#define FAULTCODES 0
#define LED        0
#define SMRTCARD   0
#define IR         1
#define MOUSE      1
#define TSTCARD    1
#define PRINT      1
#endif
