// BuildFlags.h
// created   29/01/99  moved compile flags out to this file and added
//                     STB3 stuff - ne
//
// 01/02/99    Added hardware flags to simplify build
// 14/02/99    Added booleans to improve readability


/* Well as the build for Daytona is grossly wrong, we have to use totally
 * inappropiate build tags for SYSTEM and MACHINE. So lets re-define them to
 * something far more meaningful and sensible.
 *
 * (Actually, the build for Daytona is now correct, so this isn't really necessary.)
 */
#ifdef SYSMorris2
#define SYSDaytona
#endif

#ifdef MACHMorris
#define MACHDaytona
#endif
/* End of redefinition */

/* Define YES and NO booleans, if not already available */
#ifndef NO
#define NO (0)
#endif

#ifndef YES
#define YES (!NO)
#endif
/* End of boolean definitions */


/*
 * Define tests and operations supported by each machine: YES for required/supported; NO for unnecessary/unsupported
 */

/* RCA/Boca */
#ifdef SYSBOCA
#define FAULTCODES   YES
#define LED          NO
#define SMRTCARD     YES
#define IR           NO
#define MOUSE        NO
#define TSTCARD      NO
#define PRINT        NO
#define SERIALPORT   NO
#define MPEGVID      NO
#define CMOSRESET    NO
#define SERVERRESULT NO
#endif

/* Daytona/Daytona+/T-Fax */
#ifdef SYSDaytona
#define FAULTCODES   NO
#define LED          YES
#define SMRTCARD     NO
#define IR           NO
#define MOUSE        NO
#define TSTCARD      NO
#define PRINT        NO
#define SERIALPORT   NO
#define MPEGVID      NO
#define CMOSRESET    NO
#define SERVERRESULT NO
#endif

/* STB3 */
#ifdef SYSSTB3
#define FAULTCODES   NO
#define LED          NO
#define SMRTCARD     NO
#define IR           YES
#define MOUSE        YES
#define TSTCARD      YES
#define PRINT        YES
#define SERIALPORT   YES
#define MPEGVID      YES
#define CMOSRESET    NO  /* Set to YES for non-test builds; at the moment I don't want my Risc PC's CMOS trashing! */
#define SERVERRESULT YES /* Write results to server? */
#endif

/* End of supported test definitions */
