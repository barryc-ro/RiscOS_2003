// BuildFlags.h
// created   29/01/99  moved compile flags out to this file and added
//                     STB3 stuff - ne
// 1/2/99    added hardware flags to simplify build


/* Well as the build for Daytona is grossly wrong, we have to use totally
 * inappropiate build tags for SYSTEM and MACHINE. So lets re-define them to
 * something far more meaningful and sensible.
 */
#ifdef SYSMorris2
#define SYSDaytona
#endif

#ifdef MACHMorris
#define MACHDaytona
#endif
/* End of redefinition */

/* Define YES and NO booleans, if not already available */
#ifndef NO
#define NO (0)
#endif

#ifndef YES
#define YES (!NO)
#endif
/* End of boolean definitions */


/*
 * Define tests supported by each machine: YES for required/supported; NO for unnecessary/unsupported
 */

/* RCA/Boca */
#ifdef SYSBOCA
#define FAULTCODES   YES
#define LED          NO
#define SMRTCARD     YES
#define IR           NO
#define MOUSE        NO
#define TSTCARD      NO
#define PRINT        NO
#define SERIALPORT   NO
#endif

/* Daytona/Daytona+/T-Fax */
#ifdef SYSDaytona
#define FAULTCODES   NO
#define LED          YES
#define SMRTCARD     NO
#define IR           NO
#define MOUSE        NO
#define TSTCARD      NO
#define PRINT        NO
#define SERIALPORT   NO
#endif

/* STB3 */
#ifdef SYSSTB3
#define FAULTCODES   NO
#define LED          NO
#define SMRTCARD     NO
#define IR           YES
#define MOUSE        YES
#define TSTCARD      YES
#define PRINT        YES
#define SERIALPORT   YES
#endif

/* End of supported test definitions */
