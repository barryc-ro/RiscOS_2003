typedef struct EightBit_Encoding
{
    Encoding e;
    UCS2 *table; /* 128-entry table for codes 0x80-0xFF */
} EightBit_Encoding;

extern Encoding enc_koi8r;

unsigned int eightbit_read(struct Encoding *e,
                           int (*ucs_out)(void *, UCS4),
                           const char *s,
                           unsigned int n,
                           void *handle);
void eightbit_delete(Encoding *e);
