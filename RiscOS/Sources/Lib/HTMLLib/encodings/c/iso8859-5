#include <stdlib.h>

#include "encoding.h"
#include "utf8.h"

#include "iso2022.h"
#include "iso8859-5.h"

/*
 * Routines for encoding ISO 8859-5 (Cyrillic)
 * Number: 8
 * Names: ISO-8859-5
 *        ISO_8859-5:1988
 *        ISO_8859-5
 *        iso-ir-144
 *        cyrillic
 *        csISOLatinCyrillic
 */

static void iso8859_5_reset(Encoding *e)
{
    iso2022_reset(e);
    /* Select Cyrillic right half */
    iso2022_read(e, NULL, "\x1B\x2D\x4C", 3, NULL);
}

Encoding enc_iso8859_5 =
{
    iso2022_read,
    iso8859_5_reset,
    iso2022_ws_size,
    iso2022_delete
};
