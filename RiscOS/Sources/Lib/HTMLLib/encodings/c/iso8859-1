#include <stdlib.h>

#include "encoding.h"
#include "utf8.h"

#include "iso2022.h"
#include "iso8859-1.h"

/*
 * Routines for encoding ISO 8859-1 (Latin 1)
 * Number: 4
 * Names: ISO-8859-1
 *        ISO_8859-1:1987
 *        ISO_8859-1
 *        iso-ir-100
 *        latin1
 *        l1
 *        IBM819
 *        CP819
 *        csISOLatin1
 */

/*
 * 00-FF -> 0000-00FF
 */
static void iso8859_1_reset(Encoding *e)
{
    iso2022_reset(e);
    /* Select Latin-1 right half */
    iso2022_read(e, NULL, "\x1B\x2D\x41", 3, NULL);
    iso2022_disable_escapes(e);
}

Encoding enc_iso8859_1 =
{
    iso2022_read,
    iso8859_1_reset,
    iso2022_ws_size,
    iso2022_delete
};
