#include <stdlib.h>

#include "encoding.h"

#include "iso2022.h"
#include "sami.h"

/*
 * Routines for encoding Sami (ISO-IR 197)
 * Number: 4002
 * Names: iso-ir-197
 */

static void sami_reset(Encoding *e)
{
    iso2022_reset(e);
    /* Select Sami right half */
    iso2022_read(e, NULL, "\x1B\x2D\x5D", 3, NULL);
}

Encoding enc_sami =
{
    iso2022_read,
    sami_reset,
    iso2022_ws_size,
    iso2022_delete
};
