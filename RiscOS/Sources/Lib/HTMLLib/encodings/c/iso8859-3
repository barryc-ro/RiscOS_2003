#include <stdlib.h>

#include "encoding.h"
#include "utf8.h"

#include "iso2022.h"
#include "iso8859-3.h"

/*
 * Routines for encoding ISO 8859-3 (Latin 3)
 * Number: 6
 * Names: ISO-8859-3
 *        ISO_8859-3:1988
 *        ISO_8859-3
 *        iso-ir-109
 *        latin3
 *        l3
 *        csISOLatin3
 */

static void iso8859_3_reset(Encoding *e)
{
    iso2022_reset(e);
    /* Select Latin-3 right half */
    iso2022_read(e, NULL, "\x1B\x2D\x43", 3, NULL);
    iso2022_disable_escapes(e);
}

Encoding enc_iso8859_3 =
{
    iso2022_read,
    iso8859_3_reset,
    iso2022_ws_size,
    iso2022_delete
};
