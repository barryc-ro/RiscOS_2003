#include <stdlib.h>

#include "encoding.h"
#include "utf8.h"

#include "iso2022.h"
#include "welsh.h"

/*
 * Routines for encoding Welsh (ISO-IR 182)
 * Number: 4000
 * Names: iso-ir-182
 */

static void welsh_reset(Encoding *e)
{
    iso2022_reset(e);
    /* Select Welsh right half */
    iso2022_read(e, NULL, "\x1B\x2D\x5C", 3, NULL);
}

Encoding enc_welsh =
{
    iso2022_read,
    welsh_reset,
    iso2022_ws_size,
    iso2022_delete
};
