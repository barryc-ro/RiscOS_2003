#include <stdlib.h>

#include "encoding.h"
#include "utf8.h"

#include "iso2022.h"
#include "euc-cn.h"

/*
 * Routines for encoding EUC-CN
 * Number: 4001
 * Names: EUC-CN
 */

static void euc_cn_reset(Encoding *e)
{
    iso2022_reset(e);
    /* Select G1 = GB 2312-80 */
    iso2022_read(e, NULL, "\x1B\x24\x29\x41", 4, NULL);
    iso2022_disable_escapes(e);
}

Encoding enc_euc_cn =
{
    iso2022_read,
    euc_cn_reset,
    iso2022_ws_size,
    iso2022_delete
};
