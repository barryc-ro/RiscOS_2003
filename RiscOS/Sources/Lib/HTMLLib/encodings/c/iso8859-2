#include <stdlib.h>

#include "encoding.h"
#include "utf8.h"

#include "iso2022.h"
#include "iso8859-2.h"

/*
 * Routines for encoding ISO 8859-2 (Latin 2)
 * Number: 5
 * Names: ISO-8859-2
 *        ISO_8859-2:1987
 *        ISO_8859-2
 *        iso-ir-101
 *        latin2
 *        l2
 *        csISOLatin2
 */

static void iso8859_2_reset(Encoding *e)
{
    iso2022_reset(e);
    /* Select Latin-2 right half */
    iso2022_read(e, NULL, "\x1B\x2D\x42\x1B\x2F\x50", 6, NULL);
}

Encoding enc_iso8859_2 =
{
    iso2022_read,
    iso8859_2_reset,
    iso2022_ws_size,
    iso2022_delete
};
