#include <stdlib.h>

#include "encoding.h"

#include "iso2022.h"
#include "iso8859-13.h"

/*
 * Routines for encoding ISO 8859-13 (Latin 7)
 * Number: 16 ???
 * Names: ISO-8859-13
 *        ISO_8859-13:199?
 *        latin7
 *        iso-ir-179
 *        l7
 *        csISOLatin7
 */

static void iso8859_13_reset(Encoding *e)
{
    iso2022_reset(e);
    /* Select Baltic Rim right half */
    iso2022_read(e, NULL, "\x1B\x2D\x59", 3, NULL);
    iso2022_disable_escapes(e);
}

Encoding enc_iso8859_13 =
{
    iso2022_read,
    iso8859_13_reset,
    iso2022_ws_size,
    iso2022_delete
};
