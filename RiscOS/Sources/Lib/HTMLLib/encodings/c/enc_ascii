#include <stdlib.h>

#include "encoding.h"

#include "enc_ascii.h"

/*
 * Routines for encoding US-ASCII
 * Number: 3
 * Names: US-ASCII
 *        ANSI_X3.4-1968
 *        iso-ir-6
 *        ISO_646.irv:1991
 *        ASCII
 *        ISO646-US
 *        us
 *        IBM367
 *        cp367
 *        csASCII
 */
static void ascii_reset(Encoding *e)
{
}

static unsigned int ascii_read(struct Encoding *e,
                               int (*ucs_out)(void *, UCS4),
                               const char *s,
                               unsigned int n,
                               void *handle)
{
    unsigned int count;

    for (count = n; count; count--)
    {
        char c = *s++;
        UCS4 u = c < 0x80 ? c : 0xFFFD;

        if (ucs_out)
            if (ucs_out(handle, u))
                break;
    }

    return n - count;
}

static void ascii_delete(Encoding *e)
{
}

Encoding enc_ascii =
{
    ascii_read,
    ascii_reset,
    0,
    ascii_delete
};
