#include <stdlib.h>

#include "encoding.h"
#include "utf8.h"

#include "iso2022.h"
#include "iso8859-4.h"

/*
 * Routines for encoding ISO 8859-4 (Latin 4)
 * Number: 7
 * Names: ISO-8859-4
 *        ISO_8859-4:1988
 *        ISO_8859-4
 *        iso-ir-109
 *        latin4
 *        l4
 *        csISOLatin4
 */

static void iso8859_4_reset(Encoding *e)
{
    iso2022_reset(e);
    /* Select Latin-4 right half */
    iso2022_read(e, NULL, "\x1B\x2D\x44", 3, NULL);
    iso2022_disable_escapes(e);
}

Encoding enc_iso8859_4 =
{
    iso2022_read,
    iso8859_4_reset,
    iso2022_ws_size,
    iso2022_delete
};
