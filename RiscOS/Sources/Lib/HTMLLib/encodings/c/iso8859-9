#include <stdlib.h>

#include "encoding.h"
#include "utf8.h"

#include "iso2022.h"
#include "iso8859-9.h"

/*
 * Routines for encoding ISO 8859-9 (Latin 5)
 * Number: 12
 * Names: ISO-8859-9
 *        ISO_8859-9:1989
 *        ISO_8859-9
 *        iso-ir-148
 *        latin5
 *        l5
 *        csISOLatin5
 */

static void iso8859_9_reset(Encoding *e)
{
    iso2022_reset(e);
    /* Select Latin-5 right half */
    iso2022_read(e, NULL, "\x1B\x2D\x4D", 3, NULL);
    iso2022_disable_escapes(e);
}

Encoding enc_iso8859_9 =
{
    iso2022_read,
    iso8859_9_reset,
    iso2022_ws_size,
    iso2022_delete
};
