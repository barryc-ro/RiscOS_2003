#include <stdlib.h>

#include "encoding.h"

#include "iso2022.h"
#include "iso8859-8.h"

/*
 * Routines for encoding ISO 8859-8 (Hebrew)
 * Number: 11
 * Names: ISO-8859-8
 *        ISO_8859-8:1988
 *        ISO_8859-8
 *        iso-ir-138
 *        hebrew
 *        csISOLatinHebrew
 */

static void iso8859_8_reset(Encoding *e)
{
    iso2022_reset(e);
    /* Select Hebrew right half */
    iso2022_read(e, NULL, "\x1B\x2D\x48", 3, NULL);
}

Encoding enc_iso8859_8 =
{
    iso2022_read,
    iso8859_8_reset,
    iso2022_ws_size,
    iso2022_delete
};
