#include <stdlib.h>

#include "encoding.h"
#include "utf8.h"

#include "iso2022.h"
#include "iso8859-7.h"

/*
 * Routines for encoding ISO 8859-7 (Greek)
 * Number: 10
 * Names: ISO-8859-7
 *        ISO_8859-7:1987
 *        ISO_8859-7
 *        iso-ir-126
 *        greek
 *        greek8
 *        ELOT_928
 *        ECMA-118
 *        csISOLatinGreek
 */

static void iso8859_7_reset(Encoding *e)
{
    iso2022_reset(e);
    /* Select Greek right half */
    iso2022_read(e, NULL, "\x1B\x2D\x46", 3, NULL);
}

Encoding enc_iso8859_7 =
{
    iso2022_read,
    iso8859_7_reset,
    iso2022_ws_size,
    iso2022_delete
};
