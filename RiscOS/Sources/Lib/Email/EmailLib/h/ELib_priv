	15/09/97	0.02	RDW	NFEGetUID function added
	21/09/97	0.03	RDW	NFE_CT_CREATE_FAX added to NFE_CONTEXT_TYPE enum type
					NFE_CT_CREATE_RFC822MSG added to NFE_CONTEXT_TYPE enum type
	24/09/97	0.04	RDW	NFE_CT_DECODE_MIME added to NFE_CONTEXT_TYPE enum
	24/04/98	0.05D	RDW	#ifdef NO_TIMESLICE put around expired function so a
					build can be done which doesn't do timeslicing
*/


/* ************************************************************************** */
/*                                                                            */
/* Include header files - System                                              */
/*                                                                            */
/* ************************************************************************** */
#include <time.h>


/* ************************************************************************** */
/*                                                                            */
/* Include header files - Project defined                                     */
/*                                                                            */
/* ************************************************************************** */
#include "Elib.h"


/* ************************************************************************** */
/*                                                                            */
/* New enumerated types                                                       */
/*                                                                            */
/* ************************************************************************** */
typedef enum
{
  NFE_CT_BASE64ENCODE,								// value to indicate context structure is for base64encode
  NFE_CT_BASE64DECODE,								// value to indicate context structure is for base64decode
  NFE_CT_APPLYBASE64,								// value to indicate context structure is for body object apply base64 method
  NFE_CT_CREATE_FAX,
  NFE_CT_CREATE_RTEXT,
  NFE_CT_CREATE_RFC822MSG,
  NFE_CT_DECODE_MIME
} NFE_CONTEXT_TYPE;								// context structure types


/* ************************************************************************** */
/*                                                                            */
/* Function Prototypes                                                        */
/*                                                                            */
/* ************************************************************************** */
#ifdef NO_TIMESLICE								/* if timeslice turned off, then                                 */
  #define expired(a) 0								/* expired check always evaluates to FALSE                       */
#else										/* else                                                          */
  BOOL  expired(clock_t t_slice);						/* expired check evaluates to TRUE or FALSE depending on t_slice */
#endif
int32 incase_comp(char* s1, char* s2);
int32 incase_n_comp(char* s1, char* s2, uint32 len);
uint32 NFE_GetUID(void);

#endif  /* end of sentry #ifdef */
