/* ************************************************************************** */
/*                                                                            */
/* Include header files - System                                              */
/*                                                                            */
/* ************************************************************************** */
extern "C"
{
  #include <string.h>
  #include <ctype.h>
  #include "DebugLib/DebugLib.h"
}


/* ************************************************************************** */
/*                                                                            */
/* Include header files - Project defined                                     */
/*                                                                            */
/* ************************************************************************** */
#include "subject.h"
#include "header.h"
#include "822parser.h"
extern "C"
{
  #include "ELib.h"
}


/* ************************************************************************** */
/*                                                                            */
/* New types - Private to this file                                           */
/*                                                                            */
/* ************************************************************************** */
class subject_registry : public header_registry
{
  public:
    subject_registry();
    header* create_header(BOOL filebased, char *membase, uint32 offset,
                          uint32 length, BOOL owner);
    header* create_header(header& h);
};


/* ************************************************************************** */
/*                                                                            */
/* Globals to this file                                                       */
/*                                                                            */
/* ************************************************************************** */
const char       NFE_HDR_SUBJECT_STRING[] = "Subject";				// The header class' header fieldname
subject_registry sr;								// The registry object for this header class


/* ************************************************************************** */
/*                                                                            */
/* Function Prototypes - Private to this file                                 */
/*                                                                            */
/* ************************************************************************** */


/* ************************************************************************** */
/*                                                                            */
/* Object methods                                                             */
/*                                                                            */
/* ************************************************************************** */
subject_registry::subject_registry() : header_registry()
{
  reg_name  = NFE_HDR_SUBJECT_STRING;
}


header* subject_registry::create_header(header& h)
{
  return new subject(h);
}


header* subject_registry::create_header(BOOL filebased, char *membase,
                                        uint32 offset, uint32 length, BOOL owner)
{
  return new subject(filebased, membase, offset, length, owner);
}


/* ************************************************************************** */
/*
   METHOD:         Constructor for a subject object
   DESCRIPTION:    
   DEPENDENCIES:   
   DEPENDED ON BY: 
   INPUT PARAMS:   
   OUTPUT PARAMS:  NONE
   RETURN VALUE:   NONE
   CONSTANTS:      NONE
   VARIABLES:      NONE
 */
/* ************************************************************************** */
subject::subject(BOOL f, char *membase, uint32 offset, uint32 length, BOOL owner)
        :header(f, membase, offset, length, owner)
                                                                      
{
  type = sr.GetType();
  if ((owner) && (length==0))
    SetName(NFE_HDR_SUBJECT_STRING);
}


// copy constructor
subject::subject(const subject &object) : header(object)
{
}


// copy constructor from header object
subject::subject(const header &object) : header(object)
{
  type = sr.GetType();
}


subject &subject::operator=(const subject &object)
{
  header::operator=(object);
  return *this;
}


subject &subject::operator=(const header &object)
{
  header::operator=(object);
  if (this != &object)
  {
    // do destructor things
    type = sr.GetType();
  }
  return *this;
}



#ifdef DISPLAY
void subject::Display(void)
{
  printf("SUBJECT\n");
  header::Display();
}
#endif
