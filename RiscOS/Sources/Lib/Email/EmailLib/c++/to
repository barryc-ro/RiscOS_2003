/* ************************************************************************** */
/*                                                                            */
/* Include header files - System                                              */
/*                                                                            */
/* ************************************************************************** */
extern "C"
{
  #include <string.h>
  #include <ctype.h>
  #include "DebugLib/DebugLib.h"
}


/* ************************************************************************** */
/*                                                                            */
/* Include header files - Project defined                                     */
/*                                                                            */
/* ************************************************************************** */
#include "to.h"
#include "header.h"
#include "822parser.h"
extern "C"
{
  #include "ELib.h"
}


/* ************************************************************************** */
/*                                                                            */
/* New types - Private to this file                                           */
/*                                                                            */
/* ************************************************************************** */
class to_registry : public header_registry
{
  public:
    to_registry();
    header* create_header(bool filebased, char *membase, uint32 offset,
                          uint32 length, bool owner);
    header* create_header(header& h);
};


/* ************************************************************************** */
/*                                                                            */
/* Globals to this file                                                       */
/*                                                                            */
/* ************************************************************************** */
const char          NFE_HDR_TO_STRING[] = "To";					// The header class' header fieldname
to_registry tr;									// The registry object for this header class


/* ************************************************************************** */
/*                                                                            */
/* Function Prototypes - Private to this file                                 */
/*                                                                            */
/* ************************************************************************** */


/* ************************************************************************** */
/*                                                                            */
/* Object methods                                                             */
/*                                                                            */
/* ************************************************************************** */
to_registry::to_registry() : header_registry()
{
  reg_name = NFE_HDR_TO_STRING;
}


header* to_registry::create_header(header& h)
{
  return new to(h);
}


header* to_registry::create_header(bool filebased, char *membase,
                                   uint32 offset, uint32 length, bool owner)
{
  return new to(filebased, membase, offset, length, owner);
}


/* ************************************************************************** */
/*
   METHOD:         Constructor for a to object (memory based)
   DESCRIPTION:
   DEPENDENCIES:
   DEPENDED ON BY:
   INPUT PARAMS:
   OUTPUT PARAMS:  NONE
   RETURN VALUE:   NONE
   CONSTANTS:      NONE
   VARIABLES:      NONE
 */
/* ************************************************************************** */
to::to(bool f, char *membase, uint32 offset, uint32 length, bool owner)
   :from(f, membase, offset, length, owner)
{
  type = tr.GetType();
  if ((owner) && (length==0))
  {
    SetName(NFE_HDR_TO_STRING);
  }
}


// copy constructor to header object
to::to(const header &object) : from(object)
{
  type = tr.GetType();
}


to &to::operator=(const header &object)
{
  from::operator=(object);
  if (this != &object)
  {
    type = tr.GetType();
  }
  return *this;
}


#ifdef DISPLAY
void to::Display(void)
{
  printf("TO header\n");
  from::Display();
}
#endif


