/* ************************************************************************** */
/*                                                                            */
/* Include header files - System                                              */
/*                                                                            */
/* ************************************************************************** */
extern "C"
{
  #include <string.h>
  #include <ctype.h>
  #include "DebugLib/DebugLib.h"
}


/* ************************************************************************** */
/*                                                                            */
/* Include header files - Project defined                                     */
/*                                                                            */
/* ************************************************************************** */
#include "resentdate.h"
#include "header.h"
extern "C"
{
  #include "ELib.h"
}


/* ************************************************************************** */
/*                                                                            */
/* New types - Private to this file                                           */
/*                                                                            */
/* ************************************************************************** */
class resentdate_registry : public header_registry
{
  public:
    resentdate_registry();
    header* create_header(BOOL filebased, char *membase, uint32 offset,
                          uint32 length, BOOL owner);
    header* create_header(header& h);
};


/* ************************************************************************** */
/*                                                                            */
/* Globals to this file                                                       */
/*                                                                            */
/* ************************************************************************** */
const char          NFE_HDR_RESENT_DATE_STRING[] = "Resent-Date";		// The header class' header fieldname
resentdate_registry rr;								// The registry object for this header class


/* ************************************************************************** */
/*                                                                            */
/* Function Prototypes - Private to this file                                 */
/*                                                                            */
/* ************************************************************************** */


/* ************************************************************************** */
/*                                                                            */
/* Object methods                                                             */
/*                                                                            */
/* ************************************************************************** */
resentdate_registry::resentdate_registry() : header_registry()
{
  reg_name = NFE_HDR_RESENT_DATE_STRING;
}


header* resentdate_registry::create_header(header& h)
{
  return new resentdate(h);
}


header* resentdate_registry::create_header(BOOL filebased, char *membase,
                                           uint32 offset, uint32 length, BOOL owner)
{
  return new resentdate(filebased, membase, offset, length, owner);
}


/* ************************************************************************** */
/*
   METHOD:         Constructor for a resentdate object (memory based)
   DESCRIPTION:    
   DEPENDENCIES:   
   DEPENDED ON BY: 
   INPUT PARAMS:   
   OUTPUT PARAMS:  NONE
   RETURN VALUE:   NONE
   CONSTANTS:      NONE
   VARIABLES:      NONE
 */
/* ************************************************************************** */
resentdate::resentdate(BOOL f, char *membase, uint32 offset, uint32 length,
                       BOOL owner)
           :date(f, membase, offset, length, owner)
{
  type = rr.GetType();
  if ((owner) && (length == 0))
    SetName(NFE_HDR_RESENT_DATE_STRING);
}


// copy constructor
resentdate::resentdate(const resentdate &object) : date(object)
{
}


// copy constructor from header object
resentdate::resentdate(const header &object) : date(object)
{
  type = rr.GetType();
}


resentdate &resentdate::operator=(const resentdate &object)
{
  date::operator=(object);
  if (this != &object)
  {
    // do destructor things
  }
  return *this;
}


resentdate &resentdate::operator=(const header &object)
{
  date::operator=(object);
  if (this != &object)
  {
    // do destructor things
    type = rr.GetType();
  }
  return *this;
}


// Implementation of destructor for resentdate
resentdate::~resentdate()
{
  // nothing to do
}
