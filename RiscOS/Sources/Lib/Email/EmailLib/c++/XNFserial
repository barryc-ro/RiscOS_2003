/*                                                                            */
/* ************************************************************************** */
extern "C"
{
  #include <string.h>
  #include <ctype.h>
  #include "DebugLib/DebugLib.h"
}


/* ************************************************************************** */
/*                                                                            */
/* Include header files - Project defined                                     */
/*                                                                            */
/* ************************************************************************** */
#include "XNFserial.h"
#include "header.h"
#include "822parser.h"
extern "C"
{
  #include "ELib.h"
}


/* ************************************************************************** */
/*                                                                            */
/* New types - Private to this file                                           */
/*                                                                            */
/* ************************************************************************** */
class xnf_serial_registry : public header_registry
{
  public:
    xnf_serial_registry();
    header* create_header(bool filebased, char *membase, uint32 offset,
                          uint32 length, bool owner);
    header* create_header(header& h);
};


/* ************************************************************************** */
/*                                                                            */
/* Globals to this file                                                       */
/*                                                                            */
/* ************************************************************************** */
const char          NFE_HDR_XNF_SERIAL_STRING[] = "X-NetFax-Serial";		// The header class' header fieldname
xnf_serial_registry xnfdsr;							// The registry object for this header class


/* ************************************************************************** */
/*                                                                            */
/* Function Prototypes - Private to this file                                 */
/*                                                                            */
/* ************************************************************************** */


/* ************************************************************************** */
/*                                                                            */
/* Object methods                                                             */
/*                                                                            */
/* ************************************************************************** */
xnf_serial_registry::xnf_serial_registry() : header_registry()
{
  reg_name = NFE_HDR_XNF_SERIAL_STRING;
}


header* xnf_serial_registry::create_header(header& h)
{
  return new XNFserial(h);
}


header* xnf_serial_registry::create_header(bool filebased, char *membase,
                                           uint32 offset, uint32 length, bool owner)
{
  return new XNFserial(filebased, membase, offset, length, owner);
}


/* ************************************************************************** */
/*
   METHOD:         Constructor for a XNFserial object
   DESCRIPTION:
   DEPENDENCIES:
   DEPENDED ON BY:
   INPUT PARAMS:
   OUTPUT PARAMS:  NONE
   RETURN VALUE:   NONE
   CONSTANTS:      NONE
   VARIABLES:      NONE
 */
/* ************************************************************************** */
XNFserial::XNFserial(bool f, char *membase, uint32 offset, uint32 length,
                     char *c, bool owner)
          :header(f, membase, offset, length,owner),
           parsed(false)
{
  type = xnfdsr.GetType();
  if ((owner) && (length==0))
  {
    if (c)
      memcpy(serial, c, 8);
    SetName(NFE_HDR_XNF_SERIAL_STRING);
    char buf[17];
    for(int i=7;i>=0;i--)
      sprintf(buf+((7-i)*2), "%02x", (uint8)(serial[i]));
    buf[16] = 0;
    SetBody(buf);
    parsed = true;
  }
}


XNFserial::XNFserial(bool f, char *membase, uint32 offset, uint32 length,
                     bool owner)
          :header(f, membase, offset, length,owner),
           parsed(false)
{
  type = xnfdsr.GetType();
  if ((owner) && (length==0))
  {
    SetName(NFE_HDR_XNF_SERIAL_STRING);
  }
}


// copy constructor
XNFserial::XNFserial(const XNFserial &object)
          :header(object)
{
  copyXNFserialobject(object);
}


// copy constructor from header object
XNFserial::XNFserial(const header &object)
          :header(object),
           parsed(false)
{
  type = xnfdsr.GetType();
}


XNFserial &XNFserial::operator=(const XNFserial &object)
{
  header::operator=(object);
  if (this != &object)
  {
    // do destructor things
    copyXNFserialobject(object);
  }
  return *this;
}


XNFserial &XNFserial::operator=(const header &object)
{
  header::operator=(object);
  if (this != &object)
  {
    type = xnfdsr.GetType();
    // do destructor things
    parsed = false;
  }
  return *this;
}


void XNFserial::copyXNFserialobject(const XNFserial &object)
{
  memcpy(serial, object.serial, 8);
  parsed = object.parsed;
}


// Implementation of destructor for XNFserial
XNFserial::~XNFserial()
{
  // nothing to do
}


NFE_rcode XNFserial::parse(NFE_CONTEXT &context, clock_t t_slice)
{
  NFE_rcode rc    = NFE_COMPLETED;
  bool      error = false;

  if (!header::Parsed())
    rc = header::parse(context, t_slice);
  if (rc != NFE_COMPLETED)
    error = true;

  if (!error)
  {
    uint32 size = 0;
    rc = GetBodyLen(size);
    size+=2;
    char *temp = new char[size];
    if (temp)
    {
      rc = GetUnfoldedNoCommentsBody(temp, size);
      dprintf(("", "GetUnfoldedNoCommentsBody(): %s   size:%d\n", temp, size));
      if (rc == NFE_COMPLETED)
      {
        char *ptr = temp;
        uint32 tmp;

        error = consume_all_LWSP(ptr, size);
        if ((!error) && (size >=8))
        {
          uint8 digit = 0;

          for(int32 i=7;i>=0;i--)
          {
            consume_hex_number(ptr, size, 2, 2, tmp);
            digit = tmp;
            serial[i] = digit;
          }
          parsed = true;
        }
        else
          rc = NFE_FAILED;
      }
      delete[] temp;
    }
    else
      rc = NFE_MALLOCFAILED;
  }

  return rc;
}


#ifdef DISPLAY
void XNFserial::Display(void)
{
  header::Display();
  char buf[17];
  for(int32 i=7;i>=0;i--)
    sprintf(buf+((7-i)*2), "%02x", (uint8)(serial[i]));
  buf[16] = 0;
  printf("serialnum: %s", buf);
  printf("\n");
}
#endif

NFE_rcode XNFserial::Get(char *data, uint32 &l)
{
  NFE_rcode rc = NFE_COMPLETED;

  if (data)
  {
    if (parsed)
    {
      if (l>= 8)	// argh! use a const value for 8!!
        memcpy(data, serial, 8);
      else
        rc = NFE_NOSPACE;
    }
    else
      rc = NFE_DATAMUSTBEPARSED;
  }
  else
    rc = NFE_NULLADDR;

  return rc;
}


