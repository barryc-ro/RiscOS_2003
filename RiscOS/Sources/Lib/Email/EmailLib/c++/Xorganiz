/* ************************************************************************** */
/*                                                                            */
/* Include header files - System                                              */
/*                                                                            */
/* ************************************************************************** */
extern "C"
{
  #include <string.h>
  #include <ctype.h>
  #include "DebugLib/DebugLib.h"
}


/* ************************************************************************** */
/*                                                                            */
/* Include header files - Project defined                                     */
/*                                                                            */
/* ************************************************************************** */
#include "Xorganiz.h"
#include "header.h"
#include "822parser.h"
extern "C"
{
  #include "ELib.h"
}


/* ************************************************************************** */
/*                                                                            */
/* New types - Private to this file                                           */
/*                                                                            */
/* ************************************************************************** */
class x_organ_registry : public header_registry
{
  public:
    x_organ_registry();
    header* create_header(BOOL filebased, char *membase, uint32 offset,
                          uint32 length, BOOL owner);
    header* create_header(header& h);
};


/* ************************************************************************** */
/*                                                                            */
/* Globals to this file                                                       */
/*                                                                            */
/* ************************************************************************** */
const char       NFE_HDR_X_ORG_STRING[] = "X-Organization";			// The header class' header fieldname
x_organ_registry xorgr;								// The registry object for this header class


/* ************************************************************************** */
/*                                                                            */
/* Function Prototypes - Private to this file                                 */
/*                                                                            */
/* ************************************************************************** */


/* ************************************************************************** */
/*                                                                            */
/* Object methods                                                             */
/*                                                                            */
/* ************************************************************************** */
x_organ_registry::x_organ_registry() : header_registry()
{
  reg_name = NFE_HDR_X_ORG_STRING;
}


header* x_organ_registry::create_header(header& h)
{
  return new Xorganization(h);
}


header* x_organ_registry::create_header(BOOL filebased, char *membase,
                                        uint32 offset, uint32 length, BOOL owner)
{
  return new Xorganization(filebased, membase, offset, length, owner);
}


/* ************************************************************************** */
/*
   METHOD:         Constructor for a Xorganization object
   DESCRIPTION:    
   DEPENDENCIES:   
   DEPENDED ON BY: 
   INPUT PARAMS:   
   OUTPUT PARAMS:  NONE
   RETURN VALUE:   NONE
   CONSTANTS:      NONE
   VARIABLES:      NONE
 */
/* ************************************************************************** */
Xorganization::Xorganization(BOOL f, char *membase, uint32 offset,
                             uint32 length, BOOL owner)
              :header(f, membase, offset, length, owner)
                                                                      
{
  type = xorgr.GetType();
  if ((ownership) && (len == 0))
  {
    SetName(NFE_HDR_X_ORG_STRING);
  }
}


Xorganization::Xorganization(BOOL f, char *membase, uint32 offset,
                             uint32 length, char *org, BOOL owner)
              :header(f, membase, offset, length, owner)
{
  type = xorgr.GetType();
  if ((ownership) && (len == 0))
  {
    SetName(NFE_HDR_X_ORG_STRING);
    if (org)
      SetBody(org);
  }
}


// copy constructor
Xorganization::Xorganization(const Xorganization &object) : header(object)
{
  type = xorgr.GetType();
}


// copy constructor from header object
Xorganization::Xorganization(const header &object) : header(object)
{
  type = xorgr.GetType();
}


Xorganization &Xorganization::operator=(const Xorganization &object)
{
  header::operator=(object);
  if (this != &object)
  {
    // do destructor things
  }
  return *this;
}


Xorganization &Xorganization::operator=(const header &object)
{
  header::operator=(object);
  if (this != &object)
  {
    type = xorgr.GetType();
    // do destructor things
  }
  return *this;
}


// Implementation of destructor for Xorganization
Xorganization::~Xorganization()
{
  // nothing to do
}


#ifdef DISPLAY
void Xorganization::Display(void)
{
  printf("ORGANIZATION:\n");
  header::Display();
  printf("\n");
}
#endif
