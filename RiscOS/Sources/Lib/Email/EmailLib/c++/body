                                                                                   encoding(enc), out(0)
{
  
}
*/

// assignment operator
body& body::operator=(const body &object)
{
  elibbase::operator=(object);
  if (this != &object)
  {
    // do destructor type things
    copybodyobject(object);
  }
  return *this;
}


void body::copybodyobject(const body &object)
{
  encoding = object.encoding;
  out = object.out;
  type = object.type;
}


// Implementation of destructor for body
body::~body()
{
  // nothing to do
}


NFE_rcode body::parse(NFE_CONTEXT &context, clock_t t_slice)
{
  // Nothing to do, you don't parse a body you apply and remove encoings from it, so lots of different parsing to be done
  return NFE_COMPLETED;
}


void body::Display(void)
{
  printf("BODY DISPLAY:\n");
  printf("ENCODING    : "); 
  switch (encoding)
  {
    case NFE_TE_7BIT:
      printf("7BIT/NONE\n");
      break;
    case NFE_TE_8BIT:
      printf("8BIT\n");
      break;
    case NFE_TE_BINARY:
      printf("BINARY\n");
      break;
    case NFE_TE_QUOTED_PRINTABLE:
      printf("QUOTED_PRINTABLE\n");
      break;
    case NFE_TE_BASE64:
      printf("BASE64\n");
      break;
    case NFE_TE_UNKNOWN:
      printf("UNKNOWN\n");
      break;
    default:
      printf("INTERNALERR\n");
  }
  elibbase::Display();
  printf("END OF BODY\n");
  printf("\n");
}


NFE_rcode body::GetEncoding(NFE_TE &enc)
{
  NFE_rcode rc = NFE_COMPLETED;
  
  if (data_present())
    enc = encoding;
  else
    rc = NFE_NODATAPRESENT;
  return rc;
}


NFE_rcode body::RemoveEncoding(NFE_CONTEXT &context,
                               const clock_t t_slice,
                               char *filename,
                               FILE *filedes,
                               uint32 buffer)
{
  NFE_rcode rc = NFE_COMPLETED;
  
  if (data_present())
  {
/*    if (encoding != NFE_TE_NONE)
    {*/
      if (encoding == NFE_TE_UNKNOWN)
        rc = NFE_CANTDOUNKNOWN;
      else
      {
        // do decode
        switch (encoding)
        {
          case NFE_TE_7BIT:
          {
            rc = Decode7BIT(context, t_slice, TRUE, filename, filedes, buffer);
            if (rc == NFE_COMPLETED)
            {
              // need to replace current body data with this new encoded body data
              encoding = NFE_TE_NONE;
              if ((ownership) && (!file))
                delete[] mem_base;
              if (file)
                delete[] mem_base;
              file = TRUE;
              parsed = TRUE;
              start = 0;
              len = bwritten;
              mem_base = new char[strlen(filename)+1];
              strcpy(mem_base, filename);
              mem_size = 0;
            }
            if (out)
            {
              fclose(out);
              out = 0;
            }
            break;
          }
          case NFE_TE_8BIT:			// cant remove 8BIT or binary, that's a base format.  Need to encode if we are to send out
          case NFE_TE_BINARY:
            rc = NFE_ALREADYDECODED;
            break;
          case NFE_TE_QUOTED_PRINTABLE:
            rc = NFE_NOTSUPPORTED;
            break;
          case NFE_TE_BASE64:
          {
            if (out == 0)			// if this is the start (we've not opend the files yet), then
            {
              new_context(&context);
              
              if (file)
              {
                if (filedes)
                  out = filedes;
                else
                  out = fopen(filename, "wb+");
                if (out)
                {
                  // move to start in file
                  BOOL ok = goto_start();
                  if (ok)
                  {
                    fseek(fd, -1, SEEK_CUR);// move back on char in file as goto_start reads in first char
                    bwritten = 0;
                    rc = base64decode(&context, t_slice, fd, out, buffer, &bwritten);
                    if (rc == NFE_COMPLETED)
                    {
                      // need to replace current body data with this new encoded body data are correctly set all the data members
                      encoding = NFE_TE_7BIT;
                      if ((ownership) && (!file))
                        delete[] mem_base;
                      if (file)
                        delete[] mem_base;
                      file = TRUE;
                      parsed = TRUE;
                      start = 0;
                      len = bwritten;
                      mem_base = new char[strlen(filename)+1];
                      strcpy(mem_base, filename);
                      mem_size = 0;
                    }
                    if (rc != NFE_RUNNING)
                    {
                      destroy_context(&context);
                      if (!filedes)
                        fclose(out);
                      out = 0;
                      stop();
                    }
                  }
                  else
                  {
                    rc = NFE_INVALIDFILENAME;
                    if (!filedes)
                      fclose(out);
                    out = 0;
                  }
                }
                else
                {
                  rc = NFE_WRITEFAIL;
                }
              }
              else
                rc = NFE_INTERNALERR;	// 'cos I've not done mem version yet!
            }
            else
            {
              rc = base64decode(&context, t_slice, fd, out, buffer, &bwritten);
              if (rc == NFE_COMPLETED)
              {
                // need to replace current body data with this new encoded body data are correctly set all the data members
                encoding = NFE_TE_7BIT;
                if ((ownership) && (!file))
                  delete[] mem_base;
                if (file)
                  delete[] mem_base;
                file = TRUE;
                parsed = TRUE;
                start = 0;
                len = bwritten;
                mem_base = new char[strlen(filename)+1];
                strcpy(mem_base, filename);
                mem_size = 0;
              }
              if (rc != NFE_RUNNING)
              {
                destroy_context(&context);
                if (!filedes)
                  fclose(out);
                out = 0;
                stop();
              }
            }
            break;
          }
          default:
          {
            rc = NFE_INTERNALERR;
            break;
          }
        }  // end switch
      } // endif on encoding type check
//    } // endif on encoding not NONE check
  } // endif on data present check
  else
    rc = NFE_NODATAPRESENT;
  return rc;
}


NFE_rcode body::RemoveEncoding(NFE_CONTEXT &context,
                               const clock_t t_slice,
                               char *memory)
{
  NFE_rcode rc = NFE_COMPLETED;
  
  if (data_present())
  {
    if (encoding != NFE_TE_NONE)
    {
      if (encoding == NFE_TE_UNKNOWN)
        rc = NFE_CANTDOUNKNOWN;
      else
      {
        // do decode
      }
    }
  }
  else
    rc = NFE_NODATAPRESENT;
  return rc;
}


NFE_rcode body::ApplyEncoding(NFE_CONTEXT &context,
                               const clock_t t_slice,
                               NFE_TE enc,
                               char *filename,
                               uint32 buffer)
{
  NFE_rcode rc = NFE_COMPLETED;
  
  if (data_present())
  {
    if (enc == encoding)
      rc = NFE_ALREADYENCODED;
    else if (enc == NFE_TE_UNKNOWN)
      rc = NFE_CANTDOUNKNOWN;
    else
    {
      // do encode
      switch (enc)
      {
        case NFE_TE_7BIT:
        {
          rc = Encode7BIT(context, t_slice, TRUE, filename, buffer);
          if (rc == NFE_COMPLETED)
          {
            // need to replace current body data with this new encoded body data
            encoding = NFE_TE_7BIT;
            if ((ownership) && (!file))
              delete[] mem_base;
            if (file)
              delete[] mem_base;
            file = TRUE;
            parsed = TRUE;
            start = 0;
            len = bwritten;
            mem_base = new char[strlen(filename)+1];
            strcpy(mem_base, filename);
            mem_size = 0;
          }
          if (out)
          {
            fclose(out);
            out = 0;
          }
          break;
        }
//        case NFE_TE_NONE:
        case NFE_TE_8BIT:			// cant apply 8BIT or binary, that's a base format.
        case NFE_TE_BINARY:
          rc = NFE_NOTSUPPORTED;
          break;
        case NFE_TE_QUOTED_PRINTABLE:
          rc = NFE_NOTSUPPORTED;
          break;
        case NFE_TE_BASE64:
        {
          if (out == 0)			// if this is the start (we've not opend the files yet), then
          {
            new_context(&context);
            
            if (file)
            {
              out = fopen(filename, "wb+");
              if (out)
              {
                // move to start in file
                BOOL ok = goto_start();
                if (ok)
                {
                  fseek(fd, -1, SEEK_CUR);// move back on char in file as goto_start reads in first char
                  bwritten = 0;
                  rc = base64encode(&context, t_slice, fd, out, buffer, &bwritten);
                  if (rc == NFE_COMPLETED)
                  {
                    // need to replace current body data with this new encoded body data are correctly set all the data members
                    encoding = NFE_TE_BASE64;
                    if ((ownership) && (!file))
                      delete[] mem_base;
                    if (file)
                      delete[] mem_base;
                    file = TRUE;
                    parsed = TRUE;
                    start = 0;
                    len = bwritten;
                    mem_base = new char[strlen(filename)+1];
                    strcpy(mem_base, filename);
                    mem_size = 0;
                  }
                  if (rc != NFE_RUNNING)
                  {
                    destroy_context(&context);
                    fclose(out);
                    out = 0;
                    stop();
                  }
                }
                else
                {
                  rc = NFE_INVALIDFILENAME;
                  fclose(out);
                  out = 0;
                }
              }
              else
              {
                rc = NFE_WRITEFAIL;
              }
            }
            else
              rc = NFE_INTERNALERR;	// 'cos I've not done mem version yet!
          }
          else
          {
            rc = base64encode(&context, t_slice, fd, out, buffer, &bwritten);
            if (rc == NFE_COMPLETED)
            {
              // need to replace current body data with this new encoded body data are correctly set all the data members
              encoding = NFE_TE_BASE64;
              if ((ownership) && (!file))
                delete[] mem_base;
              if (file)
                delete[] mem_base;
              file = TRUE;
              parsed = TRUE;
              start = 0;
              len = bwritten;
              mem_base = new char[strlen(filename)+1];
              strcpy(mem_base, filename);
              mem_size = 0;
            }
            if (rc != NFE_RUNNING)
            {
              destroy_context(&context);
              fclose(out);
              out = 0;
              stop();
            }
          }
          break;
        }
        default:
        {
          rc = NFE_INTERNALERR;
          break;
        }
      }  // end switch
    }
  }
  else
    rc = NFE_NODATAPRESENT;
  return rc;
}


NFE_rcode body::ApplyEncoding(NFE_CONTEXT &context,
                               const clock_t t_slice,
                               NFE_TE enc,
                               char *memory)
{
  NFE_rcode rc = NFE_COMPLETED;
  
  if (data_present())
  {
    if (enc == encoding)
      rc = NFE_ALREADYENCODED;
    else if (encoding != NFE_TE_7BIT)
      rc = NFE_MUSTBE7BIT;
    else if (encoding == NFE_TE_UNKNOWN)
      rc = NFE_CANTDOUNKNOWN;
    else
    {
      // do encode
    }
  }
  else
    rc = NFE_NODATAPRESENT;
  return rc;
}


NFE_rcode body::Encode7BIT(NFE_CONTEXT   &c,
                           const clock_t  t_slice,
                           BOOL           file_output,
                           char          *output,
                           uint32         bufsize)
{
  NFE_rcode rc = NFE_COMPLETED;
  
  if (!file_output)
    rc = NFE_INTERNALERR;		// As I've not implemented memory output yet!
  else
  {
    new_context(&c);
    out = fopen(output, "wb+");
    if (!out)
      rc = NFE_WRITEFAIL;
    else
    {
      BOOL ok = goto_start();		// Goto start of this body object
      if (!ok)
      {
        rc = NFE_INVALIDFILENAME;
        fclose(out);
        out = 0;
      }
      else
      {
        bwritten = 0;
        char prev = 0;
        int error = 0;
        
        while ( (error != EOF) && (!end_of_data()) )
        {
          if (curchar == LF)				// if current char is a LF
          {
            if ((prev != CR) && (error != EOF))		// if previous char is not a CR then
            {
              error = fputc(CR, out);			// write out a CR
              if (error != EOF) bwritten++;
            }
          }
          error = fputc(curchar, out);
          if (error != EOF) bwritten++;
          prev = curchar;
          next_char();
        } // endwhile
        stop();
      }
    } // endif fopen check
    destroy_context(&c);
  } // endif file_output check
  
  return rc;
}


NFE_rcode body::Decode7BIT(NFE_CONTEXT   &c,
                           const clock_t  t_slice,
                           BOOL           file_output,
                           char          *output,
                           FILE          *filedes,
                           uint32         bufsize)
{
  NFE_rcode rc = NFE_COMPLETED;
  
  if (!file_output)
    rc = NFE_INTERNALERR;		// As I've not implemented memory output yet!
  else
  {
    new_context(&c);
    if (filedes)
      out = filedes;
    else
      out = fopen(output, "wb+");
    if (!out)
      rc = NFE_WRITEFAIL;
    else
    {
      BOOL ok = goto_start();		// Goto start of this body object
      if (!ok)
      {
        rc = NFE_INVALIDFILENAME;
        if (!filedes)
          fclose(out);
        out = 0;
      }
      else
      {
        bwritten = 0;
        int error = 0;
        
        while ( (error != EOF) && (!end_of_data()) && (curpos<len))
        {
          if (curchar == CR)				// if current char is a CR
          {
            next_char();				// get the next char
            if (curchar == LF)				// if the next char is a LF then
            {
              error = fputc(LF, out);			// Turn CRLF into LF by just outputing LF
              if (error != EOF) bwritten++;
            }
            else					// else, next char wasn't LF, so not a CRLF sequence, so
            {
              error = fputc(CR, out);			// write out the CR and
              if (error !=EOF) bwritten++;
              error = fputc(curchar, out);		// write out this character
              if (error !=EOF) bwritten++;
            }
          }
          else						// else current char wasn't a CR, so
          {
            error = fputc(curchar, out);		// write it out
            if (error != EOF) bwritten++;
          }
          next_char();
        } // endwhile
        stop();
      }
    } // endif fopen check
    destroy_context(&c);
  } // endif file_output check
  
  return rc;
}


