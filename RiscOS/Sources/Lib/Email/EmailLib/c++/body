/* ************************************************************************** */
body::body(void) : elibbase(),
                   encoding(NFE_TE_UNKNOWN), out(0),
                   type(NFE_BODY)
{
  
}


body::body(BOOL f, char *membase, uint32 offset, uint32 length, NFE_TE enc, BOOL owner) : elibbase(f, membase, offset, length, owner),
                                                                                  encoding(enc), out(0), type(NFE_BODY)
{
  
}


// copy constructor
body::body(const body &object) : elibbase(object),
                                  encoding(NFE_TE_UNKNOWN)
{
  copybodyobject(object);
}


/*// constructor, file version
