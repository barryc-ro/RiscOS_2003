/* ************************************************************************** */
/*                                                                            */
/* Include header files - System                                              */
/*                                                                            */
/* ************************************************************************** */
#include <string.h>
#include <ctype.h>
#include "DebugLib/DebugLib.h"


/* ************************************************************************** */
/*                                                                            */
/* Include header files - Project defined                                     */
/*                                                                            */
/* ************************************************************************** */
#include "ELib.h"
#include "ELib_Priv.h"


/* ************************************************************************** */
/*                                                                            */
/* Function Prototypes                                                        */
/*                                                                            */
/* ************************************************************************** */

/* ************************************************************************** */
/*
   FUNCTION:       new_context
   DESCRIPTION:    Function to create and initialise a context handler.  All
   		   this does at present is set the pointer to NULL.  Client
   		   could do this themselves, but I want this as an ADT(Abstract
   		   Data type) to hide everything so I can extend it in future
   		   if needed.
   DEPENDENCIES:   
   DEPENDED ON BY: Any client calling the Email Library
   INPUT PARAMS:   NFE_CONTEXT		*context	New context handle to initialise
   OUTPUT PARAMS:  NFE_CONTEXT		*context	initialised context
   RETURN VALUE:   NFE_elib_rcodes	 NFE_COMPLETED
   					 NFE_NULLADDR
   					 NFE_RUNNING
   CONSTANTS:      NONE
   VARIABLES:      NONE
 */
/* ************************************************************************** */
extern NFE_rcode new_context(NFE_CONTEXT *context)
{
  if (context == 0)
    return NFE_NULLADDR;
  else
    *context = 0;
    
  return NFE_COMPLETED;
}


/* ************************************************************************** */
/*
   FUNCTION:       destroy_context
   DESCRIPTION:    Function to destroy a context handler.  All
   		   this does at present is set the pointer to NULL.  Client
   		   could do this themselves, but I want this as an ADT(Abstract
   		   Data type) to hide everything so I can extend it in future
   		   if needed.
   DEPENDENCIES:   
   DEPENDED ON BY: Any client calling the Email Library
   INPUT PARAMS:   NFE_CONTEXT		*context	New context handle to destroy
   OUTPUT PARAMS:  NFE_CONTEXT		*context	destroyed context handle
   RETURN VALUE:   NFE_elib_rcodes	 NFE_COMPLETED
   					 NFE_NULLADDR
   					 NFE_RUNNING
   CONSTANTS:      NONE
   VARIABLES:      NONE
 */
/* ************************************************************************** */
extern NFE_rcode destroy_context(NFE_CONTEXT *context)
{
  if (context == 0)
    return NFE_NULLADDR;
  else
    *context = 0;
    
  return NFE_COMPLETED;
}


