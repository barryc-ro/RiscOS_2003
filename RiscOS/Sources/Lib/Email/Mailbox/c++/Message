// =============================================================================
// Include header files

#include "Message.h"




// =============================================================================
// Define member functions

/* -----------------------------------------------------------------------------
 */

Message::Message (const Flags    default_flags,
                  const uint32   len)
    : _flags (default_flags),
      _length (len),
      _size (0)
{
    // Do nothing.
}




Message::~Message ()
{
}




/* -----------------------------------------------------------------------------
 */

ELib_rcode  Message::GetFlags(Flags& flags, const Flags mask) const
{
  flags = (_flags & mask);

  return ELIB_COMPLETED;
}
