// =============================================================================
// Include header files

// General email
#include "Email/Common/bool.h"
#include "Email/Common/types.h"

// Mailbox
#include "Account.h"




// =============================================================================
// Define member functions

Account::Account ()
    : inbox (0),
      no_of_mailboxes (0)
{
}




Account::~Account ()
{
}



Mailbox *  Account::GetInbox () const
{
    return inbox;
}




ELib_list &  Account::GetMailboxes ()
{
    return mailboxes;
}




uint32  Account::GetNumOfMailboxes () const
{
    return no_of_mailboxes;
}




bool  Account::GetConnectionState () const
{
    return true;
}




ELib_rcode  Account::SetConnectionState (bool  online)
{
    return ELIB_COMPLETED;
}
