// =============================================================================
// Include header files

// General email
#include "Email/Common/bool.h"
#include "Email/Common/types.h"
#include "Email/Common/list.h"
#include "Message.h"

// Mailbox
#include "Mailbox.h"




// =============================================================================
// Define member functions

Mailbox::~Mailbox ()
{
    TRAVERSE (messages)
    {
        Message* msg = (Message*)messages.Current();
        if (msg)
        {
            delete msg;
        }
    }
}


void Mailbox::RemoveMessage (Message *  msg)
{
    if (msg)
    {
        TRAVERSE (messages)
        {
            Message* msg_ptr = (Message*)messages.Current();

            if (msg == msg_ptr)
            {
                messages.Delete();
                delete msg;
            }
        }
    }
}
