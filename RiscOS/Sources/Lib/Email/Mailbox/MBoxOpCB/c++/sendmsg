// =============================================================================
// Include header files

// Mailbox
#include "utils.h"
#include "MBoxOpCB/sendmsg.h"



// =============================================================================
// Define member functions

/* -----------------------------------------------------------------------------
   MBoxOpCB_sendmsg_file::MBoxOpCB_sendmsg_file

   Constructor for issuing a send message to file callback to an object.

   Inputs
   MBoxCBHandlerObject *const  object      : pointer to object to callback
   MBoxCBHandlerMethod         method      : pointer to member function to
                                             callback
   const char  *const          fname       : name of file to write headers to
   void *                      client_data : optional client pointer to be
                                             passed to callback handler
   Outputs
   ELib_rcode &                rc          : indicate success or nature of
                                             failure to constuct object
 */

MBoxOpCB_sendmsg_file::MBoxOpCB_sendmsg_file (
    MBoxCBHandlerObject *const   object,
    MBoxCBHandlerMethod          method,
    const char  *const           recipient,
    const char  *const           sender,
    ELib_rcode &                 rc,
    void *                       client_data)
    : MBoxOpCB (object,
                method,
                client_data)
{
    rc = common_construction (recipient,
                              sender);
}




/* -----------------------------------------------------------------------------
   MBoxOpCB_sendmsg_file::MBoxOpCB_sendmsg_file

   Constructor for issuing a send headers to file callback to a non-member
   function.

   Inputs
   MBoxCBHandlerFn     fn          : pointer to function to callback
   const char  *const  fname       : name of file to write headers to
   void *              client_data : optional client pointer to be
                                     passed to callback handler
                                             passed to callback handler
   Outputs
   ELib_rcode &                rc  : indicate success or nature of
                                     failure to constuct object
 */

MBoxOpCB_sendmsg_file::MBoxOpCB_sendmsg_file (
    MBoxCBHandlerFn     fn,
    const char  *const  recipient,
    const char  *const  sender,
    ELib_rcode &        rc,
    void *              client_data)
    : MBoxOpCB (fn,
                client_data)
{
    rc = common_construction (recipient,
                              sender);
}




/* -----------------------------------------------------------------------------
   MBoxOpCB_sendmsg_file::~MBoxOpCB_sendmsg_file

   Destructor.  Destroy local copy of filename.
 */

MBoxOpCB_sendmsg_file::~MBoxOpCB_sendmsg_file ()
{
    destroy_resources ();
}




/* -----------------------------------------------------------------------------
   MBoxOpCB_sendmsg_file::common_construction

   Common code for all constructors.  Makes local copy of name of file that
   headers are to be written into.

   Inputs
   const char *const  fname : name of file to write headers into

   Returns ELib_rcode
   ELIB_COMPLETED
   ELIB_EMALLOCFAILED
 */

ELib_rcode  MBoxOpCB_sendmsg_file::common_construction (
                const char *const  recipient,
                const char *const  sender)
{
    ELib_rcode  rc;

    MBoxOpCB_sendmsg_file::recipient = str_dup (recipient);
    MBoxOpCB_sendmsg_file::sender    = str_dup (sender);

    if (MBoxOpCB_sendmsg_file::recipient &&
        MBoxOpCB_sendmsg_file::sender)
    {
        rc = ELIB_COMPLETED;
    }
    else
    {
        destroy_resources ();
        rc = ELIB_EMALLOCFAILED;
    }

    return rc;
}




/* -----------------------------------------------------------------------------
   MBoxOpCB_sendmsg_file::GetType

   Return value indicating that this is a send headers to file callback.

   Returns MBoxOpCB::Type
   MBoxOpCB::GetMsgFile
 */

MBoxOpCB::Type  MBoxOpCB_sendmsg_file::GetType () const
{
    return MBoxOpCB::SendMsgFile;
}




void  MBoxOpCB_sendmsg_file::destroy_resources ()
{
    if (recipient)
    {
        delete[] recipient;
    }

    if (sender)
    {
        delete[] sender;
    }
}
