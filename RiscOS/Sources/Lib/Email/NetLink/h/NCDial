// =============================================================================
// Include header files

// CLib
#include "kernel.h"

// Toolbox
#include "tboxlibs/wimp.h"

// General email
#include "Email/Common/bool.h"
#include "Email/Common/types.h"

// Netlink
#include "NetLink.h"



// =============================================================================
// Class declarations

class  NCDialNetLink : public NetLink
{
    // Data types
    typedef void (NCDialNetLink::* status_handler_fn) (const int);

    // Methods
    public:
                             NCDialNetLink ();

        virtual             ~NCDialNetLink ();

        virtual ELib_rcode   Connect ();

        virtual ELib_rcode   Disconnect ();

    private:
        _kernel_oserror *    register_handlers (
                                 status_handler_fn  status_handler);

        void                 deregister_handlers ();

        static int           service_message_handler (WimpMessage *  message,
                                                      void *         handle);

        void                 connect_status_handler (
                                 const int  ncdial_status);

        void                 disconnect_status_handler (
                                 const int  ncdial_status);

    // Data memers
    private:
        status_handler_fn  _status_handler;
        bool               _handlers_registered;
};

#endif
