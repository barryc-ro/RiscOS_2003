#include <stdarg.h>
#include <stdio.h>

#include "Desk.Msgs.h"


extern void Desk_Msgs_printf(char *result, const char *formattag, ...)
{
  va_list ap;
  char temp[1024];

  result[0] = '\0';
  if (Desk_Msgs_Lookup(formattag, temp, 1020))
  {
    va_start(ap, formattag);
    vsprintf(result, temp, ap);
    va_end(ap);
  }
}
