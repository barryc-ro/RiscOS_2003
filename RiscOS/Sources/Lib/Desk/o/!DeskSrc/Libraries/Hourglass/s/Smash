        GET     Desk.sh.regdefs
        GET     ^.h.swinos
        GET     Desk.sh.macros

; void Desk_Hourglass_Smash(void);

        PREAMBLE
        STARTCODE Desk_Hourglass_Smash
;
        STMFD   sp!, {lr}
        SWI     Desk_SWI_Hourglass_Smash + Desk_XOS_Bit
        Desk_Error2_CheckV
        LDMFD   sp!, {pc}^
;
        END
