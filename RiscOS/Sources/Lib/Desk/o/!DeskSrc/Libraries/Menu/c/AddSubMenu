#include "Desk.Wimp.h"
#include "Desk.Menu.h"


void Desk_Menu_AddSubMenu(Desk_menu_ptr menu, int entry, Desk_menu_ptr submenu)
{
  Desk_menu_item *item = (Desk_menu_item*) (((int) menu) + sizeof(Desk_menu_block));

  item[entry].submenu.menu = submenu;
}
