#include <stdio.h>

#include "Desk.Core.h"
#include "Desk.TextFile.h"


extern void Desk_TextFile_SkipBlanks(FILE *infile)
{
  char ch = 9;

  while (!feof(infile) && (ch == 32 || ch == 9 || ch == '\n'))
    ch = getc(infile);
  ungetc(ch, infile);
}
