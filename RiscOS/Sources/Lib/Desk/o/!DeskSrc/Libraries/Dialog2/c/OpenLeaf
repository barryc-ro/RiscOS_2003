#include "Desk.WimpSWIs.h"
#include "Desk.Debug.h"

#include "Defs.h"


void	Desk_Dialog2_OpenDialogMenuLeaf( Desk_event_pollblock *event, Desk_dialog2_block *dialog2)
{

Desk_Debug_Assert( dialog2);

Desk_Dialog2__CommonOpenMenuCode( dialog2);	/* Close any previous menuleaf etc.	*/

dialog2->flags.data.type = Desk_dialog2_type_MENULEAF;
Desk_Dialog2__CommonOpenCode( dialog2);

Desk_Wimp_CreateSubMenu( 
	(Desk_menu_ptr) dialog2->window, 
	event->data.message.data.words[1], 
	event->data.message.data.words[2]
	);

return;
}



