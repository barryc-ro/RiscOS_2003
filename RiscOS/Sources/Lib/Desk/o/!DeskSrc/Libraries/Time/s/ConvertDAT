;   Purpose: Convert given time to text using format string.

        GET     Desk.sh.regdefs
        GET     ^.h.swinos
        GET     Desk.sh.macros

        PREAMBLE
        STARTCODE Desk_Time_ConvertDateAndTime
;
        STMFD   sp!, {lr}
        SWI     Desk_SWI_OS_ConvertDateAndTime + Desk_XOS_Bit
        Desk_Error2_CheckV
        ;MOVVC   a1, #0
        LDMFD   sp!, {pc}^
;
        END
