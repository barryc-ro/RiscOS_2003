#include <string.h>
#include <stdlib.h>

#include "Desk/Str.h"
#include "Desk/DeskMem.h"


char *Desk_strdup(const char *src)
{
  int   len;
  char *dest;

  if (src == NULL)
    return NULL;

  len = strlen((char *) src) + 1;

  dest = (char *) Desk_DeskMem_Malloc(len);

  memcpy(dest, src, len-1);

  /* make sure string is zero terminated */
  dest[len-1] = (char) 0;

  return dest;
}
