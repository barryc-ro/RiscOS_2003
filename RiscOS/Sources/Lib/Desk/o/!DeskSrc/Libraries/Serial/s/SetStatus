;   Purpose: Configure state of serial system.

        GET     Desk.sh.regdefs
        GET     ^.h.swinos
        GET     Desk.sh.macros

; Desk_os_error *Desk_Serial_SetStatus(int Desk_eor_mask, int Desk_and_mask);

        PREAMBLE
        STARTCODE Desk_Serial_SetStatus
;
        STMFD   sp!, {lr}
        MOV     a3, a2
        MOV     a2, a1
        MOV     a1, #0
        SWI     Desk_SWI_OS_SerialOp + Desk_XOS_Bit
        Desk_Error2_CheckV
        ;MOVVC   a1, #0
        LDMFD   sp!, {pc}^
;
        END
