;   Version: 1.00 (21 Nov 1993)
;   Purpose: Transmit a break on the serial port.

        GET     Desk.sh.regdefs
        GET     ^.h.swinos
        GET     Desk.sh.macros

; Desk_Serial_SendBreak(int length);

        PREAMBLE
        STARTCODE Desk_Serial_SendBreak
;
        STMFD   sp!, {lr}
        MOV     a2, a1
        MOV     a1, #2
        SWI     Desk_SWI_OS_SerialOp + Desk_XOS_Bit
        Desk_Error2_CheckV
        ;MOVVC   a1, #0
        LDMFD   sp!, {pc}^
;
        END
