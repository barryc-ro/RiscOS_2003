#include "Desk.Core.h"
#include "Desk.Coord.h"
#include "Desk.Wimp.h"


extern void Desk_Coord_RectToWorkArea(Desk_wimp_rect *rect, const Desk_convert_block *convert)
{
  Desk_Coord_PointToWorkArea(&rect->min, convert);
  Desk_Coord_PointToWorkArea(&rect->max, convert);
}
