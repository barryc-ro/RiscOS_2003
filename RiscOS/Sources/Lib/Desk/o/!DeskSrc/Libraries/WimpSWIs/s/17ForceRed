;
;       Function               : Forces a redraw
;
;
;       Modification history.
;
;       Version                : (Reflect in header IDENT)
;       Date                   :
;       Author                 :
;       Changes                :
;
;
;============================================================================
;
;  Include files.
;
;============================================================================
;
        GET     Desk.sh.regdefs
        GET     h.swinos
        GET     Desk.sh.macros
;
;============================================================================
;
;  Code.
;
;============================================================================
;
        PREAMBLE
        STARTCODE Desk_Wimp_ForceRedraw
;
        STMFD   sp!, {v1, lr}
        LDMFD   a1, {a1, a2, a3, a4, v1}
        SWI     Desk_SWI_Wimp_ForceRedraw + Desk_XOS_Bit
	Desk_Error2_CheckV
        LDMFD   sp!, {v1, pc}^
;
        END
