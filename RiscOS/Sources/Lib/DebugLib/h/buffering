#ifndef __buffering_h
#define __buffering_h

/* -------------------------------------- TYPE DECLARATIONS-------------------------------------- */

typedef struct DebugBufferStatus
{
  int		 enabled;
  int		 da;
  int		 size;
  char		*base;
  char		*head;
} DebugBufferStatus;

extern DebugBufferStatus debug_buff_status;

/* ------------------------------------ FUNCTION PROTOTYPES ------------------------------------- */

void debug_buffer_startup (void);
int debug_buffer_stream (const char *stream);

#endif
