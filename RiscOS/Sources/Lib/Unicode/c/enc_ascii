#include <stdlib.h>

#include "encpriv.h"

#include "enc_ascii.h"

/*
 * Routines for encoding US-ASCII
 * Number: 3
 * Names: US-ASCII
 *        ANSI_X3.4-1968
 *        iso-ir-6
 *        ISO_646.irv:1991
 *        ASCII
 *        ISO646-US
 *        us
 *        IBM367
 *        cp367
 *        csASCII
 */

static unsigned int ascii_read(Encoding *e,
			       encoding_read_callback_fn ucs_out,
                               const char *s,
                               unsigned int n,
                               void *handle)
{
    unsigned int count;

    for (count = n; count; count--)
    {
        char c = *s++;
        UCS4 u = c < 0x80 ? c : 0xFFFD;

        if (ucs_out)
            if (ucs_out(handle, u))
                break;
    }

    return n - count;
}

static int ascii_write(EncodingPriv *e, UCS4 u, char **s, int *bufsize)
{
    int c;

    if ((*bufsize)-- < 0 || !s)
	return 0;

    if (u < 0x80)
	c = u;
    else
	c = '?';

    (*s)[0] = c;
    (*s)++;

    return 1;
    e = e;
}

EncodingPriv enc_ascii =
{
    ascii_read,
    0, /* ascii_reset, */
    0,
    0, /* ascii_delete */
    0,
    ascii_write
};
