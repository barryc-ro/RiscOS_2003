/* header file for dynalloc.c  */

#include <stdbool.h>

/* Begin-Prologue */
#ifndef TEMPLATE_H
#undef DECLARE
#ifdef PROTOTYPES_INTERNAL
#define DECLARE
#define INIT(x) =(x)
#else
#define DECLARE extern
#define INIT(x)
#endif
/* End-Prologue */

#ifndef MAX_RMA_MALLOX
  #define MAX_RMA_MALLOX 110
#endif
#ifndef OS_DynamicArea
  #define OS_DynamicArea 0x00000066
#endif

/* DA routines. */
void init_dma(void);
unsigned char *get_dma(int, char *, unsigned int);
void free_dma(unsigned int);

/* RMA routines. */
void init_rma(void);
unsigned char *get_rma(int, unsigned int);
void free_rma(unsigned int);

/* Wrapper routines */
void rminit(void);
unsigned char *rmalloc(int, char *);
void rmfree(unsigned char *);
void rmfree_all(void);
void rmstat(void);

/* Debug-only routines */
void debug_rmstat(void);

typedef struct
{
  int area_number;
  unsigned char *area_start;
  unsigned int size;
  bool stored_in_rma;
} rmalloc_data_block;


/* Begin-Epilogue */
#undef PROTOTYPES_INTERNAL
#undef INIT
#undef DECLARE
#endif
/* End_Epilogue */

