/************************************************************************/
/* File:    ErrorLib.h                                                  */
/* Purpose: Header file has Preprocessor statements for functions used  */
/*          in the error handling library.                              */
/*                                                                      */
/* Author:  Neil Bingham (mailto:NBingham@art.acorn.co.uk)              */
/* History: Tue 18th February 1997  ver 0.01 - Created.                 */
/************************************************************************/

#ifndef __errorlib_h
#define __errorlib_h

/************************************************************************/
/* wimp_error                                                           */
/*                                                                      */
/* Function produces a standard wimp message box for the program.       */
/*                                                                      */
/* Parameters: er - Pointer to error block containing error number and  */
/*                  error message to be displayed                       */
/*                                                                      */
/* Returns:    void.                                                    */
/*                                                                      */
/************************************************************************/
extern void     wimp_error(_kernel_oserror *);

/************************************************************************/
/* error_check                                                          */
/*                                                                      */
/* Function checks that SWI calls do not return errors, otherwise it    */
/* displays an error box.                                               */
/*                                                                      */
/* Parameters: er - Pointer to error block to be checked that it is     */
/*                  NULL.                                               */
/*                                                                      */
/* Returns:    void.                                                    */
/*                                                                      */
/************************************************************************/
extern void     error_check(_kernel_oserror *);

/************************************************************************/
/* error_check_exit                                                     */
/*                                                                      */
/* Function checks that SWI calls do not return errors, otherwise it    */
/* quits the program in a rather direct way.                            */
/*                                                                      */
/* Parameters: er - Pointer to error block to be checked that it is     */
/*                  NULL.                                               */
/*                                                                      */
/* Returns:    void.                                                    */
/*                                                                      */
/************************************************************************/
extern void     error_check_exit(_kernel_oserror *);


#endif

/* -+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+ END +-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+-+ */
