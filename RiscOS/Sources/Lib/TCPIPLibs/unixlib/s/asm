        GET     Hdr:ListOpts
        GET     Hdr:Macros
        GET     Hdr:System

        EXPORT  _get_t0_count

        AREA    |Asm$$Code|, CODE, READONLY
_get_t0_count
        MOV     r12,lr
        SWI     XOS_EnterOS
        MOV     r3,#IOC
        STRB    r3,[r3,#Timer0LR]
        LDRB    r1,[r3,#Timer0CL]
        LDRB    r0,[r3,#Timer0CH]
        ORR     r0,r1,r0,LSL #8
        MOVS    pc,r12

        END
