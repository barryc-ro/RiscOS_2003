#include <ctype.h>
#include "unixlib.h"

/**********************************************************************/

int strcasecmp(const char *a, const char *b)
{
    while( *a && *b )
	if( tolower(*a++) != tolower(*b++) )
	    return (1);

    return((*a || *b) ? 1 : 0);
}

/**********************************************************************/

int strncasecmp(const char *a, const char *b, unsigned int n)
{
    while( *a && *b && n-- )
	if( tolower(*a++) != tolower(*b++) )
	    return (1);

    return((*a || *b) ? 1 : 0);
}

/**********************************************************************/

/* EOF string.c */
