# Makefile for OSLib User

# ***********************************
# ***    C h a n g e   L i s t    ***
# ***********************************
# Date          Name         Description
# ----          ----         -----------
# 21st Jun 1995 JRC          Created.

LIBDIR = <Lib$Dir>

#
# Generic options:
#
MKDIR   = cdir
WIPE    = -wipe
WFLAGS  = ~c~v

#
# Program specific options:
#
COMPONENT = OSLib

HDRS = \
Hdr.Alarm \
Hdr.Arcweb \
Hdr.BASICTrans \
Hdr.ColourPicker \
Hdr.CompressJPEG \
Hdr.DragASprite \
Hdr.Draw \
Hdr.DrawFile \
Hdr.Filter \
Hdr.Font \
Hdr.Help \
Hdr.Hourglass \
Hdr.InetSuite \
Hdr.JPEG \
Hdr.MakePSFont \
Hdr.MimeMap \
Hdr.OLE \
Hdr.PDriver \
Hdr.PDumper \
Hdr.PlugIn \
Hdr.RemotePrinterSupport \
Hdr.StrongHelp \
Hdr.Super \
Hdr.TaskManager \
Hdr.TaskWindow \
Hdr.URI \
Hdr.URL \
Hdr.Wimp \
Hdr.WimpExtend \
Hdr.WimpReadSysInfo \
Hdr.WimpSpriteOp

LIBS = \
o.basictrans \
o.colourpicker \
o.compressjpeg \
o.dragasprite \
o.draw \
o.drawfile \
o.filter \
o.font \
o.hourglass \
o.jpeg \
o.mimemap \
o.pdriver \
o.pdumper \
o.taskmanager \
o.taskwindow \
o.uri \
o.url \
o.wimp \
o.wimpextend \
o.wimpreadsysinfo \
o.wimpspriteop

CHEADERS = \
h.arcweb \
h.alarm \
h.basictrans \
h.colourpicker \
h.compressjpeg \
h.dragasprite \
h.draw \
h.drawfile \
h.filter \
h.font \
h.help \
h.hourglass \
h.inetsuite \
h.jpeg \
h.makepsfont \
h.mimemap \
h.ole \
h.pdriver \
h.pdumper \
h.plugin \
h.remoteprintersupport \
h.stronghelp \
h.super \
h.taskmanager \
h.taskwindow \
h.uri \
h.url \
h.wimp \
h.wimpextend \
h.wimpreadsysinfo \
h.wimpspriteop

CSTRONG = \
Help.Alarm \
Help.BASICTrans \
Help.ColourPicker \
Help.CompressJPEG \
Help.DragASprite \
Help.Draw \
Help.DrawFile \
Help.Filter \
Help.Font \
Help.Help \
Help.Hourglass \
Help.JPEG \
Help.MakePSFont \
Help.PDriver \
Help.PDumper \
Help.Super \
Help.TaskManager \
Help.TaskWindow \
Help.Wimp \
Help.WimpReadSysInfo \
Help.WimpSpriteOp

FILES = ${HDRS} ${CHEADERS} ${CSTRONG} ${LIBS}

all: $(FILES)

release: ${FILES}
   Copy h       OSLib:User.h              ~CFLNR~V
   Copy Hdr     OSLib:User.Hdr            ~CFLNR~V
   Copy CStrong <StrongHelp$Dir>.HelpData ~CFLNR~V

#------------------------------------------------------------------------
hdrs: ${HDRS}
libs: ${LIBS}
cheaders: ${CHEADERS}
cstrong: ${CSTRONG}

.SUFFIXES: .o .h .h++ .def .ch .Hdr .ah .Help

.def.s:     ;DefMod -s -byte_wide ^.ByteWide < $< > $@
.def.h:     ;DefMod -h < $< > $@
.def.h++:   ;DefMod -h++ < $< > $@
.def.Hdr:   ;DefMod -hdr < $< > $@
.def.ch:    ;DefMod -chelp < $< > $@
.def.ah:    ;DefMod -asmhelp < $< > $@
.def.o:     ;DefMod -l -o l.$* -byte_wide ^.ByteWide < $<
            LibFile -c -o $@ -via ViaFile
            -LibFile -d ^.o.OSLib l.$*.*
            LibFile -i -o ^.o.OSLib -via ViaFile
            Wipe l.$* ~C~FR~V
.def.Help:  ;DefMod -cstrong -o CStrong.$* < $<
            Create $@

#------------------------------------------------------------------------
# RISC OS Build targets:
#
export: export_${PHASE}

export_hdrs:
        @echo ${COMPONENT}: export complete (hdrs)

export_libs: ${HDRS} ${CHEADERS} ${LIBS}
        Copy h          OSLib:User.h                   ~CFLNR~V
        Copy Hdr        OSLib:User.Hdr                 ~CFLNR~V
        @echo ${COMPONENT}: export complete (libs)

clean:
        @echo ${COMPONENT}: *** NOT cleaned *** clean locally if required

clean_lib:
        ${WIPE} o.* ${WFLAGS}
        @echo ${COMPONENT}: cleaned

# End of RISC OS Build targets
#------------------------------------------------------------------------
# Dynamic dependencies:
