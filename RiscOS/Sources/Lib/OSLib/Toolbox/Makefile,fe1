# Makefile for OSLib Toolbox

# ***********************************
# ***    C h a n g e   L i s t    ***
# ***********************************
# Date          Name         Description
# ----          ----         -----------
# 21st Jun 1995 JRC          Created.

LIBDIR = <Lib$Dir>.OSLib

#
# Generic options:
#
include StdTools

#
# Program specific options:
#
COMPONENT = OSLib

EXTRAHDRS = \
Hdr.Adjuster \
Hdr.FileDbox \
Hdr.KeyboardShortcut \
Hdr.Label \
Hdr.LabelledBox \
Hdr.ResEd

LIBS = \
o.ActionButton \
o.Button \
o.ColourDbox \
o.ColourMenu \
o.DCS \
o.DDEUtils \
o.DisplayField \
o.DragAnObject \
o.Draggable \
o.FileInfo \
o.FontDbox \
o.FontMenu \
o.FrontEnd \
o.Gadget \
o.Iconbar \
o.Menu \
o.NumberRange \
o.OptionButton \
o.PopUp \
o.PrintDbox \
o.ProgInfo \
o.Quit \
o.RadioButton \
o.SaveAs \
o.Scale \
o.ScrollList \
o.Scrollbar \
o.Slider \
o.StringSet \
o.TextArea \
o.TextGadgets \
o.ToolAction \
o.Toolbox \
o.Window \
o.WindowSupportExternal \
o.WritableField

HDRS     := ${patsubst o.%,Hdr.%,${LIBS}} ${EXTRAHDRS}
CHEADERS := ${patsubst Hdr.%,h.%,${HDRS}}
CSTRONG  := ${patsubst Hdr.%,Help.%,${HDRS}}

FILES    := ${HDRS} ${CHEADERS} ${CSTRONG} ${LIBS}

all: $(FILES)

release: ${FILES}
   ${CP} h       ${LIBDIR}.Toolbox.oslib.h    ${CPFLAGS}
   ${CP} Hdr     ${LIBDIR}.Toolbox.oslib.Hdr  ${CPFLAGS}
   Copy CStrong <StrongHelp$Dir>.HelpData ~CFLNR~V

#------------------------------------------------------------------------
hdrs: ${HDRS}
libs: ${LIBS}
cheaders: ${CHEADERS}
cstrong: ${CSTRONG}

.SUFFIXES: .o .h .h++ .def .ch .Hdr .ah .Help

.def.s:     ;DefMod -s -byte_wide ^.ByteWide < $< > $@
.def.h:     ;DefMod -h < $< > $@
.def.h++:   ;DefMod -h++ < $< > $@
.def.Hdr:   ;DefMod -hdr < $< > $@
.def.ch:    ;DefMod -chelp < $< > $@
.def.ah:    ;DefMod -asmhelp < $< > $@
.def.o:     ;DefMod -l -o l.$* -byte_wide ^.ByteWide < $<
            LibFile -c -o $@ -via ViaFile
            -LibFile -d ^.o.OSLib l.$*.*
            LibFile -i -o ^.o.OSLib -via ViaFile
            Wipe l.$* ~C~FR~V
.def.Help:  ;DefMod -cstrong -o CStrong.$* < $<
            Create $@

#------------------------------------------------------------------------
# RISC OS Build targets:
#
export: export_${PHASE}

export_hdrs:
        @echo ${COMPONENT}: export complete (hdrs)

export_libs: ${HDRS} ${CHEADERS} ${LIBS}
        ${CP} h       ${LIBDIR}.Toolbox.oslib.h    ${CPFLAGS}
        ${CP} Hdr     ${LIBDIR}.Toolbox.oslib.Hdr  ${CPFLAGS}
        @echo ${COMPONENT}: export complete (libs)

clean:
        @echo ${COMPONENT}: *** NOT cleaned *** clean locally if required

clean_lib:
        ${WIPE} o.* ${WFLAGS}
        @echo ${COMPONENT}: cleaned

# End of RISC OS Build targets
#------------------------------------------------------------------------
# Dynamic dependencies:
