/*
 * Title:    heap.c
 * Purpose:  provide malloc-style heap allocation
 * History:  IDJ: 06-Feb-92: prepared for source release
 *
 */

#include "heap.h"
#include <stdlib.h>

void heap_init(BOOL heap_shrink)
{
  (void) heap_shrink;
}

void *heap_alloc(unsigned int size)
{
    return (malloc(size));
}

void heap_free(void *heapptr)
{
    free(heapptr);
}
