#!/usr/local/bin/bash

# usage: wantlink source dest
wantlink()
{
    file=$1
    ext=$2

    source="../$ext/$file";
    dest="$file.$ext";
    if [ ! -L $dest ];
    then
	echo ln -s $source $dest
	ln -s $source $dest
    fi
}

wantlink bytesex c
wantlink chunkfls c
wantlink dem c
wantlink disass c
wantlink dtos c
wantlink err c
wantlink filestamp c
wantlink fname c
wantlink hash c
wantlink host c
wantlink host_scr c
wantlink ieeeflt c
wantlink pathmacro c
wantlink prgname c
wantlink re c
wantlink scr_drv c
wantlink symdefs c
wantlink wholefls c

wantlink aif h
wantlink aof h
wantlink aout h
wantlink asdfmt h
wantlink asdllfmt h
wantlink bytesex h
wantlink chunkfls h
wantlink chunkfmt h
wantlink dem h
wantlink disass h
wantlink err h
wantlink filestamp h
wantlink fname h
wantlink hash h
wantlink host h
wantlink host_scr h
wantlink ieeeflt h
wantlink libflfmt h
wantlink ovrflfmt h
wantlink pathmacro h
wantlink prgname h
wantlink re h
wantlink scr_drv h
wantlink set_host h
wantlink symdefs h
wantlink wholefls h
