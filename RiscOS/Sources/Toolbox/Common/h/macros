/* File:    macros.h
 * Purpose: useful macros for the Toolbox
 * Author:  Ian Johnson
 * History: 10-Aug-93: IDJ:   created
 *
 */
              
#ifndef __macros_h
#define __macros_h


#define IGNORE(x) (x=x)

#define TRUE  1
#define FALSE 0

#define BOOL int

#define MAX(a,b)  ((a)>(b))?(a):(b)
#define MIN(a,b)  ((a)<(b))?(a):(b)

#define USER_REGS(regs) ((_kernel_swi_regs *)regs->r[4])

#endif
