/*-- from CLib --*/

#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "kernel.h"


/*-- from ToolBoxLib --*/

#include "toolbox.h"


/*******************************************************
 * External functions                                  *
 *******************************************************/

/*
 * calls the SWI Toolbox_Initialise
 */

extern _kernel_oserror *toolbox_initialise ( unsigned int flags,
                                             int wimp_version,
                                             int *wimp_messages,
                                             int *toolbox_events,
                                             char *directory,
                                             MessagesFD *mfd,
                                             IdBlock *idb,
                                             int *current_wimp_version,
                                             int *task,
                                             void **sprite_area
                                           )
{
_kernel_swi_regs r;
_kernel_oserror *e;

  r.r[0] = flags;
  r.r[1] = wimp_version;
  r.r[2] = (int) wimp_messages;
  r.r[3] = (int) toolbox_events;
  r.r[4] = (int) directory;
  r.r[5] = (int) mfd;
  r.r[6] = (int) idb;
  
  if((e = _kernel_swi(Toolbox_Initialise,&r,&r)) == NULL)
  {
    if(current_wimp_version != NULL) *current_wimp_version = r.r[0];
    if(task != NULL) *task = r.r[1];
    if(sprite_area != NULL) *sprite_area = (void *) r.r[2];
  }
  
  return(e);
}

/*******************************************************
 * End                                                 *
 *******************************************************/


