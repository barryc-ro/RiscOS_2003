/*
 * Name        : setbound.c
 * Purpose     : Veneer for method Slider_SetBounds
 * Description : Sets the lower/upper bounds and step size for the specified slider
 */


#include "kernel.h"
#include "toolbox.h"
#include "gadgets.h"




/*
 * Name        : slider_set_bounds
 * Description : Sets the lower/upper bounds and step size for the specified slider 
 * In          : unsigned int flags
 *               ObjectId window
 *               ComponentId slider
 *               int upper_bound
 *               int lower_bound
 *               int step_size
 * Out         : None
 * Returns     : pointer to error block
 */

extern _kernel_oserror *slider_set_bounds ( unsigned int flags,
                                            ObjectId window,
                                            ComponentId slider,
                                            int upper_bound,
                                            int lower_bound,
                                            int step_size
                                          )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) window;
  r.r[2] = Slider_SetBounds;
  r.r[3] = (int) slider;
  r.r[4] = (int) upper_bound;
  r.r[5] = (int) lower_bound;
  r.r[6] = (int) step_size;
  return(_kernel_swi(Toolbox_ObjectMiscOp,&r,&r));
}

