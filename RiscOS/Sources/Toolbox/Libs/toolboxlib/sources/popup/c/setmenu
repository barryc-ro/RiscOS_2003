/*
 * Name        : setmenu.c
 * Purpose     : Veneer for method PopUp_SetMenu
 * Description : Sets the menu object id that will be shown when the popup is clicked
 */


#include "kernel.h"
#include "toolbox.h"
#include "gadgets.h"




/*
 * Name        : popup_set_menu
 * Description : Sets the menu object id that will be shown when the popup is clicked 
 * In          : unsigned int flags
 *               ObjectId window
 *               ComponentId popup
 *               ObjectId menu
 * Out         : None
 * Returns     : pointer to error block
 */

extern _kernel_oserror *popup_set_menu ( unsigned int flags,
                                         ObjectId window,
                                         ComponentId popup,
                                         ObjectId menu
                                       )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) window;
  r.r[2] = PopUp_SetMenu;
  r.r[3] = (int) popup;
  r.r[4] = (int) menu;
  return(_kernel_swi(Toolbox_ObjectMiscOp,&r,&r));
}

