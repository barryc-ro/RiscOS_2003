/*
 * Name        : getfont.c
 * Purpose     : Veneer for method FontMenu_GetFont
 * Description : Gets the currently selected (ticked) font id for the specified font menu
 */


#include "kernel.h"
#include "toolbox.h"
#include "fontmenu.h"




/*
 * Name        : fontmenu_get_font
 * Description : Gets the currently selected (ticked) font id for the specified font menu 
 * In          : unsigned int flags
 *               ObjectId fontmenu
 *               char *buffer
 *               int buff_size
 * Out         : int *nbytes
 * Returns     : pointer to error block
 */

extern _kernel_oserror *fontmenu_get_font ( unsigned int flags,
                                            ObjectId fontmenu,
                                            char *buffer,
                                            int buff_size,
                                            int *nbytes
                                          )
{
_kernel_swi_regs r;
_kernel_oserror *e;

  r.r[0] = flags;
  r.r[1] = (int) fontmenu;
  r.r[2] = FontMenu_GetFont;
  r.r[3] = (int) buffer;
  r.r[4] = (int) buff_size;
  if((e = _kernel_swi(Toolbox_ObjectMiscOp,&r,&r)) == NULL)
  {
    if(nbytes != NULL) *nbytes = (int) r.r[4];
  }

  return(e);
}

