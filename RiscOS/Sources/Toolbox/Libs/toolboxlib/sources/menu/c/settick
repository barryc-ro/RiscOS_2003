/*
 * Name        : settick.c
 * Purpose     : Veneer for method Menu_SetTick
 * Description : Sets the tick state of a specific menu entry
 */


#include "kernel.h"
#include "toolbox.h"
#include "menu.h"




/*
 * Name        : menu_set_tick
 * Description : Sets the tick state of a specific menu entry 
 * In          : unsigned int flags
 *               ObjectId menu
 *               ComponentId entry
 *               int tick
 * Out         : None
 * Returns     : pointer to error block
 */

extern _kernel_oserror *menu_set_tick ( unsigned int flags,
                                        ObjectId menu,
                                        ComponentId entry,
                                        int tick
                                      )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) menu;
  r.r[2] = Menu_SetTick;
  r.r[3] = (int) entry;
  r.r[4] = (int) tick;
  return(_kernel_swi(Toolbox_ObjectMiscOp,&r,&r));
}

