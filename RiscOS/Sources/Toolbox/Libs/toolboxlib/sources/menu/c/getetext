/*
 * Name        : getetext.c
 * Purpose     : Veneer for method Menu_GetEntryText
 * Description : Gets the text of a specific menu entry
 */


#include "kernel.h"
#include "toolbox.h"
#include "menu.h"




/*
 * Name        : menu_get_entry_text
 * Description : Gets the text of a specific menu entry 
 * In          : unsigned int flags
 *               ObjectId menu
 *               ComponentId entry
 *               char *buffer
 *               int buff_size
 * Out         : int *nbytes
 * Returns     : pointer to error block
 */

extern _kernel_oserror *menu_get_entry_text ( unsigned int flags,
                                              ObjectId menu,
                                              ComponentId entry,
                                              char *buffer,
                                              int buff_size,
                                              int *nbytes
                                            )
{
_kernel_swi_regs r;
_kernel_oserror *e;

  r.r[0] = flags;
  r.r[1] = (int) menu;
  r.r[2] = Menu_GetEntryText;
  r.r[3] = (int) entry;
  r.r[4] = (int) buffer;
  r.r[5] = (int) buff_size;
  if((e = _kernel_swi(Toolbox_ObjectMiscOp,&r,&r)) == NULL)
  {
    if(nbytes != NULL) *nbytes = (int) r.r[5];
  }

  return(e);
}

