/*
 * Name        : setallow.c
 * Purpose     : Veneer for method StringSet_SetAllowable
 * Description : Sets the allowable characters string for the specified string set
 */


#include "kernel.h"
#include "toolbox.h"
#include "gadgets.h"




/*
 * Name        : stringset_set_allowable
 * Description : Sets the allowable characters string for the specified string set 
 * In          : unsigned int flags
 *               ObjectId window
 *               ComponentId string_set
 *               char *allowable
 * Out         : None
 * Returns     : pointer to error block
 */

extern _kernel_oserror *stringset_set_allowable ( unsigned int flags,
                                                  ObjectId window,
                                                  ComponentId string_set,
                                                  char *allowable
                                                )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) window;
  r.r[2] = StringSet_SetAllowable;
  r.r[3] = (int) string_set;
  r.r[4] = (int) allowable;
  return(_kernel_swi(Toolbox_ObjectMiscOp,&r,&r));
}

