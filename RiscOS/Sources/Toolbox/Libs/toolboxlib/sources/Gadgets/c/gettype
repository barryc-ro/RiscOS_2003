/*
 * Name        : gettype.c
 * Purpose     : Veneer for method Gadget_GetType
 * Description : Gets the type for the specified gadget
 */


#include "kernel.h"
#include "toolbox.h"
#include "gadgets.h"




/*
 * Name        : gadget_get_type
 * Description : Gets the type for the specified gadget 
 * In          : unsigned int flags
 *               ObjectId window
 *               ComponentId gadget
 * Out         : int *type
 * Returns     : pointer to error block
 */

extern _kernel_oserror *gadget_get_type ( unsigned int flags,
                                          ObjectId window,
                                          ComponentId gadget,
                                          int *type
                                        )
{
_kernel_swi_regs r;
_kernel_oserror *e;

  r.r[0] = flags;
  r.r[1] = (int) window;
  r.r[2] = Gadget_GetType;
  r.r[3] = (int) gadget;
  if((e = _kernel_swi(Toolbox_ObjectMiscOp,&r,&r)) == NULL)
  {
    if(type != NULL) *type = (int) r.r[0];
  }

  return(e);
}

