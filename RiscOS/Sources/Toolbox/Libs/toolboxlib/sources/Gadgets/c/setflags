/*
 * Name        : setflags.c
 * Purpose     : Veneer for method Gadget_SetFlags
 * Description : Sets the flags for a particular gadget
 */


#include "kernel.h"
#include "toolbox.h"
#include "gadgets.h"




/*
 * Name        : gadget_set_flags
 * Description : Sets the flags for a particular gadget 
 * In          : unsigned int flags
 *               ObjectId window
 *               ComponentId gadget
 *               unsigned int new_flags_settings
 * Out         : None
 * Returns     : pointer to error block
 */

extern _kernel_oserror *gadget_set_flags ( unsigned int flags,
                                           ObjectId window,
                                           ComponentId gadget,
                                           unsigned int new_flags_settings
                                         )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) window;
  r.r[2] = Gadget_SetFlags;
  r.r[3] = (int) gadget;
  r.r[4] = (int) new_flags_settings;
  return(_kernel_swi(Toolbox_ObjectMiscOp,&r,&r));
}

