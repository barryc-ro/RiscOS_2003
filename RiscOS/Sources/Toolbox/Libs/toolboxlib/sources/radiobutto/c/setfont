/*
 * Name        : setfont.c
 * Purpose     : Veneer for method RadioButton_SetFont
 * Description : Sets the display font for the specified radio button gadget
 */


#include "kernel.h"
#include "toolbox.h"
#include "gadgets.h"




/*
 * Name        : radiobutton_set_font
 * Description : Sets the display font for the specified radio button gadget 
 * In          : unsigned int flags
 *               ObjectId window
 *               ComponentId radio_button
 *               const char *font
 *               unsigned int width
 *               unsigned int height
 * Out         : None
 * Returns     : pointer to error block
 */

extern _kernel_oserror *radiobutton_set_font ( unsigned int flags,
                                               ObjectId window,
                                               ComponentId radio_button,
                                               const char *font,
                                               unsigned int width,
                                               unsigned int height
                                             )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) window;
  r.r[2] = RadioButton_SetFont;
  r.r[3] = (int) radio_button;
  r.r[4] = (int) font;
  r.r[5] = (int) width;
  r.r[6] = (int) height;
  return(_kernel_swi(Toolbox_ObjectMiscOp,&r,&r));
}

