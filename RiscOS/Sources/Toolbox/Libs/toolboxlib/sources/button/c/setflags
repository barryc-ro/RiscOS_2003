/*
 * Name        : setflags.c
 * Purpose     : Veneer for method Button_SetFlags
 * Description : Sets the flags for the specified button
 */


#include "kernel.h"
#include "toolbox.h"
#include "gadgets.h"




/*
 * Name        : button_set_flags
 * Description : Sets the flags for the specified button 
 * In          : unsigned int flags
 *               ObjectId window
 *               ComponentId button
 *               int clear_word
 *               int EOR_word
 * Out         : None
 * Returns     : pointer to error block
 */

extern _kernel_oserror *button_set_flags ( unsigned int flags,
                                           ObjectId window,
                                           ComponentId button,
                                           int clear_word,
                                           int EOR_word
                                         )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) window;
  r.r[2] = Button_SetFlags;
  r.r[3] = (int) button;
  r.r[4] = (int) clear_word;
  r.r[5] = (int) EOR_word;
  return(_kernel_swi(Toolbox_ObjectMiscOp,&r,&r));
}

