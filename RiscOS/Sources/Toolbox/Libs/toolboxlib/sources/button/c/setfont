/*
 * Name        : setfont.c
 * Purpose     : Veneer for method Button_SetFont
 * Description : Sets the display font for the specified button
 */


#include "kernel.h"
#include "toolbox.h"
#include "gadgets.h"




/*
 * Name        : button_set_font
 * Description : Sets the display font for the specified button 
 * In          : unsigned int flags
 *               ObjectId window
 *               ComponentId button
 *               char *font_name
 *               int width
 *               int height
 * Out         : None
 * Returns     : pointer to error block
 */

extern _kernel_oserror *button_set_font ( unsigned int flags,
                                          ObjectId window,
                                          ComponentId button,
                                          char *font_name,
                                          int width,
                                          int height
                                        )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) window;
  r.r[2] = Button_SetFont;
  r.r[3] = (int) button;
  r.r[4] = (int) font_name;
  r.r[5] = (int) width;
  r.r[6] = (int) height;
  return(_kernel_swi(Toolbox_ObjectMiscOp,&r,&r));
}

