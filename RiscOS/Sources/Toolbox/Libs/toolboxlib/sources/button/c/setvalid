/*
 * Name        : setvalid.c
 * Purpose     : Veneer for method Button_SetValidation
 * Description : Sets the validation string for the specified button
 */


#include "kernel.h"
#include "toolbox.h"
#include "gadgets.h"




/*
 * Name        : button_set_validation
 * Description : Sets the validation string for the specified button 
 * In          : unsigned int flags
 *               ObjectId window
 *               ComponentId button
 *               char *value
 * Out         : None
 * Returns     : pointer to error block
 */

extern _kernel_oserror *button_set_validation ( unsigned int flags,
                                                ObjectId window,
                                                ComponentId button,
                                                char *value
                                              )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) window;
  r.r[2] = Button_SetValidation;
  r.r[3] = (int) button;
  r.r[4] = (int) value;
  return(_kernel_swi(Toolbox_ObjectMiscOp,&r,&r));
}

