/*
 * Name        : setstate.c
 * Purpose     : Veneer for method Scrollbar_SetState
 * Description : Sets the state of the specified scrollbar.
 */


#include "kernel.h"
#include "toolbox.h"
#include "gadgets.h"
#include "ScrollBar.h"




/*
 * Name        : scrollbar_set_state
 * Description : Sets the state of the specified scrollbar. 
 * In          : unsigned int flags
 *               ObjectId window
 *               ComponentId scrollbar
 *               unsigned int state
 * Out         : None
 * Returns     : pointer to error block
 */

extern _kernel_oserror *scrollbar_set_state ( unsigned int flags,
                                              ObjectId window,
                                              ComponentId scrollbar,
                                              unsigned int state
                                            )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) window;
  r.r[2] = Scrollbar_SetState;
  r.r[3] = (int) scrollbar;
  r.r[4] = (int) state;
  return(_kernel_swi(Toolbox_ObjectMiscOp,&r,&r));
}

