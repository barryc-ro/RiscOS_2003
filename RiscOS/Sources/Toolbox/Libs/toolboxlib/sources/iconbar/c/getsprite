/*
 * Name        : getsprite.c
 * Purpose     : Veneer for method Iconbar_GetSprite
 * Description : Gets the sprite that is used for the iconbar object
 */


#include "kernel.h"
#include "toolbox.h"
#include "iconbar.h"




/*
 * Name        : iconbar_get_sprite
 * Description : Gets the sprite that is used for the iconbar object 
 * In          : unsigned int flags
 *               ObjectId iconbar
 *               char *buffer
 *               int buff_len
 * Out         : int *nbytes
 * Returns     : pointer to error block
 */

extern _kernel_oserror *iconbar_get_sprite ( unsigned int flags,
                                             ObjectId iconbar,
                                             char *buffer,
                                             int buff_len,
                                             int *nbytes
                                           )
{
_kernel_swi_regs r;
_kernel_oserror *e;

  r.r[0] = flags;
  r.r[1] = (int) iconbar;
  r.r[2] = Iconbar_GetSprite;
  r.r[3] = (int) buffer;
  r.r[4] = (int) buff_len;
  if((e = _kernel_swi(Toolbox_ObjectMiscOp,&r,&r)) == NULL)
  {
    if(nbytes != NULL) *nbytes = (int) r.r[4];
  }

  return(e);
}

