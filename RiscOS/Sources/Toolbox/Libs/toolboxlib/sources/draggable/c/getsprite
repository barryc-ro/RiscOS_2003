/*
 * Name        : getsprite.c
 * Purpose     : Veneer for method Draggable_GetSprite
 * Description : Gets the sprite that is currently being used for the draggable
 */


#include "kernel.h"
#include "toolbox.h"
#include "gadgets.h"




/*
 * Name        : draggable_get_sprite
 * Description : Gets the sprite that is currently being used for the draggable 
 * In          : unsigned int flags
 *               ObjectId window
 *               ComponentId draggable
 *               char *buffer
 *               int buff_size
 * Out         : int *nbytes
 * Returns     : pointer to error block
 */

extern _kernel_oserror *draggable_get_sprite ( unsigned int flags,
                                               ObjectId window,
                                               ComponentId draggable,
                                               char *buffer,
                                               int buff_size,
                                               int *nbytes
                                             )
{
_kernel_swi_regs r;
_kernel_oserror *e;

  r.r[0] = flags;
  r.r[1] = (int) window;
  r.r[2] = Draggable_GetSprite;
  r.r[3] = (int) draggable;
  r.r[4] = (int) buffer;
  r.r[5] = (int) buff_size;
  if((e = _kernel_swi(Toolbox_ObjectMiscOp,&r,&r)) == NULL)
  {
    if(nbytes != NULL) *nbytes = (int) r.r[5];
  }

  return(e);
}

