/*
 * Name        : instext.c
 * Purpose     : Veneer for method TextArea_InsertText
 * Description : Inserts text at a specified offset into the specified textarea
 */


#include "kernel.h"
#include "toolbox.h"
#include "gadgets.h"
#include "TextArea.h"




/*
 * Name        : textarea_insert_text
 * Description : Inserts text at a specified offset into the specified textarea 
 * In          : unsigned int flags
 *               ObjectId window
 *               ComponentId textarea
 *               unsigned int index
 *               const char *text
 * Out         : None
 * Returns     : pointer to error block
 */

extern _kernel_oserror *textarea_insert_text ( unsigned int flags,
                                               ObjectId window,
                                               ComponentId textarea,
                                               unsigned int index,
                                               const char *text
                                             )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) window;
  r.r[2] = TextArea_InsertText;
  r.r[3] = (int) textarea;
  r.r[4] = (int) index;
  r.r[5] = (int) text;
  return(_kernel_swi(Toolbox_ObjectMiscOp,&r,&r));
}

