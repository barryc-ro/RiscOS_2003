/*
 * Name        : setcurpos.c
 * Purpose     : Veneer for method TextArea_SetCursorPosition
 * Description : Sets the cursor position in a textarea
 */


#include "kernel.h"
#include "toolbox.h"
#include "gadgets.h"
#include "TextArea.h"




/*
 * Name        : textarea_set_cursor_position
 * Description : Sets the cursor position in a textarea 
 * In          : unsigned int flags
 *               ObjectId window
 *               ComponentId textarea
 *               unsigned int index
 *               unsigned int *old_index
 * Out         : None
 * Returns     : pointer to error block
 */

extern _kernel_oserror *textarea_set_cursor_position ( unsigned int flags,
                                                       ObjectId window,
                                                       ComponentId textarea,
                                                       unsigned int index,
                                                       unsigned int *old_index
                                                     )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) window;
  r.r[2] = TextArea_SetCursorPosition;
  r.r[3] = (int) textarea;
  r.r[4] = (int) index;
  r.r[5] = (int) old_index;
  return(_kernel_swi(Toolbox_ObjectMiscOp,&r,&r));
}

