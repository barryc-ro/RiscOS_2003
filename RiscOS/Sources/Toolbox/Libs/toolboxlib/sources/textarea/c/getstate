/*
 * Name        : getstate.c
 * Purpose     : Veneer for method TextArea_GetState
 * Description : Gets the state of the specified textarea.
 */


#include "kernel.h"
#include "toolbox.h"
#include "gadgets.h"
#include "TextArea.h"




/*
 * Name        : textarea_get_state
 * Description : Gets the state of the specified textarea. 
 * In          : unsigned int flags
 *               ObjectId window
 *               ComponentId textarea
 * Out         : unsigned int *state
 * Returns     : pointer to error block
 */

extern _kernel_oserror *textarea_get_state ( unsigned int flags,
                                             ObjectId window,
                                             ComponentId textarea,
                                             unsigned int *state
                                           )
{
_kernel_swi_regs r;
_kernel_oserror *e;

  r.r[0] = flags;
  r.r[1] = (int) window;
  r.r[2] = TextArea_GetState;
  r.r[3] = (int) textarea;
  if((e = _kernel_swi(Toolbox_ObjectMiscOp,&r,&r)) == NULL)
  {
    if(state != NULL) *state = (unsigned int) r.r[1];
  }

  return(e);
}

