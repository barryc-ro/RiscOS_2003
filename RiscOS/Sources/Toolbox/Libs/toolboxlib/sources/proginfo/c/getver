/*
 * Name        : getver.c
 * Purpose     : Veneer for method ProgInfo_GetVersion
 * Description : Gets the version string for the specified prog info object
 */


#include "kernel.h"
#include "toolbox.h"
#include "proginfo.h"




/*
 * Name        : proginfo_get_version
 * Description : Gets the version string for the specified prog info object 
 * In          : unsigned int flags
 *               ObjectId proginfo
 *               char *buffer
 *               int buff_size
 * Out         : int *nbytes
 * Returns     : pointer to error block
 */

extern _kernel_oserror *proginfo_get_version ( unsigned int flags,
                                               ObjectId proginfo,
                                               char *buffer,
                                               int buff_size,
                                               int *nbytes
                                             )
{
_kernel_swi_regs r;
_kernel_oserror *e;

  r.r[0] = flags;
  r.r[1] = (int) proginfo;
  r.r[2] = ProgInfo_GetVersion;
  r.r[3] = (int) buffer;
  r.r[4] = (int) buff_size;
  if((e = _kernel_swi(Toolbox_ObjectMiscOp,&r,&r)) == NULL)
  {
    if(nbytes != NULL) *nbytes = (int) r.r[4];
  }

  return(e);
}

