/*
 * Name        : settitle.c
 * Purpose     : Veneer for method ProgInfo_SetTitle
 * Description : Sets the title for the specified prog info object
 */


#include "kernel.h"
#include "toolbox.h"
#include "proginfo.h"




/*
 * Name        : proginfo_set_title
 * Description : Sets the title for the specified prog info object 
 * In          : unsigned int flags
 *               ObjectId proginfo
 *               char *title
 * Out         : None
 * Returns     : pointer to error block
 */

extern _kernel_oserror *proginfo_set_title ( unsigned int flags,
                                             ObjectId proginfo,
                                             char *title
                                           )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) proginfo;
  r.r[2] = ProgInfo_SetTitle;
  r.r[3] = (int) title;
  return(_kernel_swi(Toolbox_ObjectMiscOp,&r,&r));
}

