/*
 * Name        : setdaddr.c
 * Purpose     : Veneer for method SaveAs_SetDataAddress
 * Description : Sets the address of the data (and selection) for the saveas object
 */


#include "kernel.h"
#include "toolbox.h"
#include "saveas.h"




/*
 * Name        : saveas_set_data_address
 * Description : Sets the address of the data (and selection) for the saveas object 
 * In          : unsigned int flags
 *               ObjectId saveas
 *               void *data
 *               int data_size
 *               void *selection
 *               int selection_size
 * Out         : None
 * Returns     : pointer to error block
 */

extern _kernel_oserror *saveas_set_data_address ( unsigned int flags,
                                                  ObjectId saveas,
                                                  void *data,
                                                  int data_size,
                                                  void *selection,
                                                  int selection_size
                                                )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) saveas;
  r.r[2] = SaveAs_SetDataAddress;
  r.r[3] = (int) data;
  r.r[4] = (int) data_size;
  r.r[5] = (int) selection;
  r.r[6] = (int) selection_size;
  return(_kernel_swi(Toolbox_ObjectMiscOp,&r,&r));
}

