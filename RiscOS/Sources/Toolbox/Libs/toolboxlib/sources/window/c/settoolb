/*
 * Name        : settoolb.c
 * Purpose     : Veneer for method Window_SetToolBars
 * Description : Sets the toolbars attached to a window
 */


#include "kernel.h"
#include "toolbox.h"
#include "window.h"
#include "gadgets.h"
#include "wimp.h"




/*
 * Name        : window_set_tool_bars
 * Description : Sets the toolbars attached to a window 
 * In          : unsigned int flags
 *               ObjectId window
 *               ObjectId ibl
 *               ObjectId itl
 *               ObjectId ebl
 *               ObjectId etl
 * Out         : None
 * Returns     : pointer to error block
 */

extern _kernel_oserror *window_set_tool_bars ( unsigned int flags,
                                               ObjectId window,
                                               ObjectId ibl,
                                               ObjectId itl,
                                               ObjectId ebl,
                                               ObjectId etl
                                             )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) window;
  r.r[2] = Window_SetToolBars;
  r.r[3] = (int) ibl;
  r.r[4] = (int) itl;
  r.r[5] = (int) ebl;
  r.r[6] = (int) etl;
  return(_kernel_swi(Toolbox_ObjectMiscOp,&r,&r));
}

