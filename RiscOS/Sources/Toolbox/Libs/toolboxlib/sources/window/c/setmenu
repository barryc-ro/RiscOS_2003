/*
 * Name        : setmenu.c
 * Purpose     : Veneer for method Window_SetMenu
 * Description : Sets the menu that will be displayed when MENU is clicked over window object
 */


#include "kernel.h"
#include "toolbox.h"
#include "window.h"
#include "gadgets.h"
#include "wimp.h"




/*
 * Name        : window_set_menu
 * Description : Sets the menu that will be displayed when MENU is clicked over window object 
 * In          : unsigned int flags
 *               ObjectId window
 *               ObjectId menu_id
 * Out         : None
 * Returns     : pointer to error block
 */

extern _kernel_oserror *window_set_menu ( unsigned int flags,
                                          ObjectId window,
                                          ObjectId menu_id
                                        )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) window;
  r.r[2] = Window_SetMenu;
  r.r[3] = (int) menu_id;
  return(_kernel_swi(Toolbox_ObjectMiscOp,&r,&r));
}

