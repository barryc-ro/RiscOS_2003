/*
 * Name        : gethelp.c
 * Purpose     : Veneer for method Window_GetHelpMessage
 * Description : Gets the help message that is associated with the specified window object
 */


#include "kernel.h"
#include "toolbox.h"
#include "window.h"
#include "gadgets.h"
#include "wimp.h"




/*
 * Name        : window_get_help_message
 * Description : Gets the help message that is associated with the specified window object 
 * In          : unsigned int flags
 *               ObjectId window
 *               char *buffer
 *               int buff_len
 * Out         : int *nbytes
 * Returns     : pointer to error block
 */

extern _kernel_oserror *window_get_help_message ( unsigned int flags,
                                                  ObjectId window,
                                                  char *buffer,
                                                  int buff_len,
                                                  int *nbytes
                                                )
{
_kernel_swi_regs r;
_kernel_oserror *e;

  r.r[0] = flags;
  r.r[1] = (int) window;
  r.r[2] = Window_GetHelpMessage;
  r.r[3] = (int) buffer;
  r.r[4] = (int) buff_len;
  if((e = _kernel_swi(Toolbox_ObjectMiscOp,&r,&r)) == NULL)
  {
    if(nbytes != NULL) *nbytes = (int) r.r[4];
  }

  return(e);
}

