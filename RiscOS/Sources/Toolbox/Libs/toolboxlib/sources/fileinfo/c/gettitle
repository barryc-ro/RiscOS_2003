/*
 * Name        : gettitle.c
 * Purpose     : Veneer for method FileInfo_GetTitle
 * Description : Gets the title from the specified file info object
 */


#include "kernel.h"
#include "toolbox.h"
#include "fileinfo.h"




/*
 * Name        : fileinfo_get_title
 * Description : Gets the title from the specified file info object 
 * In          : unsigned int flags
 *               ObjectId fileinfo
 *               char *buffer
 *               int buff_size
 * Out         : int *nbytes
 * Returns     : pointer to error block
 */

extern _kernel_oserror *fileinfo_get_title ( unsigned int flags,
                                             ObjectId fileinfo,
                                             char *buffer,
                                             int buff_size,
                                             int *nbytes
                                           )
{
_kernel_swi_regs r;
_kernel_oserror *e;

  r.r[0] = flags;
  r.r[1] = (int) fileinfo;
  r.r[2] = FileInfo_GetTitle;
  r.r[3] = (int) buffer;
  r.r[4] = (int) buff_size;
  if((e = _kernel_swi(Toolbox_ObjectMiscOp,&r,&r)) == NULL)
  {
    if(nbytes != NULL) *nbytes = (int) r.r[4];
  }

  return(e);
}

