/*
 * Name        : setfont.c
 * Purpose     : Veneer for method ScrollList_SetFont
 * Description : Set the font for the specified scrolllist.
 */


#include "kernel.h"
#include "toolbox.h"
#include "gadgets.h"
#include "ScrollList.h"




/*
 * Name        : scrolllist_set_font
 * Description : Set the font for the specified scrolllist. 
 * In          : unsigned int flags
 *               ObjectId window
 *               ComponentId scrolllist
 *               const char *font_name
 *               unsigned int width
 *               unsigned int height
 * Out         : None
 * Returns     : pointer to error block
 */

extern _kernel_oserror *scrolllist_set_font ( unsigned int flags,
                                              ObjectId window,
                                              ComponentId scrolllist,
                                              const char *font_name,
                                              unsigned int width,
                                              unsigned int height
                                            )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) window;
  r.r[2] = ScrollList_SetFont;
  r.r[3] = (int) scrolllist;
  r.r[4] = (int) font_name;
  r.r[5] = (int) width;
  r.r[6] = (int) height;
  return(_kernel_swi(Toolbox_ObjectMiscOp,&r,&r));
}

