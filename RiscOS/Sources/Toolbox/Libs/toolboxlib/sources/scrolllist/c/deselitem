/*
 * Name        : deselitem.c
 * Purpose     : Veneer for method ScrollList_DeselectItem
 * Description : Deselects the specified item from the specified scrolllist
 */


#include "kernel.h"
#include "toolbox.h"
#include "gadgets.h"
#include "ScrollList.h"




/*
 * Name        : scrolllist_deselect_item
 * Description : Deselects the specified item from the specified scrolllist 
 * In          : unsigned int flags
 *               ObjectId window
 *               ComponentId scrolllist
 *               int index
 * Out         : None
 * Returns     : pointer to error block
 */

extern _kernel_oserror *scrolllist_deselect_item ( unsigned int flags,
                                                   ObjectId window,
                                                   ComponentId scrolllist,
                                                   int index
                                                 )
{
_kernel_swi_regs r;

  r.r[0] = flags;
  r.r[1] = (int) window;
  r.r[2] = ScrollList_DeselectItem;
  r.r[3] = (int) scrolllist;
  r.r[4] = (int) index;
  return(_kernel_swi(Toolbox_ObjectMiscOp,&r,&r));
}

