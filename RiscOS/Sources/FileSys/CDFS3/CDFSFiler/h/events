/* Toolbox headers */

#include "toolbox.h"
#include "wimp.h"

int events_handle_menu_selection (int event_code, ToolboxEvent *event, IdBlock *id_block, void *handle);

int events_handle_iconbar_clicked (int event_code, ToolboxEvent *event, IdBlock *id_block, void *handle);

int events_handle_menu_tobeshown (int event_code, ToolboxEvent *event, IdBlock *id_block, void *handle);

int events_handle_iconmenu_size_submenu (int event_code, ToolboxEvent *event, IdBlock *id_block,
                                         void *handle);

int events_handle_toolbox_error (int event_code, ToolboxEvent *event, IdBlock *id_block,
                                 void *handle);

int events_handle_wimp_quit (WimpMessage *message, void *handle);
