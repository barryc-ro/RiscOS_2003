/* File:    defines.h
 * Purpose: Define constants and macros
 * Author:  Timothy Roddis
 * History: 25-Oct-95: TGR: created
 *          28-Nov-95: MFC: Error macros moved to msgs.h
 */

#ifndef __defines_h
#define __defines_h

#include "kernel.h"

/* Ignore unwanted parameters */

#define IGNORE(x) (x=x)


/* A Boolean type is useful */

typedef int Bool;
#define TRUE  1
#define FALSE 0


/* Pick higher/lesser of two values */

#define MAX(a,b)  ((a)>(b))?(a):(b)
#define MIN(a,b)  ((a)<(b))?(a):(b)


/* Set nth bit */

#define BIT(n) (((unsigned int) 1) << (n))


/* to make _swi(..) and _swix(..) easier to use */

#define I0 _IN(0)
#define I1 _IN(1)
#define I2 _IN(2)
#define I3 _IN(3)
#define I4 _IN(4)
#define I5 _IN(5)
#define I6 _IN(6)
#define I7 _IN(7)
#define I8 _IN(8)
#define I9 _IN(9)

#define O0 _OUT(0)
#define O1 _OUT(1)
#define O2 _OUT(2)
#define O3 _OUT(3)
#define O4 _OUT(4)
#define O5 _OUT(5)
#define O6 _OUT(6)
#define O7 _OUT(7)
#define O8 _OUT(8)
#define O9 _OUT(9)


#endif
