swi-chunk-base-number: 0x4E980

swi-handler-code: CSFS_swi

swi-decoding-table: CSFS,Services,Register,DeRegister,Mount,Dismount,Update

generic-veneers: callback_entry/callback_handler



command-keyword-table: CSFS_command

CSFS(add-syntax:, min-args:0, max-args:0,
  help-text:      "*CSFS selects CSFS as the current filing system\n",
  invalid-syntax: "Syntax:\t*CSFS\n" ),

CSFSServices(add-syntax:, min-args:0, max-args:0,
  help-text:      "*CSFSServices lists registered transport services.\n"
  invalid-syntax: "Syntax:\t*CCSFSServices\n"),

Mount(add-syntax:, min-args:4, max-args:13, fs-command:,
  help-text:      "*Mount mount server based file system.\n",
  invalid-syntax: "Syntax:\t*Mount -service <service name> -name <mount name>"
                  "[-writecache] [-host <host name>] [-path <mount path>]"
                  "[-user <user name>] [-passwd <password>]\n"),

Release(add-syntax:, min-args:1, max-args:1, fs-command:,
  help-text:      "*Release locked files.\n",
  invalid-syntax: "Syntax:\t*release <path>\n"),

Refresh(add-syntax:, min-args:1, max-args:1, fs-command:,
  help-text:      "*Refresh refresh CSFS directory listing.\n",
  invalid-syntax: "Syntax:\trefresh <path>\n"),

Update(add-syntax:, min-args:1, max-args:2, fs-command:,
  help-text:      "*Update upload changed files to server.\n",
  invalid-syntax: "Syntax:\t*update [-upload] <path>\n"),

Dismount(add-syntax:, min-args:1, max-args:1, fs-command:,
  help-text:      "*Dismount a mounted directory.\n",
  invalid-syntax: "Syntax:\t*dismount <mount name>\n"),

Back(add-syntax:, min-args:0, max-args:0, fs-command:,
  help-text:      "*Back swaps current and previous directories.\n",
  invalid-syntax: "Syntax:\t*Back\n"),

URD(add-syntax:, min-args:0, max-args:1, fs-command:,
  help-text:      "*URD sets the user root directory.\n",
  invalid-syntax: "Syntax:\t*URD [<directory>]\n"),

NoURD(add-syntax:, min-args:0, max-args:0, fs-command:,
  help-text:      "*NoURD unsets the URD.\n",
  invalid-syntax: "Syntax:\t*NoURD\n"),

NoDir(add-syntax:, min-args:0, max-args:0, fs-command:,
  help-text:      "*NoDir unsets the current directory.\n",
  invalid-syntax: "Syntax:\t*NoDir\n"),

NoLib(add-syntax:, min-args:0, max-args:0, fs-command:,
  help-text:      "*NoLib unsets the library.\n",
  invalid-syntax: "Syntax:\t*NoLib\n")

