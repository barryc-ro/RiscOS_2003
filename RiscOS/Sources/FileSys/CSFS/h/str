/*->h.str */

#define FS_SWI 0x4E980



#define MNLEN   48

#define DATA    0xFFD

#define NAMELEN 256





#define DNFILE  -1
#define DFLAT   -2


typedef struct heads
{
 char               name[MNLEN];    /* file name */

 int                modified:1;
 int                writecache:1;

 int                length; 

 int                dirn;  /* -2==unopened dir, -1==file, else dir entries */

 int                load;
 int                exec;
 int                acc;

 int                fp;

 int                fshandle;      /* if file open, this points to filestr */
 int                sn;            /* scrap file number */

} heads;



#define HNLEN        32
#define MOUNTNAMELEN 32
#define MOUNTPATHLEN 256
#define UNLEN        32
#define PWLEN        32
#define SNLEN        32


typedef struct archive
{
 char     name[MOUNTNAMELEN];
 char     hostname[HNLEN];
 char     mountpath[MOUNTPATHLEN];
 char     user[UNLEN];
 char     pass[PWLEN];
 int      service;
 unsigned long address;

 int      inuse:1;
 int      modified:1;
 int      ro:1;
 int      writecache:1;
 int      nameaddress:1;

 int      files;
 heads *  hdr;
 int      nofiles;        /* no of files entries           */
 int      fmain;          /* no of files in root directory */

 int      stuff[16];

} archive;




