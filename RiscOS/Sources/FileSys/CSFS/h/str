/*->h.str */

#define FS_SWI 0x4E980




#define DATA    0xFFD

#define NAMELEN 256




#define DNFILE  -1
#define DFLAT   -2


typedef struct heads
{
 int                name;    /* file name */

 int                modified:1;
 int                writecache:1;

 int                length; 

 int                dirn;  /* -2==unopened dir, -1==file, else dir entries */

 int                load;
 int                exec;
 int                acc;

 int                fshandle;  /* if file open, this indexes filestr */
 int                sn;        /* scrap file number */

} heads;





typedef struct archive
{
 int      name;
 int      hostname;
 int      mountpath;
 int      user;
 int      pass;
 int      service;
 unsigned long address;

 int      inuse:1;
 int      modified:1;
 int      ro:1;
 int      writecache:1;
 int      nameaddress:1;

 int      files;
 heads *  hdr;
 int      nofiles;        /* no of files entries           */
 int      fmain;          /* no of files in root directory */

} archive;




