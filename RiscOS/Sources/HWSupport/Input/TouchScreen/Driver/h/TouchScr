
#include "sensor.h"


#ifndef  _TOUCHSCREEN_H
#define  _TOUCHSCREEN_H



#define Pace_Touchscreen_BottomLeft        0x54b40
#define Pace_Touchscreen_TopRight          0x54b50




typedef struct screen_measurement
{
	unsigned int x;
        unsigned int y;
} SCREEN_MEASUREMENT;


typedef struct display_info
{
	unsigned int mode;
	SCREEN_MEASUREMENT text_resolution;
	SCREEN_MEASUREMENT pixel_resolution;
	SCREEN_MEASUREMENT os_units_resolution;
} DISPLAY_INFO;




class touchscreen
{
      public:
        touchscreen();
        void inform_kernel(unsigned int x, unsigned int y);
        x_sensor          x_position_measure;
        y_sensor          y_position_measure;
        pressure_sensor   pressure_measure;
      private:
        void init_ts_hardware(void);
        resistance_sensor resistance_measure;

};





#endif
