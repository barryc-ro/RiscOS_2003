
#include "sensor.h"


#ifndef  _TOUCHSCREEN_H
#define  _TOUCHSCREEN_H


typedef struct touch_screen_position
{
        unsigned int x;
        unsigned int y;

} TOUCH_SCREEN_POSITION;



class touchscreen
{
      public:
        touchscreen();
        x_sensor          x_position_measure;
        y_sensor          y_position_measure;
        pressure_sensor   pressure_measure;
      private:
        void init_ts_hardware(void);
        resistance_sensor resistance_measure;

};



#endif
