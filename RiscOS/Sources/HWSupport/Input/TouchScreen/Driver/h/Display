


#ifndef  _DISPLAY_H
#define  _DISPLAY_H


#include "touchscr.h"



typedef struct display_position
{
        unsigned int x;
        unsigned int y;

} DISPLAY_POSITION;





class display
{
      public:
             display();
             void set_centre(TOUCH_SCREEN_POSITION centre);
             void set_bottom_centre(TOUCH_SCREEN_POSITION bottom_centre);
             void set_top_centre(TOUCH_SCREEN_POSITION top_centre);
             void set_left_centre(TOUCH_SCREEN_POSITION left_centre);
             void set_right_centre(TOUCH_SCREEN_POSITION right_centre);
             DISPLAY_POSITION translate_position(TOUCH_SCREEN_POSITION in);
      private:
             void display_dimensions(void);
             TOUCH_SCREEN_POSITION centre_pos, bottom_centre_pos;
             TOUCH_SCREEN_POSITION top_centre_pos, left_centre_pos;
             TOUCH_SCREEN_POSITION right_centre_pos;
             unsigned int display_size_x, display_size_y;

};





#endif
