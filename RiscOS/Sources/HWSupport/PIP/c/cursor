/******************************************************************************
 write the cursor shape to tl750 memory
  parameters:
     returns:
 ******************************************************************************/
void cursor_write ( uint curs_addr)
{
  uint *volatile tl750curs;
  uint *cursor =arrow_default;
  int n;

  tl750curs =( uint *volatile)(podule_base +mem_swapped +curs_addr);
  for ( n =0; n < 64*64/4/2; n++)
    *tl750curs++ =*cursor++;
}
