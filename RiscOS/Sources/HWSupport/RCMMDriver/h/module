/* Debugging */
#include "DebugLib/DebugLib.h"

#define UNUSED(x) ((x)=(x))

/* RISC OS definitions */
#define OSArgs_Extent           2
#define OSArgs_IOCtl            9

#define OSModule_Claim          6

#define OSGBPB_Read             4

#define KeyV                    0x13
#define KeyV_KeyboardPresent	0
#define KeyV_KeyUp		1
#define KeyV_KeyDown		2
#define KeyV_Notify		3
#define KeyV_Enable		4

#define PointerV                0x26
#define PointerV_Status         0
#define PointerV_Enumerate      1
#define PointerV_Selected       2

#define UpCallV                 0x1D

