title-string:           IR

help-string:            IR 2.09 (extended codes) © Acorn Computers

initialisation-code:    IR_modinit

finalisation-code:	IR_modfinal


irq-handlers:           IR_callevery_entry/IR_callevery_handler,
			IR_callback_entry/IR_callback_handler,
			IR_keyv_entry/IR_keyv_handler

service-call-handler:	IR_service_handler 0xb1

command-keyword-table:  IR_cmd
        IRmaplist(min-args: 0, max-args: 0,
          invalid-syntax: "Syntax:\t*IRmaplist\n",
          help-text: "*IRmaplist lists all the current handset code -> keycode mappings\n"
        ),
        IRmap(min-args: 2, max-args: 4,
          invalid-syntax: "Syntax:\t*IRmap <handset code> key <keycode> [none|shift|ctrl|alt]\n",
          help-text: "*IRmap maps a handset button to a key, mouse movement, or mouse button\n"
        ),
        IRreset(min-args: 0, max-args: 0,
          help-text: "*IRreset sets the handset -> keycode mappings to their default values\n"
        ),
        IRclear(min-args: 0, max-args: 0,
          help-text: "*IRclear clears all handset -> keycode mappings\n"
        )
