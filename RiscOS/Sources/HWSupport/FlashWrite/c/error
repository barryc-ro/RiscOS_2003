/* error.c */

#include "string.h"

#include "kernel.h"

#include "error.h"

_kernel_oserror *error_create (int errnum, char *errmess)
{
  static _kernel_oserror er;

  er.errnum = errnum;
  strncpy (er.errmess, errmess, sizeof (er.errmess));
  er.errmess[sizeof (er.errmess)-1] = '\0';

  return &er;
}
