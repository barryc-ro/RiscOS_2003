/* $Header$ */

#ifndef __H_DEFS__

#define __H_DEFS__

typedef unsigned int BOOL;

#ifndef FALSE
#define FALSE 0
#define TRUE (!(FALSE))
#endif

#define _HEAPNAME_ "Daytona shared heap"

typedef enum
{
  TypeFlag = 0,
  TypeWord,
  TypeQuad,
  TypeVary
} fieldtype;

typedef struct
{
  char name[28];
  fieldtype area;
  int order;
  int len;
  char *def;
  char *locn;
} configitem;

#endif
