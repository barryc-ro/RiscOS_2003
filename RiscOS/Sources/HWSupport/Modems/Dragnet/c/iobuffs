#include "llglob_d.h"
#include "sa_glob.h"
#include "allglobs.h"

#if defined(SA_CIRCULAR_BUFFER_HOST)
# pragma BSS(".shared_mem");
#else
# pragma BSS(".iobuffs");
#endif // defined(SA_CIRCULAR_BUFFER_HOST)

//=====================================
// Static DTE Structures
//=====================================
//-------------------------------------
// Shared PCI control structure
//-------------------------------------
static IGLOBALS IGlobArraySpace [ LASTMODEM + 1 ] ;

//-------------------------------------
// Shared PCI data buffers
//-------------------------------------
static BGLOBALS BGlobArraySpace [ LASTMODEM + 1 ] ;

#pragma BSS();  

//=====================================
// Global pointers to the static structures
//=====================================
IGLOBALS *IGlobArray = IGlobArraySpace;
BGLOBALS *BGlobArray = BGlobArraySpace;
