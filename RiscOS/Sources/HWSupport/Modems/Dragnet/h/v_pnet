              #     ###   ####   ###    #   #  ###    ###    ###
              #      #    #      #      #   #  #      #         #
              #      #    #      #####  ####   #####  #     ####
*****************************************************************************/
#ifndef ASSEMBLER // Compiler only

		#include <v_defs.h>

		
		typedef struct {
			word		  byteOffset;
			byte		  state;
			byte		  numPkts;
			byte		  pktIndex;
		} mimicInfo_t;

		typedef struct {
			mimicInfo_t		rx;
			mimicInfo_t		tx;
		} mimicSM_t;

#endif // Compiler only


