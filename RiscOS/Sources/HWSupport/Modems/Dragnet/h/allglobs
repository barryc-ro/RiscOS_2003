__EXTERN byte  v42bis_DeBuff_full;/* TRUE - buffer reached max str length */
__EXTERN byte  v42bis_mode_sw;		/* for Hayes compatibility */
#endif // !defined(MODEM_Z80) || !defined(__CREATE_GLOBALS)

#endif	// __V42BIS_H__

