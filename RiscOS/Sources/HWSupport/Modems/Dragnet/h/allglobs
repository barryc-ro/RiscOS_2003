// The following union defines all vars that can share the same RAM
// on account of not more than one being used at any given time
#if defined(V8BIS) || defined(V80) || defined (VPCM_CLIENT)
# include "sync.h"
#endif	//V8BIS || V80 || VPCM_CLIENT
#if defined(FAX_ECM)
# include "fax_ecm.h"
#endif // FAX_ECM
#if defined(USB_MODEM) || defined(THUNDER)
# include "z80usb.h"
#endif	// USB_MODEM || THUNDER
#if defined(MODEM_ARM)
# include "arm_usb.h"
#endif	// MODEM_ARM

typedef union {

	// V.42bis encode/decoder dictionary
#if defined(V42BIS_PACKED_STRUCT)
	V42BIS_TREE_NODE v42bis_tree[2*V42bisP1];
#else
	struct {
		// Note: the order of symbol, right, child, parent must not change
		// Also don't separate them, since the memory is used by others
		// who expect one contiguous chunk (e.g. faxecm.c)
		byte symbol[2*V42bisP1];
		word right[2*V42bisP1];
		word child[2*V42bisP1]; 	/* the left most child */
		byte parent[2*V42bisP1];	// only hold LSB of codeword,
									// rest in upper nibble of child
	} v42bis_tree;
#endif	// V42BIS_PACKED_STRUCT

#if defined(V44)
	// V.44 encode/decoder dictionary
	byte v44_en_mem_area[ V44_MEM_SIZE ]; // put data here to avoid malloc/free
#endif // V44

	// used in dpmain.c
	word dp_wrong_speed_timer;

	// used in dpv8bis.c
#if defined(V8BIS) || defined(V80) || defined (VPCM_CLIENT)
	struct {
		V8BIS_GLOBAL_VARS vars;
		byte msg1[256];
		byte msg2[256];
	} dpv8bis;
#endif	//V8BIS || V80 || VPCM_CLIENT

	// used in dpvoice.c
	byte dp_ring_buf[256];

	// used in fax2util.c
#if defined (CLASS2_FAX) || defined (CLASS20_FAX)
	struct {
		byte code_line[5000];
		byte ref_line[5000];
	} fax2;
#endif	// CLASS2_FAX || CLASS20_FAX

	// used by fax_c2.h
	struct {
		byte c2_dce_buf[ 4*1024 ];
		byte c2_dte_buf[ 4*1024 ];
		byte io_fax_buf[ 4*1024 ];
	} fax;

	// used by fax_ecm.c
#if defined (FAX_ECM)
	byte fax_ecm_buf[ FAX_ECM_SHARED_FRAG_SIZE ];
#endif // FAX_ECM

	// used by mnp_5a.c
	struct {
		byte char_table[ 1024 ];
		byte tx_freq_table[ 1024 ];
		byte rx_freq_table[ 1024 ];
	} mnp5a;

	// used by  z80_ser.c, arm_ser.c
#if defined PNPSTRING
	byte PnPstr [ 256 ] ;
#endif

#if defined(USB_MODEM) || defined(THUNDER)
	byte usbConfigString [ MAX_SUSPEND_DATA ];
#endif	// USB_MODEM) || THUNDER
#if defined(MODEM_ARM)
	byte usbConfigString [ SIZE_SUSPEND_PKT ];
#endif	// USB_MODEM) || THUNDER

#if defined(FLASH_LOADER)
	byte flashLoaderRam [ 12*1024 ];
#if defined(MODEM_ARM)
	PFV  flashProgram_ptr;
#endif // MODEM_ARM
#endif // FLASH_LOADER

} SHARED_RAM;

extern SHARED_RAM shared_ram;

#endif	//	__ALLGLOB_H__
