_Inline void
sa_modem_send_data(byte dataByte)
{
	*I(io_dte_rx_wptr) = dataByte ;
	if ( ++I(io_dte_rx_wptr) >= I(io_dte_rx_eptr) ) {
		I(io_dte_rx_wptr) = I(io_dte_rx_sptr) ;
	}
}

