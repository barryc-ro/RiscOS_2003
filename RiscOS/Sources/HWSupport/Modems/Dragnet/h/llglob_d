	RADISH_DP_TASK,
	RADISH_IO_TASK,
	IO_LOOPBACK_ABORT,
	IO_WAKEUP_CMD,
	IO_SLEEP_CMD,
	DP_TEST_CMD,
	DP_SLEEP,
	DP_WAKEUP,
	DP_READ_REG,
	DP_WRITE_REG,
	DSP_READ_RAM,
	DSP_READ_CONSTELLATION,
	DSP_WRITE_RAM,
	DSP_VERSION,
	DSP_CHECKSUM,
	DSP_RETRAIN,
	UPDATE_MODEM_RATE,
	DSP_FAST_RETRAIN,
	DP_SHOW_BLACKLIST,
	DP_START_TRANSMIT,
	DP_START_RECEIVE,
	DP_ASYNC_8BIT_MODE,
	DP_ASYNC_USER_MODE,
	DP_ASYNC_WORKAROUND,
	DP_SYNC_MODE,
	DP_HDLC_MODE,
	DP_HDLC_MODE_NO_CRC,
	SYNC_DISABLE_FORWARD,
	SYNC_ENABLE_FORWARD,
	DP_SYNC_MODE_MARK,
	DP_SEND_A8T_CMD,
	DP_V8BIS_DETECTION,
	DP_A8T_CMD,
	DP_IO_RETRAIN_START,
	DP_IO_RETRAIN_OVER,
	DP_TX_FIFO_EMPTY,
	DP_BLACKLIST_STATUS,
	DP_IO_DIAL_OR_ANSWER,
	IO_DUMP_DSP_MEM,			// IO should display DSP memory to DTE
	DP_SUSPEND,
	DP_RESUME,
	DP_DPORT_TX,
	DP_DPORT_RX,
	DP_DPORT_DUALPLEX_TX_RX,
	A_LAW_SELECTED ,
	MU_LAW_SELECTED ,
	DP_ENABLE_CW,

	AM_KEYBOARD,
	AM_UPDATE

}	MODEM_COMMAND;

/* modem state */
typedef enum {
	MS_INITIALIZING,	/* Initializing all the other Tasks */
	MS_IDLE,			/* Dial Modem, on-hook */
 	MS_RING_INDICATE,	/* Ring Signal present on local DAA. */
	MS_ANSWERING,		/* Off-hook, silence or sending answer-tone */
	MS_OFFHOOK,			/* Offhook, waiting for Dial Tone detection */
	MS_DIALING,			/* Dialing mode */
 	MS_ON_DIAL,			/* On Dial Lines */
	MS_LOCAL_TEST,		/* Test Mode - Analog Loopback */
	MS_DCE_LOOPBACK,	/* Test Mode - Digital Loopback in data mode */
	MS_DTE_LOOPBACK,	/* Test Mode - Local Digital Loopback */
	MS_REM_TEST,		/* Test Mode - Remote Digital Loopback */
	MS_TAD_NEAR,		/* In TAD local mode */
	MS_TAD_FAR,			/* In TAD far mode */
	MS_TAD_LOOPBACK		/* In TAD loopback mode */
}	MODEM_STATE;

/* modem mode, corresponding to the at+fclass command */
typedef enum {
	MODEM_DATA,
	MODEM_FAX,
	MODEM_VOICE,
	MODEM_SPEAKER_PHONE,
	MODEM_RADISH
} MODEM_MODE;

