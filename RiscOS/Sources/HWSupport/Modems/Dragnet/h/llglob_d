	FAXV34_SEND1S,				 // V34 Fax Send 1s to far end
	FAXV34_DETECT1S,			 // V34 Fax detected 1s
	FAXV34_NO_ANSAM_START, // V34 Fax start-up without ANSam
	FAXV34_RESTART_V8_ANS, // Restart V.8 in Answer mode
	FAXV34_RESTART_V8_ORG, // Restart V.8 in Originate mode
	V34FAX_DATAWAIT,       // V34 Fax respond to control channel retrain

