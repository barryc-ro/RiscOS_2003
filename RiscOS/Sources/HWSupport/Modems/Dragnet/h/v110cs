typedef enum {
  	V110_IDLE,
  	V110_DETECT_SYNC,
  	V110_ENGINE,		// Link Technology's V110 engine
  	V110_DISCONNECT,
  	V110_EXIT
} V110_STATE;

struct v110timer {		// needed in v110.c and v110cs.h
	word T1_duration;
	word T1_start_time;
	word Resync_duration;
	word Resync_start_time;
};

union RCVD_OCTETS	// jc-5/13/99
{	word w;
	byte b[2];
};

