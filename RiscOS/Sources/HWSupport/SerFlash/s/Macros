; > Macros

		MACRO
$label		NewBits	$bits, $stop, $enable, $parity
$label		= ($bits:SHL:0) :OR: ($stop:SHL:2) :OR: ($enable:SHL:3) :OR: ($parity:SHL:4)
		MEND

		MACRO
$label		VTable	$routine, $vector, $bit
$label		DCD	$vector
		DCD	$routine-(.+8)		; +8 because pointer points after whole entry
		DCD	$bit
		MEND

		END
