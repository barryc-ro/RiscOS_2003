/* From CLib */
#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>
#include <string.h>
#include "kernel.h"
#include "swis.h"

#include "utils.h"

#include "ir_api.h"
#include "display.h"
#include "veneers.h"

/*
 * Globals
 */

unsigned int ir_driver_id = 3;

static ir_client_callbacks_t callbacks =
{
    veneer_accept_data_packet,
    veneer_accept_report_packet,
};

static unsigned int handle;

_kernel_oserror *display_initialise(void *pw, unsigned int reason)
{
    _kernel_oserror *err;

    printf("Display driver initialising...\n");
    err = ir_initialise(&callbacks,pw);
    if (!err)
    {
    }
    return err;
}

_kernel_oserror *display_finalise(void *pw)
{
    _kernel_oserror *err=NULL;
    NOT_USED(pw);
    err = ir_finalise();
    if (!err)
    {
    }
    return err;
}





void display_accept_data_packet(unsigned int registry_number,
                                unsigned char tag_number,
                                unsigned char data[3])
{

    printf("IRCodeDisplay...\n");
    printf("Tag #%x, Registry #%08x\n",tag_number, registry_number);
    printf("Packet data: 0x%02x 0x%02x 0x%02x\n",data[0],data[1],data[2]);
}




void display_accept_report_packet(unsigned char report_code,
                                  unsigned char data[3])
{
    NOT_USED(data[0]);
    NOT_USED(report_code);
}


void generic_accept_data_packet(_kernel_swi_regs *r)
{
    unsigned char data[4];
    *(unsigned int *)(data) = r->r[2];

    display_accept_data_packet((unsigned int)r->r[0],
                               (unsigned char)r->r[1],
                               data);
}



void generic_accept_report_packet(_kernel_swi_regs *r)
{
    unsigned char data[4];
    *(unsigned int *)(data) = r->r[1];
    display_accept_report_packet((unsigned int)r->r[0],
                                 data);
}

