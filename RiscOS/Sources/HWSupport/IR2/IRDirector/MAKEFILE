# Makefile for IRDirector
#
# ***********************************
# ***    C h a n g e   L i s t    ***
# ***********************************
# Date       Name	 Description
# ----       ----	 -----------
# 06-Sep-96  JRH	  Created.
#
COMPONENT = IRDirector

#
# Generic options:
#
MKDIR   = cdir
AS      = objasm
CC      = cc
CMHG    = cmhg
CP      = copy
LD      = link
RM      = remove
WIPE    = -wipe

CFLAGS  = -depend !Depend ${INCLUDES} -c -zM -ffah ${DFLAGS}
#DFLAGS  = -DDEBUG=3
# -DUSE_PSION
CPFLAGS = ~cfr~v
WFLAGS  = ~c~v
INCLUDES= -IC: -IINetInc: -IINetInc:^.^.libs

#
# Libraries
#
CLIB      = CLIB:o.stubs
RLIB      = RISCOSLIB:o.risc_oslib
RSTUBS    = RISCOSLIB:o.rstubs
ROMSTUBS  = RISCOSLIB:o.romstubs
ROMCSTUBS = RISCOSLIB:o.romcstubs
ABSSYM    = RISC_OSLib:o.AbsSym

#
# Program specific options:
#
TARGET    = aof.${COMPONENT}
OBJS      = module.o \
            director.o \
            registry.o \
            header.o \
            irqs.o \
            drivers.o \
            blast.o \
            ir_api.o \
            tags.o \
            veneers.o

#
# Rule patterns
#
.c.o:;      ${CC} ${CFLAGS} -o $@ $<
.cmhg.o:;   ${CMHG} -o $@ $<
.s.o:;      ${AS} ${AFLAGS} $< $@

#
# build a relocatable module:
#
all: rm.${COMPONENT}

#
# RISC OS ROM build rules:
#
rom: ${TARGET}
	@echo ${COMPONENT}: rom module built

export: ${EXPORTS}
	@echo ${COMPONENT}: export complete

install_rom: ${TARGET}
	${CP} ${TARGET} ${INSTDIR}.${COMPONENT} ${CPFLAGS}
	@echo ${COMPONENT}: rom module installed

clean:
	${WIPE} o.* ${WFLAGS}
	${WIPE} rm.* ${WFLAGS}
	${WIPE} linked.* ${WFLAGS}
	${WIPE} map.* ${WFLAGS}
	${RM} ${TARGET}
	@echo ${COMPONENT}: cleaned


#
# Stand-alone module
#
rm.${COMPONENT}: ${OBJS} ${CLIB} ${SOCKLIB} ${INETLIB}
	${LD} -o $@ -module ${OBJS} ${CLIB} ${SOCKLIB} ${INETLIB}

#
# ROM target (re-linked at ROM Image build time)
#
${TARGET}: ${OBJS} ${ROMCSTUBS}
	${MKDIR} aof
	${LD} -o $@ -aof ${OBJS} ${ROMCSTUBS}

#
# Final link for the ROM Image (using given base address)
#
rom_link:
	${MKDIR} linked
	${MKDIR} map
	${LD} -o linked.${COMPONENT} -map -bin -base ${ADDRESS} ${TARGET} ${ABSSYM} > map.${COMPONENT}
	truncate map.${COMPONENT} linked.${COMPONENT}
	${CP} linked.${COMPONENT} ${LINKDIR}.${COMPONENT} ${CPFLAGS}
	@echo ${COMPONENT}: rom_link complete

# Dynamic dependencies:
o.module:	c.module
o.module:	C:h.kernel
o.module:	C:h.swis
o.module:	h.utils
o.module:	h.module
o.module:	h.ir_api
o.module:	h.ir
o.module:	h.drivers
o.module:	h.registry
o.director:	c.director
o.director:	C:h.kernel
o.director:	C:h.swis
o.director:	h.utils
o.director:	C:h.serial
o.director:	h.module
o.director:	h.ir
o.director:	h.irqs
o.director:	h.registry
o.director:	h.irp
o.director:	h.command
o.director:	h.drivers
o.director:	h.ir_api
o.director:	h.tags
o.director:	h.veneers
o.director:	h.blast
o.registry:	c.registry
o.registry:	h.utils
o.registry:	h.registry
o.drivers:	c.drivers
o.drivers:	C:h.swis
o.drivers:	C:h.kernel
o.drivers:	h.utils
o.drivers:	h.ir_api
o.drivers:	h.drivers
o.drivers:	h.registry
o.drivers:	h.veneers
o.blast:	c.blast
o.blast:	C:h.kernel
o.blast:	C:h.swis
o.blast:	h.utils
o.blast:	h.blast
o.blast:	h.ir_api
o.blast:	h.command
o.ir_api:	c.ir_api
o.ir_api:	C:h.kernel
o.ir_api:	C:h.swis
o.ir_api:	h.utils
o.ir_api:	h.command
o.ir_api:	h.ir_api
o.ir_api:	h.drivers
o.ir_api:	h.registry
o.ir_api:	h.veneers
o.ir_api:	h.blast
o.tags:	c.tags
o.tags:	C:h.kernel
o.tags:	C:h.swis
o.tags:	h.utils
o.tags:	h.module
o.tags:	h.ir
o.tags:	h.irqs
o.tags:	h.registry
o.tags:	h.irp
o.tags:	h.command
o.tags:	h.drivers
o.tags:	h.ir_api
o.tags:	h.tags
