#include <stdio.h>

#include "unixlib.h"

static int finished = 0;

/**********************************************************************/

void setpwent(void)
{
    finished = 0;
}

/**********************************************************************/

void endpwent(void)
{
    finished = 0;
}

/**********************************************************************/

struct passwd *getpwent(void)
{
    if( finished )
    {
	finished = 0;
	return(NULL);
    }
    else
    {
	finished = 1;
	return(getpwuid(0));
    }
}

/**********************************************************************/

/* EOF getpwent.c */
