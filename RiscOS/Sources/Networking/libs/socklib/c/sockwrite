#include "stubs.h"
#include "socklib.h"

int socketwrite(int s, char *buf, int len)
{
    _kernel_swi_regs rin, rout;

    rin.r[0] = s;
    rin.r[1] = (int)buf;
    rin.r[2] = len;

    return(_makecall(Socketwrite, &rin, &rout));
}

/* EOF sockwrite.c */
