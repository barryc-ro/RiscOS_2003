#include "stubs.h"
#include "socklib.h"

int bind(int s, struct sockaddr *name, int namelen)
{
    _kernel_swi_regs rin, rout;

    rin.r[0] = s;
    rin.r[1] = (int)name;
    rin.r[2] = namelen;

    return(_makecall(Bind, &rin, &rout));
}

/* EOF bind.c */
