#include "stubs.h"
#include "socklib.h"

int recv(int s, char *buf, int len, int flag)
{
    _kernel_swi_regs rin, rout;

    rin.r[0] = s;
    rin.r[1] = (int)buf;
    rin.r[2] = len;
    rin.r[3] = flag;

    return(_makecall(Recv, &rin, &rout));
}

/* EOF recv.c */
