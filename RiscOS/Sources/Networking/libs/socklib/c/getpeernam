#include "stubs.h"
#include "socklib.h"

int getpeername(int s, struct sockaddr *name, int *namelen)
{
    _kernel_swi_regs rin, rout;

    rin.r[0] = s;
    rin.r[1] = (int)name;
    rin.r[2] = (int)namelen;

    return(_makecall(Getpeername, &rin, &rout));
}

/* EOF getpeernam.c */
