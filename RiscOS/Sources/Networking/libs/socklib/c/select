#include "stubs.h"
#include "socklib.h"

int select(int nfds, fd_set *rfds, fd_set *wfds, fd_set *efds,
	   struct timeval *tv)
{
    _kernel_swi_regs rin, rout;

    rin.r[0] = nfds;
    rin.r[1] = (int)rfds;
    rin.r[2] = (int)wfds;
    rin.r[3] = (int)efds;
    rin.r[4] = (int)tv;

    return(_makecall(Socketselect, &rin, &rout));
}

/* EOF select.c */
