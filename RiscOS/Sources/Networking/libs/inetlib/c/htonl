#include "sys/types.h"

#include "inetlib.h"

u_long htonl(u_long x)
{
    return(ntohl(x));
}

int htons(int x)
{
    return(ntohs(x));
}

u_long ntohl(u_long x)
{
    return(((x & 0xff) << 24) | ((x & 0xff00) << 8) |
	   ((x & 0xff0000) >> 8) | ((x & 0xff000000) >> 24));
}

int ntohs(int x)
{
    return(((x & 0xff) << 8) | ((x & 0xff00) >> 8));
}

/* EOF htonl.c */
