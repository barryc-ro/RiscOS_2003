//
#ifndef AtmP_asyncop_h
#define AtmP_asyncop_h

/* File:    asyncop.h
   Purpose: Interface for AsyncOp class - operations that complete
            asynchronously but for which we want the 'foreground' to wait for.
   Author:  Ben Laughton

   Copyright 1999 Element 14 Ltd.

   This material is the confidential trade secret and proprietary information
   of Element 14 Ltd. It may not be reproduced, used sold, or transferred to
   any third party without the prior written consent of Element 14 Ltd.
   All rights reserved.

   History:

   1999-03-: BAL
   Created.
 */




// =============================================================================
// Include header files

// CLib
#include <stddef.h>




// =============================================================================
// Class declarations

class AsyncOp
{
    // Public methods
    public:
        AsyncOp (const unsigned int  timeout,
                 unsigned char *     buffer,
                 const size_t        buffer_size);

        int   Wait ();

        void  Completed ();
        void  Completed (unsigned char *const  data,
                         const size_t          data_size);

        void  Abort ();

    // Public attributes
    public:

    // Private types
    private:
        enum Status
        {
            Waiting,
            CompletedSuccess,
            Aborted
        };

    // Private methods
    private:
        Status  GetStatus ();

    // Private attributes
    private:
        Status           status;
        unsigned int     end_time;
        char *const      buffer;
        const size_t     buffer_size;
};

#endif
