		  Blindly changed the ATM_MTU macro to be 9180, and the
	 	  ATM_BUFSIZE macro to 9216.  Why is one 36 bytes longer than
		  the other?  Haven't a clue.....because they were before :-(
		  mbuf header, perhaps (but I only count 32 bytes...!)

***************************************************************************/
// header file for mbuf.c

/* Begin-Prologue */
#ifndef MBUFF_H
#define MBUFF_H
#undef DECLARE
#ifdef PROTOTYPES_INTERNAL
#define DECLARE
#define INIT(x) =(x)
#else
#define DECLARE extern
#define INIT(x)
#endif
/* End-Prologue */

#define ATMSLOTNO 8
#define MINCONTIG 112
#define ATM_MTU      9180 /* was 1500 */
#define HW_ADDR_LEN  6                         /* length of hardware address */
#define ATM_BUFSIZE  9216  /* was 1536 */      /* buffer size from mbuf mgr */
#define LLC_HDR_SIZE 8


DECLARE _kernel_oserror *mb_entryinit(void);
DECLARE int mb_present(void);
DECLARE _kernel_oserror *mb_closesession(void);
DECLARE void handle_managerstatus(_kernel_swi_regs *);


DECLARE int managerstarted INIT(0);

/* Begin-Epilogue */
#undef PROTOTYPES_INTERNAL
#undef INIT
#undef DECLARE
#endif
/* End_Epilogue */

