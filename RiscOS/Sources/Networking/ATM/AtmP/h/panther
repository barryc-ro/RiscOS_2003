#else
#define DECLARE extern
#define INIT(x)
#endif
/* End-Prologue */

#define HAPPY_PANTHER     0xffff7c01

DECLARE void reset_panther(void);
DECLARE void interrupt_enable(void);
DECLARE void interrupt_disable(void);
