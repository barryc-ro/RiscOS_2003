/* header file for utils.c */
#ifndef UTILS_H
#define UTILS_H
#undef DECLARE
#undef INIT
#ifdef PROTOTYPES_INTERNAL
#undef PROTOTYPES_INTERNAL
#define DECLARE
#define INIT(x) =(x)
#else
#define DECLARE extern
#define INIT(x)
#endif

DECLARE unsigned int MonotonicTime(void);
DECLARE unsigned int FileStat(char *);
DECLARE void time_delay(const int);
DECLARE int caseless_strcmp(char *, char *);
DECLARE unsigned long htonl(unsigned long);
DECLARE unsigned long ntohl(unsigned long);
DECLARE unsigned long inet_addr(register char *);
DECLARE unsigned int chtoui(unsigned char *);
DECLARE unsigned char *uitoch(unsigned int);
DECLARE char *ether_sprintf(register unsigned char *);
DECLARE int htons(int);
DECLARE int ntohs(int);
DECLARE int min(int, int);
DECLARE unsigned int portword(unsigned int);
DECLARE unsigned int portpacked(unsigned int);


#endif


