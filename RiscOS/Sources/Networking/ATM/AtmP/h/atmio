/* atmio.c -- header file for low level io to/from ATM 25 podule */
#ifndef ATMIO_H
#define ATMIO_H
#undef DECLARE
#undef INIT
#ifdef PROTOTYPES_INTERNAL
#undef PROTOTYPES_INTERNAL
#define DECLARE
#define INIT(x) =(x)
#else
#define DECLARE extern
#define INIT(x)
#endif

DECLARE void CommitWrite(int);
DECLARE unsigned int CommitRead(void);
DECLARE void BlockWrite(int);
DECLARE unsigned int BlockRead(void);

extern void  Write_Data_Msg (const int             handle,
                             const unsigned int *  data,
                             const int             data_bytes);

DECLARE int Read_Data_Msg(unsigned int, unsigned char *, unsigned int, unsigned int *, unsigned int *, unsigned int *);
DECLARE int timeoutError INIT(0);


#define EASI_BASE_ADDRESS         0x88000000  /* do not mess with this */
#endif
