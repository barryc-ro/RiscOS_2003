#include "stdio.h"
#include "stdlib.h"
#include "strings.h"
#include "ctype.h"
#include "kernel.h"
#include "swis.h"
#include "sys/types.h"
#include "module.h"
#include "nvparams.h"
#define PROTOTYPES_INTERNAL
#include "atm_conf.h"

void atm_conf_arp(char *arg)
{
  int doconfig;
  char *cp;

  if((int)arg == 0)
  {  /* *configure issued with no args */
    printf("ATM25arp   on|off\n");
    return;
  }

  if ((int)arg == 1)
  { /* *status issued */
    doconfig = nvparams_read_dynamic_arp ();
    printf("ATM25arp   %s\n", doconfig ? "on" : "off");
    return;
  }

  for(cp=arg; *cp; cp++)
  {
    if (!isalpha(*cp))
    {
       *cp = 0;
       break;
    }
  }

  doconfig = strncmp(arg, "on",2)?0:1;

  nvparams_write_dynamic_arp (doconfig);
}

void atm_conf_llc(const char *arg)
{
  int is_vc;

  if((int)arg == 1)
  { /* *status issued */
    is_vc = nvparams_read_multiproto_enc ();
    printf("ATM25llc   %s\n", is_vc ? "off" : "on");
    return;
  }

  nvparams_write_multiproto_enc (0);
}

void atm_conf_vc(const char *arg)
{
  int is_vc;

  if((int)arg == 1)
  { /* *status issued */
    is_vc = nvparams_read_multiproto_enc ();
    printf("ATM25vc    %s\n", is_vc ? "on" : "off");
    return;
  }

  nvparams_write_multiproto_enc (1);
}

void atm_conf_pvc(char *arg)
{
  int pvc;
  char *cp;

  if((int)arg == 0)
  { /* *configure issued with no params */
    printf("ATM25pvcboot <vci>\n");
    return;
  }

  if((int)arg == 1)
  { /* *status called */
      pvc = nvparams_read_pvc ();
    if(pvc == 0)
    {
      printf("ATM25pvcboot   off\n");
      return;
    }

    else
    {
      printf("ATM25pvcboot   %d\n", pvc);
      return;
    }
  }

  for( cp = arg; *cp; cp++ )
  {
    if (!isalnum(*cp))
    {
       *cp = 0;
       break;
    }
  }

  if(strcmp(arg, "off")==0)
  {
      nvparams_write_pvc (0);
      return;
  }

  pvc = atoi(arg);

  if((pvc<0) ||(pvc>65535))
  {
    pvc = 0;
  }

  nvparams_write_pvc (pvc);
  printf("Wrote: %d as %d and %d\n", pvc, (pvc & 0xff), (pvc & 0xff00)>>8);
}

/******* atm_changeupstreambandwidth ***************************************

Purpose: Modifies/displays NVRAM holding rate pacing parameters

Inputs: char * argument string

            if ((int) args == 0)
            {*configure called with no parameters, return syntax string}

            if ((int) args == 1)
            {*status called, print value}

            else
            {args is a pointer to the argument(s) from the CLI}

Cf. PRMs, 1-215, "Information Word".  Specifically, bit 30.....the cmhg
veneer checks this bit when 'configure:' is defined in the CLI table entry,
and sorts everything out to the CLI handler.

Outputs: none

***************************************************************************/

void atm_changeupstreambandwidth (char *arg_string)
{
  unsigned int bandwidth;

  switch ( (int) arg_string )
  {
     case 1: /* print value */
        bandwidth = nvparams_read_upstream_bandwidth ();

        printf("ATM25bw      ");

        if (0 == bandwidth)
        {
           printf("unlimited\n");
        }

        else
        {
           printf("%d kb/s\n", bandwidth);
        }
     break;

     case 0: /* syntax error, no parameter */
        printf("Syntax: configure atm25bw <bandwidth in kbps>\n");
     break;

     default: /* new value */
        bandwidth = atoi (arg_string);

        nvparams_write_upstream_bandwidth (bandwidth);
  }
}
