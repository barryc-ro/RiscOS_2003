/* =============================================================================
 * Include header files
 */

/* CLib */
#include "kernel.h"

/* Local */
#include "error.h"




/* =============================================================================
 * Define constants
 */

/* Temporary - move into public ATM header file */
enum
{
    Error_ATM_InvalidOption = 0x816600,
    Error_ATM_InvalidData
};




/* =============================================================================
 * Define macros
 */

#define M_error_struct(name, text)\
        static struct\
        {\
            int   errnum;\
            char  errmess[sizeof (text) + 1];\
        } name =\
        {\
            Error_ATM_##name,\
            text\
        }




/* =============================================================================
 * Declare global variables
 */

M_error_struct (InvalidOption, "Invalid Option");
M_error_struct (InvalidData, "Invalid Data");

_kernel_oserror *  error_table[] =
{
    (_kernel_oserror *) &InvalidOption,
    (_kernel_oserror *) &InvalidData
};
