#include <stdio.h>
#include <string.h>

#include "how.h"
#include "util.h"

#define DEFAULTBUFFERSIZE 32*1024

struct how defaulthow = {0, 1, 0, 0, 0, 0, 0, DEFAULTBUFFERSIZE};

int howread(struct how *h, char *s)
{
    if (!stricmp(s, "-protected"))
	 h->owner = 0;
    else
    if (!stricmp(s, "-noicon"))
	h->hidden = 1;
    else
    if (!stricmp(s, "-cdrom"))
	h->cdrom = 1;
    else
    if (!stricmp(s, "-subdir"))
	h->subdir = 1;
    else
    if (!stricmp(s, "-auth"))
	h->auth = 1;
    else
    if (!stricmp(s, "-readonly"))
	h->readonly = 1;
    else
	return 1;
    return 0;
}

char *howprint(struct how h)
{
    static char buf[64];
    sprintf(buf, "%s%s%s%s%s", h.readonly ? "-readonly " : "",
	    h.owner ? "" : "-protected ",
	    h.subdir ? "-subdir " : "",
	    h.cdrom ? "-cdrom " : "",
	    h.hidden ? "-noicon " : "");
    return buf;
}

