#ifndef XID_PAR
#define XID_PAR

/*-----------------------------------------------------------------------*/

#define XID_FI_LGTH			2		/* Format Identifier Length */

#define XID_PH_LGTH			2		/* Parameter Header length (PI + PL) */
#define XID_PL_LGTH			1		/* Parameter Length length  */

#define XID_GH_LGTH			3		/* Group Header length (GI + GL) */
#define XID_GL_LGTH			2		/* Group Length length  */

#define CHAR_STORAGE	    1		/* storage size for char variable */
#define SHORT_STORAGE	    2		/* storage size for short variable */
#define LONG_STORAGE	    4		/* storage size for long variable */

#define OCTET_SIZE			8		/* number of bits in an octet */

#endif

