/*--------------------------------------------------------------------------*
					 F U N C T I O N   H E A D E R

Name            at5_net_build_pdu_ns - implements the simulation of the network side
					for a call connection.

Usage           at5_net_build_pdu_ns ()

Common constants and declarations : ns.h

*--------------------------------------------------------------------------*/

void at5_net_build_pdu_ns ()
{
		/* Message builder */

	switch (Tolower (g_spdu_id[0])) {

			/* Call establishment spdu event */

		case DA_ALERT :
				*p_info++ = ALERT;
#if 1
				 Shift_to (CODESET_6, LOCKING_SHIFT);

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 19;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x09;		/* call appear id */
				 Put_text ("*** ALERT *** -1-");

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 18;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x09;		/* call appear id */
				 Put_text ("** ALERT *** -2-");

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 17;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x09;		/* call appear id */
				 Put_text ("** ALERT ** -3-");
#endif

				break;

		case DA_CALL_PROC :
				*p_info++ = CALL_PROC;

				 p_ie_o = p_info;

				*p_info++ = CHAN_ID;
				*p_info++ = 1;
				*p_info++ = 0x81;		/* preferred, B1 channel */

				*p_info++ = SIGNAL;
				*p_info++ = 1;
				*p_info++ = 0;			/* dial tone on */
#if 1
				 Shift_to (CODESET_6, LOCKING_SHIFT);

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 21;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x09;		/* call appear id */
				 Put_text ("***CALL PROC*** -1-");

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 21;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x09;		/* call appear id */
				 Put_text ("***CALL PROC*** -2-");

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 21;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x09;		/* call appear id */
				 Put_text ("***CALL PROC*** -3-");
#endif
				break;

		case DA_CONN :
				*p_info++ = CONN;
#if 1
				 Shift_to (CODESET_6, LOCKING_SHIFT);

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 18;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x09;		/* call appear id */
				 Put_text ("*** CONN *** -1-");

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 17;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x09;		/* call appear id */
				 Put_text ("** CONN *** -2-");

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 16;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x09;		/* call appear id */
				 Put_text ("** CONN ** -3-");
#endif
				break;

		case DA_CONN_ACK :
				*p_info++ = CONN_ACK;

				 p_ie_o = p_info;

				*p_info++ = SIGNAL;
				*p_info++ = 1;
				*p_info++ = 0;			/* dial tone on */

				break;

		case DA_DISC :
				*p_info++ = DISC;

				 p_ie_m = p_info;

				*p_info++ = CAUSE;
				*p_info++ = 5;
				*p_info++ = 0x80;		/* location user */
				*p_info++ = 0x90;		/* normal event, normal clearing */
				*p_info++ = 0x12;
				*p_info++ = 0x12;
				*p_info++ = 0x12;

				 p_ie_o = p_info;

				*p_info++ = SIGNAL;
				*p_info++ = 1;
				*p_info++ = 0;			/* dial tone on */
#if 1
				 Shift_to (CODESET_6, LOCKING_SHIFT);

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 18;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x09;		/* call appear id */
				 Put_text ("*** DISC *** -1-");

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 17;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x09;		/* call appear id */
				 Put_text ("** DISC *** -2-");

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 16;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x09;		/* call appear id */
				 Put_text ("** DISC ** -3-");
#endif

				break;

#	if AT5_SUPPLEMENTARY_SERVICES == ON

		case DA_CONF_ACK :
				*p_info++ = ADDITIONAL_SPDU;
				*p_info++ = CONF_ACK;

				 Shift_to (CODESET_6, LOCKING_SHIFT);
				 p_ie_m = p_info;

				*p_info++ = OTHER_CALL_REF;
				*p_info++ = 1;
				*p_info++ = 0x81;		/*  call ref 1 */

				 p_ie_o = p_info;

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 16;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x09;		/* call appear id */
				 Put_text ("***CONF ACK***");

				break;

		case DA_CONF_REJ :
				*p_info++ = ADDITIONAL_SPDU;
				*p_info++ = CONF_REJ;

				 p_ie_m = p_info;

				*p_info++ = CAUSE;
				*p_info++ = 2;
				*p_info++ = 0x80;		/* location user */
				*p_info++ = 0x90;		/* normal event, normal clearing */

				 Shift_to (CODESET_6, LOCKING_SHIFT);

				 p_ie_o = p_info;

				*p_info++ = FEATURE_IND;
				*p_info++ = 5;
				*p_info++ = 0x40;		/* Call appear button, module 0, feature number status */
				*p_info++ = 1;			/* feature number */
				*p_info++ = 0x07;		/* status rejected */
				*p_info++ = 2;			/* feature number */
				*p_info++ = 0x07;		/* status rejected */

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 16;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x01;		/* call appear id */
				 Put_text ("***CONF REJ***");

				break;

		case DA_DROP_ACK :
				*p_info++ = ADDITIONAL_SPDU;
				*p_info++ = DROP_ACK;

				break;

		case DA_DROP_REJ :
				*p_info++ = ADDITIONAL_SPDU;
				*p_info++ = DROP_REJ;

				 Shift_to (CODESET_6, LOCKING_SHIFT);

				 p_ie_o = p_info;

				*p_info++ = FEATURE_IND;
				*p_info++ = 5;
				*p_info++ = 0x40;		/* Call appear button, module 0, feature number status */
				*p_info++ = 1;			/* feature number */
				*p_info++ = 0x07;		/* status rejected */
				*p_info++ = 2;			/* feature number */
				*p_info++ = 0x07;		/* status rejected */


				*p_info++ = DISPLAY_FLD;
				*p_info++ = 16;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x01;		/* call appear id */
				 Put_text ("***DROP REJ***");

				break;

		case DA_HOLD_ACK :
				*p_info++ = ADDITIONAL_SPDU;
				*p_info++ = AT5_HOLD_ACK;

				 Shift_to (CODESET_6, LOCKING_SHIFT);

				 p_ie_o = p_info;

				*p_info++ = SEL_CALL_APPEAR;
				*p_info++ = 1;
				*p_info++ = 1;			/* call apear 1 */

				*p_info++ = FEATURE_IND;
				*p_info++ = 5;
				*p_info++ = 0x40;		/* Call appear button, module 0, feature number status */
				*p_info++ = 1;			/* feature number */
				*p_info++ = 0x07;		/* status rejected */
				*p_info++ = 2;			/* feature number */
				*p_info++ = 0x07;		/* status rejected */

				*p_info++ = ADJUNCT_CON;
				*p_info++ = 1;
				*p_info++ = 0x00;			/* hook off */


				break;

		case DA_HOLD_REJ :
				*p_info++ = ADDITIONAL_SPDU;
				*p_info++ = AT5_HOLD_REJ;

				 p_ie_m = p_info;

				*p_info++ = CAUSE;
				*p_info++ = 2;
				*p_info++ = 0x80;		/* location user */
				*p_info++ = 0x90;		/* normal event, normal clearing */

				 Shift_to (CODESET_6, LOCKING_SHIFT);

				 p_ie_o = p_info;

				*p_info++ = FEATURE_IND;
				*p_info++ = 5;
				*p_info++ = 0x40;		/* Call appear button, module 0, feature number status */
				*p_info++ = 1;			/* feature number */
				*p_info++ = 0x07;		/* status rejected */
				*p_info++ = 2;			/* feature number */
				*p_info++ = 0x07;		/* status rejected */


				*p_info++ = DISPLAY_FLD;
				*p_info++ = 16;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x01;		/* call appear id */
				 Put_text ("***HOLD REJ***");

				break;

		case DA_RECONN_ACK :
				*p_info++ = ADDITIONAL_SPDU;
				*p_info++ = AT5_RECONN_ACK;

				 p_ie_m = p_info;

				*p_info++ = CHAN_ID;
				*p_info++ = 1;
				*p_info++ = 0x81;		/* preferred, B1 channel */

				 p_ie_o = p_info;

				*p_info++ = SIGNAL;
				*p_info++ = 1;
				*p_info++ = 0;			/* dial tone on */

				 Shift_to (CODESET_6, LOCKING_SHIFT);

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 14;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x01;		/* call appear id */
				 Put_text ("***RECONN***");

				break;

		case DA_RECONN_REJ :
				*p_info++ = ADDITIONAL_SPDU;
				*p_info++ = AT5_RECONN_REJ;

				 p_ie_m = p_info;

				*p_info++ = CAUSE;
				*p_info++ = 2;
				*p_info++ = 0x80;		/* location user */
				*p_info++ = 0x90;		/* normal event, normal clearing */

				 Shift_to (CODESET_6, LOCKING_SHIFT);

				*p_info++ = SEL_CALL_APPEAR;
				*p_info++ = 1;
				*p_info++ = 1;			/* call apear 1 */

				 p_ie_o = p_info;

				*p_info++ = FEATURE_IND;
				*p_info++ = 5;
				*p_info++ = 0x40;		/* Call appear button, module 0, feature number status */
				*p_info++ = 1;			/* feature number */
				*p_info++ = 0x07;		/* status rejected */
				*p_info++ = 2;			/* feature number */
				*p_info++ = 0x07;		/* status rejected */


				*p_info++ = DISPLAY_FLD;
				*p_info++ = 17;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x01;		/* call appear id */
				 Put_text ("***NO RECONN***");

				break;

		case DA_REDIR :
				*p_info++ = ADDITIONAL_SPDU;
				*p_info++ = REDIR;

				 p_ie_o = p_info;

				*p_info++ = SIGNAL;
				*p_info++ = 1;
				*p_info++ = 0;			/* dial tone on */

				 Shift_to (CODESET_6, LOCKING_SHIFT);

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 13;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x01;		/* call appear id */
				 Put_text ("***REDIR***");

				break;

		case DA_TRANS_ACK :
				*p_info++ = ADDITIONAL_SPDU;
				*p_info++ = TRANS_ACK;

				break;

		case DA_TRANS_REJ :
				*p_info++ = ADDITIONAL_SPDU;
				*p_info++ = TRANS_REJ;

				 p_ie_m = p_info;

				*p_info++ = CAUSE;
				*p_info++ = 2;
				*p_info++ = 0x80;		/* location user */
				*p_info++ = 0x90;		/* normal event, normal clearing */

				 Shift_to (CODESET_6, LOCKING_SHIFT);

				 p_ie_o = p_info;

				*p_info++ = FEATURE_IND;
				*p_info++ = 5;
				*p_info++ = 0x40;		/* Call appear button, module 0, feature number status */
				*p_info++ = 1;			/* feature number */
				*p_info++ = 0x07;		/* status rejected */
				*p_info++ = 2;			/* feature number */
				*p_info++ = 0x07;		/* status rejected */


				*p_info++ = DISPLAY_FLD;
				*p_info++ = 17;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x01;		/* call appear id */
				 Put_text ("***TRANS REJ***");

				break;

		case DA_ASSOC :
				*p_info++ = ADDITIONAL_SPDU;
				*p_info++ = ASSOC;

				 p_ie_o = p_info;

				*p_info++ = SIGNAL;

				 Shift_to (CODESET_6, LOCKING_SHIFT);

				 p_ie_m = p_info;

				*p_info++ = ASSOC_TYPE;
				*p_info++ = 1;
				*p_info++ = 0x05;		/* setup */


				*p_info++ = DEST_CALL_APPEAR;
				*p_info++ = 1;
				*p_info++ = 1;

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 17;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x01;		/* call appear id */
				 Put_text ("***TRANS REJ***");

				break;

#endif	/* END OF SUPPLEMENTARY SERVICES MESSAGES */

		case DA_INFO :
			*p_info++ = INFO;

			 p_ie_o = p_info;

			*p_info++ = SIGNAL;
			*p_info++ = 1;
			*p_info++ = 0;			/* dial tone on */

			 p_ie_m = p_info;
			 Shift_to (CODESET_6, LOCKING_SHIFT);

			*p_info++ = DISPLAY_FLD;
			*p_info++ = 17;
			*p_info++ = 0x11;		/* mode normal, direct */
			*p_info++ = 0x01;		/* call appear id */
			 Put_text ("***TRANS REJ***");

									/* ignored because not ordered IE */
			*p_info++ = SEL_CALL_APPEAR;
			*p_info++ = 0x01;
			*p_info++ = 0x01;

			break;

		case DA_MAN_INFO :
			*p_info++ = ADDITIONAL_SPDU;
			*p_info++ = MAN_INFO;

			 p_ie_m = p_info;
			 Shift_to (CODESET_6, LOCKING_SHIFT);

			*p_info++ = MANAGMNT;
			*p_info++ = 8;
			*p_info++ = 0x03;	/* PROTOCOL DISCR MAN */
			*p_info++ = 0x80;	/* TRANS REF SYN */
			*p_info++ = 0x93;	/* CLASS CONFIRMED / TYPE EVENT SET */
			*p_info++ = 0x81;	/* CODE ADD INFO */
			*p_info++ = 0x82;	/* ENDPOINT ID */
			*p_info++ = 0x02;
			*p_info++ = 0x01;	/* USID */
			*p_info++ = 0x81;	/* TID with FULL SERVICE */
			break;

		case DA_PROGRESS :
				*p_info++ = PROGRESS;

				 p_ie_o = p_info;

				*p_info++ = CAUSE;
				*p_info++ = 2;
				*p_info++ = 0x80;		/* location user */
				*p_info++ = 0x90;		/* normal event, normal clearing */

				 p_ie_m = p_info;

				*p_info++ = PROGRESS_IND;
				*p_info++ = 2;
				*p_info++ = 0x80;		/* location user */
				*p_info++ = 0x94;		/* call has returned to the ISDN */

				*p_info++ = UUI;
				*p_info++ = 17;
				*p_info++ = 0x04;	/* PROTOCOL_DISCR_IA5 */
				 Memcpy_far ((char FAR *)p_info, (char FAR *)"* progress/uui *", 16);
				 p_info += 16;
#if 1
				 Shift_to (CODESET_6, LOCKING_SHIFT);

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 18;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x09;		/* call appear id */
				 Put_text ("*** PROG *** -1-");

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 17;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x09;		/* call appear id */
				 Put_text ("** PROG *** -2-");

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 16;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x09;		/* call appear id */
				 Put_text ("** PROG ** -3-");
#endif

				break;

		case DA_REL :
				*p_info++ = REL;

				*p_info++ = CAUSE;
				*p_info++ = 2;
				*p_info++ = 0x80;		/* location user */
				*p_info++ = 0x90;		/* normal event, normal clearing */

				break;

		case DA_REL_COMP :
				*p_info++ = REL_COMP;

				 p_ie_m = p_info;

				*p_info++ = CAUSE;
				*p_info++ = 2;
				*p_info++ = 0x80;		/* location user */
				*p_info++ = 0x90;		/* normal event, normal clearing */

				 p_ie_o = p_info;

				*p_info++ = SIGNAL;
				*p_info++ = 1;
				*p_info++ = 0x0c;		/* error tone on */

#if 1
				 Shift_to (CODESET_6, LOCKING_SHIFT);

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 22;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x09;		/* call appear id */
				 Put_text ("*** REL_COMP *** -1-");

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 21;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x09;		/* call appear id */
				 Put_text ("** REL_COMP *** -2-");

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 20;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x09;		/* call appear id */
				 Put_text ("** REL_COMP ** -3-");
#endif
				break;

		case DA_SETUP :
/*				*p_info++ = ADDITIONAL_SPDU;*/
				*p_info++ = SETUP;

				*p_info++ = BC;
				*p_info++ = 3;
				*p_info++ = 0x80;		/* coding CCITT, trf cap speech */
				*p_info++ = 0x90;		/* mode circuit, trf rate 64 kb/s */
				*p_info++ = 0xa2;		/* layer 1, G711 æ-law */

				 p_ie_m = p_info;

				*p_info++ = CHAN_ID;
				*p_info++ = 1;
				*p_info++ = 0x89;		/* exclusive, B1 channel */

				*p_info++ = CALLED_NB;
				*p_info++ = 5;
				*p_info++ = 0xc1;		/* local nb, plan ISDN */
				 Put_text ("1111");

#			if (AT5_SUPPLEMENTARY_SERVICES == ON) && (AT5_TERMINAL_MANAGEMENT == ON)

				 Shift_to (CODESET_6, LOCKING_SHIFT);

				*p_info++ = SEL_CALL_APPEAR;
				*p_info++ = 1;
				*p_info++ = 1;

				*p_info++ = DEST_CALL_APPEAR;
				*p_info++ = 1;
				*p_info++ = 1;

#endif

				*p_info++ = AT5_ENDPOINT_ID;
				*p_info++ = 2;
				*p_info++ = 0x01;		/* valid USID */
				*p_info++ = 0x01;

#			if (AT5_SUPPLEMENTARY_SERVICES == ON) && (AT5_TERMINAL_MANAGEMENT == ON)

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 4;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x01;		/* call appear id */
				*p_info++ = 0x20;		/* "01"           */
				*p_info++ = 0x31;


				*p_info++ = DISPLAY_FLD;
				*p_info++ = 14;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x03;		/* calling party ID    */
				 Put_text ("415-812-8012");

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 5;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x07;		/* ISDN call ID */
				*p_info++ = 0x49;		/* "InI"           */
				*p_info++ = 0x6E;
				*p_info++ = 0x49;

				*p_info++ = DISPLAY_FLD;
				*p_info++ = 15;
				*p_info++ = 0x11;		/* mode normal, direct */
				*p_info++ = 0x0A;		/* Date & Time */
				 Put_text ("06-29 12:03pm");


#			endif


				break;

		case DA_SETUP_ACK :
				*p_info++ = SETUP_ACK;

				 p_ie_m = p_info;

				*p_info++ = CHAN_ID;
				*p_info++ = 1;
				*p_info++ = 0x81;		/* preferred, B1 channel */

				 p_ie_o = p_info;

				break;

		case DA_STATUS_ENQ :
				*p_info++ = STATUS_ENQ;

				break;

		case DA_SPDU_ID_UNKNOWN:
				*p_info++ = SPDU_ID_UNKNOWN;

				*p_info++ = CAUSE;
				*p_info++ = 2;
				*p_info++ = 0x87;
				*p_info++ = 0x90;

				break;

		case '1' :
				Automata_1 ();
				break;

		case DA_HEXA_CODING :
				mg_ns_hexa ();		/* Hexadecimal coding */
				break;

		default :
				return;

	}

}

