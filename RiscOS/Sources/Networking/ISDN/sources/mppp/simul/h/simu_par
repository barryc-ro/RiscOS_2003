#ifndef SIMU_PAR       					/* for only one time */
#define SIMU_PAR

#define MX_IMBRICATED_DO 	20			/* maximum DO imbrication */
#define MX_SCAN_DATA_LGTH	80			/* maximum length of input data */

#define NB_BYTE_PER_LINE	16			/* number of byte per printed line */

/*--------------------------------------------------------------------------*/

			/*
			   Pointers in printed messages (ON or OFF) :
			   useful if the comparaison of the result files is used.
			*/

#define PR_POINTER		OFF				/* no pointer in printed message (useful to compare the result files) */

			/* in the simulation : Information in message or buffer */

#define I_MSG_SIMUL		OFF				/* Information in message only for simulation */

#define	PR_RESOURCE		ON				/* print resource (ON/OFF) */

/*--------------------------------------------------------------------------*/

					/* SIMULATION FLAG IMPLICIT VALUES  */

			/* Global flag */

#define PR_TEXT				OFF				/* text in dump or not */

			/* TIme-out flag - implicit value */

#define TI_PR_MSG			ON				/* print current Time-out message */

/*--------------------------------------------------------------------------*/

#endif

