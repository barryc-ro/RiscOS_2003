/* platforms.h */

/* Things we need to know, based on compiler predefines
 *
 * Norcroft (on RiscOS and Riscix) defines __acorn
 * Win32 defines WIN32
 * UNIX generally defines unix
 * X Windows specifically defines XWIN
 * etc.
 */

#ifndef platforms_h
#define platforms_h

/*****************************************************************************/

#if defined(RISCOS)

/*****************************************************************************/

#elif defined(WIN32)

#define layers_UNITSPERPIX    1
#define layers_UNITSPERINCH  96
#define layers_DIRSEP "/"
#define layers_SUFFIXSEP "."

/* Bit unfortunate this, it means we can't go strdup...mm_free unless memwatch
 * is turned off */
/* 0/1 not undef/def these days
#define HAVE_STRDUP
#define HAVE_STRNICMP
#undef  HAVE_SOCKETWRITEV
*/
/*****************************************************************************/

#elif defined(XWIN)


/*****************************************************************************/

#else

#error System not known for platforms.h

#endif /* __acorn, WIN32, XWIN */

/*****************************************************************************/

#endif /* platforms_h */
