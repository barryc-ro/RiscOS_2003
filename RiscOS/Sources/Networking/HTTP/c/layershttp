#include "http.h"

int layers_make_socket_asynchronous( int s, void (*cb) (int s, void *cp), void *cp )
{
    /* callback etc ignored on RiscOS */
    int i = 1, rc;
    rc = socketioctl( s, FIONBIO, &i );

    i = 1;
    if ( rc != -1 )
        rc = socketioctl( s, FIOASYNC, &i );

    NOT_USED(cp); NOT_USED(cb);

    return rc;
}

/* eof */
