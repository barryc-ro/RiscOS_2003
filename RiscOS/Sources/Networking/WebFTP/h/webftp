#ifndef included_webftp_h
#define included_webftp_h

#include "pads.h"

#ifndef DEBUG
#define DEBUG 0
#endif


/*****************************************************************************/

#define WEBFTP_SWIBASE      0x00083bc0      /* official */
#define WEBFTP_ERRBASE      0x0080a0e0      /* official, hijacked */

#define WebFTP_Open         ( WEBFTP_SWIBASE + 0 )
#define WebFTP_Status       ( WEBFTP_SWIBASE + 1 )
#define WebFTP_Close        ( WEBFTP_SWIBASE + 2 )
#define WebFTP_CloseIdle    ( WEBFTP_SWIBASE + 3 )

/*****************************************************************************/

#define FTP_STATUS transfer_status

#if 0

typedef enum
{
    FTP_WAITING_CONNECTION,
    FTP_CONNECTING,
    FTP_AUTHENTICATING,
    FTP_CHECKING_OLD,
    FTP_CLOSING_OLD,
    FTP_DIRECTORY_CHANGING,
    FTP_NEGOTIATING,
    FTP_TRANSFERRING_FILE,
    FTP_TRANSFERRING_DIRECTORY,
    FTP_FINISHING,
    FTP_FINISHED_FILE_OK,           /* Finished okay having read a file */
    FTP_FINISHED_DIR_OK,            /* Finished okay with a directory listing */
    FTP_FINISHED_DIAG_OK,           /* Finished with an error and have diagnostics available */
    FTP_FINISHED_BAD                /* Finished with an error but no diagnostics available */
} FTP_STATUS;

static char *ftp_status_names [] =
{
    "FTP_WAITING_CONNECTION",
    "FTP_CONNECTING",
    "FTP_AUTHENTICATING",
    "FTP_CHECKING_OLD",
    "FTP_CLOSING_OLD",
    "FTP_DIRECTORY_CHANGING",
    "FTP_NEGOTIATING",
    "FTP_TRANSFERRING_FILE",
    "FTP_TRANSFERRING_DIRECTORY",
    "FTP_FINISHING",
    "FTP_FINISHED_FILE_OK",
    "FTP_FINISHED_DIR_OK",
    "FTP_FINISHED_DIAG_OK",
    "FTP_FINISHED_BAD"
};

#endif /* 0 */

/* ---- WebFTP + 0 - WebFTP_Open ---- */
#ifdef FTP_PUT
#define webftp_open_PUT        0x0001
#define webftp_open_NotHTML    0x0002
#endif

typedef struct
{
    struct sockaddr_in      *addr;
    char                    *user_name;
    char                    *passwd;
    char                    *acct;
    char                    *path;
    char                    *local_name;
    unsigned int            flags;
    unsigned int            maxidle;        /* New 04-10-95 */
    args_PAD8;
} ftp_open_in;

typedef struct
{
    struct sess             *session;
    args_PAD1;
} ftp_open_out;

typedef union
{
    ftp_open_in             in;
    ftp_open_out            out;
} ftp_open_args;

/* ---- WebFTP + 1 - WebFTP_Status ---- */

typedef struct
{
    struct sess             *session;
    unsigned int            flags;
    args_PAD2;
} ftp_status_in;

typedef struct
{
    FTP_STATUS	            status;
    int                     rc;
    int	                    data_so_far;
    char                    *local_name;
    int                     ro_handle;
    int                     data_total;         /* New 0.08 */
    args_PAD5;
} ftp_status_out;

typedef union
{
    ftp_status_in           in;
    ftp_status_out          out;
} ftp_status_args;

/* ---- WebFTP + 2 - WebFTP_Close ---- */

#define webftp_close_DELETE_FILE        0x0001

typedef struct
{
    struct sess             *session;
    unsigned int            flags;
    args_PAD2;
} ftp_close_in;

typedef struct
{
    FTP_STATUS              status;
    int                     rc;
    args_PAD2;
} ftp_close_out;

typedef union
{
    ftp_close_in            in;
    ftp_close_out           out;
} ftp_close_args;


/* ---- WebFTP + 3 - WebFTP_CloseIdle ---- */


typedef struct
{
    unsigned int            flags;
    args_PAD1;
} ftp_closeidle_in;

typedef struct
{
    int                     rc;
    args_PAD1;
} ftp_closeidle_out;

typedef union
{
    ftp_closeidle_in        in;
    ftp_closeidle_out       out;
} ftp_closeidle_args;



#endif /* included_webftp_h */

/* eof webftp.h */

