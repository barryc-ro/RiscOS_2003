typedef unsigned long ipaddr;

#define SCRIPT_SIZE            255      // max. size in bytes of script data

typedef struct
{
  ipaddr addr;
  int port;
} proxy;

typedef struct {

  char flags;
  char data[SCRIPT_SIZE];

} script;

#if TRUE
typedef struct
{
  char *pstnnum;
  char *loginid;
  char *loginsecret;
} carddata;

#else
typedef struct
{
  unsigned int formatvn;
  
  unsigned int ipscheme :  8;
  unsigned int mailrx   :  8;
  unsigned int mailtx   :  8;
  unsigned int bootprot :  8;

  unsigned int linkauth :  8;
  unsigned int netfs    :  8;
  unsigned int userpref :  8;
  unsigned int spare0   :  8;
  
  unsigned int cardreg  :  1;
  unsigned int authen   :  1;
  unsigned int soaken   :  1;
  unsigned int plipen   :  1;
  unsigned int stateen  :  1;
  unsigned int spare1   : 27;
   
  unsigned int ispid;
  unsigned int ncid[2];
  char pstnnum[20];
  ipaddr staticip;
  ipaddr mailrxhost;
  ipaddr mailtxhost;
  ipaddr nntphost;
  ipaddr dnsprimary;
  ipaddr dnsbackup;
  ipaddr timeprimary;
  ipaddr timebackup;
  proxy httpproxy;
  proxy waisproxy;
  proxy ftpproxy;
  proxy gopherproxy;
  proxy securityproxy;
  proxy fservprimary;
  proxy fservbackup;
  char loginid[24];
  char loginsecret[24];
  script ispscript;
} carddata;
#endif

BOOL CreateFiles(carddata *card);
