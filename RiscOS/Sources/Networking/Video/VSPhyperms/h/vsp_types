#ifndef VSP_TYPES_H_
#define VSP_TYPES_H_
/*
* AR I have extended this header file to extend global types such as the claim
* therefore types are defined in the order of file scope or here if module scope
* beyond this they are library scope
*/

typedef enum {
  	true = 1,
  	false = 0
} bool;

typedef enum {
  	ErrorOccurred = 0,
  	NoError	= 1
} error_flag;

typedef enum {
  	claim_token = 0,
  	free_token  = 1
} semaphor;

typedef enum {
  	claim_event  = 0,
  	ignore_event = 1
} claim_flag;

// this is used to determine if a dummy ack needs to
// be sent to the server to indicate weather we are
// healthy.
typedef enum {
	comms = 0,
	no_comms = 1
} server_comms;

// this is defined in 4.4 of the specification
typedef enum {
	data = 0,
	play_preparation = -1,
	dummy_ack = -2
} ACK_type;

// these are used to determine the type of callback
typedef enum {
  callback_foreground = 0x01,
  callback_bufferfree = 0x02,
  callback_trickplay  = 0x04,
  callback_tokenfree  = 0x08
} callback_flag;

#endif
