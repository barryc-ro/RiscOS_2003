
#ifndef MKTGEN_ORACLE
#define MKTGEN_ORACLE
/*---------------------------------- mktgen.h -------------------------------*/
/* mktgen.h - Media Kernel Transport GENeric constants                       */
/*                                                                           */
/* Certain constants related to the generic transport wrap defined by Oracle */
/* are of interest to various components of the system.  This file is to act */
/* as a central repository for these constants.  It should not need to       */
/* depend upon any component, and should only change if our specification    */
/* changes.                                                                  */
/*                                                                           */
/* MODIFIED:                                                                 */
/*   asamuels   10/24/95        Redefinition                                 */
/*   dpawson    05/16/95        Creation                                     */
/*---------------------------------------------------------------------------*/

/*
 * Oracle Corporation
 * Oracle Media Server (TM)
 * Copyright (C) 1993-1995
 */

/*---------------------------------------------------------------------------*/
/*                                                                           */
/* Frame Header Format:                                                      */
/*                                                                           */
/* ---------------------------------------------------------                 */
/* | F0F0F003 | Size     | PSeq | RV | DP | Type     | CSeq |                */
/* ---------------------------------------------------------                 */
/* | 4 bytes  | 4 bytes  | 2 by | 1b | 1b | 4 bytes  | 2 by |                */
/* ---------------------------------------------------------                 */
/*  0          4          8      10   11   12         16    18               */
/*                                                                           */
/*   F0F0F003  Eye catcher/magic value/line sync code                        */
/*       Size  Length of data                                                */
/*       PSeq  Sequence number of packet                                     */
/*         RV  ReVision level of packet format                               */
/*         DP  Start of data offset(Data Position) = header length           */
/*       Type  Indicates the type of data in packet(video,control,data ...)  */
/*       CSeq  Indicates first packet sequence number of current command     */
/*                                                                           */
/*---------------------------------------------------------------------------*/


/* Size defines */
#define MktGenHdrLen            18   /* Length of a generic transport header */
#define MktGenPayloadLen        1000          /* Payload in a generic packet */
#define MktGenDataPid           0x100         /* Pid indicating data packets */
#define MktGenPacketLen         1024   /* Length of a generic framing packet */
#define MktGenPayldOhd          0   /* Length of payload formatting overhead */

/* Offset defines */
#define MktGenEcOff             0         /* Offset in header for Eyecatcher */
#define MktGenSzOff             4       /* Offset in header for payload size */
#define MktGenPSeqOff           8    /* Offset in header for sequence number */
#define MktGenRevOff            10    /* Offset in header for revision level */
#define MktGenDpOff             11       /* Offset in header for data offset */
#define MktGenTypOff            12       /* Offset in header for packet type */
#define MktGenCSeqOff           16      /* Offset in header for cmd sequence */

#define MktGenEyeCatch          0xF0F0F003              /* Eye catcher value */

#define MktGenRevision          1                  /* Current revision level */

#define MktGenDataPos           MktGenHdrLen   /* Offset of 1st byte of data */

/* Types */
#define MktGenVidTyp            0x0001                         /* Video type */
#define MktGenCtlTyp            0x0002               /* Control Channel type */
#define MktGenDatTyp            0x0100                          /* Data type */
#endif /* !MKTGEN_ORACLE */
