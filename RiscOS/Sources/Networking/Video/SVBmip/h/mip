
#define rspOk                    0
#define rspFormatError           1
#define rspNoSession             2
#define rspNoNetworkResource     3
#define rspNoServerResource      4
#define rspEntitlementFailure    5
#define rspBcProgramOutOfService 6
#define rspRedirect              7
#define rspNoVideo               997
#define rspTimedout              998
#define rspBadChannel            999

#define CHANNEL_UP               1111110
#define CHANNEL_DOWN             1111111

#define c_flags_SUBSCRIBED       1<<0;

#define N_CHANNELS 128

struct cbuf {
    int            c_nbr;        /* channel number on handset */
    struct in_addr c_group;      /* multicast group address to join */
    int            c_port;       /* UDP port to receive data */
    int            c_flags;      /* various flags */
    int            c_joins;      /* channel group joins count */
    int            c_leaves;     /* channel group leaves count */
    char           c_name[64];   /* channel name */
};


/* c.mip */
_kernel_oserror *mip_startstream ( int argc , char **argv , int handle );
_kernel_oserror *mip_closestream ( void );
_kernel_oserror *mip_playcontrol ( int do_fast_scan , int val );
void mip_initstream ( int handle , int port );
int mip_channel_index ( int c_id );
char *mip_channel_name ( int c_id );
int mip_channel_port ( int c_id );
struct in_addr *mip_channel_group ( int c_id );
int mip_set_cur_chan ( int c_id );
int mip_next_channel ( void );
int mip_last_channel ( void );
int join_mip_group ( int new_c_id );
int leave_mip_group ( int c_id );
int read_channel_info ( void );
int caseless_strcmp ( char *a , char *b );
int caseless_strncmp ( char *a , char *b , int n );
