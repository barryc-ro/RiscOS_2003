#ifndef SVBGeneric_SVBGErrors__

  #define SVBGeneric_SVBGErrors__
  #include <VideoCtrl.h>

  /* Error messages */

  enum
  {
    svbgeneric_ERROR_CLIENT_ID_NOT_FOUND = VIDEOCONTROL_ERROR1_BASE + SVB_GENERIC_OFFSET,
    svbgeneric_ERROR_ALREADY_SETUP,
    svbgeneric_ERROR_NOT_SETUP_YET,
    svbgeneric_ERROR_MESSAGE_NOT_FOUND,
    svbgeneric_ERROR_CONNECT_GENERAL,
    svbgeneric_ERROR_CONNECT_WRITE,
    svbgeneric_ERROR_CONNECT_READ,
    svbgeneric_ERROR_CONNECT_TIMEOUT,
    svbgeneric_ERROR_CONNECT_DNS,
    svbgeneric_ERROR_NO_SERVER_SESSION,

    svbgeneric_ERROR_MEMORY_EXHAUSTED    = vc_ERROR_MEMORY_EXHAUSTED,
    svbgeneric_ERROR_IN_PROGRESS         = vc_ERROR_IN_PROGRESS,
    svbgeneric_ERROR_INVALID_OPTIONS     = vc_ERROR_INVALID_OPTIONS
  };

#endif /* SVBGeneric_SVBGErrors__ */
