#ifndef PlugPlay_Fixed__
#define PlugPlay_Fixed__

/* Public types */

typedef unsigned int fixed;

/* Public prototypes */

/****** fixed_fixed_multiply() *********************************************

Purpose:    Multiplies two fixed-point numbers
In:         Two fixed-point numbers
Out:        The fixed-point result

***************************************************************************/

extern fixed fixed_fixed_multiply (fixed multiplier, fixed multiplicand);

/****** fixed_int_divide() *************************************************

Purpose:    Divides two integers
In:         Two integers
Out:        The fixed-point result

***************************************************************************/

extern fixed fixed_int_divide (unsigned int dividend, unsigned int divisor);

/****** fixed_fixed_divide() ***********************************************

Purpose:    Divides two fixed-point numbers
In:         Two fixed-point numbers
Out:        The fixed-point result

***************************************************************************/

extern fixed fixed_fixed_divide (fixed dividend, fixed divisor);

#endif
