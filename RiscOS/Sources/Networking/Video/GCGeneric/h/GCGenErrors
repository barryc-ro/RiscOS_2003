#ifndef GCGeneric_GCGenErrors__
  #define GCGeneric_GCGenErrors__

  #ifndef VideoControl_VideoCtrl__
    #include <VideoCtrl.h>
  #endif

  /* Error messages */

  enum
  {
    GCGeneric_ERROR_CLIENT_ID_NOT_FOUND = VIDEOCONTROL_ERROR1_BASE + GC_GENERIC_OFFSET,
    GCGeneric_ERROR_ALREADY_SETUP,
    GCGeneric_ERROR_NOT_SETUP_YET,
    GCGeneric_ERROR_MESSAGE_NOT_FOUND,
    GCGeneric_ERROR_CONNECT_GENERAL,
    GCGeneric_ERROR_CONNECT_WRITE,
    GCGeneric_ERROR_CONNECT_READ,
    GCGeneric_ERROR_CONNECT_TIMEOUT,
    GCGeneric_ERROR_CONNECT_DNS,

    GCGeneric_ERROR_MEMORY_EXHAUSTED    = vc_ERROR_MEMORY_EXHAUSTED,
    GCGeneric_ERROR_IN_PROGRESS         = vc_ERROR_IN_PROGRESS,
    GCGeneric_ERROR_INVALID_OPTIONS     = vc_ERROR_INVALID_OPTIONS
  };

#endif /* GCGeneric_GCGenErrors__ */
