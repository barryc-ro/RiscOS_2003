#ifndef LVFGeneric_LVFGErrors__
  #define LVFGeneric_LVFGErrors__

  #include <VideoCtrl.h>

  /* Error messages */

  enum
  {
    lvfgeneric_ERROR_CLIENT_ID_NOT_FOUND = VIDEOCONTROL_ERROR1_BASE + LVF_GENERIC_OFFSET,
    lvfgeneric_ERROR_ALREADY_SETUP,
    lvfgeneric_ERROR_NOT_SETUP_YET,
    lvfgeneric_ERROR_MESSAGE_NOT_FOUND,
    lvfgeneric_ERROR_NO_SERVER_SESSION,
    lvfgeneric_ERROR_CANNOT_OPEN_FILE,
    lvfgeneric_ERROR_MPEG_TOO_OLD,

    lvfgeneric_ERROR_MEMORY_EXHAUSTED    = vc_ERROR_MEMORY_EXHAUSTED,
    lvfgeneric_ERROR_IN_PROGRESS         = vc_ERROR_IN_PROGRESS,
    lvfgeneric_ERROR_INVALID_OPTIONS     = vc_ERROR_INVALID_OPTIONS
  };

#endif /* LVFGeneric_LVFGErrors__ */
