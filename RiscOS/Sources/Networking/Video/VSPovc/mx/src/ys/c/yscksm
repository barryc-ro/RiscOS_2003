#ifndef SYSI_ORACLE
#include <sysi.h>
#endif
#ifndef SYSXCD_ORACLE
#include <sysxcd.h>
#endif
#ifndef YSMSC_ORACLE
#include <ysmsc.h>
#endif


ub2 ysChecksum(ub1 *buf, size_t len)
{
  ub4  sum, cnt;
  ub2 *ptr;
  ub1  *rb, tmp[2];

  
  rb = sysxAlignPtr(buf, sizeof(ub2));

  
  if (rb - buf > 1)
    ysePanic(YS_EX_FAILURE);
  else if (rb - buf == 1)
    {
      
      tmp[0] = 0;
      tmp[1] = *buf;
      sum = *((ub2 *) tmp);
      
      len -= 1;
    }
  else
    sum = 0;

  
  for (ptr = (ub2 *) rb, cnt = len >> 1; cnt; cnt--)
    sum += *ptr++;

  
  if (len & 0x1)
    {
      tmp[0] = *((ub1 *) ptr);
      tmp[1] = 0;
      sum += *((ub2 *) tmp);
    }

  
  sum = (sum >> 16) + (sum & 0xffff);
  sum += (sum >> 16);

  
  if (rb - buf == 1)
    sum = (sum >> 8) + ((sum & 0xff) << 8);

  
  sum = ~sum;
  return (ub2) (sum & 0xffff);
}
