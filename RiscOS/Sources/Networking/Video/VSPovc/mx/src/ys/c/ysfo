#ifndef SYSI_ORACLE
#include <sysi.h>
#endif
#ifndef YSFO_ORACLE
#include <ysfo.h>
#endif


#define YSFOPFX  max(SYSM_STRICT_ALIGN, sizeof(dvoid *))


void ysFOCreate(ysfop *fop, size_t osz, ysmhp *hp, CONST char *tag)
{
  
  osz = (size_t) ysRoundVal((ub4) osz, sizeof(dvoid *));
  if (osz == 0 || osz > 4096)
    yseThrow(YS_EX_BADPARAM);

  
  fop->chn = (dvoid *) 0;
  fop->stash = (ub1 *) 0;
  fop->scnt = (sword) 0;
  fop->ccnt = (sword) 0;

  fop->osz = osz;
  fop->hp = hp;
  fop->tag = tag;

  
  fop->csz = (ub4) 2;               
  fop->mcsz = ((ub4) 8192) / osz;
  if (fop->mcsz > (ub4) 64)
    fop->mcsz = (ub4) 64;
}


void ysFODestroy(ysfop *fop)
{
  ub1 *oldstash;

  
  if (!fop->stash)
    return;

  
  fop->stash -= (fop->osz * fop->scnt);

  do
    {
      
      fop->stash -= YSFOPFX;
      oldstash = *((ub1 **) fop->stash);

      
      ysmFree(fop->hp, (dvoid *) fop->stash);

      
      fop->stash = oldstash;
    } while (fop->stash);
}


dvoid *ysFOAlloc(ysfop *fop)
{
  dvoid *ptr;
  ub1   *oldstash;
  size_t amt;

  if (fop->chn)
    {
      
      ptr = fop->chn;
      fop->chn = *((dvoid **) fop->chn);
      return ptr;
    }
  else if (!fop->scnt)
    {
      
      oldstash = fop->stash;

      
      if (fop->csz < fop->mcsz)
	fop->csz <<= 1;

      
      amt = YSFOPFX + (size_t) (fop->osz * fop->csz);

      fop->stash = (ub1 *) ysmAlloc(fop->hp, amt, fop->tag);

      if (!fop->stash)
	{
	  
	  fop->stash = oldstash;
	  return (dvoid *) 0;
	}
      else
	{
	  
	  *((ub1 **) fop->stash) = oldstash;

	  
	  fop->stash += amt;
	  fop->scnt = (sword) fop->csz;
	}
    }

  
  fop->scnt--;
  fop->stash -= fop->osz;
  return (dvoid *) fop->stash;
}
