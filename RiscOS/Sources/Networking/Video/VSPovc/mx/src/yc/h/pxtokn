/* $Header$ */



 


#ifndef PXTOKN
#  define PXTOKN





#  define PXMAXTOKNAME 32


typedef struct {
  sb2  tokid;                                   
  char toknam[PXMAXTOKNAME];                          
  ub2  column;                              
  ub2  line;                                    
  char *filnam;                
  PXVALTYPE attrib;                             
} pxtokn;



#  define PXGETNEXT  0x01                              
#  define PXUNGET    0x02       
#  define PXUSDTOK   0x03         
#  define PXFNDERR   0x04        
#  define PXGETLINE  0x08      
                               
                               
#  define PXERRORMSG 0x10                   
#  define PXCLEARSTK 0x20                          
#  define PXFREETOK  0x40                     


#  define pxtcrt(tid, tnam, tcol, tline, tfil, tatt, token) \
     { \
       (token)->tokid = (tid); \
       strncpy((char*)(token)->toknam, (char *)(tnam), PXMAXTOKNAME);\
       (token)->column = (tcol); \
       (token)->line = (tline); \
       (token)->filnam = (char *)(tfil); \
       if (tatt)                 \
	 memcpy((void *)&(token)->attrib, (void *)(tatt), \
		sizeof(PXVALTYPE)); \
     }

#  define pxtgid(token) ((token)->tokid)
#  define pxtnam(token) ((token)->toknam)
#  define pxtcol(token) ((token)->column)
#  define pxtlin(token) ((token)->line)
#  define pxtfil(token) ((token)->filnam)
#  define pxtatt(token) (&((token)->attrib))

#endif
