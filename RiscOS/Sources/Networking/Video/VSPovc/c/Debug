#include <string.h>

#include <kernel.h>
#include <swis.h>

/******* SetSystemVariable *************************************************

Purpose: Sets given system variable

Inputs: Variable name
        string to set it to

Outputs: any errors encountered, else none.

***************************************************************************/

void SetSystemVariable (const char *variable, const char *string)
{
  _kernel_swi_regs r;

  r.r[0] = (int) variable;
  r.r[1] = (int) string;
  r.r[2] = strlen(string);
  r.r[3] = 0;
  r.r[4] = 4;

  _kernel_swi(OS_SetVarVal, &r, &r);

}
