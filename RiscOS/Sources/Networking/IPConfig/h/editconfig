/**** THIS INFORMATION IS INCORRECT AT THIS TIME ****/
#define NOT_USED(v) ((void) 0)

#define FLAGCMOS        0x6D
#define FLAGBIT         (1<<2)
#define NCIPCMOS        0x1E
#define SERVERIPCMOS    0x22
#define GATEWAYIPCMOS   0x26
#define NETMASKCMOS     0x2A
#define DNSIPCMOS       0x95
#define BOOTMOUNTCMOS   0x50

#define PATHSZ          27

#define FLAGS_ENABLED   (1<<0)

typedef struct _ip_data
{
    unsigned char client_ip[4];
    unsigned char server_ip[4];
    unsigned char gateway_ip[4];
    unsigned char net_mask[4];
    unsigned char dns_ip[4];
    unsigned char flags;
    char boot_mount[PATHSZ];
} ip_data;

extern int read_cmos_byte(int location);
extern void write_cmos_byte(int location, unsigned int value);
extern void ReadIPCMOS( int location, unsigned char *p );
extern void ReadStringCMOS( int location, char *p, int bufsz );

extern void newline(void);
extern void write_tag_msg(const char *tag);
extern void write_tag_msg_nl(const char *tag);
extern _kernel_oserror *read_msg(const char *tag, char *buffer, size_t msg);
