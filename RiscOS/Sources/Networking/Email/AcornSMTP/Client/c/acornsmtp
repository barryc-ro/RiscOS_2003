#include "kernel.h"
#include "acornsmtp.h"

_kernel_oserror *_AcornSMTP_Register(unsigned int *flags,
                                     void **pollword_addr)
{
  _kernel_oserror *e = 0;
  _kernel_swi_regs r;
  
  r.r[0] = (int)*flags;
  
  e = _kernel_swi(AcornSMTP_Register, &r, &r);
  
  if (e == 0)
  {
    *flags = r.r[0];
    *pollword_addr = (void*)r.r[1];
  }
  
  return e;
}


_kernel_oserror *_AcornSMTP_DeRegister(unsigned int *flags,
				       void **pollword_addr)
{
  _kernel_oserror *e = 0;
  _kernel_swi_regs r;
  
  r.r[0] = (int)*flags;
  r.r[1] = (int)*pollword_addr;
  
  e = _kernel_swi(AcornSMTP_DeRegister, &r, &r);
  
  if (e == 0)
  {
    *flags = r.r[0];
    *pollword_addr = (void*)r.r[1];
  }
  
  return e;
}  


_kernel_oserror *_AcornSMTP_ReleaseData(unsigned int *flags,
					void *pollword_addr,
					int swi_num,
					void *data)
{
  _kernel_oserror *e = 0;
  _kernel_swi_regs r;

  r.r[0] = (int)*flags;
  r.r[1] = (int)pollword_addr;
  r.r[2] = (int)swi_num;
  r.r[3] = (int)data;
 
  e = _kernel_swi(AcornSMTP_ReleaseData, &r, &r);
  
  if (e == 0)
  {
    *flags = r.r[0];
  }
  
  return e;
}


_kernel_oserror *_AcornSMTP_SendMail(unsigned int *flags,
				       void *pollword_addr,
				       char *message,
				       char *recipient,
				       char *sender,
				       char *hostname,
				       int port_num,
				       void **unique_id)
{
  _kernel_oserror *e = 0;
  _kernel_swi_regs r;
  
  r.r[0] = (int)*flags;
  r.r[1] = (int)pollword_addr;
  r.r[2] = (int)message;
  r.r[3] = (int)recipient;
  r.r[4] = (int)sender;
  r.r[5] = (int)hostname;
  r.r[6] = (int)port_num;
 
  e = _kernel_swi(AcornSMTP_SendMail, &r, &r);
  
  if (e == 0)
  {
    *flags     = r.r[0];
    *unique_id = (void*)r.r[1];
  }
  
  return e;
}


AcornSMTP_returned_data *_AcornSMTP_GetReturnedData(void *pollword_addr)
{
  int *address = (int*)pollword_addr;
  
  if (address == 0)
    return 0;
  if (*address == 0)
    return 0;
  else
    return (AcornSMTP_returned_data*)*address;
}

