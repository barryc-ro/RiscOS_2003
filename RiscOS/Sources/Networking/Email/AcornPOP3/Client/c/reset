/* ************************************************************************** */
/*                                                                            */
/* Include header files - System                                              */
/*                                                                            */
/* ************************************************************************** */
#include <string.h>
#include <stdlib.h>
#include "kernel.h"


/* ************************************************************************** */
/*                                                                            */
/* Include header files - External Libraries                                  */
/*                                                                            */
/* ************************************************************************** */
#include "DebugLib/debuglib.h"
#include "Email/EmailLib/Elib_priv.h"


/* ************************************************************************** */
/*                                                                            */
/* Include header files - Project defined                                     */
/*                                                                            */
/* ************************************************************************** */
#include "common.h"
#include "reset.h"
#include "cmdresp.h"
#include "pop_utils.h"
#include "errortable.h"


/* ************************************************************************** */
/*                                                                            */
/* External globals                                                           */
/*                                                                            */
/* ************************************************************************** */
extern process_details process1;						/* This client's process detail */
extern errno;									/* From Internet                */


/* ************************************************************************** */
/*                                                                            */
/* Constants                                                                  */
/*                                                                            */
/* ************************************************************************** */
static const int SLEEP_TIME    = 1;
static const int TIME_SLICE    = 50;						/* Time slice to use                                                   */
static char RSETCMD[] = "RSET";


/* ************************************************************************** */
/*                                                                            */
/* New enumerated types                                                       */
/*                                                                            */
/* ************************************************************************** */
typedef enum
{
  RSET,
  RSET_RESPONSE
} STATES;

typedef struct
{
  BOOL                in_FSM;							/* Thread currently executing in FSM                   */
  BOOL                pending_CB;						/* There is a CallBack/re-entrancy into the FSM pending*/
  BOOL                need_CB;							/* There needs to be a CallBack set to re-enter the FSM*/
  time_t              t_slice;
  _kernel_oserror    *error;
  int                 errno;
  int                 rset_timeout;
  int                 sock;							// socket descriptor
  char               *response;							// response line from server
  STATES              state;
  BOOL                end;
  BOOL                exit;
} reset_context;


/* ************************************************************************** */
/*                                                                            */
/* Function Prototypes - Private to this file                                 */
/*                                                                            */
/* ************************************************************************** */
static void reset_FSM_RSET(reset_context *c);
static void reset_FSM_RSET_RESPONSE(reset_context *c);
extern _kernel_oserror *reset_FSM(reset_context *context);
static reset_context *new_reset_context(void);
static _kernel_oserror* reset_CAhandler(_kernel_swi_regs *r, void *pw, void *data);
static _kernel_oserror* CA_reset(void *data);
static _kernel_oserror *reset_CBhandler(_kernel_swi_regs *r, void *pw, void *data);


/* ************************************************************************** */
/*                                                                            */
/* Functions                                                                  */
/*                                                                            */
/* ************************************************************************** */


/* ************************************************************************** */
/*
   FUNCTION:       reset
   DESCRIPTION:    Function to reset server session.  Uses the RSET command
   DEPENDENCIES:      			errortable	errortable.h
   DEPENDED ON BY: function		handle_swi_AcornPOP3_Disconnect	swihndlers.c
   INPUT PARAMS:   int			timeout_RSET	timeout for RSET command (UNUSED)
   OUTPUT PARAMS:  int*			internet_err	Internet errno
   RETURN VALUE:   			NULL		if handled successfully,
   							else ptr to error block
   CONSTANTS:      NONE
   VARIABLES:      _kernel_oserror*	error		result to return
    		   int			sock		socket descriptor to use
   		   char*		response	response line from server
   		   int			rc		return code from sscanf
 */
/* ************************************************************************** */
extern _kernel_oserror* reset(int  timeout_RSET)
{
  _kernel_oserror *error   = 0;							/* result to return */
  reset_context  *context = new_reset_context();

  if (context == 0)
    error = ERROR(MALLOCFAILED);
  else
  {
    context->sock = process1.socknum;
    context->rset_timeout = timeout_RSET;
    process1.state        = PROCESSING;						/* make sure main state is IDLE so event handler doesn't do anything */
    error = CB_reset(context);
  }

  return error;
}


/* ************************************************************************** */
/*
   FUNCTION:
   DESCRIPTION:
   DEPENDENCIES:
   DEPENDED ON BY:
   INPUT PARAMS:
   OUTPUT PARAMS:
   RETURN VALUE:
   CONSTANTS:
   VARIABLES:
 */
/* ************************************************************************** */
static reset_context *new_reset_context(void)
{
  reset_context *c = malloc(sizeof(reset_context));
  dprintf(("", "new_reset_context\n"));

  if (c)
  {
    memset(c, 0, sizeof(reset_context));
    c->sock = -1;
    c->state = RSET;
  }

  return c;
}


/* ************************************************************************** */
/*
   FUNCTION:
   DESCRIPTION:
   DEPENDENCIES:
   DEPENDED ON BY:
   INPUT PARAMS:
   OUTPUT PARAMS:
   RETURN VALUE:
   CONSTANTS:
   VARIABLES:
 */
/* ************************************************************************** */
extern _kernel_oserror *reset_FSM(reset_context *context)
{
  _kernel_oserror *error = 0;

  dprintf(("", "reset_FSM: context: %x\n", context));
  if (context == 0)
    error = ERROR(INTERNALERR);

  if (!error)
  {
    context->t_slice = clock() + TIME_SLICE;
    context->exit = FALSE;
    do
    {
      switch (context->state)
      {
        case RSET:
        {
          dprintf(("", "reset_FSM: RSET\n"));
          reset_FSM_RSET(context);
          break;
        }
        case RSET_RESPONSE:
        {
          dprintf(("", "reset_FSM: RSET_RESPONSE\n"));
          reset_FSM_RSET_RESPONSE(context);
          break;
        }
        default:
        {
          dprintf(("", "reset_FSM: INTERNAL ERROR\n"));
          error = ERROR(INTERNALERR);
          context->end = TRUE;
          break;
        }
      } /* end switch */
    } while ((!expired(context->t_slice)) && (!context->end) && (!context->exit));
  } /* endif */

  if (!error)
  {
    int state = pop_irqs_off();							/* CRITICAL SECTION start, turn off interrupts */
    context->in_FSM = FALSE;							/* Clear the in_FSM flag as we are about to return */
    if (context->end)								/* If this is the end of the FSM execution, then */
    {
      process1.state = PROCESSING;						/* Ensure main state is IDLE                  */
      callx_remove_callafter(&reset_CAhandler, context);		/* Ensure any pending callafter is removed    */
      callx_remove_callback(&reset_CBhandler, context);		/* Ensure any pending callback is removed     */
      process1.disconnect.flags = 0;
      process1.disconnect.error = context->error;
      process1.disconnect.errno = context->errno;
      notify_client(&(process1.disconnect), 0, 0);
      free(context);      							/* destroy the context                        */
      context = 0;
    }
    else if (!context->exit)							/* else, if exit not set then t_slice must have expired, so */
    {
      context->pending_CB = FALSE;						/* ensure pending flag is FALSE, it should be */
      context->need_CB = FALSE;							/* set need_CB to FALSE as we are going to set a callback */
      error = CA_reset(context);					/* set a callafter to re-enter the FSM later  */
    }
    else if (context->need_CB)							/* else, if need callback flag is set, then   */
    {
      context->need_CB = FALSE;							/* clear the flag and                         */
      error = CB_reset(context);					/* set a callback to re-enter the FSM         */
    }
    pop_restore_irqs(state);							/* End of CRITICAL SECTION, restore irqs      */
  }

  return error;
}


static _kernel_oserror* CA_reset(void *data)
{
  if (data)
    return callx_add_callafter(SLEEP_TIME, &reset_CAhandler, data);
  else
    return ERROR(NULLADDR);
}


extern _kernel_oserror* CB_reset(void *data)
{
  _kernel_oserror *error = 0;
  int              state;
  reset_context *context = (reset_context*)data;

  if (context)
  {
    state = pop_irqs_off();							/* CRITICAL SECTION - Turn off interrupts */
    if (!context->pending_CB)							/* If there is not a callback already set to go off, then */
    {
      if (context->in_FSM)							/* If there is currently a thread of execution in the FSM, then */
        context->need_CB = TRUE;						/* a callback needs to be set by that thread when it terminats  */
      else									/* otherwise */
      {
        context->pending_CB = TRUE;						/* We can set a callback, so set the flag and set the callback */
        error = callx_add_callback(&reset_CBhandler, data);
      }										/* endif current thread executing check */
    }										/* endif pending callback check */
    pop_restore_irqs(state);							/* End of CRITICAL SECTION - Restore interrupts */
  }
  else
    error = ERROR(NULLADDR);

  return error;
}


/* ************************************************************************** */
/*
   FUNCTION:
   DESCRIPTION:
   DEPENDENCIES:
   DEPENDED ON BY:
   INPUT PARAMS:
   OUTPUT PARAMS:
   RETURN VALUE:
   CONSTANTS:
   VARIABLES:
 */
/* ************************************************************************** */
extern _kernel_oserror *reset_CBhandler(_kernel_swi_regs *r, void *pw, void *data)
{
  reset_context *context = (reset_context*)data;
  int state;
  _kernel_oserror *error = 0;

  UNUSED(r);
  UNUSED(pw);

  if (context)
  {
    state = pop_irqs_off();
    context->in_FSM     = TRUE;
    context->pending_CB = FALSE;
    pop_restore_irqs(state);
    error = reset_FSM(data);
  }
  else
    error = ERROR(NULLADDR);

  return error;
}


static _kernel_oserror* reset_CAhandler(_kernel_swi_regs *r, void *pw, void *data)
{
  UNUSED(r);
  UNUSED(pw);

  return CB_reset(data);
}


/* ************************************************************************** */
/*
   FUNCTION:
   DESCRIPTION:
   DEPENDENCIES:
   DEPENDED ON BY:
   INPUT PARAMS:
   OUTPUT PARAMS:
   RETURN VALUE:
   CONSTANTS:
   VARIABLES:
 */
/* ************************************************************************** */
static void reset_FSM_RSET(reset_context *c)
{
  c->error = command_response(c->sock,
                              RSETCMD,
                              4,
                              &(c->response),
                              c->rset_timeout,
                              &(c->errno),
                              &(c->error),
                              (function)&reset_FSM,
                              c);
  if (!c->error)
  {
    c->state = RSET_RESPONSE;
    c->exit = TRUE;
  }
  else
    c->end = TRUE;
}


/* ************************************************************************** */
/*
   FUNCTION:
   DESCRIPTION:
   DEPENDENCIES:
   DEPENDED ON BY:
   INPUT PARAMS:
   OUTPUT PARAMS:
   RETURN VALUE:
   CONSTANTS:
   VARIABLES:
 */
/* ************************************************************************** */
static void reset_FSM_RSET_RESPONSE(reset_context *c)
{
  destroy_response(&(c->response));
  c->end = TRUE;
}


