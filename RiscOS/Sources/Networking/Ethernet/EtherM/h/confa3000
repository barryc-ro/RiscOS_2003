/* a3000.config.h */

#ifndef included_a3000_config_h
#define included_a3000_config_h

#define CARD_WIDTH              8
#define HANDLE_8005             1
#define HANDLE_8004             1
#define HANDLE_16BIT            1
#define HANDLE_PODULES          1
#define REQUIRE_MEMC1a          1
#define SUPPORT_8005		1
#define SUPPORT_8004		1

#define IRQS_IRQV		1		 /* IRQs via the IrqV chain */

#define FLAVOUR_STRING          "8 bit MEMC1a" /* Features we require */

#define MAXSWI                  10
#define MAXCLI                  2

/* Imported/exported official numbers and strings */

#define SWI_BASE                0x439c0         /* Official SWI chunk */
#define CARDSTR                 "ea"            /* Official ethernet card type string */
#define CARDSTR_CAP		"Ea"            /* Used for the count variable */
#define EA_TYPE                 0xa4            /* Official product type code */
#define EA_ERROR_BASE           0x00800900      /* Official Borris error base 16 for ethera */
#define TITLE_STRING            "Ether3"

#endif /* included_a3000_config_h */
