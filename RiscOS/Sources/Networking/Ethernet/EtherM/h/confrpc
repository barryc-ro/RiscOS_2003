/* medusa.config.h */

#ifndef included_medusa_config_h
#define included_medusa_config_h

#define CARD_WIDTH		16
#define HANDLE_8005		0
#define HANDLE_8004		1
#define HANDLE_16BIT		1
#define HANDLE_NETCARD		1
#define HAS_CMOS		1
#define REQUIRE_MEMC1a		1
#define MEMORY_MAPPED		1
#define MULTIPE_CARDS		0
#define SUPPORT_8005		0
#define SUPPORT_8004		1

#define IRQS_IRQV		1		 /* IRQs via the IrqV chain */

#define FLAVOUR_STRING		"Network slot"	/* Features we require */

#define MAXSWI                  10
#define MAXCLI                  2

/* Imported/exported official numbers and strings */

#define SWI_BASE                0x48580         /* Official SWI chunk */
#define CARDSTR                 "eb"            /* Official ethernet card type string */
#define CARDSTR_CAP		"Eb"            /* Used for the count variable */
#define EA_TYPE                 0xe4            /* Official product type code */
#define EA_ERROR_BASE           0x00809600      /* Official Borris error base 16 for ethera */
#define TITLE_STRING            "EtherB"

#endif /* included_medusa_config_h */
