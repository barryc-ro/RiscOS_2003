/*
 * Config.h
 * Config header file for !Omni application - part of the OmniClient project
 */

#ifndef _CONFIG_H
#define _CONFIG_H

#include <Desk/Core.h>

typedef struct
{
  int 			sort;		/* Global sort type */
  int			display;	/* Global display type */
  Desk_bool			expert;		/* Expert mode flag */
  Desk_bool			autolocate;	/* Auto-location of servers flag */
} config_record;

#endif
