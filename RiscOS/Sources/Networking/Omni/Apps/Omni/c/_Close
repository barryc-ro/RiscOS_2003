#include "kernel.h"
#include "Hdrs.h"


/*  Close an open file.
 */
extern _kernel_oserror *fsentry_close(FSEntry_Close_Parameter *parm)
{
  _kernel_oserror *err = NULL;
  print_record *pr = NULL;
  _kernel_swi_regs r;

  TRACE1("fsentry_close: %x\n", parm->handle);
  if ((pr = PrintFind(parm->handle, -1, -1, -1)) == NULL) return(&mb_nfserr_BadParameters);

  /* Is there outstanding buffered data to be sent? */
  if (pr->buf && pr->bufused)
  {
    TRACE1("fsentry_close: need to send %d bytes\n", pr->bufused); 
    r.r[0] = pr->print_id;
    r.r[1] = (int) pr->buf;
    r.r[2] = pr->bufused;
    err = _kernel_swi(XOS_Bit | Omni_SendJob, &r,&r);
    pr->bufused = 0;
  }

  /* Call SWI Omni_EndJob */
  r.r[0] = pr->print_id;
  err = _kernel_swi(XOS_Bit | Omni_EndJob, &r, &r);
  TRACE1("fsentry_close: endjob = %x\n", (int) err);

  /* If no error, call SWI Omni_ClearJob, because we have no interest in ongoing status
   * reports.
   */
  if (!err)
  {
    r.r[0] = (int) pr->print_id;
    err = _kernel_swi(XOS_Bit | Omni_ClearJob, &r, &r);
    TRACE1("fsentry_close: clearjob = %x\n", (int) err);
  }

  TRACE1("fsentry_close: err = %x\n", (int) err);
  return(err);
}
