/*  Finalise - application finalisation
 */
extern Desk_bool corefini(void)
{
  TRACE("corefini.Entry:\n");

  #if 0
  /* Kill off messages */
  msgs_grouplist = NULL;

  /* Kill off event handlers */
  Desk_LinkList_Init(&eventmsg__claimanchor);
