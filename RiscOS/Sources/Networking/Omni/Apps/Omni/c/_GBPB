#include "kernel.h"
#include "Hdrs.h"


/*  Support for OS_GBPB calls.
 */
extern _kernel_oserror *fsentry_gbpb(FSEntry_GBPB_Parameter *parm)
{
  _kernel_oserror *err = NULL;
  print_record *pr = NULL;
  _kernel_swi_regs r;

  TRACE1("fsentry_gbpb: %x\n", parm->reason);
  switch (parm->reason)
  {
    case FSEntry_GBPB_Reason_PutMultipleBytes:
      /* Check for a valid print_id word */
      TRACE("fsentry_gbpb: put multiple\n");
      if (!(pr = PrintFind(parm->handle, -1, -1, -1))) return(&mb_nfserr_BadParameters);

      /* Send data with SWI Omni_SendJob */
      r.r[0] = pr->print_id;
      r.r[1] = (int) parm->address;
      r.r[2] = parm->number;
      err = _kernel_swi(XOS_Bit | Omni_SendJob, &r,&r);      
      if (!err)
      {
        parm->address = parm->address + (parm->number - r.r[2]);
        parm->number = r.r[2];        
      }      
      break;
      
    default:
      err = &mb_nfserr_DummyFSDoesNothing;
      TRACE("fsentry_gbpb: not supported\n");
      break;
  }
  return(err);
}
