work    RN      12

sp      RN      13
sp_irq  RN      R13_irq
sp_svc  RN      R13_svc

link    RN      14
link_usr RN     R14_usr
link_fiq RN     R14_fiq
link_irq RN     R14_irq
link_svc RN     R14_svc

pc      RN      15

; *** Define PC register & mode flags

N_bit           *       1 :SHL: 31
Z_bit           *       1 :SHL: 30
C_bit           *       1 :SHL: 29
V_bit           *       1 :SHL: 28
I_bit           *       1 :SHL: 27
F_bit           *       1 :SHL: 26

USR_mode        *       0
FIQ_mode        *       1
IRQ_mode        *       2
SVC_mode        *       3

; *** Use the FN directive to define floating point register names

F0      FN      0
F1      FN      1
F2      FN      2
F3      FN      3
F4      FN      4
F5      FN      5
F6      FN      6
F7      FN      7

