/* define receive and transmit buffer sizes */

#define RXQSIZE 512
#define TXQSIZE 512

#define COM1    0x3f8
#define COM2    0x2f8
#define COM3    0x3e8
#define COM4    0x2e8

/* function to get bits of an integer */

#define bit0(i) (i & 0x0001)
#define bit1(i) (i & 0x0002)
#define bit2(i) (i & 0x0004)
#define bit3(i) (i & 0x0008)
#define bit4(i) (i & 0x0010)
#define bit5(i) (i & 0x0020)
#define bit6(i) (i & 0x0040)
#define bit7(i) (i & 0x0080)
