      #define HOST_BASED

      #define CARD_BASE ((volatile char *)0x88000000u)

      #define inportb(a) (*(CARD_BASE + ((a << 2))))
      #define outportb(a, n) ((*(CARD_BASE + ((a << 2)))) = n)

      #define inp(a) inportb(a)
      #define outp(a, b) outportb(a, b)

      #define get_register(a) inportb(a)
      #define set_register(a, n) outportb(a, n)
