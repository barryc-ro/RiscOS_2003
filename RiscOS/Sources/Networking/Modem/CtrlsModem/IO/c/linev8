void v8_rx_int(void)
{
    ubyte length;
    ubyte status;
    ubyte address;

/* line_get_data(dce_rx_buffer, &length, &status); */
   address = DSP_CP_DATA_AREA_BASE;
   while (dce_length_semaphore)
   {
      dspdrv_ReadCram(address, &dce_rx_buffer[v8_rx_insert],1);
      if (v8_rx_count < DCE_BUFFER_SIZE-2)
      {
	 v8_rx_insert++;
	 v8_rx_count++;
