}

#ifdef DEBUG
int main()
{
    int t, t2;
    InitPktDescriptors();
    init_trace();
    eeprom_init();

    t = _swi(OS_ReadMonotonicTime, _RETURN(0));

    for (;;)
    {
        if (!acu_loop)
        {
            printf("master_init\n");
            master_init();
        }
        if (acu_loop)
        {
            printf("ACU_Main\n");
            ACU_Main();
        }
            printf("acu_timer\n");
            acu_timer();
    }

    return 0;

}
#endif

/*
 * wait t milliseconds
 */
void riscos_pause(int t)
{
    int n, s=_swi(OS_ReadMonotonicTime, _RETURN(0));

    do
    {
        n = _swi(OS_ReadMonotonicTime, _RETURN(0));
    }
    while ((n - s) * 10 < t);
}
