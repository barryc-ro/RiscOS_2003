#include "sys_def.h"

uword build_crc_16(ubyte in_char, uword old_crc)
{
	 ubyte temp1, temp2;

	 in_char ^= (ubyte)old_crc;

/*	 Calc # of bits in ubyte */
	 for (temp1 = temp2 = 0; temp1 < 8; temp1++)
		  if ( ( in_char >> temp1) & 0x1 )
			   temp2++; 

/*	 if odd parity */
	 if ( temp2 & 1 )
	 {
		  temp2 = 0xc0;
		  temp1 = 1 ^ ((ubyte)(old_crc >> 8));
	 }
	 else
	 {
		  temp2 = 0;
		  temp1 = (ubyte)(old_crc >> 8);
	 }

	 if ( in_char & 1 )
	 {
		  in_char >>=1;
		  in_char |= 0x80;
	 }
	 else
		  in_char >>=1;
	
	 if ( in_char & 1 )
	 {
		  in_char >>=1;
		  in_char |= 0x80;
	 }
	 else
		  in_char >>=1;
	
	 temp2 ^= ( in_char & 0x3f );
	 temp1 ^= ( in_char & 0xc0 );

	 if ( in_char & 0x80 )
	 {
		  in_char <<= 1;
		  in_char |= 1;
	 }
	 else
		  in_char <<= 1;

	 temp2 ^= ( in_char & 0x7f );
	 temp1 ^= ( in_char & 0x80 );

	 old_crc = ( temp2 << 8 );
	 old_crc |= temp1;
	
	 return (old_crc);

} /* procedure */

