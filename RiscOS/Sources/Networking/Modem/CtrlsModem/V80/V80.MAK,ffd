#
# Read global compiler directive file
!include compiler.cfg

#
# V80 objects
#
V80 =	v80_mn.obj v80_mem.obj

V80STUB =   v80_stub.obj



#
#  Tools Flags
#
LPATH  = data\v80
MPATH  = acu
NPATH  = v42

CFLGS  = $(CINCOPT)inc $(CINCOPTSEP)$(NPATH) $(CINCOPTSEP)$(MPATH) $(CINCOPTSEP)$(LPATH) $(CINCOPTSEP) $(CFLAGS)
VPATH  = .;inc;$(LPATH);$(HPATH);

#
#  Main Executable
#
V80code:    $(V80)
            @@ echo $(V80:S/.*/$(LOADOBJCMD) &$(MORE)$(RETURN)/) >> link.cmd

V80_stub:   $(V80STUB)
            @@ echo $(V80STUB:S/.*/$(LOADOBJCMD) &$(MORE)$(RETURN)/) >> link.cmd






#
#  V80 Source
#

v80_mn.obj:     v80_mn.c sys_def.h v80_mem.h v80_def.h v80_pro.h dce_line.edf
      $(CC) $(CFLGS) $(LPATH)\v80_mn.c

v80_mem.obj:    v80_mem.c sys_def.h v80_mem.h v80_def.h
      $(CC) $(CFLGS) $(LPATH)\v80_mem.c

v80_stub.obj:   v80_stub.c sys_def.h v80_pro.h
      $(CC) $(CFLGS) $(LPATH)\v80_stub.c

