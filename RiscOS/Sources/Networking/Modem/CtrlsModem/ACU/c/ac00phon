/* SYS_STAT    */  {S_ANSW,        ignore},
/* RING        */  {S_ANSW,        ignore},
/* DP_CD_OFF   */  {S_ANSW,        ignore},
/* HANGUP      */  {S_IDLE,        idle_pstn_phone_hangup},
/* RETRAIN     */  {S_ANSW,        ignore},
/* TEST        */  {S_ANSW,        ignore},
/* PARSE       */  {S_ANSW,        ignore},
/* V24         */  {S_ANSW,        pstn_at_v24},
