/* Constants */
#define WAITING_FOR_ANSWER_START    1
#define WAITING_FOR_ANSWER_STOP     2
#define ANSWER_TONE_FOUND           3

/* Local Prototypes */
void modem_vcv_config_starttone(void);
void modem_vcv_config_adsicas(void);
