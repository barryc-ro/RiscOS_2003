/              4 - BPS_2400
/              5 - BPS_4800
/              6 - BPS_7200
/              7 - BPS_9600
/              8 - BPS_12000
/              9 - BPS_14400
/                 10 - BPS_16800
/                 11 - BPS_19200
/                 12 - BPS_38400
/                 13 - BPS_57600
/                 14 - BPS_600
/
/      ubyte clock_source
/               0=TXC from modem
/               1=TXC from DTE, pin 24
/               2=TXC from RXC
