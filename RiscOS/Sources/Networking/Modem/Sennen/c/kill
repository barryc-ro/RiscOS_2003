#include "defs.h"
#include "inlines.h"
#include "wimp.h"

#include <string.h>

extern int *windowdata;

void kill_task(void)
{
  int block[64];
  int owner, caret = -1, top;
  message_block msg;

  block[0] = windowdata[0];
  _swix(Wimp_GetWindowState, _IN(1), block);
  block[7] = -2;
  wimp_openwindow(0, block);
  
  block[7] = windowdata[0];

  do
  {
    block[0] = block[7];
    _swix(Wimp_GetWindowState, _IN(1), block);
    if (block[7] != -1)
    {
      msg.header.size    = 20;
      msg.header.yourref =  0;
      _swix(Wimp_SendMessage, _IN(0) | _IN(1) | _IN(2) | _OUT(2), 19, &msg, block[7], &owner);
    }
  } while (block[7] != -1);

  top = block[0];
  _swix(Wimp_GetCaretPosition, _IN(1), block);
  if (block[0] != -1)
  {
    msg.header.size    = 20;
    msg.header.yourref =  0;
    _swix(Wimp_SendMessage, _IN(0) | _IN(1) | _IN(2) | _OUT(2), 19, &msg, block[0], &caret);
  }
  if (caret != owner)
  {
    _swix(Wimp_SetCaretPosition, _IN(0) | _IN(1) | _IN(2) | _IN(3) | _IN(4)
                             | _IN(5), top, -1, 0, 0, -1, 0);
  }
}
