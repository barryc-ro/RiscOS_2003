 [ BuildAsMPEGControl
        =       "MPEGControl", TAB
 |
        =       "MPEGTransport", TAB
 ]
	=	"$Module_MajorVersion ($Module_Date)"
 [ Module_MinorVersion <> ""
        =       " $Module_MinorVersion"
 ]
 [ BuildAsMPEGControl
        =       " (MPEG 2 Transport layer version)"
 ]
        =       0
        ALIGN

