#ifndef MPEG_MPEGCTRL_H

#ifdef __STDC_VERSION__
#if __STDC_VERSION__ >= 199901L
#define MPEG_MPEGCTRL_H_UINT64_AVAILABLE
#endif
#endif

#include <stddef.h>
#include <stdint.h>

typedef struct BufferDescriptor
{
  struct BufferDescriptor *Link;
  union
  {
    struct
    {
      void (*Routine)(void); /* warning: not an APCS function */
      void *Workspace;
    } Routine;
    struct
    {
      uint32_t Indicator;
      uint32_t Number;
    } SWI;
  } Free;
  const uint8_t *Start;
  size_t Length;
  unsigned Packets: 31;
  unsigned NewFormat: 1;
  uint32_t CSH;
} BufferDescriptor_t;

typedef struct PacketDescriptor
{
  struct PacketDescriptor *Link;
  void (*FreeRoutine)(void); /* warning: not an APCS function */
  void *FreeWorkspace;
  const uint8_t *Start;
  size_t Length;
  BufferDescriptor_t *BufferDescriptor;
  uint32_t Flags;
  size_t BSn;
  union
  {
#ifdef MPEG_MPEGCTRL_H_UINT64_AVAILABLE
    uint64_t PTS;
#endif
    struct
    {
      uint32_t lo;
      uint32_t hi;
    } uint32;
  } PTS;
  union
  {
#ifdef MPEG_MPEGCTRL_H_UINT64_AVAILABLE
    uint64_t DTS;
#endif
    struct
    {
      uint32_t lo;
      uint32_t hi;
    } uint32;
  } DTS;
  size_t FullLength;
} PacketDescriptor_t;

#endif

/* In the exported copy of this file, the Hdr2H translation of Hdr.MPEGCtrl will follow. */

