	VRegI	PanAndScanChromaWordOrigin1,	7, 30
	VRegI	VideoOutputModeControl,		7, 31

	VRegI	VideoSystemWrite0,		7, 32 ; \
	VRegI	AudioSystemWrite0,		7, 33 ; |
