#ifndef __module_h
#define __module_h

/* Includes */

#include <stdbool.h>

#include "Types.h"

/* Public variables */

extern program_element_structure_t Stream;
extern int Module_AudioSpeedIndicatorOffset;
extern bool Module_Display525_60;
extern int Module_OriginXOffset;
extern int Module_OriginYOffset;
extern void *Module_PrivateWord;
extern int Module_MessageFD [];
extern bool Module_Dying;

/* Public constants */

#ifndef ErrorBase_MPEG /* maybe someday Hdr2H will cope with Hdr:NewErrors */
#define ErrorBase_MPEG 0x818500
#endif

#define errno_INV_REASON           (ErrorBase_MPEG + 0x0)
#define errno_NO_PLL_LOCK          (ErrorBase_MPEG + 0x1)
#define errno_AUDIO_RESTART        (ErrorBase_MPEG + 0x2)
#define errno_WRITE                (ErrorBase_MPEG + 0x3)
#define errno_READ                 (ErrorBase_MPEG + 0x4)
#define errno_BLOCK_MOVE           (ErrorBase_MPEG + 0x5)
#define errno_BAD_DATA             (ErrorBase_MPEG + 0x6)
#define errno_CANT_DIE             (ErrorBase_MPEG + 0x7)
#define errno_CANT_DIE_2           (ErrorBase_MPEG + 0x8)
#define errno_BAD_VIDEO_HANDLE     (ErrorBase_MPEG + 0x9)
#define errno_BAD_AUDIO_HANDLE     (ErrorBase_MPEG + 0xA)
#define errno_NO_DISPLAYED_PICTURE (ErrorBase_MPEG + 0xB)

#endif
