#ifndef __video_h
#define __video_h

/* Includes */

#include "kernel.h"

#include "Types.h"

/* Public prototypes */

extern _kernel_oserror *Video_SWIOpenStream (stream_flags_t *flags, control_stream_handle_t csh, video_parameters_structure_t *vps, stream_handle_t *return_vsh);
extern _kernel_oserror *Video_SWIFullPackets (unsigned int flags, stream_handle_t vsh, bitstream_packet_t *packets);
extern _kernel_oserror *Video_SWICloseStream (unsigned int flags, stream_handle_t vsh);
extern _kernel_oserror *Video_SWIPlay (unsigned int flags, stream_handle_t vsh);
extern _kernel_oserror *Video_SWISetSpeed (unsigned int flags, stream_handle_t vsh, unsigned int speed);
extern _kernel_oserror *Video_SWICardControl2 (unsigned int EOR_mask, unsigned int AND_mask, unsigned int *return_old_value, unsigned int *return_new_value);
extern _kernel_oserror *Video_SWICardControl7 (unsigned int *return_flags, unsigned int *return_revision);
extern _kernel_oserror *Video_SWIReadParameters3 (unsigned int *return_PCR_lo, unsigned int *return_PCR_hi);
extern _kernel_oserror *Video_SWIReadParameters4 (unsigned int *return_buffer_fullness);
extern _kernel_oserror *Video_SWIReadParameters5 (unsigned int *return_display_ready);
extern _kernel_oserror *Video_SWIResetStream (reset_stream_flags_t *flags, stream_handle_t vsh, unsigned int *return_discarded_data_size);
extern _kernel_oserror *Video_SWIStats (unsigned int flags, stream_handle_t vsh, unsigned int *tags, void *buffer, int buffer_size, void **return_pointer, int *return_buffer_remaining);
extern _kernel_oserror *Video_SWISetVideoParameters0 (stream_handle_t vsh, scaling_type_block_t *block_in_out);
extern _kernel_oserror *Video_SWISetVideoParameters1 (unsigned int new_state, unsigned int *return_old_ext_state, unsigned int *return_old_int_state);
extern _kernel_oserror *Video_SWISetVideoParameters2 (unsigned int new_state, unsigned int *return_old_ext_state, unsigned int *return_old_int_state);
extern _kernel_oserror *Video_SWIGetSprite (unsigned int flags, stream_handle_t vsh, void *sprite_area, const char *sprite_name);
extern void Video_InternalReset (void);

#endif
