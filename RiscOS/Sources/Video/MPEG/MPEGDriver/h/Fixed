#ifndef __fixed_h
#define __fixed_h

/* Public types */

typedef unsigned int fixed;

/* Public prototypes */

/******	Fixed_FixedMultiply() **********************************************

Purpose:	Multiplies two fixed-point numbers
In:		Two fixed-point numbers
Out:		The fixed-point result

***************************************************************************/

extern fixed Fixed_FixedMultiply (fixed multiplier, fixed multiplicand);

/******	Fixed_IntDivide() **************************************************

Purpose:	Divides two integers
In:		Two integers
Out:		The fixed-point result

***************************************************************************/

extern fixed Fixed_IntDivide (unsigned int dividend, unsigned int divisor);

/******	Fixed_FixedDivide() ************************************************

Purpose:	Divides two fixed-point numbers
In:		Two fixed-point numbers
Out:		The fixed-point result

***************************************************************************/

extern fixed Fixed_FixedDivide (fixed dividend, fixed divisor);

#endif
