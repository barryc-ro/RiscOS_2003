#ifndef __clk_h
#define __clk_h

/* Includes */

#include <stdbool.h>

/* Public types */

typedef struct
{
  unsigned int lsw;
  unsigned char msb;
} clk;

/* Public prototypes */

extern bool Clk_Greater (clk a, clk b);
extern bool Clk_Less (clk a, clk b);
extern clk Clk_Diff (clk a, clk b);

#endif
