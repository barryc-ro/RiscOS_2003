#include "swis.h"

#include "Desk.Error2.h"
#include "Desk.Debug.h"

#include "^.GetSetPtr.h"


void	SetMousePos( int x, int y)
	{
	char	block[5];
	
	if ( x<0 || y<0)	return;
	
	block[0] = 3;
	block[1] = x % 256;
	block[2] = x / 256;
	block[3] = y % 256;
	block[4] = y / 256;
	Desk_Error2_CheckOS( _swix( OS_Word, _INR(0,1), 21, block));
	Desk_Debug_Printf( Desk_error_PLACE "SetMousePos( %i, %i)\n", x, y);
	}


void	GetMousePos( Desk_wimp_point* pos)
	{
	_swix( OS_Mouse, _OUTR(0,1), &pos->x, &pos->y);
	}

Desk_bool IsMouseVisible( void )
	{
	int oldptr;
	Desk_Error2_CheckOS( _swix( OS_Byte, _INR(0,1) | _OUT(1), 106, 0, &oldptr) );
	Desk_Error2_CheckOS( _swix( OS_Byte, _INR(0,1), 106, oldptr) );
	return (Desk_bool) (oldptr != 0);
	}
