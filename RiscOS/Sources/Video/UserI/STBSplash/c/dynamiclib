
/***************************************************

  Name   : dynamiclib.c
  Purpose: Dynamic area library functions

***************************************************/

#include <stdio.h>
#include <string.h>
#include <stdlib.h>

#include "kernel.h"
#include "swis.h"
//#include "os.h"

#include "dynamiclib.h"

_kernel_oserror *dynamiclib_init(void)
{
  return NULL;
}

_kernel_oserror *dynamiclib_alloc(dynamiclib_str *in)
{
  _kernel_swi_regs r;
  _kernel_oserror *err;

  if(in->allocated)
  {
    err = dynamiclib_free(in);
    if(err) return err;
  }

  if (in->size < 0)
    in->size = 0;

  r.r[0] = 0;
  r.r[1] = -1;
  r.r[2] = in->size;
  r.r[3] = -1;
  r.r[4] = 128;
  r.r[5] = -1;

  r.r[6] = 0;
  r.r[7] = 0;
  r.r[8] = (int) in->name;
  err = _kernel_swi(OS_DynamicArea, &r, &r);
  if(err)
    return err;

  in->area = (int *) r.r[3];
  in->area_number = r.r[1];

  in->allocated = 1;            /* Area is allocated */

  return 0;
}

_kernel_oserror *dynamiclib_free(dynamiclib_str *in)
{
  _kernel_swi_regs r;
  _kernel_oserror *err;

  r.r[0] = 1;
  r.r[1] = in->area_number;
  err = _kernel_swi(OS_DynamicArea, &r, &r);
  /* Mark the area as free anyway. */
  in->allocated = 0;

 return err;
}
