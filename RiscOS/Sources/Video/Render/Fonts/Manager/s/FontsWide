; > Sources.FontsWide

SWIFont$NameTail._WideFormat Entry ""
	Debug	wideformat,"Font_WideFormat: flags = ",R2
	; Pass straight on to WFR routine
	SWI	&4F693
	EXIT

SWIFont$NameTail._WideDetect Entry "R1-R1"
	LDR	R2, wide_flags
	Push	"R2"
	Push	"R0"
	TEQ	R0, #0
	LDREQ	R0, currentfont
	BL	det162
	Pull	"R0"

	LDR	R2, wide_flags
	TEQ	R2, #0
	MOVEQ	R0, #0
	Pull	"R2"
	STR	R2, wide_flags

	EXIT

	END
