#ifndef BTS_TYPES_DEFINED

#define BTS_TYPES_DEFINED
 
#define FUNCTION

#define FALSE                 0
#define TRUE                  1

#ifndef NULL
#define NULL (void *)0
#endif

#ifndef BOOLEAN_DEFINED
typedef   char     boolean;  
#endif

typedef   signed char     fix7;
typedef   unsigned char ufix8;
typedef   double   real;
typedef   short    fix15;
typedef   unsigned short ufix16;
typedef   long     fix31;
typedef   unsigned long ufix32;

#define BIT_0 0x01
#define BIT_1 0x02
#define BIT_2 0x04
#define BIT_3 0x08
#define BIT_4 0x10
#define BIT_5 0x20
#define BIT_6 0x40
#define BIT_7 0x80

#endif


