#ifndef __pipcontrol_h
  #define __pipcontrol_h

  #pragma force_top_level
  #pragma include_only_once

  #ifndef PIP_00
    #define PIP_00                          0x051780
    #define PIP_SetChip                     0x051780
    #define PIP_GetChip                     0x051781
    #define PIP_SetConversionValue          0x051782
    #define PIP_GetConversionValue          0x051783
    #define PIP_SetOrigin                   0x051784
    #define PIP_GetOrigin                   0x051785
    #define PIP_SetBorderWidth              0x051786
    #define PIP_SetBorderColour             0x051787
    #define PIP_GetBorderSettings           0x051788
    #define PIP_SetScaling                  0x051789
    #define PIP_GetScaling                  0x05178a
    #define PIP_On                          0x05178b
    #define PIP_Off                         0x05178c
    #define PIP_Status                      0x05178d
    #define PIP_MouseResponse               0x05178e
    #define PIP_SetRaw                      0x05178f
    #define PIP_GetRaw                      0x051790
    #define PIP_SetPosition                 0x051791
    #define PIP_GetPosition                 0x051792
    #define PIP_ErrorResponse               0x051793
    #define PIP_WindowHandle                0x051794

  #define PIPCONTROL_SDA9488                       0
  #define PIPCONTROL_SDA9489                       1
  #define PIPCONTROL_DISABLE                       0
  #define PIPCONTROL_ENABLE                        1
  #define PIPCONTROL_SCALE_RESET                   2
  #define PIPCONTROL_SCALE_ASPECT                  4
  #define PIPCONTROL_SCALE_PIPCONTROLUNIT          8
  #define PIPCONTROL_SCALE_PIPCONTROLRAW           16
  #define PIPCONTROL_UNITS_DIVISION                0
  #define PIPCONTROL_UNITS_OSSCREEN                1
  #define PIPCONTROL_UNITS_PIPCONTROLRAW           2
  #define PIPCONTROL_MOUSE_RESPONSE_NULL           0
  #define PIPCONTROL_MOUSE_RESPONSE_HIGHLIGHT      1
  #define PIPCONTROL_MOUSE_RESPONSE_BLOCK          2
  #define PIPCONTROL_MOUSE_RESPONSE_WARP           3
  #define PIPCONTROL_MOUSE_RESPONSE_WINMOVE        4
  #define PIPCONTROL_MOUSE_RESPONSE_CLICKMOVE      5
  #define PIPCONTROL_ERRORV_STATUS                 -1
  #define PIPCONTROL_ERRORV_RELEASE                0
  #define PIPCONTROL_ERRORV_CLAIM                  1



  #endif


#endif
