PIXPRE  * (BCLK*4)/(MLCD_Refresh*((MLCD_Width*MLCD_Height)+MLCD_Height/2)) - 1

        MACRO
        BUZ     $on
        LDR     R3, =TIMER_BASE
        LDR     R0, [R3, #TIMER1CONTROL]
       [ "$on" = "toggle"
        EOR     R0, R0, #&100
       |
        [ "$on" = "on"
        BIC     R0, R0, #&100
        |
        ORR     R0, R0, #&100
        ]
       ]
        STR     R0, [R3, #TIMER1CONTROL]
        MEND

        MACRO
        DIAG    $on
        MOV     R3, #&1A000000
        [ "$on" = "on"
        MOV     R0, #0
        |
        MOV     R0, #2
        ]
        STRB    R0, [R3]
        MEND


        END
