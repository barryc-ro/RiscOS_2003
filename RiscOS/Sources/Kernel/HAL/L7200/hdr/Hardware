        MACRO
        EnsureSet $flag
 [ :LNOT::DEF:$flag
        GBLL    $flag
$flag   SETL    {FALSE}
 ]
        MEND


        EnsureSet MSI
        EnsureSet TViLink
        EnsureSet SDB


