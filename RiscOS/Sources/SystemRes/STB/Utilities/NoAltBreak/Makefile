# Makefile for NoAltBreak transient
#
# ***********************************
# ***    C h a n g e   L i s t    ***
# ***********************************
# Date           Name   Description
# ----           ----   -----------
# 03-Aug-2000    SAR    Created
#

#
# Program specific options:
#
COMPONENT  = NoAltBreak
UTILITY    = util.${COMPONENT}

#
# Generic options:
#
MKDIR   = mkdir -p
ATTR    = attr
AS      = objasm
CP      = copy
LD      = link
RM      = remove
WIPE    = wipe

CPFLAGS = ~cfr~v
WFLAGS  = ~c~v
OFLAGS   = -depend !Depend ${THROWBACK}

#
# Objects
#
OBJS     = o.NoAltBreak

#
# Rule patterns
#
.s.o:;          ${AS} ${OFLAGS} -o $@ $<

#
# Default rule
#
all: ${UTILITY}
        @echo ${COMPONENT}: all complete

#
# RISC OS ROM build rules:
#
clean:
        ifthere util     then ${WIPE} util     ${WFLAGS}
        ifthere o        then ${WIPE} o        ${WFLAGS}
        stripdepnd
        @echo ${COMPONENT}: cleaned

export_hdrs:
        @echo ${COMPONENT}: nothing to do.

export_libs:
        @echo ${COMPONENT}: nothing to do.

resources:
        @echo ${COMPONENT}: nothing to do.

rom:
        @echo ${COMPONENT}: nothing to do.

install_rom:
        @echo ${COMPONENT}: nothing to do.

rom_link:
        @echo ${COMPONENT}: nothing to do.

#
# RISC OS disc build rules:
#
install: ${UTILITY} dirs
        ${CP} ${UTILITY} ${INSTDIR}.${COMPONENT} ${CPFLAGS}
        @echo ${COMPONENT}: installed to ${INSTDIR}

dirs:
        ${MKDIR} ${INSTDIR}

#
# Other rules:
#
${UTILITY}: util ${OBJS} o
        ${LD} -o $@ -bin ${OBJS}
        SetType $@ Utility
        ${ATTR} -files +or +ow +wr -ww $@

util:
	${MKDIR} util

o:
	${MKDIR} o

#---------------------------------------------------------------------------
# Dynamic dependencies:
