| Configure the simple message sending software.
Obey STBChoices:SendMsg

If "<SendMessage$Protocol>" = "" Then Set SendMessage$Protocol -udp
If "<SendMessage$Host>"     = "" Then Set SendMessage$Host     www.qpwoeiruty.com:echo
SetMacro Alias$URLOpen_SendMessage SendMessage <SendMessage$Protocol> <SendMessage$Quiet> -h <SendMessage$Host> -m %%*1
RMCheck SendMessage 0.05 Network.SendMsg

If "<SendMessage$InStandby>"  <> "" Then Set NCFresco$EventURL02 file:/STBContent:HTML/SendMsg/InStby.html
If "<SendMessage$InStandby>"  <> "" Then Set NCFresco$ConfigEventStandbyIn 0x3902
If "<SendMessage$OutStandby>" <> "" Then Set NCFresco$EventURL03 file:/STBContent:HTML/SendMsg/OutStby.html
If "<SendMessage$OutStandby>" <> "" Then Set NCFresco$ConfigEventStandbyOut 0x3903
