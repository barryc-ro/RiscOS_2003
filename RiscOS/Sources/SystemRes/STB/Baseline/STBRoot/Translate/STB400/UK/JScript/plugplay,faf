<SELECT ID="SELECTION" onChange="javascript:loadChannel()">
<SCRIPT LANGUAGE = "JavaScript1.1">
var i = 0;
        for (i=0; i < channels.length; i++)
        {
                document.write("<OPTION>"+channels[i].name);
        }
</SCRIPT>
</SELECT>
</FORM>
