#include "inkey.h"
#include "checkpoint.h"
#include "bool.h"
#include "error.h"
#include "Logger.h"
#include "setenv.h"
#include "stdlib.h"
#include "reader.h"

BOOL t_nobatch;

void setnobatch(BOOL n) {t_nobatch=n;}
void checkpoint(void)
{
  if(!t_nobatch)
   if(inkey()==' ')
   { t_LogOut("Space pressed - terminating\n");
     setenv("ARMovie$CompressionStatus","SUSPEND");
     shutreader();
     exit(1);
   }
}

