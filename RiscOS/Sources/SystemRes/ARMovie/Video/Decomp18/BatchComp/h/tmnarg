#ifndef TMNARGS
#define TMNARGS
#include "config.h"
typedef struct targ
{
  int start;
  int end;
  int chosen_frameskip;
  int orig_frameskip;
  int seek_dist;
  char *outputfile;
  int headerlength;
  int write_repeated;
  char *seqfilename;
  int QP;
  int QPI;
  int writediff;
  char *streamname;
  int trace;
  int use_gobsync;
  int unrestricted_mv_mode;
  int syntax_arith_coding;
  int advanced;
  int mv_outside_frame;
  int pb_frames;
  int BQUANT;
  int targetrate;
  float ref_frame_rate;
  int source_format;
  int long_vectors;
  int xs;
  int ys;
#ifdef OFFLINE_RATE_CONTROL
  int start_rate_control;
#else
  float target_frame_rate;
#endif
  float bitbalance;
  int doiframe;
  void *precon;
  void *pimage;
  float qp_mean;
}TmnArgs;


extern TmnArgs deftrg,trg;

typedef struct trr
{
  int quant;
  float bitbalance;
  void *pic;
  void *image;
  float qp_mean;
} tmnret;

extern tmnret tmnmain(TmnArgs trg);


#endif
