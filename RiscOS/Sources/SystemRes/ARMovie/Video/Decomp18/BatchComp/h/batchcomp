#ifndef BATCHCOMP
#define BATCHCOMP
#include "bool.h"
#include "flt.h"


typedef struct sd {
 int compnum;
 char *indirect;
 int *rate;
 BOOL reversed;
 int precision;
 BOOL linear;
 BOOL unsign;
 struct sd *next;
}SndHdr;

typedef struct tc {
  int tmp;
} TCode;


typedef struct hd {
  char *name;
  char *date_copy;
  char *author;
  int video;
  char *vid_indirect;
  char *vid_params;
  int x,y;
  int z;
  BOOL YUV;
  BOOL ccallseq;
  char *col_model;
  int palletteoffset;
  flt rate;
  TCode timecode;
  SndHdr *sound;
  int chunkframes;
  int evensize;
  int oddsize;
  int catoffset;
  int spriteoffset;
  int spriteinfosize;
  int keyoffset;
} ARHeader;


typedef struct br {
  BOOL arm2;
  BOOL batch;
  char *dest;
  BOOL dirty;
  char *display;
  BOOL doub;
  char *filters;
  int index;
  BOOL nokeys;
  BOOL notext;
  int quality;
  BOOL restart;
  int size;
  char *source;
  int start;
  int t_setnumc;
} BCArgs;

static BCArgs DefArgs = {
  FALSE,
  FALSE,
  NULL,
  FALSE,
  NULL,
  FALSE,
  NULL,
  -1,
  FALSE,
  FALSE,
  -1,
  FALSE,
  -1,
  NULL,
  0,
  -1

};


void parseargs(int argc,char *argv[],BCArgs *bargs);


#endif
