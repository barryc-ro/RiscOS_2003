
; macro to make building patch tables work - plook blah, blah

	GBLA	pnum

pnum	SETA	0

;	IMPORT	|_CodeStart|

	MACRO
	plook	$src,$dest,$base


src_$pnum	*	$src
dest_$pnum	*	$dest
base_$pnum	*	$base
addr_$pnum	*	{PC}

	mov	$dest,$src

pnum	SETA	pnum+1

	MEND

; macro to build the table

	MACRO
	ptable

	LCLA	pcount

pcount	SETA	0

	WHILE	pcount<pnum

	DCD	addr_$pcount+(dest_$pcount<<24)+(src_$pcount<<20)+(base_$pcount<<16)
pcount	SETA	pcount+1

	WEND

        DCD	-1

	MEND

	END
