#ifndef __colours_h
#define __colours_h

/* Fonts & colours (Colours 0xBBGGRR00)  */
/*
         Title

  Question body text ...........
 	1. Menu item
 	2. Menu item ...
 */

#define FONT_TITLE   "FontTitle"	/* Screen title */
#define SIZE_TITLE   "SizeTitle"
#define COL_TITLE    (0xFFFFFF00)
#define FONT_QUEST   "FontQuest"	/* Question body */
#define SIZE_QUEST   "SizeQuest"
#define COL_QUEST    (0xFFFFFF00)
#define FONT_ITEM    "FontItem"		/* Menu items */
#define SIZE_ITEM    "SizeItem"
#define COL_ITEM     0xFFFFFF00
#define FONT_HELP    "FontHelp"		/* Help messages */
#define SIZE_HELP    "SizeHelp"
#define COL_HELP     (0xFFFFFF00)
#define FONT_HANDSET "FontHandset"	/* Handset characters */
#define SIZE_HANDSET "SizeHandset"
#define COL_HANDSER  (0xFFFFFF00)
#define COL_BACK     (0x45000000)

#define LINE_SPACE 1.4     /* Line space factor */
#define LINE_PARA  1.5     /* Line space factor */

#endif
