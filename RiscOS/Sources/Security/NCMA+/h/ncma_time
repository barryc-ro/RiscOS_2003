// header file for NCMA_TIME.H

/* Begin-Prologue */
#ifndef NCMA_TIME_H
#define NCMA_TIME_H
#undef DECLARE
#undef INIT
#ifdef PROTOTYPES_INTERNAL
#define DECLARE
#define INIT(x) =(x)
#else
#define DECLARE extern
#define INIT(x)
#endif
/* End-Prologue */
typedef struct {
	unsigned int centiseconds;
	unsigned int seconds;
	unsigned int minutes;
	unsigned int hours;
	unsigned int day;
	unsigned int month;
	unsigned int year;
	unsigned int dow;
	unsigned int doy;
} time_ordinal;

DECLARE unsigned int hour_now INIT(0);

void get_hour_now(void);
void set_time_now(char *, char *);
int time_within(unsigned int, unsigned int, unsigned int);
int test_iap_rule(unsigned char *, unsigned int);

/* Begin-Epilogue */
#undef PROTOTYPES_INTERNAL
#undef INIT
#undef DECLARE
#endif
/* End_Epilogue */

