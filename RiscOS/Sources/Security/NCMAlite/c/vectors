// vector handlers for NCMA

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#include "kernel.h"
#include "swis.h"

/* includes for other segments */


#include "ncma_ncma.h"
#include "machine.h"
#define PROTOTYPES_INTERNAL
#include "vectors.h"
#include "module.h"
#include "DBUG.h"
#include "scinter.h"
//#include "scinter1.h"

/* **********  Various event handlers ************ */

#define Event_Expansion_SCInterface1 (3)	      /* r1 on receipt of an event */

int module_event_handler(int *r, void *pw) /* this is where it all happens! */
{

#ifdef TWIN_SMARTCARD_DEMO
  if((*r == Event_Expansion) && (*(r+1) == Event_Expansion_SCInterface1))
  {
    switch(*(r+2))
    {
      case Event_CardOK:
           DBUG_PRINTF(DBUG_LVL_DIAG, "module_event_handler() : Event_CardOK recieved on Event_Expansion_SCInterface1\n");
      	   ncma_trans = Trans_Card1OK;
           break;

      case Event_CardRemoved:
           DBUG_PRINTF(DBUG_LVL_DIAG, "module_event_handler() : Event_CardRemoved recieved on Event_Expansion_SCInterface1\n");
      	   /* Ignore card removed events for the 2nd smartcard */
      	   break;

      case Event_Complete:
           switch(*(r+3))
           {
             case SC_SUCCESS:
                  DBUG_PRINTF(DBUG_LVL_DIAG, "module_event_handler() : Event_Complete recieved on Event_Expansion_SCInterface1 (complete ok)\n");
             	  ncma_trans = Trans_CompleteOK1;
             	  break;

             case SC_NOTFOUND:
             case SC_TRANSPORT:
             case SC_SPACE:
             case SC_EXISTS:
             case SC_STORAGE:
             case SC_NOSELECT:
             case SC_NOTVALID:
             case SC_INCONSIST:
             case SC_UNKNOWNRESP:
             case SC_P1P2INVALID:
             case SC_P3INVALID:
             DBUG_PRINTF(DBUG_LVL_DIAG, "module_event_handler() : Event_Complete recieved on Event_Expansion_SCInterface1 (complete bad)\n");
             	  break;

             case SC_NOACCESSCODE:
             case SC_FAILACCESSCODE:
             case SC_NOACCESSCHANGE:
           DBUG_PRINTF(DBUG_LVL_DIAG, "module_event_handler() : Event_Complete recieved on Event_Expansion_SCInterface1 (complete authfail)\n");
             	  ncma_trans = Trans_AuthFail1;
             	  break;

             default:
                  break;
           }

         default:  /* invalid Smartcard event - ignore it */
           return(1);
    } // endswitch s.card response
    setcallback(); /* handle smartcard events */
    return (1);
  }
#endif /* TWIN_SMARTCARD_DEMO */


#ifndef DUAL_SMARTCARDS
  if((*r == Event_Expansion) && (*(r+1) == Event_Expansion_SCInterface)) {
#else
  if((*r == Event_Expansion) && (*(r+1) == Event_Expansion_SCInterface1)) {
#endif /* DUAL_SMARTCARDS */

    switch(*(r+2)) {

      case Event_CardOK:
           DBUG_PRINTF(DBUG_LVL_DIAG, "module_event_handler() : Event_CardOK recieved on Event_Expansion_SCInterface\n");
      	   ncma_trans = Trans_CardOK;
           break;
      case Event_CardBad:
      	   ncma_trans = Trans_CardBad;
      	   break;
      case Event_CardRemoved:
      	   ncma_trans = Trans_CardRemoved;
      	   break;

      case Event_Complete:
           switch(*(r+3)) {
             case SC_SUCCESS:
             	  ncma_trans = Trans_CompleteOK;
             	  break;

             case SC_NOTFOUND:
             case SC_TRANSPORT:
             case SC_SPACE:
             case SC_EXISTS:
             case SC_STORAGE:
             case SC_NOSELECT:
             case SC_NOTVALID:
             case SC_INCONSIST:
             case SC_UNKNOWNRESP:
             case SC_P1P2INVALID:
             case SC_P3INVALID:
             	  ncma_trans = Trans_CompleteBad;
             	  break;

             case SC_NOACCESSCODE:
             case SC_FAILACCESSCODE:
             case SC_NOACCESSCHANGE:
             //case SC_BLOCKEDACCESS:
             	  ncma_trans = Trans_AuthFail;
             	  break;

             default:
                  break;
           }
           break;

      default:  /* invalid Smartcard event - ignore it */
           return(1);
    } // endswitch s.card response

    setcallback(); /* handle smartcard events */
    return(1);
  } // endif s.card event

  return(1);
}


int module_callback_handler(_kernel_swi_regs *r, void *pw)
{

  /* Read transitions off the queue and pass them to
     the state machine
  */

  if(pw != module_wsp)
  {
    DBUG_PRINTF(DBUG_LVL_DIAG, "module_callback_handler() : returning 0\n");
    return(0);
  }

  while(transq_rdp != transq_wrp) {
    ncma_trans = transition_queue[transq_rdp];
    transition_queue[transq_rdp++] = Trans_Idle;
    if(transq_rdp == MAX_TRANSITION_QUEUE) transq_rdp = 0;
    if(ncma_trans != Trans_Idle)
    {
      ncma_state = machine(ncma_trans);
    }
  }
  return(1);

}

int module_callafter_handler(_kernel_swi_regs *r, void *pw)
{
  /* Flush the transition queue and pass a
     time out to the state machine
  */
  if(pw != module_wsp)
  {
    return(0);
  }

  flush_transition_queue();
  ncma_trans = Trans_Timeout;
  ncma_state = machine(ncma_trans);
  return(1);
}

int module_cron_handler(_kernel_swi_regs *r, void *pw)
{
   return(1);
}

/* *********** Support routines *************** */




_kernel_oserror *setcallback(void)
{
  _kernel_swi_regs r;
  int l;
  _kernel_oserror* return_val;

  /* Set callback */

  /* add events to queue */

  /* is a transition of this type already on the queue? */
  for(l=0; l<transq_wrp;l++) if (transition_queue[l] == ncma_trans) return((_kernel_oserror *)NULL);

  /* no, bung it on then */
  transition_queue[transq_wrp++] = ncma_trans;
  if(transq_wrp == MAX_TRANSITION_QUEUE) transq_wrp = 0;

  r.r[0] = (int) module_callback_entry;
  r.r[1] = (int) module_wsp;
  return_val = _kernel_swi(XOS_Bit | OS_AddCallBack, &r, &r);
  return (return_val);
}






_kernel_oserror *cancelcallback(void)
{
  _kernel_swi_regs r;

  /* Cancel callback */
  r.r[0] = (int) module_callback_entry;
  r.r[1] = (int) module_wsp;
  return (_kernel_swi(XOS_Bit | OS_RemoveCallBack, &r, &r)); /* OS_RemoveCallback */
}


_kernel_oserror *settimeout(int seconds)
{
  _kernel_swi_regs r;

  r.r[0] = seconds * 100;
  r.r[1] = (int) module_callafter_entry;
  r.r[2] = (int) module_wsp;
  return(_kernel_swi(XOS_Bit | OS_CallAfter, &r, &r));
}

_kernel_oserror *canceltimeout(void)
{
  _kernel_swi_regs r;

  r.r[0] = (int) module_callafter_entry;
  r.r[1] = (int) module_wsp;
  return(_kernel_swi(XOS_Bit | OS_RemoveTickerEvent, &r, &r));
}


int flush_transition_queue(void)
{
  int n;

  for(n=0;n<MAX_TRANSITION_QUEUE;n++) {
    transition_queue[n] = Trans_Idle;
  }

  transq_wrp = 0;
  transq_rdp = 0;
  return(n);
}


_kernel_oserror *module_claimv(void)
{
    _kernel_swi_regs r;

    r.r[0] = EventV;
    r.r[1] = (int)module_event_entry;
    r.r[2] = (int)module_wsp;
    return (_kernel_swi(XOS_Bit | OS_Claim, &r, &r));
}



_kernel_oserror *module_event_enable(void)
{
    _kernel_swi_regs r;

    r.r[0] = Event_Enable;
    r.r[1] = Internet_Event;
    _kernel_swi(XOS_Bit | OS_Byte, &r, &r);
    r.r[0] = Event_Enable;
    r.r[1] = Event_Expansion;
    return (_kernel_swi(XOS_Bit | OS_Byte, &r, &r));
}


_kernel_oserror *module_event_disable(void)
{
    _kernel_swi_regs r;

    r.r[0] = Event_Disable;
    r.r[1] = Internet_Event;
    _kernel_swi(XOS_Bit | OS_Byte, &r, &r);
    r.r[0] = Event_Enable;
    r.r[1] = Event_Expansion;
    return (_kernel_swi(XOS_Bit | OS_Byte, &r, &r));
}

void module_releasev(void)
{
    _kernel_swi_regs r;

    r.r[0] = Event_Disable;
    r.r[1] = Internet_Event;
    (void) _kernel_swi(XOS_Bit | OS_Byte, &r, &r);
    r.r[0] = EventV;
    r.r[1] = (int)module_event_entry;
    r.r[2] = (int)module_wsp;
    (void) _kernel_swi(XOS_Bit | OS_Release, &r, &r);
}

