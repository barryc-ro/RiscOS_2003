#ifndef __cipher_h
#define __cipher_h

/* 
 * DES encrypt data with a given key
 * On entry:
 * 	r0 = flags - should be 0
 *    	r1 = pointer to 8 byte source data
 *	r2 = pointer to 8 byte buffer to put results
 *	r3 = pointer to 8 byte key
 */
#define Cipher_DESEncrypt                     0x04b100

/* 
 * DES decrypt data against a given key
 * On entry:
 * 	r0 = flags - should be 0
 *    	r1 = pointer to 8 byte source data
 *	r2 = pointer to 8 byte buffer to put results
 *	r3 = pointer to 8 byte key
 */
#define Cipher_DESDecrypt                     0x04b101

/* 
 * Tripple DES encrypt data against a given key pair
 * On entry:
 * 	r0 = flags - should be 0
 *    	r1 = pointer to 8 byte source data
 *	r2 = pointer to 8 byte buffer to put results
 *	r3 = pointer to 8 byte key sx
 *	r4 = pointer to 8 byte key dx
 */
#define Cipher_DESTripleEncrypt               0x04b102

/* 
 * Tripple DES decrypt data against a given key pair
 * On entry:
 * 	r0 = flags - should be 0
 *    	r1 = pointer to 8 byte source data
 *	r2 = pointer to 8 byte buffer to put results
 *	r3 = pointer to 8 byte key sx
 *	r4 = pointer to 8 byte key dx
 */
#define Cipher_DESTripleDecrypt               0x04b103

/* 
 * Generate a MD5 message digest of the source data
 * On entry:
 *	r0 = flags - should be 0
 *    	r1 = pointer to source data
 *      r2 = length of source data
 *	r3 = pointer to 16 byte buffer to put results
 */
#define Cipher_MD5                         0x04b104

#endif
