        GET     Hdr:ListOpts
        GET     Hdr:Macros
        GET     Hdr:System


TaskModule_StartTask    *       &4D301


        ; Entry point.
        ;
        Push    "r0-r2,lr"

        ; GSTrans our command into our workspace.
        MOV     r0, r1
        MOV     r1, r12
        MOV     r2, #1024
        SWI     OS_GSTrans

        ; Call on the TaskModule to start our task.
        MOV     r0, r12
        MOV     r1, #0
        MOV     r2, #0
        SWI     TaskModule_StartTask

        ; We're done.
        Pull    "r0-r2,pc"

        
        DCB     "StartTask 0.01 29-Aug-97 © Acorn Computers Ltd 1997", 0


        END
