; > s.u12to16

; Audioworks format packed 12 bit data

		GET	hdr:ListOpts
		GET	hdr:Macros
		GET	hdr:System

		GET	hdr:Proc

; r0 -> input data (word-aligned)
; r1 -> output data (word-aligned)
; r2 = number of bytes
; r14 = return address

; update r0 and r1 on output
; preserve all other registers

		AREA	|snd$$ASM|,CODE,READONLY

		IMPORT	check_interleave

		EXPORT	snd_U12To16
		EXPORT	snd_S12To16

snd_S12To16	Entry	"r0-r12"
		MOV	r7, #0
		B	To16

snd_U12To16	ALTENTRY

		MOV	r7, #&8000
		ORR	r7, r7, r7, LSL #16

To16
		; do in blocks of 2 samples (3 bytes)

00		LDRB    r4, [r0], #1
		LDRB    r5, [r0], #1
		LDRB    r6, [r0], #1

		ORR	r4, r5, r4, LSL #8
		BIC	r4, r4, #&0f

		BIC	r5, r5, #&f0
		ORR	r5, r6, r5, LSL #8

		ORR	r4, r4, r5, LSL #20
		EOR	r4, r4, r7

		STR	r4, [r1], #4

		SUBS	r2, r2, #3
		BGT	%bt00

		B	check_interleave

		END

eof s.u12to16
