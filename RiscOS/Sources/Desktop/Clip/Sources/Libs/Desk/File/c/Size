#include "kernel.h"

#include "Desk.file.h"

extern int Desk_File_Size(const char *filename)
{
  _kernel_osfile_block osfile;

  if (_kernel_osfile(17, filename, &osfile) == 1)
    return (osfile.start);
  else
    return (0);
}
