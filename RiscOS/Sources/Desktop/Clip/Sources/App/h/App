#ifndef __App_h
#define __App_h

#ifndef __Desk_Wimp_h
	#include "Desk.wimp.h"
#endif



#ifndef __Desk_DynamArea_h
	#include "Desk.DynamArea.h"
#endif


typedef struct	{
	struct	{
		int	datasize;
		void*	data;
		enum	{
			ClipApp_BufferInfo_EMPTY,	/* data unused.					*/
			ClipApp_BufferInfo_CLIPBOARD,	/* data holds the clipboard			*/
			ClipApp_BufferInfo_TEMP		/* data being used, but not for clipboard.	*/
			}
			info;
		
		Desk_DynamicArea_block	dynamicarea;
		}
		buffer;
	
	int	filetype;
	char	leafname[ 64];
	
	struct	{
		int	ourref;
		void*	tempbuffer;
		}
		getclipboard;
	
	Desk_bool	quit;
	}
	ClipApp_block;


#endif
