#include "Desk.File.h"



char*	Desk_File_AllocLoad0( const char *filename)
{
int	length;
char*	buffer = Desk_File_AllocLoad( filename, &length);

if (!buffer)	return NULL;
buffer[ length] = 0;
/* 
This relies on Desk_File_AllocLoad allocating one extra byte, which it does
at the moment...	
 */

return buffer;
}
