;   Version: 1.00 (28 Jul 1995)
;   Purpose: Reads a single directory entry

        GET     Desk.sh.regdefs
        GET     h.swinos
        GET     Desk.sh.macros

; Desk_Filing_SingleDirEntry2(char *dirname, void *buf,
;                                  int size, char *filename);

        PREAMBLE
        STARTCODE Desk_Filing_SingleDirEntry2
;
        STMFD   sp!, {r4-r6, lr}
        MOV     r6, r3
        MOV     r5, r2
        MOV     r4, #0
        MOV     r2, r1
        MOV     r1, r0
        MOV     r0, #10

loop
        MOV     r3, #256
        SWI     Desk_SWI_OS_GBPB + Desk_XOS_Bit
        Desk_Error2_CheckV
        ;LDMVSFD sp!, {r4-r6, pc}^

        TEQ     r3, #1
        BEQ     endok
        TEQ     r4, #0
        BGE     loop

        ;MOV     r0, #0                 ;
        STR     r0, [r2, #16]          ; objtype = 0
        LDMFD   sp!, {r4-r6, pc}^

endok
        ;MOV     r0, #0
        LDMFD   sp!, {r4-r6, pc}^
;
        END
