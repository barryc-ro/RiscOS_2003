	AREA	|C$code|, CODE, READONLY
	
	EXPORT	TaskModule_Broad_CallHandler

XOS_Bit		EQU &020000
OS_EnterOS	EQU &16


TaskModule_Broad_CallHandler
	STMFD	r13!, { r0-r12, lr}
	
	SWI	OS_EnterOS
	
	MOV	r12, a3
	;Do 'BL	a4'
	MOV	lr, pc
	MOV	pc, a4
	
	TEQP	pc, #0	; -> USR mode.
	MOV	r0, r0
	
	LDMFD	r13!, { r0-r12, pc}^
	
	END
