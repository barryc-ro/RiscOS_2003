#ifndef __TaskModule_Module_h
#define __TaskModule_Module_h

#ifndef __Desk_Core_h
	#include "Desk.Core.h"
#endif

Desk_os_error*	TaskModule_ModuleInitialise( const char *cmd_tail, int podule_base, void *pw);
Desk_os_error*	TaskModule_Finalise( int fatal, int podule_base, void *pw);
Desk_os_error*	TaskModule_SWIHandler( int swi_no, _kernel_swi_regs* r, void* pw);

typedef enum	{
	TaskModule_SWI_SendMessage			= 0,
	TaskModule_SWI_StartTask			= 1,
	TaskModule_SWI_TaskModule_RegisterService	= 2,
	TaskModule_SWI_TaskModule_DeRegisterService	= 3,
	TaskModule_SWI_RegisterBroadcastMessage		= 4,
	TaskModule_SWI_DeRegisterBroadcastMessage	= 5
	}
	TaskModule_SWI;

typedef enum	{
	TaskModule_Message_Message_Service = 0x4D300
	}
	TaskModule_Message;
#endif
