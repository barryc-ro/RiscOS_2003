#ifndef __TaskModule_Broad_h
#define __TaskModule_Broad_h

#ifndef __Desk_Wimp_h
	#include "Desk.Wimp.h"
#endif

typedef void*	TaskModule_broad_handler;

void	TaskModule_Broad_Register( int flags, Desk_message_action* messages, TaskModule_broad_handler handler, void* reference);
void	TaskModule_Broad_DeRegister( int flags, Desk_message_action* messages, TaskModule_broad_handler handler, void* reference);

void	TaskModule_Broad_CallHandler( Desk_event_type type, Desk_message_block* message, void* pw, TaskModule_broad_handler handler);

#endif
