//#define TRACE

#define ForceCallBackMacro
/* #define ForceCallBackMacro ForceCallBack() */

struct tcp_conn_s
{
    int                socket;
    tcp_conn_state_t   state;
};

struct tcp_bleeper_s
{
    int socket;
};

struct tcp_addr_s
{
    int            family;
    int            length;
    struct in_addr addr;
    char           zeropad[8];
};

struct udp_conn_s
{
    int                socket;
};

