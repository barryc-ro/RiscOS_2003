#ifndef SC_STATE_H

#define SC_STATE_H

/* Shoutcast states */
#define SC_RESOLVING	(1)
#define SC_CONNECTING	(2)
#define SC_REQUESTING	(3)
#define SC_HEADERS	(4)
#define	SC_BUFFERING	(5)
#define SC_PLAYING	(6)
#define SC_ENDING	(7)
#define SC_COMPLETE	(8)
#define SC_FAILED	(9)

/* Internal states */
#define SC_FETCHING	(5)
#define SC_METADATA	(6)

#endif
