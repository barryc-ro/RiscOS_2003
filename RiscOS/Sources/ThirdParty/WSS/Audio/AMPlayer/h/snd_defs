#ifndef __SND_DEF_H
#define __SND_DEF_H

/*
 * First, define which SoundSystems we want to build support for.
 */
#ifndef SOUND16
#define SOUND16 (1)
#endif
#ifndef SOUND8
#define SOUND8 (1)
#endif
#ifndef SOUNDSHARED
#define SOUNDSHARED (1)
#endif

#if (!SOUND16) && (!SOUND8) && (!SOUNDSHARED)
#error "You must enable at least one type of sound system!"
#endif

#endif
