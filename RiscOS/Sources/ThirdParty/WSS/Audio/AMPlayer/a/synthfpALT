	AREA	|C$$code|, CODE, READONLY

;
; Inner synth loops solely in Assembler, using the fixed point multiplies
; (C) 2000 Robin Watts

#include "h.defs"

#include "a.asmhdr"

	EXPORT	synth_inner
	EXPORT	synth_innerM

	FUNC synth_inner
	; r0 = int *window
	; r1 = int *bufp
	; r2 = samples
	; r3 = &synth_bo
	; r4 = sumR_lo
	; r5 = sumR_hi
	; r6 = sumL_lo
	; r7 = sumL_hi
	; r8 = scratch
	; r9 = scratch
	; r10= scratch
	; r11= j = outer loop counter
	; r12= i = inner loop counter
	; r14= 0xFFFFFFFF

	STMFD	r13!,{r4-r11,r14}

	LDFS	F5,scale_fac0

	MVN	r14,#0
	MOV	r11,#16
loop2
	LDR	r8,[r0],#4	; r8   = *window
	LDR	r9,[r1],#4	; r9   = *bufp++
	FLTS	F0,r8
	FLTS	F1,r9
	LDR	r10,[r1,#543*4]	; r10  = *bufp[544]
	FMLS	F1,F0,F1	; sumR = *window * bufp[0]
	FLTS	F2,r10
	MOV	r12,#7
	FMLS	F2,F0,F2	; sumL = *window * bufp[0]
loop
	LDR	r8,[r0],#4	; r8   = *window
	LDR	r9,[r1],#4	; r9   = *bufp++
	FLTS	F0,r8
	FLTS	F3,r9
	LDR	r10,[r1,#543*4]	; r10  = *bufp[544]
	FMLS	F3,F0,F3
	FLTS	F4,r10
	SUFS	F1,F1,F3	; sumR-= *window * bufp[0]
	LDR	r9,[r1],#4	; r9   = *bufp++
	FMLS	F4,F0,F4
	LDR	r8,[r0],#4	; r8   = *window
	SUFS	F2,F2,F4	; sumL-= *window * bufp[544]
	FLTS	F3,r9
	LDR	r10,[r1,#543*4]	; r10  = *bufp[544]
	FLTS	F0,r8
	FMLS	F3,F0,F3
	FLTS	F4,r10
	ADFS	F1,F1,F3   	; sumR+= *window * bufp[0]
	FMLS	F4,F0,F4
	SUBS	r12,r12,#1
	ADFS	F2,F2,F4	; sumL+= *window * bufp[544]
	BGT	loop

	LDR	r8,[r0],#4+16*4	; r8   = *window
	LDR	r9,[r1],#4	; r9   = *bufp++
	FLTS	F0,r8
	FLTS	F3,r9
	LDR	r10,[r1,#543*4]	; r10  = *bufp[544]
	FMLS	F3,F0,F3
	FLTS	F4,r10
	SUFS	F1,F1,F3	; sumR-= *window * bufp[0]
	FMLS	F4,F0,F4
	SUFS	F2,F2,F4	; sumL-= *window * bufp[544]

	FMLS	F1,F5,F1
	FIXS	r5,F1
	FMLS	F2,F5,F2
	FIXS	r7,F2
	BIC	r5,r5,r14,LSR#16
	ORR	r5,r5,r7,LSR#16
	STR	r5,[r2],#4

	SUBS	r11,r11,#1
	BGT	loop2

	LDR	r8,[r0],#8	; r8   = *window
	LDR	r9,[r1],#8	; r9   = *(bufp += 2)
	FLTS	F0,r8
	FLTS	F1,r9
	LDR	r10,[r1,#542*4]	; r10  = *bufp[544]
	FMLS	F1,F0,F1	; sumR = *window * bufp[0]
	FLTS	F2,r10
	MOV	r12,#14
	FMLS	F2,F0,F2	; sumL = *window * bufp[0]
loop3
	LDR	r8,[r0],#8	; r3   = *window
	LDR	r9,[r1],#8	; r3   = *bufp++
	FLTS	F0,r8
	FLTS	F3,r9
	LDR	r10,[r1,#542*4]	; r3   = *bufp[544]
	FMLS	F3,F0,F3
	FLTS	F4,r10
	ADFS	F1,F1,F3	; sumR+= *window * bufp[0]
	FMLS	F4,F0,F4
	SUBS	r12,r12,#2
	ADFS	F2,F2,F4	; sumL+= *window * bufp[0]
	BGT	loop3

	FMLS	F1,F5,F1
	FIXS	r5,F1
	FMLS	F2,F5,F2
	FIXS	r7,F2
	BIC	r5,r5,r14,LSR#16
	ORR	r5,r5,r7,LSR#16
	STR	r5,[r2],#4

	LDR	r3,[r3]
	SUB	r1,r1,#32*4
	ORR	r3,r3,#1
	MOV	r3,r3,LSL#1
	SUB	r3,r3,#48
	ADD	r0,r0,r3,LSL#2

	MOV	r11,#15
loop5
	LDR	r8,[r0,#-4]!	; r8   = *window
	LDR	r9,[r1],#4	; r9   = *bufp++
	FLTS	F0,r8
	FLTS	F1,r9
	LDR	r10,[r1,#543*4]	; r3   = *bufp[544]
	FMLS	F1,F0,F1	; sumR = *window * bufp[0]
	FLTS	F2,r10
	MOV	r12,#15
	FMLS	F2,F0,F2	; sumL = *window * bufp[544]
loop4
	LDR	r8,[r0,#-4]!	; r8   = *window
	LDR	r9,[r1],#4	; r9   = *bufp++
	FLTS	F0,r8
	FLTS	F3,r9
	LDR	r10,[r1,#543*4]	; r10  = *bufp[544]
	FMLS	F3,F0,F3
	FLTS	F4,r10
	ADFS	F1,F1,F3
	FMLS	F4,F0,F4
	SUBS	r12,r12,#1
	ADFS	F2,F2,F4
	BGT	loop4

	FMLS	F1,F5,F1
	FIXS	r5,F1
	FMLS	F2,F5,F2
	FIXS	r7,F2
	RSB	r5,r5,#0
	RSB	r7,r7,#0
	BIC	r5,r5,r14,LSR#16
	ORR	r5,r5,r7,LSR#16
	STR	r5,[r2],#4

	SUB	r1,r1,#32*4
	SUB	r0,r0,#16*4
	SUBS	r11,r11,#1
	BGT	loop5

	LDMFD	r13!,{r4-r11,PC}

scale_fac0
	DCD	&34000000

	FUNC synth_innerM
	; r0 = int *window
	; r1 = int *bufp
	; r2 = samples
	; r3 = &synth_bo
	; r4 = sumR_lo
	; r5 = sumR_hi
	; r8 = scratch
	; r9 = scratch
	; r10= scratch
	; r11= j = outer loop counter
	; r12= i = inner loop counter
	; r14= 0xFFFFFFFF

	STMFD	r13!,{r4-r11,r14}

	LDFS	F5,scale_fac0
	MVN	r14,#0
	MOV	r11,#16
loop2M
	LDR	r8,[r0],#4	; r8   = *window++
	LDR	r9,[r1],#4	; r9   = *bufp++
	FLTS	F0,r8
	FLTS	F1,r9
	MOV	r12,#7
	FMLS	F2,F0,F1	; sumR = *window * bufp
loopM
	LDR	r8,[r0],#4	; r8   = *window
	LDR	r9,[r1],#4	; r9   = *bufp++
	FLTS	F0,R8
	FLTS	F1,R9
	LDR	r9,[r1],#4	; r9   = *bufp++
	LDR	r8,[r0],#4	; r8   = *window
	FMLS	F3,F0,F1	; F3 = *window * bufp[0]
	FLTS	F1,R9
	FLTS	F0,R8
	SUFS	F2,F2,F3
	FMLS	F4,F0,F1	; F3 = *window * bufp[0]
	SUBS	r12,r12,#1
	ADFS	F2,F2,F4	; sumR+= *window * bufp[0]
	BGT	loopM

	LDR	r8,[r0],#4+16*4	; r8   = *window
	LDR	r9,[r1],#4	; r9   = *bufp++
	FLTS	F0,R8
	FLTS	F1,R9
	FMLS	F3,F0,F1	; F3 = *window * bufp[0]
	SUBS	r11,r11,#1
	SUFS	F2,F2,F3        ; sumR-= *window * bufp[0]

	FMLS	F0,F2,F5	; Scale down by 32-9=23 bits
	FIXS	r5,F0

	BIC	r5,r5,r14,LSR#16
	ORR	r5,r5,r5,LSR#16
	STR	r5,[r2],#4

	BGT	loop2M

	LDR	r8,[r0],#8	; r8   = *window
	LDR	r9,[r1],#8	; r9   = *(bufp += 2)
	FLTS	F0,r8
	FLTS	F1,r9
	MOV	r12,#14
	FMLS	F2,F0,F1	; sumR = *window * bufp[0]
loop3M
	LDR	r8,[r0],#8	; r3   = *window
	LDR	r9,[r1],#8	; r3   = *bufp++
	FLTS	F0,r8
	FLTS	F1,r9
	FMLS	F3,F0,F1
	SUBS	r12,r12,#2
	ADFS	F2,F2,F3	; sumR+= *window * bufp[0]
	BGT	loop3M

 	FMLS	F0,F2,F5
 	FIXS	r5,F0

	BIC	r5,r5,r14,LSR#16
	ORR	r5,r5,r5,LSR#16
	STR	r5,[r2],#4

	LDR	r3,[r3]
	SUB	r1,r1,#32*4
	ORR	r3,r3,#1
	MOV	r3,r3,LSL#1
	SUB	r3,r3,#48
	ADD	r0,r0,r3,LSL#2

	MOV	r11,#15
loop5M
	LDR	r8,[r0,#-4]!	; r8   = *window
	FLTS	F0,r8
	LDR	r9,[r1],#4	; r9   = *bufp++
	FLTS	F1,r9
	MOV	r12,#15
	FMLS	F2,F0,F1	; sumR = *window * bufp[0]
loop4M
	LDR	r8,[r0,#-4]!	; r8   = *window
	FLTS	F0,r8
	LDR	r9,[r1],#4	; r9   = *bufp++
	FLTS	F1,r9
	FMLS	F3,F0,F1
	SUBS	r12,r12,#1
	ADFS	F2,F2,F3
	BGT	loop4M

	FMLS	F0,F2,F5	; Scale down by 32-9=23 bits
	FIXS	r5,F0
	RSB	r5,r5,#0

	BIC	r5,r5,r14,LSR#16
	ORR	r5,r5,r5,LSR#16
	STR	r5,[r2],#4

	SUB	r1,r1,#32*4
	SUB	r0,r0,#16*4
	SUBS	r11,r11,#1
	BGT	loop5M

	LDMFD	r13!,{r4-r11,PC}

	END
