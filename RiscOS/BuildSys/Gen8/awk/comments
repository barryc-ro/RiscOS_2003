# comments: generate a list of comments
#
BEGIN {
    title = 0
}

{
    if (title == 1)
    {
        print $2
        title = 2
    }
    else if (title == 2)
    {
    	print "---"
        title = 0
    }        
    else if (index($0, "#-") != 0)
    {
        print ""
        title = 1
    }
    else if (index($0, "#") == 1)	# Only process comment lines
        if (NF >= 6)			# lines with "ROM modules"
            if (length($3) < 4)
                print $2
}
