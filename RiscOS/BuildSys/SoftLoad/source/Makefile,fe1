# Project:   softload


# Toolflags:
CCflags = -c -depend !Depend -IC: -throwback
C++flags = -c -depend !Depend -IC: -throwback
Linkflags = -aif -c++ -o $@
ObjAsmflags = -throwback -NoCache -NoWarn -depend !Depend 
CMHGflags = 
LibFileflags = -c -o $@
Squeezeflags = -o $@


# Libraries
#
LIBDIR	   = <Lib$Dir>
CLIB       = CLIB:o.stubs


# Final targets:
@.SoftLoad:   @.SoftLoadU 
        squeeze $(squeezeflags) @.SoftLoadU 
@.SoftLoadU:   @.o.softload @.o.startnew ${CLIB}
        link $(linkflags) @.o.softload @.o.startnew ${CLIB}


# User-editable dependencies:

# Static dependencies:
@.o.SoftLoad:   @.c.softload
        cc $(ccflags) -o @.o.softload @.c.softload 
@.o.startnew:   @.s.startnew
        objasm $(objasmflags) -from @.s.startnew -to @.o.startnew


# Dynamic dependencies:
