#include "flex.h"

#include <stdlib.h>

#include "memalloc.h"
#include "mem_int.h"

BOOL f_alloc(void **anchor, size_t nbytes)
{
    BOOL success;
    if (*anchor)
        success = flex_extend(anchor, nbytes);
    else
        success = flex_alloc(anchor, nbytes);
    if (!success)
        alloc__checkerror(nbytes);
    return success;
}

void f_free(void **anchor)
{
    if (*anchor)
    {
        flex_free(anchor);
        *anchor = NULL;
    }
}

/* eof f_alloc.c */
