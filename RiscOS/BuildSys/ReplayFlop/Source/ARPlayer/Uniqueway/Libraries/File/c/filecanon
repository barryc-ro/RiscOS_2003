#include "swis.h"

#include <stdlib.h>

#include "file.h"
#include "filereason.h"

os_error *file_canonicalise(const char *filename, const char *def_path, char **path_out)
{
    os_regset   r;
    os_error    *e = NULL;
    char        *path;

    r.r[0] = FSControl_CanonicalisePath;
    r.r[1] = (int) filename;
    r.r[2] = r.r[3] = 0;
    r.r[4] = (int) def_path;
    r.r[5] = 0;
    if ((e = os_swix(OS_FSControl, &r)) != NULL)
        return e;

    if ((path = malloc(1 - r.r[5])) != NULL)
    {
        r.r[2] = (int) path;
        r.r[5] = 1 - r.r[5];
        if ((e = os_swix(OS_FSControl, &r)) != NULL)
            free(path);
        else
            *path_out = path;
    }

    return e;
}

