
/* discspec.h */

typedef struct
{
    unsigned char  secsize;
    unsigned char  secs;
    unsigned char  heads;
    unsigned char  density;
    unsigned char  idlen;
    unsigned char  bitsize;
    unsigned char  skew;
    unsigned char  bootoption;
    unsigned char  lowsector;
    unsigned char  nzones;
    unsigned short zone_spare;
    unsigned int   root;
    unsigned int   discsize;
    unsigned int   discid;
    unsigned char  disc_name[10];
    unsigned int   disctype;
    unsigned char padding[24];
} discrecord_t;
