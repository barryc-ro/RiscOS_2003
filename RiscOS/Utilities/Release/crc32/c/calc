#include "crc.h"

#define TABLE_SIZE  256

static U32 crc32tab[TABLE_SIZE];

void make_table(void)
{
  int i, inx;
  U32 carry32;
  U32 entry32;

  for (inx = 0; inx < TABLE_SIZE; ++inx) {
    entry32 = inx;

    for (i = 0; i < 8; ++i) {
      carry32 = entry32 & 1;
      entry32 >>= 1;
      if (carry32)
        entry32 ^= 0xedb88320;
    }

    crc32tab[inx] = entry32;
  }
}

void update_crc(U8 *buf, int count, U32 *crc32, U32 *chk8)
{
  int i;
  U8 inx32;

  if (count == 0)
    return;

  for (i = 0; i < count; ++i) {
    *chk8 += buf[i];
    inx32 = buf[i] ^ *crc32;
    *crc32 >>= 8;
    *crc32 ^= crc32tab[inx32];
  }
}
