#ifdef DEBUG

#include <stdio.h>
#include <stdarg.h>

static FILE *fileDebug=NULL;

void
db_file_init(char*s_filename)
{
  if (s_filename!=NULL)
  {
    fileDebug = fopen(s_filename,"w");
  }
  else
  {
    fclose(fileDebug);
    fileDebug=NULL;
  }
}

void
db_printf (char *format, ...)
{
  va_list list;

  va_start (list, format);
  if (fileDebug)
     vfprintf(fileDebug, format, list);
  va_end(list);

}
#else

void
db_file_init(char *s_filename)
{
}

void
db_printf(char *format, ...)
{
}

#endif
